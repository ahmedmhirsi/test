{% extends 'backoffice.html.twig' %}

{% block title %}Audit Logs - SmartNexus{% endblock %}

{% block admin_content %}
<div class="container-fluid">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-display font-bold text-navy dark:text-white">Audit Logs</h1>
        <div class="px-3 py-1 bg-gray-100 dark:bg-gray-800 rounded text-xs font-mono text-gray-500">
            Last 100 Actions
        </div>
    </div>

    <div class="bg-white dark:bg-[#1e2235] rounded-xl shadow-sm border border-gray-100 dark:border-gray-800 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left">
                <thead class="bg-gray-50 dark:bg-gray-800/50">
                    <tr>
                        <th class="px-6 py-4 text-xs font-black text-gray-400 uppercase tracking-widest">Date</th>
                        <th class="px-6 py-4 text-xs font-black text-gray-400 uppercase tracking-widest">User</th>
                        <th class="px-6 py-4 text-xs font-black text-gray-400 uppercase tracking-widest">Action</th>
                        <th class="px-6 py-4 text-xs font-black text-gray-400 uppercase tracking-widest">Entity</th>
                        <th class="px-6 py-4 text-xs font-black text-gray-400 uppercase tracking-widest">Details</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100 dark:divide-gray-800 text-sm">
                    {% for log in logs %}
                    <tr class="hover:bg-gray-50 dark:hover:bg-gray-800/20 transition-colors">
                        <td class="px-6 py-4 text-gray-500 font-mono text-xs">
                            {{ log.createdAt|date('Y-m-d H:i:s') }}
                        </td>
                        <td class="px-6 py-4 font-bold text-navy dark:text-white">
                            {{ log.user ? log.user.nom : 'System' }}
                        </td>
                        <td class="px-6 py-4">
                            <span class="px-2 py-1 rounded text-[10px] font-black uppercase tracking-tighter 
                                {% if 'DELETE' in log.action %}bg-red-100 text-red-600
                                {% elseif 'CREATE' in log.action %}bg-green-100 text-green-600
                                {% elseif 'UPDATE' in log.action %}bg-blue-100 text-blue-600
                                {% elseif 'LOCK' in log.action %}bg-orange-100 text-orange-600
                                {% else %}bg-gray-100 text-gray-600{% endif %}">
                                {{ log.action }}
                            </span>
                        </td>
                        <td class="px-6 py-4 text-gray-600 dark:text-gray-400">
                            {{ log.entityType }} #{{ log.entityId }}
                        </td>
                        <td class="px-6 py-4 text-gray-500 font-mono text-xs max-w-xs truncate">
                            {{ log.details|json_encode }}
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="5" class="px-6 py-8 text-center text-gray-500">No logs found.</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
