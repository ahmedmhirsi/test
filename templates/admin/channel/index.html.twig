{% extends 'backoffice.html.twig' %}

{% block title %}Channel Management{% endblock %}

{% block admin_content %}
<div class="container-fluid">
    <div class="flex flex-col md:flex-row justify-between items-center mb-6 gap-4">
        <div>
            <h1 class="text-3xl font-display font-bold text-navy dark:text-white">Gestion des Canaux</h1>
            <p class="text-gray-500 text-sm">Gérez les canaux de communication de la plateforme.</p>
        </div>
        <div class="flex items-center gap-3 w-full md:w-auto">
            <form action="{{ path('app_admin_channel_index') }}" method="get" class="flex items-center gap-2 bg-white dark:bg-[#1e2235] rounded-lg border border-gray-200 dark:border-gray-700 px-3 py-2 w-full md:w-64">
                <span class="material-symbols-outlined text-gray-400">search</span>
                <input type="text" name="q" value="{{ current_search }}" placeholder="Rechercher..." class="bg-transparent border-none focus:ring-0 text-sm w-full text-navy dark:text-white placeholder-gray-400">
                {% if current_sort %}
                    <input type="hidden" name="sort" value="{{ current_sort }}">
                    <input type="hidden" name="direction" value="{{ current_direction }}">
                {% endif %}
            </form>
            <a href="{{ path('app_admin_channel_new') }}" class="px-4 py-2 bg-primary text-white rounded-lg font-bold hover:bg-primary/90 transition-colors shadow-lg shadow-primary/30 flex items-center gap-2 whitespace-nowrap">
                <span class="material-symbols-outlined text-[20px]">add</span>
                Nouveau Canal
            </a>
        </div>
    </div>

    <div class="bg-white dark:bg-[#1e2235] rounded-xl shadow-sm border border-gray-100 dark:border-gray-800 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left">
                <thead class="bg-gray-50 dark:bg-gray-800/50">
                    <tr>
                        <th class="px-6 py-4 text-xs font-black text-gray-400 uppercase tracking-widest">
                            <a href="{{ path('app_admin_channel_index', {q: current_search, sort: 'nom', direction: current_sort == 'nom' and current_direction == 'ASC' ? 'DESC' : 'ASC'}) }}" class="flex items-center gap-1 hover:text-primary transition-colors">
                                Nom
                                {% if current_sort == 'nom' %}
                                    <span class="material-symbols-outlined text-[16px]">{{ current_direction == 'ASC' ? 'arrow_upward' : 'arrow_downward' }}</span>
                                {% endif %}
                            </a>
                        </th>
                        <th class="px-6 py-4 text-xs font-black text-gray-400 uppercase tracking-widest">
                            <a href="{{ path('app_admin_channel_index', {q: current_search, sort: 'type', direction: current_sort == 'type' and current_direction == 'ASC' ? 'DESC' : 'ASC'}) }}" class="flex items-center gap-1 hover:text-primary transition-colors">
                                Type
                                {% if current_sort == 'type' %}
                                    <span class="material-symbols-outlined text-[16px]">{{ current_direction == 'ASC' ? 'arrow_upward' : 'arrow_downward' }}</span>
                                {% endif %}
                            </a>
                        </th>
                        <th class="px-6 py-4 text-xs font-black text-gray-400 uppercase tracking-widest">
                            <a href="{{ path('app_admin_channel_index', {q: current_search, sort: 'statut', direction: current_sort == 'statut' and current_direction == 'ASC' ? 'DESC' : 'ASC'}) }}" class="flex items-center gap-1 hover:text-primary transition-colors">
                                Statut
                                {% if current_sort == 'statut' %}
                                    <span class="material-symbols-outlined text-[16px]">{{ current_direction == 'ASC' ? 'arrow_upward' : 'arrow_downward' }}</span>
                                {% endif %}
                            </a>
                        </th>
                        <th class="px-6 py-4 text-xs font-black text-gray-400 uppercase tracking-widest">
                            <a href="{{ path('app_admin_channel_index', {q: current_search, sort: 'max_participants', direction: current_sort == 'max_participants' and current_direction == 'ASC' ? 'DESC' : 'ASC'}) }}" class="flex items-center gap-1 hover:text-primary transition-colors">
                                Participants
                                {% if current_sort == 'max_participants' %}
                                    <span class="material-symbols-outlined text-[16px]">{{ current_direction == 'ASC' ? 'arrow_upward' : 'arrow_downward' }}</span>
                                {% endif %}
                            </a>
                        </th>
                        <th class="px-6 py-4 text-xs font-black text-gray-400 uppercase tracking-widest">Verrouillé</th>
                        <th class="px-6 py-4 text-xs font-black text-gray-400 uppercase tracking-widest">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100 dark:divide-gray-800">
                    {% for channel in channels %}
                    <tr class="hover:bg-gray-50 dark:hover:bg-gray-800/20 transition-colors">
                        <td class="px-6 py-4 font-bold text-navy dark:text-white">{{ channel.nom }}</td>
                        <td class="px-6 py-4">
                            <span class="px-2 py-1 rounded text-xs font-black uppercase tracking-wider 
                                {% if channel.type == 'Vocal' %}bg-purple-100 text-purple-600{% else %}bg-blue-100 text-blue-600{% endif %}">
                                {{ channel.type }}
                            </span>
                        </td>
                        <td class="px-6 py-4">
                            <span class="px-2 py-1 rounded text-xs font-black uppercase tracking-wider 
                                {% if channel.statut == 'Actif' %}bg-green-100 text-green-600{% else %}bg-gray-100 text-gray-600{% endif %}">
                                {{ channel.statut }}
                            </span>
                        </td>
                        <td class="px-6 py-4 text-gray-500 font-bold text-xs">{{ channel.userChannels|length }} / {{ channel.maxParticipants ?? '∞' }}</td>
                        <td class="px-6 py-4">
                            {% if channel.isLocked %}
                                <span class="material-symbols-outlined text-red-500">lock</span>
                            {% else %}
                                <span class="material-symbols-outlined text-green-500">lock_open</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 flex gap-2">
                             <a href="{{ path('app_admin_channel_edit', {'id': channel.id}) }}" class="p-2 hover:bg-blue-50 text-blue-600 rounded-lg transition-colors" title="Modifier">
                                <span class="material-symbols-outlined text-[18px]">edit</span>
                            </a>

                            {% if channel.isLocked %}
                                <form method="post" action="{{ path('app_admin_channel_unlock', {id: channel.id}) }}" onsubmit="return confirm('Déverrouiller ce canal ?');">
                                    <button class="p-2 hover:bg-green-50 text-green-600 rounded-lg transition-colors" title="Déverrouiller">
                                        <span class="material-symbols-outlined text-[18px]">lock_open</span>
                                    </button>
                                </form>
                            {% else %}
                                <form method="post" action="{{ path('app_admin_channel_lock', {id: channel.id}) }}" onsubmit="return confirm('Verrouiller ce canal ?');">
                                    <button class="p-2 hover:bg-orange-50 text-orange-600 rounded-lg transition-colors" title="Verrouiller">
                                        <span class="material-symbols-outlined text-[18px]">lock</span>
                                    </button>
                                </form>
                            {% endif %}
                            
                            <form method="post" action="{{ path('app_admin_channel_delete', {id: channel.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce canal ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ channel.id) }}">
                                <button class="p-2 hover:bg-red-50 text-red-600 rounded-lg transition-colors" title="Supprimer">
                                    <span class="material-symbols-outlined text-[18px]">delete</span>
                                </button>
                            </form>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="6" class="px-6 py-8 text-center text-gray-500">Aucun canal trouvé.</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
