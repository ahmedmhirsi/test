{% extends 'backoffice.html.twig' %}

{% block title %}Channel Management{% endblock %}

{% block admin_content %}
<div class="container-fluid">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-display font-bold text-navy dark:text-white">Channel Management</h1>
    </div>

    <div class="bg-white dark:bg-[#1e2235] rounded-xl shadow-sm border border-gray-100 dark:border-gray-800 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left">
                <thead class="bg-gray-50 dark:bg-gray-800/50">
                    <tr>
                        <th class="px-6 py-4 text-xs font-black text-gray-400 uppercase tracking-widest">Name</th>
                        <th class="px-6 py-4 text-xs font-black text-gray-400 uppercase tracking-widest">Type</th>
                        <th class="px-6 py-4 text-xs font-black text-gray-400 uppercase tracking-widest">Status</th>
                        <th class="px-6 py-4 text-xs font-black text-gray-400 uppercase tracking-widest">Participants</th>
                        <th class="px-6 py-4 text-xs font-black text-gray-400 uppercase tracking-widest">Locked</th>
                        <th class="px-6 py-4 text-xs font-black text-gray-400 uppercase tracking-widest">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100 dark:divide-gray-800">
                    {% for channel in channels %}
                    <tr class="hover:bg-gray-50 dark:hover:bg-gray-800/20 transition-colors">
                        <td class="px-6 py-4 font-bold text-navy dark:text-white">{{ channel.nom }}</td>
                        <td class="px-6 py-4">
                            <span class="px-2 py-1 rounded text-xs font-bold uppercase tracking-wider 
                                {% if channel.type == 'Vocal' %}bg-purple-100 text-purple-600{% else %}bg-blue-100 text-blue-600{% endif %}">
                                {{ channel.type }}
                            </span>
                        </td>
                        <td class="px-6 py-4">
                            <span class="px-2 py-1 rounded text-xs font-bold uppercase tracking-wider 
                                {% if channel.statut == 'Actif' %}bg-green-100 text-green-600{% else %}bg-gray-100 text-gray-600{% endif %}">
                                {{ channel.statut }}
                            </span>
                        </td>
                        <td class="px-6 py-4 text-gray-500">{{ channel.userChannels|length }} / {{ channel.maxParticipants ?? 'âˆž' }}</td>
                        <td class="px-6 py-4">
                            {% if channel.isLocked %}
                                <span class="material-symbols-outlined text-red-500">lock</span>
                            {% else %}
                                <span class="material-symbols-outlined text-green-500">lock_open</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 flex gap-2">
                            {% if channel.isLocked %}
                                <form method="post" action="{{ path('app_admin_channel_unlock', {id: channel.id}) }}" onsubmit="return confirm('Unlock this channel?');">
                                    <button class="p-2 hover:bg-green-50 text-green-600 rounded-lg transition-colors" title="Unlock">
                                        <span class="material-symbols-outlined text-[18px]">lock_open</span>
                                    </button>
                                </form>
                            {% else %}
                                <form method="post" action="{{ path('app_admin_channel_lock', {id: channel.id}) }}" onsubmit="return confirm('Lock this channel?');">
                                    <button class="p-2 hover:bg-red-50 text-red-600 rounded-lg transition-colors" title="Lock">
                                        <span class="material-symbols-outlined text-[18px]">lock</span>
                                    </button>
                                </form>
                            {% endif %}
                            
                            <form method="post" action="{{ path('app_admin_channel_delete', {id: channel.id}) }}" onsubmit="return confirm('Are you sure you want to delete this channel?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ channel.id) }}">
                                <button class="p-2 hover:bg-red-50 text-red-600 rounded-lg transition-colors" title="Delete">
                                    <span class="material-symbols-outlined text-[18px]">delete</span>
                                </button>
                            </form>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
