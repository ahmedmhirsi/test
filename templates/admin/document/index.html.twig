{% extends 'back_office/base.html.twig' %}

{% block title %}Knowledge Base - Nexus AI{% endblock %}

{% block header_title %}
    <span class="flex items-center gap-2">
        <span class="material-symbols-outlined text-nexus-primary animate-pulse-slow">library_books</span>
        Knowledge Base
    </span>
{% endblock %}

{% block content %}
<div class="swup-transition-fade pb-20">

    {# ─── Header ─── #}
    <div class="flex flex-col md:flex-row justify-between items-end mb-8 gap-4">
        <div>
            <h1 class="text-4xl font-black text-white tracking-tight leading-tight animate-slide-up">
                Documents <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-cyan-400">RAG</span>
            </h1>
            <p class="text-gray-400 text-sm mt-2 animate-slide-up" style="animation-delay: 0.1s">
                Base de connaissance pour le moteur d'IA.
            </p>
        </div>
        
        <div class="animate-slide-up" style="animation-delay: 0.2s">
            <a href="{{ path('app_admin_document_upload') }}" class="btn-nexus-primary rounded-full px-6 py-2 flex items-center gap-2 shadow-lg shadow-cyan-500/20 group">
                <span class="material-symbols-outlined text-lg group-hover:rotate-180 transition-transform">cloud_upload</span>
                <span>Uploader Document</span>
            </a>
        </div>
    </div>

    {# ─── Stats Grid ─── #}
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8 animate-slide-up" style="animation-delay: 0.3s">
        {# Total #}
        <div class="glass-panel p-4 flex items-center gap-4 group">
            <div class="size-12 rounded-xl bg-blue-500/10 text-blue-400 flex items-center justify-center group-hover:scale-110 transition-transform">
                <span class="material-symbols-outlined">folder</span>
            </div>
            <div>
                <p class="text-xs font-bold text-gray-500 uppercase">Total Docs</p>
                <p class="text-2xl font-black text-white">{{ statistics.total }}</p>
            </div>
        </div>

        {# Processed #}
        <div class="glass-panel p-4 flex items-center gap-4 group">
            <div class="size-12 rounded-xl bg-green-500/10 text-green-400 flex items-center justify-center group-hover:scale-110 transition-transform">
                <span class="material-symbols-outlined">check_circle</span>
            </div>
            <div>
                <p class="text-xs font-bold text-gray-500 uppercase">Indexés</p>
                <p class="text-2xl font-black text-white">{{ statistics.processed }}</p>
            </div>
        </div>

        {# Pending #}
        <div class="glass-panel p-4 flex items-center gap-4 group">
            <div class="size-12 rounded-xl bg-yellow-500/10 text-yellow-400 flex items-center justify-center group-hover:scale-110 transition-transform">
                <span class="material-symbols-outlined animate-spin-slow">sync</span>
            </div>
            <div>
                <p class="text-xs font-bold text-gray-500 uppercase">En Attente</p>
                <p class="text-2xl font-black text-white">{{ statistics.pending }}</p>
            </div>
        </div>

        {# Errors #}
        <div class="glass-panel p-4 flex items-center gap-4 group">
            <div class="size-12 rounded-xl bg-red-500/10 text-red-400 flex items-center justify-center group-hover:scale-110 transition-transform">
                <span class="material-symbols-outlined">error</span>
            </div>
            <div>
                <p class="text-xs font-bold text-gray-500 uppercase">Erreurs</p>
                <p class="text-2xl font-black text-white">{{ statistics.error }}</p>
            </div>
        </div>
    </div>

    {# ─── Filters & List ─── #}
    <div class="glass-panel overflow-hidden animate-slide-up" style="animation-delay: 0.4s">
        
        {# Toolbar #}
        <div class="p-4 border-b border-white/5 bg-white/5 flex flex-wrap gap-4 items-center justify-between">
            <form method="get" class="flex flex-wrap gap-4 flex-1">
                <div class="relative flex-1 min-w-[200px]">
                    <span class="absolute left-3 top-2.5 text-gray-500 material-symbols-outlined text-[18px]">search</span>
                    <input type="text" name="search" value="{{ currentSearch }}" placeholder="Rechercher un fichier..." 
                           class="w-full pl-9 pr-4 py-2 bg-[#13151b] border border-white/10 rounded-lg text-sm text-white focus:ring-1 focus:ring-cyan-500">
                </div>
                <select name="status" class="bg-[#13151b] border border-white/10 rounded-lg text-sm text-gray-300 py-2 pl-3 pr-8 focus:ring-1 focus:ring-cyan-500">
                    <option value="">Tous les statuts</option>
                    <option value="pending" {% if currentStatus == 'pending' %}selected{% endif %}>En attente</option>
                    <option value="processed" {% if currentStatus == 'processed' %}selected{% endif %}>Traité</option>
                    <option value="error" {% if currentStatus == 'error' %}selected{% endif %}>Erreur</option>
                </select>
                <button type="submit" class="p-2 bg-nexus-primary/20 text-nexus-primary rounded-lg hover:bg-nexus-primary hover:text-white transition-colors">
                    <span class="material-symbols-outlined">filter_list</span>
                </button>
            </form>
        </div>

        {# File System Grid #}
        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="bg-black/20 text-gray-500 text-[10px] uppercase font-bold tracking-widest border-b border-white/5">
                        <th class="px-6 py-3">Fichier</th>
                        <th class="px-6 py-3">Type</th>
                        <th class="px-6 py-3">Vectorisation</th>
                        <th class="px-6 py-3">Source</th>
                        <th class="px-6 py-3 text-right">Action</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-white/5 text-sm font-mono text-gray-400">
                    {% for document in documents %}
                    <tr class="group hover:bg-white/5 transition-colors">
                        <td class="px-6 py-4">
                            <div class="flex items-center gap-3">
                                <div class="size-8 rounded bg-white/5 border border-white/10 flex items-center justify-center text-xs font-bold text-gray-300 uppercase">
                                    {{ document.fileExtension }}
                                </div>
                                <div>
                                    <div class="text-white font-bold group-hover:text-cyan-400 transition-colors">{{ document.originalName }}</div>
                                    <div class="text-[10px] text-gray-600">{{ document.sizeFormatted }} • {{ document.uploadedAt|date('d M H:i') }}</div>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            <span class="px-2 py-1 rounded bg-white/5 border border-white/5 text-[10px]">
                                {{ document.mimeType }}
                            </span>
                        </td>
                        <td class="px-6 py-4">
                            {% if document.status == 'processed' %}
                                <div class="flex items-center gap-2 text-green-400">
                                    <span class="relative flex h-2 w-2">
                                      <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
                                      <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"></span>
                                    </span>
                                    <span class="text-xs font-bold">LIVE</span>
                                </div>
                            {% elseif document.status == 'pending' %}
                                <div class="flex items-center gap-2 text-yellow-400">
                                    <span class="material-symbols-outlined text-[14px] animate-spin">sync</span>
                                    <span class="text-xs font-bold">PROCESSING</span>
                                </div>
                            {% elseif document.status == 'error' %}
                                <div class="flex items-center gap-2 text-red-400">
                                    <span class="material-symbols-outlined text-[14px]">error</span>
                                    <span class="text-xs font-bold">FAILED</span>
                                </div>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4">
                            <div class="flex items-center gap-2">
                                <span class="material-symbols-outlined text-[14px]">account_circle</span>
                                {{ document.uploadedBy.prenom }}
                            </div>
                        </td>
                        <td class="px-6 py-4 text-right">
                             <div class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                <a href="{{ path('app_admin_document_show', {'id': document.id}) }}" class="size-8 rounded bg-white/5 flex items-center justify-center text-gray-400 hover:bg-cyan-500 hover:text-white transition-all">
                                    <span class="material-symbols-outlined text-[16px]">terminal</span>
                                </a>
                                <form method="post" action="{{ path('app_admin_document_delete', {'id': document.id}) }}" onsubmit="return confirm('Supprimer définitivement l\'index ?');" class="inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ document.id) }}">
                                    <button type="submit" class="size-8 rounded bg-white/5 flex items-center justify-center text-gray-400 hover:bg-red-500 hover:text-white transition-all">
                                        <span class="material-symbols-outlined text-[16px]">delete</span>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="5" class="px-6 py-16 text-center">
                            <span class="material-symbols-outlined text-4xl text-gray-700 mb-2">folder_off</span>
                            <p class="text-gray-500">Aucun document dans la base.</p>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
