{% extends 'back_office/base.html.twig' %}

{% block title %}{{ document.originalName }} - Document{% endblock %}

{% block body %}
<div class="p-8">
    {# Breadcrumb #}
    <nav class="mb-6">
        <ol class="flex items-center space-x-2 text-sm text-gray-500 dark:text-gray-400">
            <li><a href="{{ path('app_admin_document_index') }}" class="hover:text-blue-600">Documents</a></li>
            <li><span class="mx-2">/</span></li>
            <li class="text-gray-900 dark:text-white">{{ document.originalName }}</li>
        </ol>
    </nav>

    {# Flash Messages #}
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="mb-4 rounded-lg p-4 {% if type == 'success' %}bg-green-50 text-green-800 border border-green-200{% elseif type == 'danger' %}bg-red-50 text-red-800 border border-red-200{% else %}bg-blue-50 text-blue-800 border border-blue-200{% endif %}">
                {{ message|raw }}
            </div>
        {% endfor %}
    {% endfor %}

    {# Header #}
    <div class="mb-8 flex items-center justify-between">
        <div class="flex items-center">
            <div class="bg-blue-100 dark:bg-blue-900 rounded-lg p-4 mr-4">
                <svg class="h-12 w-12 text-blue-600 dark:text-blue-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
            </div>
            <div>
                <h1 class="text-3xl font-bold text-gray-900 dark:text-white">{{ document.originalName }}</h1>
                <p class="mt-1 text-gray-600 dark:text-gray-400">Document #{{ document.id }}</p>
            </div>
        </div>
        <div class="flex space-x-3">
            {% if document.status == 'error' %}
            <form method="post" action="{{ path('app_admin_document_retry', {'id': document.id}) }}">
                <input type="hidden" name="_token" value="{{ csrf_token('retry' ~ document.id) }}">
                <button type="submit" class="px-6 py-3 bg-yellow-600 text-white font-semibold rounded-lg hover:bg-yellow-700 transition-colors">
                    üîÑ R√©essayer
                </button>
            </form>
            {% endif %}
            <form method="post" action="{{ path('app_admin_document_delete', {'id': document.id}) }}" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer ce document ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ document.id) }}">
                <button type="submit" class="px-6 py-3 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 transition-colors">
                    üóëÔ∏è Supprimer
                </button>
            </form>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        {# Left Column - Document Info #}
        <div class="lg:col-span-2 space-y-6">
            {# Status Card #}
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
                <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Statut</h2>
                <div class="flex items-center">
                    {% if document.status == 'processed' %}
                    <div class="flex items-center text-green-600 dark:text-green-400">
                        <svg class="h-8 w-8 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <div>
                            <p class="text-lg font-semibold">Document trait√© avec succ√®s</p>
                            <p class="text-sm text-gray-600 dark:text-gray-400">Le document est disponible dans le chatbot</p>
                        </div>
                    </div>
                    {% elseif document.status == 'pending' %}
                    <div class="flex items-center text-yellow-600 dark:text-yellow-400">
                        <svg class="h-8 w-8 mr-3 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                        </svg>
                        <div>
                            <p class="text-lg font-semibold">En cours de traitement</p>
                            <p class="text-sm text-gray-600 dark:text-gray-400">Le document est en attente de traitement</p>
                        </div>
                    </div>
                    {% elseif document.status == 'error' %}
                    <div class="flex items-center text-red-600 dark:text-red-400">
                        <svg class="h-8 w-8 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <div>
                            <p class="text-lg font-semibold">Erreur de traitement</p>
                            <p class="text-sm text-gray-600 dark:text-gray-400">Une erreur est survenue lors du traitement</p>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>

            {# Description Card #}
            {% if document.description %}
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
                <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Description</h2>
                <p class="text-gray-700 dark:text-gray-300">{{ document.description }}</p>
            </div>
            {% endif %}

            {# n8n Response Card #}
            {% if document.n8nResponse %}
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
                <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">R√©ponse n8n</h2>
                <div class="bg-gray-50 dark:bg-gray-900 rounded-lg p-4 font-mono text-sm">
                    <pre class="whitespace-pre-wrap text-gray-700 dark:text-gray-300">{{ document.n8nResponse }}</pre>
                </div>
            </div>
            {% endif %}
        </div>

        {# Right Column - Metadata #}
        <div class="space-y-6">
            {# File Info Card #}
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
                <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Informations du fichier</h2>
                <dl class="space-y-4">
                    <div>
                        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Type</dt>
                        <dd class="mt-1 text-sm text-gray-900 dark:text-white">
                            <span class="px-2 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-300 rounded font-mono">
                                {{ document.fileExtension }}
                            </span>
                        </dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">MIME Type</dt>
                        <dd class="mt-1 text-sm text-gray-900 dark:text-white font-mono">{{ document.mimeType }}</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Taille</dt>
                        <dd class="mt-1 text-sm text-gray-900 dark:text-white font-semibold">{{ document.sizeFormatted }}</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Nom de fichier</dt>
                        <dd class="mt-1 text-sm text-gray-900 dark:text-white font-mono break-all">{{ document.filename }}</dd>
                    </div>
                </dl>
            </div>

            {# Upload Info Card #}
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
                <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Informations d'upload</h2>
                <dl class="space-y-4">
                    <div>
                        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Upload√© par</dt>
                        <dd class="mt-1">
                            <div class="flex items-center">
                                {% if document.uploadedBy.photo %}
                                <img src="{{ asset('uploads/profile_photos/' ~ document.uploadedBy.photo) }}" alt="{{ document.uploadedBy.prenom }}" class="h-8 w-8 rounded-full mr-2">
                                {% else %}
                                <div class="h-8 w-8 rounded-full bg-blue-500 flex items-center justify-center text-white font-semibold mr-2">
                                    {{ document.uploadedBy.prenom|slice(0, 1)|upper }}
                                </div>
                                {% endif %}
                                <span class="text-sm text-gray-900 dark:text-white">
                                    {{ document.uploadedBy.prenom }} {{ document.uploadedBy.nom }}
                                </span>
                            </div>
                        </dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Date d'upload</dt>
                        <dd class="mt-1 text-sm text-gray-900 dark:text-white">
                            {{ document.uploadedAt|date('d/m/Y √† H:i:s') }}
                        </dd>
                    </div>
                </dl>
            </div>
        </div>
    </div>

    {# Back Button #}
    <div class="mt-8">
        <a href="{{ path('app_admin_document_index') }}" class="inline-flex items-center px-6 py-3 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Retour √† la liste
        </a>
    </div>
</div>
{% endblock %}
