{% extends 'backoffice.html.twig' %}

{% block title %}Gestion des Messages{% endblock %}

{% block admin_content %}
<div class="container-fluid">
    <div class="flex flex-col md:flex-row justify-between items-center mb-6 gap-4">
        <div>
            <h1 class="text-3xl font-display font-bold text-navy dark:text-white">Gestion des Messages</h1>
            <p class="text-gray-500 text-sm">Consultez et modérez les messages de la plateforme.</p>
        </div>
        <div class="w-full md:w-64">
            <form action="{{ path('app_admin_message_index') }}" method="get" class="flex items-center gap-2 bg-white dark:bg-[#1e2235] rounded-lg border border-gray-200 dark:border-gray-700 px-3 py-2">
                <span class="material-symbols-outlined text-gray-400">search</span>
                <input type="text" name="q" value="{{ current_search }}" placeholder="Rechercher..." class="bg-transparent border-none focus:ring-0 text-sm w-full text-navy dark:text-white placeholder-gray-400">
                {% if current_sort %}
                    <input type="hidden" name="sort" value="{{ current_sort }}">
                    <input type="hidden" name="direction" value="{{ current_direction }}">
                {% endif %}
            </form>
        </div>
    </div>

    <div class="bg-white dark:bg-[#1e2235] rounded-xl shadow-sm border border-gray-100 dark:border-gray-800 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left">
                <thead class="bg-gray-50 dark:bg-gray-800/50">
                    <tr>
                        <th class="px-6 py-4 text-xs font-black text-gray-400 uppercase tracking-widest">
                            <a href="{{ path('app_admin_message_index', {q: current_search, sort: 'date_envoi', direction: current_sort == 'date_envoi' and current_direction == 'DESC' ? 'ASC' : 'DESC'}) }}" class="flex items-center gap-1 hover:text-primary transition-colors">
                                Date
                                {% if current_sort == 'date_envoi' %}
                                    <span class="material-symbols-outlined text-[16px]">{{ current_direction == 'ASC' ? 'arrow_upward' : 'arrow_downward' }}</span>
                                {% endif %}
                            </a>
                        </th>
                        <th class="px-6 py-4 text-xs font-black text-gray-400 uppercase tracking-widest">
                            Utilisateur
                        </th>
                        <th class="px-6 py-4 text-xs font-black text-gray-400 uppercase tracking-widest">
                            <a href="{{ path('app_admin_message_index', {q: current_search, sort: 'channel', direction: current_sort == 'channel' and current_direction == 'ASC' ? 'DESC' : 'ASC'}) }}" class="flex items-center gap-1 hover:text-primary transition-colors">
                                Canal
                                {% if current_sort == 'channel' %}
                                    <span class="material-symbols-outlined text-[16px]">{{ current_direction == 'ASC' ? 'arrow_upward' : 'arrow_downward' }}</span>
                                {% endif %}
                            </a>
                        </th>
                        <th class="px-6 py-4 text-xs font-black text-gray-400 uppercase tracking-widest">Contenu</th>
                        <th class="px-6 py-4 text-xs font-black text-gray-400 uppercase tracking-widest">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100 dark:divide-gray-800">
                    {% for message in messages %}
                    <tr class="hover:bg-gray-50 dark:hover:bg-gray-800/20 transition-colors">
                        <td class="px-6 py-4 text-sm text-gray-500 whitespace-nowrap">
                            {{ message.dateEnvoi|date('d/m/Y H:i') }}
                        </td>
                        <td class="px-6 py-4">
                            <div class="flex items-center gap-2">
                                <div class="size-6 rounded-full bg-gray-200 bg-center bg-cover" style='background-image: url("https://ui-avatars.com/api/?name={{ message.authorName|default('User') }}&background=random")'></div>
                                <span class="font-bold text-navy dark:text-white text-sm">{{ message.authorName|default('Inconnu') }}</span>
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            {% if message.channel %}
                                <span class="px-2 py-1 rounded text-xs font-black uppercase tracking-wider bg-blue-100 text-blue-600">
                                    # {{ message.channel.nom }}
                                </span>
                            {% else %}
                                <span class="text-gray-400 text-xs">-</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-600 dark:text-gray-300 max-w-xs truncate" title="{{ message.contenu }}">
                            {{ message.contenu }}
                        </td>
                        <td class="px-6 py-4">
                            <form method="post" action="{{ path('app_admin_message_delete', {id: message.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce message ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ message.id) }}">
                                <button class="p-2 hover:bg-red-50 text-red-600 rounded-lg transition-colors" title="Supprimer">
                                    <span class="material-symbols-outlined text-[18px]">delete</span>
                                </button>
                            </form>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="5" class="px-6 py-8 text-center text-gray-500">Aucun message trouvé.</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
