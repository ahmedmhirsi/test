{{ form_start(form, {'attr': {'class': 'space-y-6', 'novalidate': 'novalidate'}}) }}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {% if form.prenom is defined %}
        <div class="flex flex-col gap-2">
            <label class="text-sm font-bold text-[#A79E9C] uppercase tracking-wider ml-1">Prénom</label>
            {{ form_widget(form.prenom, {'attr': {'class': 'nexus-input !bg-slate-800/50'}}) }}
            <div class="text-red-600 text-sm">{{ form_errors(form.prenom) }}</div>
        </div>
        {% endif %}
        {% if form.nom is defined %}
        <div class="flex flex-col gap-2">
            <label class="text-sm font-bold text-[#A79E9C] uppercase tracking-wider ml-1">Nom</label>
            {{ form_widget(form.nom, {'attr': {'class': 'nexus-input !bg-slate-800/50'}}) }}
            <div class="text-red-600 text-sm">{{ form_errors(form.nom) }}</div>
        </div>
        {% endif %}
    </div>

    {% if form.email is defined %}
    <div class="flex flex-col gap-2">
        <label class="text-sm font-bold text-[#A79E9C] uppercase tracking-wider ml-1">Email</label>
        {{ form_widget(form.email, {'attr': {'class': 'nexus-input !bg-slate-800/50'}}) }}
        <div class="text-red-600 text-sm">{{ form_errors(form.email) }}</div>
    </div>
    {% endif %}

    {% if form.phoneNumber is defined %}
    <div class="flex flex-col gap-2">
        <label class="text-sm font-bold text-[#A79E9C] uppercase tracking-wider ml-1">Téléphone</label>
        {{ form_widget(form.phoneNumber, {'attr': {'class': 'nexus-input !bg-slate-800/50', 'placeholder': '+33 6 12 34 56 78'}}) }}
        <div class="text-red-600 text-sm">{{ form_errors(form.phoneNumber) }}</div>
    </div>
    {% endif %}

    {% if form.roles is defined %}
    <div class="flex flex-col gap-2">
        <label class="text-sm font-bold text-[#A79E9C] uppercase tracking-wider ml-1">Rôle</label>
        {{ form_widget(form.roles, {'attr': {'class': 'nexus-input !bg-slate-800/50'}}) }}
        <div class="text-red-600 text-sm">{{ form_errors(form.roles) }}</div>
    </div>
    {% endif %}

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {% if form.isActive is defined %}
        <div class="flex items-center gap-3 p-4 bg-gray-50 dark:bg-[#161516] rounded-lg">
            {{ form_widget(form.isActive, {'attr': {'class': 'size-5 rounded border-gray-300 text-primary focus:ring-primary'}}) }}
            <label class="text-sm font-medium text-[#D3C3B9] dark:text-white">Compte actif</label>
        </div>
        {% endif %}
        {% if form.isVerified is defined %}
        <div class="flex items-center gap-3 p-4 bg-gray-50 dark:bg-[#161516] rounded-lg">
            {{ form_widget(form.isVerified, {'attr': {'class': 'size-5 rounded border-gray-300 text-primary focus:ring-primary'}}) }}
            <label class="text-sm font-medium text-[#D3C3B9] dark:text-white">Email vérifié</label>
        </div>
        {% endif %}
    </div>

    {% if form.bio is defined %}
    <div class="flex flex-col gap-2">
        <label class="text-sm font-medium text-[#D3C3B9] dark:text-white">Biographie</label>
        {{ form_widget(form.bio, {'attr': {'class': 'w-full rounded-lg border border-[#e5e7eb] dark:border-[#1f2128] bg-white dark:bg-[#161516] px-4 py-3 text-base focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all resize-none', 'rows': 4}}) }}
        <div class="text-red-600 text-sm">{{ form_errors(form.bio) }}</div>
    </div>
    {% endif %}

    {% if form.expertise is defined %}
    <div class="flex flex-col gap-2">
        <label class="text-sm font-bold text-[#A79E9C] uppercase tracking-wider ml-1">Expertise</label>
        {{ form_widget(form.expertise, {'attr': {'class': 'nexus-input !bg-slate-800/50'}}) }}
        <div class="text-red-600 text-sm">{{ form_errors(form.expertise) }}</div>
    </div>
    {% endif %}

    {{ form_rest(form) }}

    <div class="flex items-center justify-end gap-4 pt-8 border-t border-white/5">
        <a href="{{ path('admin_user_index') }}" class="px-6 py-3 text-[#A79E9C] font-bold uppercase tracking-widest hover:text-white transition-colors text-[11px]">
            Cancel
        </a>
        <button type="submit" class="btn-nexus-primary px-8 py-3 rounded-xl flex items-center justify-center gap-2 shadow-xl shadow-nexus-primary/20">
            <span class="material-symbols-outlined text-[20px]">save</span>
            {{ button_label|default('Commit Changes') }}
        </button>
    </div>
{{ form_end(form) }}
