{{ form_start(form, {'attr': {'class': 'space-y-6', 'novalidate': 'novalidate'}}) }}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {% if form.prenom is defined %}
        <div class="flex flex-col gap-2">
            <label class="text-sm font-medium text-[#101218] dark:text-white">Prénom</label>
            {{ form_widget(form.prenom, {'attr': {'class': 'w-full rounded-lg border border-[#e5e7eb] dark:border-[#2d3142] bg-white dark:bg-[#252836] px-4 py-3 text-base focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all'}}) }}
            <div class="text-red-600 text-sm">{{ form_errors(form.prenom) }}</div>
        </div>
        {% endif %}
        {% if form.nom is defined %}
        <div class="flex flex-col gap-2">
            <label class="text-sm font-medium text-[#101218] dark:text-white">Nom</label>
            {{ form_widget(form.nom, {'attr': {'class': 'w-full rounded-lg border border-[#e5e7eb] dark:border-[#2d3142] bg-white dark:bg-[#252836] px-4 py-3 text-base focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all'}}) }}
            <div class="text-red-600 text-sm">{{ form_errors(form.nom) }}</div>
        </div>
        {% endif %}
    </div>

    {% if form.email is defined %}
    <div class="flex flex-col gap-2">
        <label class="text-sm font-medium text-[#101218] dark:text-white">Email</label>
        {{ form_widget(form.email, {'attr': {'class': 'w-full rounded-lg border border-[#e5e7eb] dark:border-[#2d3142] bg-white dark:bg-[#252836] px-4 py-3 text-base focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all'}}) }}
        <div class="text-red-600 text-sm">{{ form_errors(form.email) }}</div>
    </div>
    {% endif %}

    {% if form.phoneNumber is defined %}
    <div class="flex flex-col gap-2">
        <label class="text-sm font-medium text-[#101218] dark:text-white">Téléphone</label>
        {{ form_widget(form.phoneNumber, {'attr': {'class': 'w-full rounded-lg border border-[#e5e7eb] dark:border-[#2d3142] bg-white dark:bg-[#252836] px-4 py-3 text-base focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all', 'placeholder': '+33 6 12 34 56 78'}}) }}
        <div class="text-red-600 text-sm">{{ form_errors(form.phoneNumber) }}</div>
    </div>
    {% endif %}

    {% if form.roles is defined %}
    <div class="flex flex-col gap-2">
        <label class="text-sm font-medium text-[#101218] dark:text-white">Rôle</label>
        {{ form_widget(form.roles, {'attr': {'class': 'w-full rounded-lg border border-[#e5e7eb] dark:border-[#2d3142] bg-white dark:bg-[#252836] px-4 py-3 text-base focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all'}}) }}
        <div class="text-red-600 text-sm">{{ form_errors(form.roles) }}</div>
    </div>
    {% endif %}

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {% if form.isActive is defined %}
        <div class="flex items-center gap-3 p-4 bg-gray-50 dark:bg-[#252836] rounded-lg">
            {{ form_widget(form.isActive, {'attr': {'class': 'size-5 rounded border-gray-300 text-primary focus:ring-primary'}}) }}
            <label class="text-sm font-medium text-[#101218] dark:text-white">Compte actif</label>
        </div>
        {% endif %}
        {% if form.isVerified is defined %}
        <div class="flex items-center gap-3 p-4 bg-gray-50 dark:bg-[#252836] rounded-lg">
            {{ form_widget(form.isVerified, {'attr': {'class': 'size-5 rounded border-gray-300 text-primary focus:ring-primary'}}) }}
            <label class="text-sm font-medium text-[#101218] dark:text-white">Email vérifié</label>
        </div>
        {% endif %}
    </div>

    {% if form.bio is defined %}
    <div class="flex flex-col gap-2">
        <label class="text-sm font-medium text-[#101218] dark:text-white">Biographie</label>
        {{ form_widget(form.bio, {'attr': {'class': 'w-full rounded-lg border border-[#e5e7eb] dark:border-[#2d3142] bg-white dark:bg-[#252836] px-4 py-3 text-base focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all resize-none', 'rows': 4}}) }}
        <div class="text-red-600 text-sm">{{ form_errors(form.bio) }}</div>
    </div>
    {% endif %}

    {% if form.expertise is defined %}
    <div class="flex flex-col gap-2">
        <label class="text-sm font-medium text-[#101218] dark:text-white">Expertise</label>
        {{ form_widget(form.expertise, {'attr': {'class': 'w-full rounded-lg border border-[#e5e7eb] dark:border-[#2d3142] bg-white dark:bg-[#252836] px-4 py-3 text-base focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all'}}) }}
        <div class="text-red-600 text-sm">{{ form_errors(form.expertise) }}</div>
    </div>
    {% endif %}

    {{ form_rest(form) }}

    <div class="flex items-center justify-end gap-4 pt-4 border-t border-gray-100 dark:border-[#2d3142]">
        <a href="{{ path('admin_user_index') }}" class="px-6 py-3 text-[#5e658d] font-semibold hover:text-[#101218] transition-colors">
            Annuler
        </a>
        <button type="submit" class="inline-flex items-center gap-2 px-6 py-3 bg-primary text-navy rounded-lg font-bold hover:bg-yellow-400 transition-colors shadow-lg shadow-primary/30">
            <span class="material-symbols-outlined">save</span>
            {{ button_label|default('Enregistrer') }}
        </button>
    </div>
{{ form_end(form) }}
