{% extends 'back_office/base.html.twig' %}

{% block title %}Gestion des Utilisateurs - SmartNexus AI{% endblock %}

{% block breadcrumb %}
    <span class="text-[#9ca3af] material-symbols-outlined text-[16px]">chevron_right</span>
    <span class="text-primary font-semibold">Utilisateurs</span>
{% endblock %}

{% block content %}
<!-- Messages Flash -->
{% for type, messages in app.flashes %}
    {% for message in messages %}
        <div class="mb-6 flex items-start gap-3 p-4 rounded-lg {% if type == 'success' %}bg-green-50 border border-green-200 text-green-800{% elseif type == 'error' %}bg-red-50 border border-red-200 text-red-800{% else %}bg-blue-50 border border-blue-200 text-blue-800{% endif %}">
            <span class="material-symbols-outlined text-[24px] {% if type == 'success' %}text-green-600{% elseif type == 'error' %}text-red-600{% else %}text-blue-600{% endif %}">
                {% if type == 'success' %}check_circle{% elseif type == 'error' %}error{% else %}info{% endif %}
            </span>
            <div class="flex-1">
                <p class="font-semibold">{{ message }}</p>
            </div>
            <button onclick="this.parentElement.remove()" class="{% if type == 'success' %}text-green-600 hover:text-green-800{% elseif type == 'error' %}text-red-600 hover:text-red-800{% else %}text-blue-600 hover:text-blue-800{% endif %}">
                <span class="material-symbols-outlined text-[20px]">close</span>
            </button>
        </div>
    {% endfor %}
{% endfor %}

<div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-6">
    <div>
        <h1 class="text-3xl md:text-4xl font-black tracking-tight text-[#101218] dark:text-white mb-2">
            Gestion des Utilisateurs
        </h1>
        <p class="text-[#5e658d] dark:text-[#9ca3af] text-base">
            Liste complète des utilisateurs du système
        </p>
    </div>
    <div class="flex items-center gap-3">
        <a href="{{ path('admin_user_new') }}" class="flex items-center justify-center gap-2 rounded-lg h-11 px-6 bg-primary hover:bg-primary/90 text-navy text-sm font-bold shadow-lg shadow-primary/30 transition-all">
            <span class="material-symbols-outlined text-[20px]">add</span>
            <span>Nouvel Utilisateur</span>
        </a>
    </div>
</div>

<div class="bg-white dark:bg-[#1a1d2d] rounded-xl border border-[#e5e7eb] dark:border-[#2d3142] shadow-sm overflow-hidden">
    <div class="overflow-x-auto">
        <table class="w-full">
            <thead class="bg-gray-50 dark:bg-[#252836] border-b border-[#e5e7eb] dark:border-[#2d3142]">
                <tr>
                    <th class="px-6 py-4 text-left text-xs font-bold text-[#5e658d] dark:text-[#9ca3af] uppercase tracking-wider">Utilisateur</th>
                    <th class="px-6 py-4 text-left text-xs font-bold text-[#5e658d] dark:text-[#9ca3af] uppercase tracking-wider">Email</th>
                    <th class="px-6 py-4 text-left text-xs font-bold text-[#5e658d] dark:text-[#9ca3af] uppercase tracking-wider">Rôle</th>
                    <th class="px-6 py-4 text-left text-xs font-bold text-[#5e658d] dark:text-[#9ca3af] uppercase tracking-wider">Téléphone</th>
                    <th class="px-6 py-4 text-left text-xs font-bold text-[#5e658d] dark:text-[#9ca3af] uppercase tracking-wider">Statut</th>
                    <th class="px-6 py-4 text-left text-xs font-bold text-[#5e658d] dark:text-[#9ca3af] uppercase tracking-wider">Créé le</th>
                    <th class="px-6 py-4 text-right text-xs font-bold text-[#5e658d] dark:text-[#9ca3af] uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-[#e5e7eb] dark:divide-[#2d3142]">
        {% for user in users %}
            <tr class="hover:bg-gray-50 dark:hover:bg-[#252836] transition-colors">
                <td class="px-6 py-4">
                    <div class="flex items-center gap-3">
                        {% if user.photo %}
                            <div class="size-10 rounded-full bg-cover bg-center" style="background-image: url('{{ user.photo }}');"></div>
                        {% else %}
                            <div class="size-10 rounded-full bg-gradient-to-br from-primary to-electric flex items-center justify-center">
                                <span class="text-navy font-bold text-sm">{{ user.prenom|slice(0, 1)|upper }}{{ user.nom|slice(0, 1)|upper }}</span>
                            </div>
                        {% endif %}
                        <div>
                            <p class="font-bold text-[#101218] dark:text-white">{{ user.prenom }} {{ user.nom }}</p>
                            <p class="text-xs text-[#5e658d]">ID: {{ user.id }}</p>
                        </div>
                    </div>
                </td>
                <td class="px-6 py-4">
                    <span class="text-sm text-[#5e658d]">{{ user.email }}</span>
                </td>
                <td class="px-6 py-4">
                    {% set roleLabel = 'Utilisateur' %}
                    {% set roleColor = 'bg-gray-100 text-gray-700 border-gray-200' %}
                    {% if 'ROLE_ADMIN' in user.roles %}
                        {% set roleLabel = 'Admin' %}
                        {% set roleColor = 'bg-orange-100 text-orange-700 border-orange-200' %}
                    {% elseif 'ROLE_EMPLOYEE' in user.roles %}
                        {% set roleLabel = 'Employé' %}
                        {% set roleColor = 'bg-blue-100 text-blue-700 border-blue-200' %}
                    {% elseif 'ROLE_CLIENT' in user.roles %}
                        {% set roleLabel = 'Client' %}
                        {% set roleColor = 'bg-indigo-100 text-indigo-700 border-indigo-200' %}
                    {% elseif 'ROLE_CANDIDAT' in user.roles %}
                        {% set roleLabel = 'Candidat' %}
                        {% set roleColor = 'bg-purple-100 text-purple-700 border-purple-200' %}
                    {% elseif 'ROLE_VISITEUR' in user.roles %}
                        {% set roleLabel = 'Visiteur' %}
                        {% set roleColor = 'bg-teal-100 text-teal-700 border-teal-200' %}
                    {% endif %}
                    <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-bold {{ roleColor }} border">
                        {{ roleLabel }}
                    </span>
                </td>
                <td class="px-6 py-4">
                    <span class="text-sm text-[#5e658d]">{{ user.phoneNumber ?? '-' }}</span>
                </td>
                <td class="px-6 py-4">
                    {% if user.isActive %}
                        <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-bold bg-green-100 text-green-700 border border-green-200">
                            <span class="size-1.5 rounded-full bg-green-600"></span>
                            Actif
                        </span>
                    {% else %}
                        <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-bold bg-red-100 text-red-700 border border-red-200">
                            <span class="size-1.5 rounded-full bg-red-600"></span>
                            Inactif
                        </span>
                    {% endif %}
                </td>
                <td class="px-6 py-4">
                    <span class="text-sm text-[#5e658d]">{{ user.createdAt ? user.createdAt|date('d/m/Y') : '-' }}</span>
                </td>
                <td class="px-6 py-4 text-right">
                    <div class="flex items-center justify-end gap-2">
                        <a href="{{ path('admin_user_show', {'id': user.id}) }}" class="size-8 inline-flex items-center justify-center rounded-lg hover:bg-blue-100 text-blue-600 transition-colors" title="Voir">
                            <span class="material-symbols-outlined text-[18px]">visibility</span>
                        </a>
                        <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="size-8 inline-flex items-center justify-center rounded-lg hover:bg-green-100 text-green-600 transition-colors" title="Modifier">
                            <span class="material-symbols-outlined text-[18px]">edit</span>
                        </a>
                        {% if 'ROLE_ADMIN' not in user.roles or app.user.id == user.id %}
                        <form method="post" action="{{ path('admin_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');" class="inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                            <button type="submit" class="size-8 inline-flex items-center justify-center rounded-lg hover:bg-red-100 text-red-600 transition-colors" title="Supprimer">
                                <span class="material-symbols-outlined text-[18px]">delete</span>
                            </button>
                        </form>
                        {% endif %}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7" class="px-6 py-12 text-center">
                    <div class="flex flex-col items-center gap-3">
                        <span class="material-symbols-outlined text-[48px] text-[#9ca3af]">person_off</span>
                        <p class="text-[#5e658d] dark:text-[#9ca3af]">Aucun utilisateur trouvé</p>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</div>
{% endblock %}
