{% extends 'back_office/base.html.twig' %}

{% block title %}User Command - Nexus AI{% endblock %}

{% block header_title %}
    <span class="flex items-center gap-2">
        <span class="material-symbols-outlined text-nexus-primary animate-pulse-slow">admin_panel_settings</span>
        User Command
    </span>
{% endblock %}

{% block content %}
<div class="swup-transition-fade pb-20">

    {# ─── Header ─── #}
    <div class="flex flex-col md:flex-row justify-between items-end mb-8 gap-4">
        <div>
            <h1 class="text-4xl font-black text-white tracking-tight leading-tight animate-slide-up">
                Base <span class="text-transparent bg-clip-text bg-gradient-to-r from-nexus-primary to-purple-400">Utilisateurs</span>
            </h1>
            <p class="text-gray-400 text-sm mt-2 animate-slide-up" style="animation-delay: 0.1s">
                Gérez les identités, les accès et les privilèges de sécurité.
            </p>
        </div>
        
        <div class="flex gap-3 animate-slide-up" style="animation-delay: 0.2s">
            <a href="{{ path('admin_user_export_pdf') }}" class="glass-panel px-4 py-2 flex items-center gap-2 rounded-full hover:bg-white/10 transition-colors group">
                <span class="material-symbols-outlined text-red-400 group-hover:scale-110 transition-transform">picture_as_pdf</span>
                <span class="text-xs font-bold text-gray-300 uppercase tracking-wider">Export PDF</span>
            </a>
            <a href="{{ path('admin_user_new') }}" class="btn-nexus-primary rounded-full px-6 py-2 flex items-center gap-2 shadow-lg shadow-nexus-primary/30 group">
                <span class="material-symbols-outlined text-lg group-hover:rotate-90 transition-transform">add</span>
                <span>Nouvel Agent</span>
            </a>
        </div>
    </div>

    {# ─── Filters ─── #}
    <div class="glass-panel p-6 mb-8 animate-slide-up relative overflow-hidden" style="animation-delay: 0.3s">
        <div class="absolute top-0 right-0 w-64 h-64 bg-nexus-primary/5 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2 pointer-events-none"></div>
        
        <form method="get" action="{{ path('admin_user_index') }}" class="grid grid-cols-1 md:grid-cols-12 gap-6 relative z-10">
            {# Search #}
            <div class="md:col-span-5 relative">
                <label class="text-xs font-bold text-gray-500 uppercase tracking-wider mb-2 block">Recherche Global</label>
                <div class="relative">
                    <input type="text" name="search" value="{{ search }}" placeholder="Nom, Email, ID..." 
                           class="w-full pl-10 pr-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white focus:ring-1 focus:ring-nexus-primary focus:border-nexus-primary transition-all">
                    <span class="absolute left-3 top-3.5 text-gray-400 material-symbols-outlined text-[20px]">search</span>
                </div>
            </div>

            {# Role #}
            <div class="md:col-span-3 relative">
                <label class="text-xs font-bold text-gray-500 uppercase tracking-wider mb-2 block">Filtrer par Rôle</label>
                <div class="relative">
                    <select name="role" class="w-full pl-4 pr-10 py-3 bg-white/5 border border-white/10 rounded-xl text-white focus:ring-1 focus:ring-nexus-primary appearance-none cursor-pointer">
                        <option value="" class="bg-gray-900">Tous les rôles</option>
                        <option value="ROLE_ADMIN" {{ role == 'ROLE_ADMIN' ? 'selected' : '' }} class="bg-gray-900">Administrateur</option>
                        <option value="ROLE_EMPLOYEE" {{ role == 'ROLE_EMPLOYEE' ? 'selected' : '' }} class="bg-gray-900">Employé</option>
                        <option value="ROLE_CLIENT" {{ role == 'ROLE_CLIENT' ? 'selected' : '' }} class="bg-gray-900">Client</option>
                    </select>
                    <span class="absolute right-3 top-3.5 text-gray-400 material-symbols-outlined pointer-events-none">expand_more</span>
                </div>
            </div>

            {# Status #}
            <div class="md:col-span-2 relative">
                <label class="text-xs font-bold text-gray-500 uppercase tracking-wider mb-2 block">Statut</label>
                <div class="relative">
                    <select name="isActive" class="w-full pl-4 pr-10 py-3 bg-white/5 border border-white/10 rounded-xl text-white focus:ring-1 focus:ring-nexus-primary appearance-none cursor-pointer">
                        <option value="" class="bg-gray-900">Tous</option>
                        <option value="1" {{ isActive == '1' ? 'selected' : '' }} class="bg-gray-900">Actif</option>
                        <option value="0" {{ isActive == '0' ? 'selected' : '' }} class="bg-gray-900">Inactif</option>
                    </select>
                    <span class="absolute right-3 top-3.5 text-gray-400 material-symbols-outlined pointer-events-none">expand_more</span>
                </div>
            </div>

            {# Buttons #}
            <div class="md:col-span-2 flex items-end gap-2">
                <button type="submit" class="flex-1 btn-nexus-primary py-3 rounded-xl flex items-center justify-center gap-2">
                    <span class="material-symbols-outlined">filter_alt</span>
                </button>
                <a href="{{ path('admin_user_index') }}" class="py-3 px-4 rounded-xl bg-white/5 hover:bg-white/10 text-gray-400 hover:text-white transition-colors border border-white/10" title="Reset">
                    <span class="material-symbols-outlined">refresh</span>
                </a>
            </div>
        </form>
    </div>

    {# ─── Users Grid/Table Hybrid ─── #}
    <div class="glass-panel overflow-hidden animate-slide-up" style="animation-delay: 0.4s">
        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="border-b border-white/5 bg-white/5">
                        <th class="p-4 text-xs font-black text-gray-500 uppercase tracking-widest">Utilisateur</th>
                        <th class="p-4 text-xs font-black text-gray-500 uppercase tracking-widest">Rôle</th>
                        <th class="p-4 text-xs font-black text-gray-500 uppercase tracking-widest">Contact</th>
                        <th class="p-4 text-xs font-black text-gray-500 uppercase tracking-widest text-center">Statut</th>
                        <th class="p-4 text-xs font-black text-gray-500 uppercase tracking-widest text-right">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-white/5">
                {% for user in users %}
                    <tr class="group hover:bg-white/5 transition-colors duration-200">
                        {# User Info #}
                        <td class="p-4">
                            <div class="flex items-center gap-4">
                                <div class="relative">
                                    {% if user.photo %}
                                        <div class="size-10 rounded-lg bg-cover bg-center shadow-lg border border-white/10 group-hover:border-nexus-primary/50 transition-colors" style="background-image: url('{{ asset('uploads/photos/' ~ user.photo) }}');"></div>
                                    {% else %}
                                        <div class="size-10 rounded-lg bg-gradient-to-br from-gray-700 to-gray-800 flex items-center justify-center border border-white/10 group-hover:border-nexus-primary/50 transition-colors text-white font-bold">
                                            {{ user.prenom|slice(0, 1)|upper }}{{ user.nom|slice(0, 1)|upper }}
                                        </div>
                                    {% endif %}
                                    <div class="absolute -bottom-1 -right-1 size-3 rounded-full border-2 border-[#13151b] {{ user.isActive ? 'bg-green-500 shadow-[0_0_8px_rgba(34,197,94,0.6)]' : 'bg-red-500 shadow-[0_0_8px_rgba(239,68,68,0.6)]' }}"></div>
                                </div>
                                <div>
                                    <h3 class="font-bold text-white group-hover:text-nexus-primary transition-colors text-sm">{{ user.prenom }} {{ user.nom }}</h3>
                                    <code class="text-[10px] text-gray-500 font-mono">ID: #{{ user.id }}</code>
                                </div>
                            </div>
                        </td>

                        {# Role Badge #}
                        <td class="p-4">
                             {% set roleConfig = {
                                'ROLE_ADMIN': {'bg': 'bg-amber-500/10', 'text': 'text-amber-400', 'border': 'border-amber-500/20', 'icon': 'shield'},
                                'ROLE_EMPLOYEE': {'bg': 'bg-blue-500/10', 'text': 'text-blue-400', 'border': 'border-blue-500/20', 'icon': 'badge'},
                                'ROLE_CLIENT': {'bg': 'bg-purple-500/10', 'text': 'text-purple-400', 'border': 'border-purple-500/20', 'icon': 'verified_user'},
                                'default': {'bg': 'bg-gray-500/10', 'text': 'text-gray-400', 'border': 'border-gray-500/20', 'icon': 'person'}
                            } %}
                            {% set config = roleConfig[user.roles[0] ?? 'default'] ?? roleConfig['default'] %}
                            
                            <div class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-md text-xs font-bold {{ config.bg }} {{ config.text }} border {{ config.border }}">
                                <span class="material-symbols-outlined text-[14px]">{{ config.icon }}</span>
                                {{ config.label|default(user.roles[0]|replace({'ROLE_': ''})|capitalize) }}
                            </div>
                        </td>

                        {# Contact #}
                        <td class="p-4">
                            <div class="flex flex-col gap-0.5">
                                <span class="text-xs text-gray-300 flex items-center gap-1.5">
                                    <span class="material-symbols-outlined text-[12px] text-gray-500">mail</span> {{ user.email }}
                                </span>
                                {% if user.phoneNumber %}
                                <span class="text-xs text-gray-400 flex items-center gap-1.5">
                                    <span class="material-symbols-outlined text-[12px] text-gray-500">call</span> {{ user.phoneNumber }}
                                </span>
                                {% endif %}
                            </div>
                        </td>

                        {# Status #}
                        <td class="p-4 text-center">
                            {% if user.isActive %}
                                <div class="inline-flex flex-col items-center gap-1">
                                    <span class="block w-16 h-1 bg-green-500/20 rounded-full overflow-hidden">
                                        <span class="block h-full bg-green-500 w-full animate-pure-pulse"></span>
                                    </span>
                                    <span class="text-[10px] font-bold text-green-500 uppercase tracking-wider">Actif</span>
                                </div>
                            {% else %}
                                <div class="inline-flex flex-col items-center gap-1">
                                    <span class="block w-16 h-1 bg-red-500/20 rounded-full"></span>
                                    <span class="text-[10px] font-bold text-red-500 uppercase tracking-wider">Inactif</span>
                                </div>
                            {% endif %}
                        </td>

                        {# Actions #}
                        <td class="p-4 text-right">
                            <div class="flex items-center justify-end gap-2 opacity-60 group-hover:opacity-100 transition-opacity">
                                <a href="{{ path('admin_user_show', {'id': user.id}) }}" class="size-8 rounded-lg bg-white/5 flex items-center justify-center text-gray-400 hover:bg-nexus-primary hover:text-white transition-all hover:scale-110" title="Voir">
                                    <span class="material-symbols-outlined text-[18px]">visibility</span>
                                </a>
                                <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="size-8 rounded-lg bg-white/5 flex items-center justify-center text-gray-400 hover:bg-nexus-accent hover:text-white transition-all hover:scale-110" title="Modifier">
                                    <span class="material-symbols-outlined text-[18px]">edit</span>
                                </a>
                                {% if 'ROLE_ADMIN' not in user.roles or app.user.id == user.id %}
                                    <form method="post" action="{{ path('admin_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Confirmer la suppression ?');" class="inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                        <button type="submit" class="size-8 rounded-lg bg-white/5 flex items-center justify-center text-gray-400 hover:bg-red-500 hover:text-white transition-all hover:scale-110" title="Supprimer">
                                            <span class="material-symbols-outlined text-[18px]">delete</span>
                                        </button>
                                    </form>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="p-12 text-center">
                            <div class="flex flex-col items-center justify-center opacity-50">
                                <span class="material-symbols-outlined text-4xl text-gray-500 mb-2">person_off</span>
                                <p class="text-gray-400 font-medium">Aucun utilisateur trouvé</p>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        
        {# Pagination (if implemented later) #}
        {# <div class="p-4 border-t border-white/5 flex justify-between items-center text-xs text-gray-500">
            <span>Affichage de {{ users|length }} utilisateurs</span>
        </div> #}
    </div>

</div>
{% endblock %}
