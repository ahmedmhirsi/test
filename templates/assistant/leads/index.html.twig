{% extends 'base.html.twig' %}

{% block title %}Leads - Assistant{% endblock %}

{% block body %}
<div class="min-h-screen bg-slate-50 dark:bg-slate-900">
    <!-- Navbar -->
    <nav class="bg-white dark:bg-slate-800 shadow-sm border-b border-slate-200 dark:border-slate-700">
        <div class="max-w-7xl mx-auto px-4 py-3">
            <div class="flex items-center justify-between">
                <div class="flex items-center gap-3">
                    <div class="p-2 bg-gradient-to-br from-amber-400 to-amber-600 rounded-lg">
                        <span class="material-symbols-outlined text-white">support_agent</span>
                    </div>
                    <div>
                        <h1 class="font-bold text-slate-900 dark:text-white">Assistant Marketing</h1>
                        <p class="text-xs text-slate-500">{{ app.user.email }}</p>
                    </div>
                </div>
                <div class="flex items-center gap-4">
                    <a href="{{ path('app_assistant_dashboard') }}" class="text-slate-600 dark:text-slate-300 hover:text-amber-600 font-medium text-sm flex items-center gap-1">
                        <span class="material-symbols-outlined text-[18px]">dashboard</span>
                        Dashboard
                    </a>
                    <a href="{{ path('app_logout') }}" class="text-slate-600 dark:text-slate-300 hover:text-red-600 font-medium text-sm flex items-center gap-1">
                        <span class="material-symbols-outlined text-[18px]">logout</span>
                        Déconnexion
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <div class="max-w-7xl mx-auto px-4 py-8">
        <!-- Header -->
        <div class="flex items-center justify-between mb-8">
            <div>
                <h2 class="text-2xl font-black text-slate-900 dark:text-white">Leads</h2>
                <p class="text-slate-500">Liste de tous les leads marketing</p>
            </div>
            <a href="{{ path('app_assistant_leads_new') }}" class="inline-flex items-center gap-2 px-4 py-2 bg-amber-500 hover:bg-amber-600 text-white font-bold rounded-lg transition-colors">
                <span class="material-symbols-outlined text-[18px]">add</span>
                Ajouter un Lead
            </a>
        </div>

        {% for message in app.flashes('success') %}
        <div class="mb-6 p-4 bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg">
            <div class="flex items-center gap-3">
                <span class="material-symbols-outlined text-green-600">check_circle</span>
                <p class="text-sm text-green-700 dark:text-green-300">{{ message }}</p>
            </div>
        </div>
        {% endfor %}

        <!-- Leads Table -->
        <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 overflow-hidden">
            <table class="w-full">
                <thead class="bg-slate-50 dark:bg-slate-700">
                    <tr>
                        <th class="text-left p-4 text-xs font-bold text-slate-500 uppercase tracking-wider">Contact</th>
                        <th class="text-left p-4 text-xs font-bold text-slate-500 uppercase tracking-wider">Entreprise</th>
                        <th class="text-left p-4 text-xs font-bold text-slate-500 uppercase tracking-wider">Email</th>
                        <th class="text-left p-4 text-xs font-bold text-slate-500 uppercase tracking-wider">Statut</th>
                        <th class="text-left p-4 text-xs font-bold text-slate-500 uppercase tracking-wider">Date</th>
                        <th class="text-right p-4 text-xs font-bold text-slate-500 uppercase tracking-wider">Action</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-200 dark:divide-slate-700">
                    {% for lead in leads %}
                    <tr class="hover:bg-slate-50 dark:hover:bg-slate-700/50">
                        <td class="p-4">
                            <div class="flex items-center gap-3">
                                <div class="w-8 h-8 bg-slate-200 dark:bg-slate-600 rounded-full flex items-center justify-center">
                                    <span class="text-xs font-bold text-slate-600 dark:text-slate-300">{{ lead.contactName|slice(0,1)|upper }}</span>
                                </div>
                                <span class="font-medium text-slate-900 dark:text-white">{{ lead.contactName }}</span>
                            </div>
                        </td>
                        <td class="p-4 text-slate-600 dark:text-slate-300">{{ lead.companyName }}</td>
                        <td class="p-4 text-slate-600 dark:text-slate-300">{{ lead.email }}</td>
                        <td class="p-4">
                            <span class="px-2 py-1 text-xs font-bold rounded-full 
                                {% if lead.status == 'new' %}bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-400
                                {% elseif lead.status == 'contacted' %}bg-amber-100 text-amber-700 dark:bg-amber-900/30 dark:text-amber-400
                                {% elseif lead.status == 'qualified' %}bg-purple-100 text-purple-700 dark:bg-purple-900/30 dark:text-purple-400
                                {% elseif lead.status == 'converted' %}bg-green-100 text-green-700 dark:bg-green-900/30 dark:text-green-400
                                {% else %}bg-gray-100 text-gray-700{% endif %}">
                                {{ lead.statusLabel }}
                            </span>
                        </td>
                        <td class="p-4 text-slate-500 text-sm">{{ lead.createdAt|date('d/m/Y') }}</td>
                        <td class="p-4 text-right">
                            <a href="{{ path('app_assistant_leads_show', {id: lead.id}) }}" class="text-amber-600 hover:text-amber-700 font-medium text-sm">
                                Voir
                            </a>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="6" class="p-12 text-center">
                            <span class="material-symbols-outlined text-slate-300 text-5xl mb-3 block">inbox</span>
                            <p class="text-slate-500">Aucun lead trouvé</p>
                            <a href="{{ path('app_assistant_leads_new') }}" class="inline-flex items-center gap-1 text-amber-600 font-medium text-sm mt-3">
                                <span class="material-symbols-outlined text-[16px]">add</span>
                                Ajouter votre premier lead
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
