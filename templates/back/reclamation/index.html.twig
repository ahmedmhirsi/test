{% extends 'back_office/base.html.twig' %}

{% block title %}Réclamations - Nexus AI{% endblock %}

{% block header_title %}
    <span class="flex items-center gap-2">
        <span class="material-symbols-outlined text-nexus-primary animate-pulse-slow">support_agent</span>
        Support Command
    </span>
{% endblock %}

{% block content %}
<div class="swup-transition-fade pb-20">

    {# ─── Header ─── #}
    <div class="flex flex-col md:flex-row justify-between items-end mb-8 gap-4">
        <div>
             <h1 class="text-4xl font-black text-white tracking-tight leading-tight animate-slide-up">
                Centre de <span class="text-transparent bg-clip-text bg-gradient-to-r from-nexus-primary to-rose-500">Support</span>
            </h1>
            <p class="text-gray-400 text-sm mt-2 animate-slide-up" style="animation-delay: 0.1s">
                Gestion des tickets et satisfaction client.
            </p>
        </div>
        
        <div class="flex gap-3 animate-slide-up" style="animation-delay: 0.2s">
            <div class="glass-panel px-4 py-2 flex items-center gap-2 rounded-full bg-white/5">
                 <span class="material-symbols-outlined text-yellow-500">pending</span>
                 <span class="text-xs font-bold text-white">{{ reclamations|filter(r => r.statut == 'en_cours')|length }} <span class="text-gray-500 font-normal">en attente</span></span>
            </div>
        </div>
    </div>

    {# ─── Search & Sort ─── #}
    <div class="glass-panel p-6 mb-8 animate-slide-up" style="animation-delay: 0.3s">
        <form method="get" action="{{ path('back_reclamation_index') }}" class="grid grid-cols-1 md:grid-cols-4 gap-4 items-end">
            <div class="md:col-span-1">
                <label class="block text-[10px] font-bold text-gray-500 uppercase tracking-widest mb-2">Ticket ID</label>
                <div class="relative">
                     <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500 text-xs font-mono">#</span>
                    <input type="number" name="id" value="{{ searchId }}" placeholder="Ex: 520"
                       class="w-full bg-white/5 border border-white/10 rounded-lg py-2 pl-7 pr-4 text-sm text-white focus:ring-1 focus:ring-nexus-primary transition-all">
                </div>
            </div>
            
            <div class="md:col-span-2">
                <label class="block text-[10px] font-bold text-gray-500 uppercase tracking-widest mb-2">Recherche</label>
                <div class="relative">
                    <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-gray-500 text-[18px]">search</span>
                    <input type="text" name="email" value="{{ searchEmail }}" placeholder="Email ou sujet..."
                       class="w-full bg-white/5 border border-white/10 rounded-lg py-2 pl-10 pr-4 text-sm text-white focus:ring-1 focus:ring-nexus-primary transition-all">
                </div>
            </div>
            
            <div class="flex gap-2">
                <button type="submit" class="flex-1 btn-nexus-primary py-2 rounded-lg flex items-center justify-center gap-2">
                    <span class="material-symbols-outlined text-[18px]">filter_list</span>
                    Filtrer
                </button>
                 <a href="{{ path('back_reclamation_index') }}" class="px-4 py-2 rounded-lg border border-white/10 hover:bg-white/5 text-gray-400 hover:text-white transition-colors" title="Réinitialiser">
                    <span class="material-symbols-outlined text-[18px]">refresh</span>
                </a>
            </div>
        </form>
    </div>

    {# ─── Tickets List ─── #}
    <div class="glass-panel overflow-hidden animate-slide-up" style="animation-delay: 0.4s">
        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="border-b border-white/5 text-[10px] font-bold text-gray-500 uppercase tracking-widest bg-white/5">
                        <th class="py-3 px-6 w-24">ID</th>
                        <th class="py-3 px-6">Sujet & Demandeur</th>
                        <th class="py-3 px-6 w-32">Statut</th>
                        <th class="py-3 px-6 w-40">Date</th>
                        <th class="py-3 px-6 w-24 text-right">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-white/5 text-sm">
                {% for reclamation in reclamations %}
                    <tr class="group hover:bg-white/5 transition-colors">
                        <td class="py-4 px-6">
                            <span class="font-mono text-nexus-primary font-bold">#{{ reclamation.id }}</span>
                        </td>
                        <td class="py-4 px-6">
                            <div class="flex flex-col">
                                <a href="{{ path('back_reclamation_show', {id: reclamation.id}) }}" class="font-bold text-white hover:text-nexus-accent transition-colors mb-1">
                                    {{ reclamation.titre }}
                                </a>
                                <span class="text-xs text-gray-500">{{ reclamation.email }}</span>
                            </div>
                        </td>
                        <td class="py-4 px-6">
                            {% if reclamation.statut == 'en_cours' %}
                                <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-[10px] font-bold bg-amber-500/10 text-amber-400 border border-amber-500/20 uppercase tracking-wider">
                                    <span class="size-1.5 rounded-full bg-amber-400 animate-pulse"></span> En cours
                                </span>
                            {% elseif reclamation.statut == 'repondu' %}
                                <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-[10px] font-bold bg-green-500/10 text-green-400 border border-green-500/20 uppercase tracking-wider">
                                    Répondu
                                </span>
                            {% else %}
                                <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-[10px] font-bold bg-gray-500/10 text-gray-400 border border-gray-500/20 uppercase tracking-wider">
                                    Clôturé
                                </span>
                            {% endif %}
                        </td>
                        <td class="py-4 px-6 text-gray-400 text-xs">
                            {{ reclamation.dateCreation|date('d/m/Y H:i') }}
                        </td>
                        <td class="py-4 px-6 text-right">
                             <div class="flex items-center justify-end gap-1 opacity-0 group-hover:opacity-100 transition-opacity">
                                <a href="{{ path('back_reclamation_show', {id: reclamation.id}) }}" class="size-8 rounded-lg flex items-center justify-center text-gray-400 hover:text-white hover:bg-white/10 transition-colors" title="Voir">
                                    <span class="material-symbols-outlined text-[18px]">visibility</span>
                                </a>
                                <a href="{{ path('back_reclamation_export_pdf', {id: reclamation.id}) }}" class="size-8 rounded-lg flex items-center justify-center text-gray-400 hover:text-red-400 hover:bg-white/10 transition-colors" title="PDF" target="_blank">
                                    <span class="material-symbols-outlined text-[18px]">picture_as_pdf</span>
                                </a>
                                <form method="post" action="{{ path('back_reclamation_delete', {id: reclamation.id}) }}" onsubmit="return confirm('Supprimer ce ticket ?');" class="inline-block">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reclamation.id) }}">
                                    <button type="submit" class="size-8 rounded-lg flex items-center justify-center text-gray-400 hover:text-red-500 hover:bg-white/10 transition-colors" title="Supprimer">
                                        <span class="material-symbols-outlined text-[18px]">delete</span>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                     <tr>
                        <td colspan="5" class="p-12 text-center text-gray-500">
                            <span class="material-symbols-outlined text-4xl mb-2 opacity-20">inbox</span>
                            <p>Aucune réclamation trouvée.</p>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
