{% block javascripts %}
    {{ parent() }}
    <script>
        // Translation functionality
        document.addEventListener('DOMContentLoaded', function() {
            const toggleBtn = document.getElementById('toggleTranslation');
            const translationPanel = document.getElementById('translationPanel');
            const doTranslateBtn = document.getElementById('doTranslate');
            const targetLanguageSelect = document.getElementById('targetLanguage');
            const translationResult = document.getElementById('translationResult');
            const translationError = document.getElementById('translationError');
            const translationLoader = document.getElementById('translationLoader');
            
            // Toggle translation panel
            toggleBtn?.addEventListener('click', function() {
                translationPanel.classList.toggle('hidden');
                if (!translationPanel.classList.contains('hidden')) {
                    toggleBtn.textContent = 'Masquer la traduction';
                    toggleBtn.innerHTML = '<span class="material-symbols-outlined text-[18px]">close</span> Masquer la traduction';
                } else {
                    toggleBtn.innerHTML = '<span class="material-symbols-outlined text-[18px]">translate</span> Traduire cette r√©clamation';
                }
            });
            
            // Perform translation
            doTranslateBtn?.addEventListener('click', async function() {
                const targetLanguage = targetLanguageSelect.value;
                const reclamationId = {{ reclamation.id }};
                
                // Hide previous results/errors
                translationResult.classList.add('hidden');
                translationError.classList.add('hidden');
                translationLoader.classList.remove('hidden');
                doTranslateBtn.disabled = true;
                
                try {
                    const response = await fetch(`/back/reclamation/${reclamationId}/translate`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ language: targetLanguage })
                    });
                    
                    const data = await response.json();
                    
                    if (data.success) {
                        // Display translation
                        document.getElementById('translatedTitle').textContent = data.title;
                        document.getElementById('translatedDescription').textContent = data.description;
                        
                        // Display detected language if available
                        const detectedLangSpan = document.getElementById('detectedLanguage');
                        if (data.detectedLanguage && data.detectedLanguage !== 'unknown') {
                            detectedLangSpan.textContent = `Langue d√©tect√©e: ${data.detectedLanguage}`;
                        } else {
                            detectedLangSpan.textContent = '';
                        }
                        
                        translationResult.classList.remove('hidden');
                    } else {
                        // Display error
                        document.getElementById('translationErrorMessage').textContent = data.error || 'Une erreur est survenue lors de la traduction.';
                        translationError.classList.remove('hidden');
                    }
                } catch (error) {
                    console.error('Translation error:', error);
                    document.getElementById('translationErrorMessage').textContent = 'Erreur de connexion. Veuillez r√©essayer.';
                    translationError.classList.remove('hidden');
                } finally {
                    translationLoader.classList.add('hidden');
                    doTranslateBtn.disabled = false;
                }
            });
        });
    </script>
{% endblock %}
