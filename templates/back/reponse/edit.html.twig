{% extends 'back_office/base.html.twig' %}

{% block page_title %}Modifier Réponse{% endblock %}

{% block content %}
<div class="max-w-3xl">
    <a href="{{ path('back_reclamation_show', {id: reponse.reclamation.id}) }}" class="inline-flex items-center gap-2 text-navy/70 dark:text-slate-400 hover:text-primary transition-colors mb-6">
        <span class="material-symbols-outlined text-[18px]">arrow_back</span>
        Retour à la réclamation
    </a>

    <div class="bg-white dark:bg-slate-900 rounded-xl shadow-sm border border-slate-200 dark:border-slate-800 p-6">
        <h2 class="text-2xl font-bold text-navy dark:text-white font-title mb-6">Modifier la réponse</h2>

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-navy dark:text-white mb-2">{{ form_label(form.auteur) }}</label>
                    {{ form_widget(form.auteur) }}
                    <div class="text-red-500 text-sm mt-1">{{ form_errors(form.auteur) }}</div>
                </div>

                <div>
                    <label class="block text-sm font-medium text-navy dark:text-white mb-2">{{ form_label(form.message) }}</label>
                    {{ form_widget(form.message) }}
                    <div class="text-red-500 text-sm mt-1">{{ form_errors(form.message) }}</div>
                </div>
            </div>

            <div class="flex gap-3 mt-6 pt-6 border-t border-slate-200 dark:border-slate-800">
                <button type="submit" class="bg-primary hover:bg-primary/90 text-white text-sm font-bold py-2 px-6 rounded-lg transition-colors flex items-center gap-2">
                    <span class="material-symbols-outlined text-[18px]">save</span>
                    Enregistrer les modifications
                </button>
                <a href="{{ path('back_reclamation_show', {id: reponse.reclamation.id}) }}" class="bg-slate-200 dark:bg-slate-800 hover:bg-slate-300 dark:hover:bg-slate-700 text-navy dark:text-white text-sm font-bold py-2 px-6 rounded-lg transition-colors">
                    Annuler
                </a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
