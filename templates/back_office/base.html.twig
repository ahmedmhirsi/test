<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}SmartNexus AI{% endblock %}</title>
    
    <!-- Theme Script -->
    <script>
        if (localStorage.getItem('smartnexus-theme') === 'dark' || (!('smartnexus-theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.classList.add('dark');
        } else {
            document.documentElement.classList.remove('dark');
        }
    </script>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=Manrope:wght@200;300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" rel="stylesheet" />
    
    <!-- Scripts -->
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>

    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "nexus-navy": "#10202A",
                        "nexus-dark": "#161516",
                        "nexus-primary": "#B58863",
                        "nexus-accent": "#D3C3B9",
                        "nexus-stone": "#A79E9C",
                        "primary": "#B58863",
                        "navy": "#10202A",
                        "indigo": {
                            50: "#fdfcfb",
                            100: "#fcf9f7",
                            200: "#f9f2ed",
                            300: "#f4e6de",
                            400: "#e9ccbb",
                            500: "#B58863",
                            600: "#9E7656",
                            700: "#846248",
                            800: "#694e3a",
                            900: "#564030",
                            950: "#2d2119",
                        },
                        "gray": {
                            950: "#0b151b",
                            900: "#10202A",
                            800: "#161516",
                            700: "#3D4D55",
                            600: "#475569",
                            500: "#A79E9C",
                            400: "#D3C3B9",
                            300: "#cbd5e1",
                            200: "#e2e8f0",
                            100: "#f1f5f9",
                            50: "#f8fafc"
                        },
                        "slate": {
                            950: "#0b151b",
                            900: "#10202A",
                            800: "#161516",
                            700: "#3D4D55",
                            600: "#475569",
                            500: "#A79E9C",
                            400: "#D3C3B9",
                            300: "#cbd5e1",
                            200: "#e2e8f0",
                            100: "#f1f5f9",
                            50: "#f8fafc"
                        },
                        "purple": {
                            400: "#D3C3B9", 
                        }
                    },
                    fontFamily: {
                        "display": ["Inter", "Manrope", "sans-serif"],
                        "body": ["Inter", "sans-serif"]
                    }
                },
            },
        }
    </script>
    
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body class="bg-[#10202A] text-[#D3C3B9]/80 antialiased overflow-hidden selection:bg-nexus-primary selection:text-black">
    
    <!-- Page Loader -->
    {{ include('components/_loader.html.twig') }}

    <div class="flex h-screen overflow-hidden">
        <!-- Floating Sidebar -->
        <aside id="nav" class="hidden lg:flex w-20 hover:w-64 flex-col fixed left-4 top-4 bottom-4 rounded-3xl bg-[#161516]/80 backdrop-blur-xl border border-white/5 shadow-2xl z-50 transition-all duration-300 group overflow-hidden">
            <!-- Logo -->
            <div class="h-20 flex items-center justify-center border-b border-white/5">
                <div class="size-10 rounded-xl bg-nexus-primary flex items-center justify-center shadow-lg shadow-nexus-primary/20">
                    <span class="material-symbols-outlined text-white text-[24px]">dataset</span>
                </div>
                <span class="ml-3 font-display font-black text-xl tracking-tight opacity-0 group-hover:opacity-100 transition-opacity duration-300 whitespace-nowrap text-white">Nexus AI</span>
            </div>

            <!-- Nav Items -->
            <nav class="flex-1 overflow-y-auto py-6 space-y-2 px-3 no-scrollbar">
                {% if is_granted('ROLE_ADMIN') %}
                    {% include 'back_office/_sidebar_content.html.twig' %}
                {% else %}
                    {% include 'client/_sidebar_content.html.twig' %}
                {% endif %}
            </nav>

            <!-- User Profile -->
            <div class="p-4 border-t border-white/5">
                <a href="{{ path('app_profile') }}" class="flex items-center gap-3 p-2 rounded-xl hover:bg-white/5 transition-colors text-slate-300 hover:text-white">
                    {% if app.user.photo %}
                         <div class="size-10 rounded-full bg-cover bg-center shrink-0" style="background-image: url('{{ app.user.photo }}');"></div>
                    {% else %}
                        <div class="size-10 rounded-full bg-slate-700 flex items-center justify-center shrink-0 border border-slate-600">
                            <span class="font-bold text-white text-xs">{{ app.user.prenom|slice(0, 1) }}</span>
                        </div>
                    {% endif %}
                    <div class="overflow-hidden opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                        <p class="text-sm font-bold truncate">{{ app.user.prenom }}</p>
                        <p class="text-xs text-slate-500 truncate">GÃ©rer Profile</p>
                    </div>
                </a>
            </div>
        </aside>

        <!-- Main Content Wrapper -->
        <div class="flex-1 flex flex-col pl-4 lg:pl-28 pr-4 py-4 h-screen">
            <!-- Glass Header -->
            <header class="h-16 rounded-2xl bg-[#161516]/60 backdrop-blur-md border border-white/5 flex items-center justify-between px-6 mb-4 shrink-0 shadow-sm">
                <div class="flex items-center gap-4">
                    <h2 class="font-display font-bold text-lg text-white">
                        {% block header_title %}Command Center{% endblock %}
                    </h2>
                </div>
                
                <div class="flex items-center gap-4">
                     <!-- Notifications -->
                    <button class="relative p-2 text-slate-400 hover:text-white transition-colors">
                        <span class="material-symbols-outlined">notifications</span>
                        {% if untreated_reclamations_count() > 0 %}
                            <span class="absolute top-1 right-1 size-2 bg-rose-500 rounded-full"></span>
                        {% endif %}
                    </button>
                    
                     <!-- Mobile Menu Toggle -->
                    <button class="lg:hidden text-white">
                        <span class="material-symbols-outlined">menu</span>
                    </button>
                </div>
            </header>

            <!-- Swup Container -->
            <main id="swup" class="swup-transition-fade flex-1 overflow-y-auto rounded-3xl bg-[#161516]/40 backdrop-blur-sm relative no-scrollbar border border-white/5">
                <div class="p-8 pb-20">
                     {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="animate-card mb-6 p-4 rounded-xl border border-white/5 bg-[#161516]/80 text-[#D3C3B9] flex items-center gap-3 shadow-sm">
                                <span class="material-symbols-outlined {{ label == 'success' ? 'text-emerald-400' : 'text-blue-400' }}">
                                    {{ label == 'success' ? 'check_circle' : 'info' }}
                                </span>
                                <p class="text-sm font-medium">{{ message }}</p>
                            </div>
                        {% endfor %}
                    {% endfor %}

                    {% block content %}{% endblock %}
                </div>
            </main>
        </div>
    </div>
</body>
</html>
