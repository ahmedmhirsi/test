<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Dashboard - SmartNexus AI{% endblock %}</title>
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&family=Montserrat:wght@100..900&family=Open+Sans:wght@300..800&family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet"/>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#ffc105",
                        "background-light": "#f8f8f5",
                        "navy": "#1A237E",
                        "electric": "#536DFE",
                    },
                    fontFamily: {
                        "display": ["Manrope", "sans-serif"],
                        "body": ["Open Sans", "sans-serif"]
                    }
                },
            },
        }
    </script>
    <style>
        body {
            overflow: hidden;
        }
    </style>
</head>
<body class="font-body bg-[#f3f4f6] dark:bg-[#0f1115] text-[#101218] dark:text-white antialiased overflow-hidden">
    <div class="flex h-screen overflow-hidden">
        <!-- Sidebar -->
        <aside class="hidden lg:flex w-64 flex-col bg-white dark:bg-[#1a1d2d] border-r border-[#e5e7eb] dark:border-[#2d3142]">
            <!-- Logo -->
            <div class="flex items-center gap-3 h-16 px-6 border-b border-[#e5e7eb] dark:border-[#2d3142]">
                <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-gradient-to-br from-primary to-orange-400 text-navy shadow-lg">
                    <span class="material-symbols-outlined text-2xl font-bold">dataset</span>
                </div>
                <span class="text-lg font-black tracking-tight">SmartNexus AI</span>
            </div>

            <!-- Navigation -->
            <nav class="flex-1 overflow-y-auto p-4 space-y-1">
                <a href="{{ path('admin_dashboard') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-bold {% if app.request.get('_route') == 'admin_dashboard' %}bg-primary/10 text-primary{% else %}text-[#5e658d] dark:text-[#9ca3af] hover:bg-gray-100 dark:hover:bg-[#252836]{% endif %} transition-colors">
                    <span class="material-symbols-outlined text-[20px]">dashboard</span>
                    <span>Dashboard</span>
                </a>
                <a href="{{ path('admin_user_index') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-bold {% if app.request.get('_route') starts with 'admin_user' %}bg-primary/10 text-primary{% else %}text-[#5e658d] dark:text-[#9ca3af] hover:bg-gray-100 dark:hover:bg-[#252836]{% endif %} transition-colors">
                    <span class="material-symbols-outlined text-[20px]">group</span>
                    <span>Utilisateurs</span>
                </a>
                <a href="{{ path('app_admin_document_index') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-bold {% if app.request.get('_route') starts with 'app_admin_document' %}bg-primary/10 text-primary{% else %}text-[#5e658d] dark:text-[#9ca3af] hover:bg-gray-100 dark:hover:bg-[#252836]{% endif %} transition-colors">
                    <span class="material-symbols-outlined text-[20px]">description</span>
                    <span>Documents RAG</span>
                </a>
                <a href="{{ path('back_reclamation_index') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-bold {% if app.request.get('_route') starts with 'back_reclamation' or app.request.get('_route') starts with 'back_reponse' %}bg-primary/10 text-primary{% else %}text-[#5e658d] dark:text-[#9ca3af] hover:bg-gray-100 dark:hover:bg-[#252836]{% endif %} transition-colors">
                    <span class="material-symbols-outlined text-[20px]">confirmation_number</span>
                    <span>Réclamations</span>
                </a>
                <a href="{{ path('app_offre_emploi_index') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-bold {% if app.request.get('_route') starts with 'app_offre_emploi' %}bg-primary/10 text-primary{% else %}text-[#5e658d] dark:text-[#9ca3af] hover:bg-gray-100 dark:hover:bg-[#252836]{% endif %} transition-colors">
                    <span class="material-symbols-outlined text-[20px]">work</span>
                    <span>Offres d'Emploi</span>
                </a>
                <a href="{{ path('app_candidature_index') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-bold {% if app.request.get('_route') starts with 'app_candidature' %}bg-primary/10 text-primary{% else %}text-[#5e658d] dark:text-[#9ca3af] hover:bg-gray-100 dark:hover:bg-[#252836]{% endif %} transition-colors">
                    <span class="material-symbols-outlined text-[20px]">badge</span>
                    <span>Candidatures</span>
                </a>
                <a href="{{ path('app_formation_index') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-bold {% if app.request.get('_route') starts with 'app_formation' %}bg-primary/10 text-primary{% else %}text-[#5e658d] dark:text-[#9ca3af] hover:bg-gray-100 dark:hover:bg-[#252836]{% endif %} transition-colors">
                    <span class="material-symbols-outlined text-[20px]">school</span>
                    <span>Formations</span>
                </a>
                
                {% if is_granted('ROLE_PROJECT_MANAGER') %}
                <div class="px-4 py-2 mt-4 text-xs font-semibold text-[#9ca3af] uppercase tracking-wider">
                    Gestion Projets
                </div>
                <a href="{{ path('app_projet_index') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-bold {% if app.request.get('_route') starts with 'app_projet' %}bg-primary/10 text-primary{% else %}text-[#5e658d] dark:text-[#9ca3af] hover:bg-gray-100 dark:hover:bg-[#252836]{% endif %} transition-colors">
                    <span class="material-symbols-outlined text-[20px]">folder</span>
                    <span>Projets</span>
                </a>
                <a href="{{ path('app_sprint_index') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-bold {% if app.request.get('_route') starts with 'app_sprint' %}bg-primary/10 text-primary{% else %}text-[#5e658d] dark:text-[#9ca3af] hover:bg-gray-100 dark:hover:bg-[#252836]{% endif %} transition-colors">
                    <span class="material-symbols-outlined text-[20px]">timer</span>
                    <span>Sprints</span>
                </a>
                <a href="{{ path('app_tache_index') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-bold {% if app.request.get('_route') starts with 'app_tache' %}bg-primary/10 text-primary{% else %}text-[#5e658d] dark:text-[#9ca3af] hover:bg-gray-100 dark:hover:bg-[#252836]{% endif %} transition-colors">
                    <span class="material-symbols-outlined text-[20px]">task</span>
                    <span>Tâches</span>
                </a>
                <a href="{{ path('app_jalon_index') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-bold {% if app.request.get('_route') starts with 'app_jalon' %}bg-primary/10 text-primary{% else %}text-[#5e658d] dark:text-[#9ca3af] hover:bg-gray-100 dark:hover:bg-[#252836]{% endif %} transition-colors">
                    <span class="material-symbols-outlined text-[20px]">flag</span>
                    <span>Jalons</span>
                </a>
                <a href="{{ path('app_kanban_index') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-bold {% if app.request.get('_route') starts with 'app_kanban' %}bg-primary/10 text-primary{% else %}text-[#5e658d] dark:text-[#9ca3af] hover:bg-gray-100 dark:hover:bg-[#252836]{% endif %} transition-colors">
                    <span class="material-symbols-outlined text-[20px]">view_kanban</span>
                    <span>Kanban</span>
                </a>
                {% endif %}
                <a href="#" class="flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-bold text-[#5e658d] dark:text-[#9ca3af] hover:bg-gray-100 dark:hover:bg-[#252836] transition-colors">
                    <span class="material-symbols-outlined text-[20px]">settings</span>
                    <span>Paramètres</span>
                </a>
            </nav>

            <!-- Sidebar Footer Links -->
            <div class="p-4 border-t border-[#e5e7eb] dark:border-[#2d3142]">
                <a href="{{ path('app_profile') }}" class="flex items-center gap-3 px-4 py-2 rounded-lg text-sm font-medium text-[#5e658d] dark:text-[#9ca3af] hover:bg-gray-100 dark:hover:bg-[#252836] transition-colors">
                    <span class="material-symbols-outlined text-[20px]">person</span>
                    <span>Mon Profil</span>
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <!-- Top Bar -->
            <header class="h-16 bg-white dark:bg-[#1a1d2d] border-b border-[#e5e7eb] dark:border-[#2d3142] px-6 flex items-center justify-between">
                <div class="flex items-center gap-3">
                    <button class="lg:hidden text-[#5e658d] dark:text-[#9ca3af]">
                        <span class="material-symbols-outlined text-[24px]">menu</span>
                    </button>
                    <div class="flex items-center gap-2 text-sm">
                        <a href="{{ path('admin_dashboard') }}" class="text-[#5e658d] dark:text-[#9ca3af] hover:text-primary">Accueil</a>
                        {% block breadcrumb %}{% endblock %}
                    </div>
                </div>
                <div class="flex items-center gap-4">
                    <div class="relative" id="notificationDropdown">
                        <button id="notificationBtn" class="relative text-[#5e658d] dark:text-[#9ca3af] hover:text-primary transition-colors focus:outline-none" title="Notifications">
                            <span class="material-symbols-outlined text-[26px]">notifications</span>
                            {% set untreatedCount = untreated_reclamations_count() %}
                            {% if untreatedCount > 0 %}
                                <span class="absolute -top-1 -right-1 flex items-center justify-center min-w-[20px] h-[20px] px-1 bg-red-500 text-white text-[11px] font-bold rounded-full border-2 border-white dark:border-[#1a1d2d] shadow-sm">
                                    {{ untreatedCount > 99 ? '99+' : untreatedCount }}
                                </span>
                            {% endif %}
                        </button>

                        <!-- Notification Menu (Facebook Style) -->
                        <div id="notificationMenu" class="hidden absolute right-0 mt-3 w-80 sm:w-96 bg-white dark:bg-[#1a1d2d] rounded-xl shadow-2xl border border-[#e5e7eb] dark:border-[#2d3142] z-50 overflow-hidden transform transition-all">
                            <div class="p-4 border-b border-[#e5e7eb] dark:border-[#2d3142] flex justify-between items-center bg-gray-50 dark:bg-[#252836]">
                                <h3 class="font-bold text-gray-900 dark:text-white">Notifications</h3>
                                <a href="{{ path('back_reclamation_index', {'statut': 'en_cours'}) }}" class="text-xs font-semibold text-primary hover:underline">Marquer tout comme lu</a>
                            </div>
                            
                            <div class="max-h-[400px] overflow-y-auto">
                                {% set recentReclamations = recent_untreated_reclamations(5) %}
                                {% if recentReclamations|length > 0 %}
                                    {% for reclamation in recentReclamations %}
                                        <a href="{{ path('back_reclamation_show', {'id': reclamation.id}) }}" class="flex items-start gap-3 p-4 hover:bg-gray-50 dark:hover:bg-[#252836] border-b border-[#e5e7eb] dark:border-[#2d3142] transition-colors last:border-0 group">
                                            <div class="size-10 rounded-full bg-primary/10 flex items-center justify-center shrink-0 group-hover:bg-primary/20 transition-colors">
                                                <span class="material-symbols-outlined text-primary text-[20px]">confirmation_number</span>
                                            </div>
                                            <div class="flex-1 min-w-0">
                                                <p class="text-sm font-bold text-gray-900 dark:text-gray-100 truncate mb-0.5">{{ reclamation.titre }}</p>
                                                <p class="text-xs text-gray-500 dark:text-gray-400 line-clamp-2 mb-1.5 leading-relaxed">{{ reclamation.description|striptags }}</p>
                                                <span class="text-[10px] font-medium text-electric dark:text-primary flex items-center gap-1">
                                                    <span class="material-symbols-outlined text-[12px]">schedule</span>
                                                    {{ reclamation.dateCreation|date('d M, H:i') }}
                                                </span>
                                            </div>
                                            <div class="size-2 bg-primary rounded-full mt-2 shrink-0 shadow-sm shadow-primary/50"></div>
                                        </a>
                                    {% endfor %}
                                {% else %}
                                    <div class="p-8 text-center">
                                        <div class="size-16 bg-gray-100 dark:bg-[#252836] rounded-full flex items-center justify-center mx-auto mb-3">
                                            <span class="material-symbols-outlined text-gray-400 text-[32px]">notifications_off</span>
                                        </div>
                                        <p class="text-gray-500 dark:text-gray-400 text-sm">Pas de nouvelles réclamations</p>
                                    </div>
                                {% endif %}
                            </div>
                            
                            <a href="{{ path('back_reclamation_index') }}" class="block p-3 text-center text-sm font-bold text-primary hover:bg-gray-50 dark:hover:bg-[#252836] transition-colors bg-gray-50/50 dark:bg-[#252836]/30 border-t border-[#e5e7eb] dark:border-[#2d3142]">
                                Voir toutes les réclamations
                            </a>
                        </div>
                    </div>
                    <button class="text-[#5e658d] dark:text-[#9ca3af] hover:text-primary">
                        <span class="material-symbols-outlined text-[24px]">search</span>
                    </button>
                    <!-- User Account & Logout -->
                    <div class="flex items-center gap-3 pl-4 border-l border-[#e5e7eb] dark:border-[#2d3142]">
                        <a href="{{ path('app_profile') }}" class="flex items-center gap-2 hover:opacity-80 transition-opacity">
                            {% if app.user.photo %}
                                <div class="size-9 rounded-full bg-cover bg-center" style="background-image: url('{{ app.user.photo }}');"></div>
                            {% else %}
                                <div class="size-9 rounded-full bg-gradient-to-br from-primary to-electric flex items-center justify-center">
                                    <span class="text-navy font-bold text-xs">{{ app.user.prenom|slice(0, 1)|upper }}{{ app.user.nom|slice(0, 1)|upper }}</span>
                                </div>
                            {% endif %}
                            <div class="hidden md:block">
                                <p class="font-semibold text-sm">{{ app.user.prenom }} {{ app.user.nom }}</p>
                            </div>
                        </a>
                        <a href="{{ path('app_logout') }}" class="text-[#5e658d] dark:text-[#9ca3af] hover:text-red-500 transition-colors" title="Déconnexion">
                            <span class="material-symbols-outlined text-[22px]">logout</span>
                        </a>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <main class="flex-1 overflow-y-auto p-6 space-y-6">
                <!-- Flash Messages -->
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="p-4 rounded-lg {% if label == 'success' %}bg-green-100 text-green-700 dark:bg-green-900/30 dark:text-green-300{% elseif label == 'error' %}bg-red-100 text-red-700 dark:bg-red-900/30 dark:text-red-300{% else %}bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-300{% endif %} flex items-center gap-2">
                            <span class="material-symbols-outlined">{{ label == 'success' ? 'check_circle' : 'info' }}</span>
                            <span>{{ message }}</span>
                        </div>
                    {% endfor %}
                {% endfor %}

                {% block content %}{% endblock %}
            </main>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const btn = document.getElementById('notificationBtn');
            const menu = document.getElementById('notificationMenu');
            
            if (btn && menu) {
                btn.addEventListener('click', function(e) {
                    e.stopPropagation();
                    menu.classList.toggle('hidden');
                });
                
                document.addEventListener('click', function(e) {
                    if (!menu.contains(e.target) && !btn.contains(e.target)) {
                        menu.classList.add('hidden');
                    }
                });
            }
        });
    </script>
</body>
</html>
