{% extends 'back_office/base.html.twig' %}

{% block title %}Enterprise Dashboard - SmartNexus AI{% endblock %}

{% block header_title %}
    <span class="flex items-center gap-2">
        <span class="material-symbols-outlined text-nexus-primary">dashboard</span>
        Global Overview
    </span>
{% endblock %}

{% block content %}
<div class="swup-transition-fade pb-20">

    {# ─── Header Section ─── #}
    <div class="flex flex-col md:flex-row justify-between items-end mb-10">
        <div>
            <p class="text-[11px] font-bold text-slate-500 tracking-wider uppercase mb-2 animate-card">Management Environment</p>
            <h1 class="text-4xl md:text-5xl font-extrabold text-[#D3C3B9] tracking-tight leading-tight animate-card" style="animation-delay: 0.1s">
                Executive <span class="text-[#A79E9C]">Dashboard</span>
            </h1>
        </div>
        <div class="flex items-center gap-4 animate-card" style="animation-delay: 0.2s">
            <div class="glass-panel px-4 py-2 flex items-center gap-4 rounded-full border-white/5">
                <div class="flex -space-x-2">
                    {% for i in 1..3 %}
                        <div class="size-8 rounded-full bg-slate-800 border-2 border-slate-900 flex items-center justify-center text-[10px] font-bold text-white">
                             {{ ['JD','MS','RE'][loop.index0] }}
                        </div>
                    {% endfor %}
                </div>
                <div class="h-4 w-px bg-white/10"></div>
                <span class="text-[10px] font-bold text-emerald-400 flex items-center gap-2 uppercase tracking-widest">
                    <span class="size-2 rounded-full bg-emerald-500"></span>
                    Operational
                </span>
            </div>
            
            <button class="size-12 rounded-full bg-nexus-primary text-white flex items-center justify-center shadow-xl shadow-nexus-primary/20 hover:scale-105 transition-transform">
                <span class="material-symbols-outlined">add</span>
            </button>
        </div>
    </div>

    {# ─── Bento Grid Board ─── #}
    <div class="grid grid-cols-1 md:grid-cols-4 lg:grid-cols-4 gap-6 auto-rows-[minmax(180px,auto)]">
        
        {# 1. Financial Analytics (Large Card) #}
        <div class="md:col-span-2 lg:col-span-2 md:row-span-2 glass-panel p-8 group">
            <div class="flex justify-between items-start mb-8">
                <div>
                    <h3 class="text-slate-500 text-[11px] font-bold uppercase tracking-wider mb-1">Portfolio Revenue</h3>
                    <p class="text-4xl font-black text-white">$124,500.00</p>
                </div>
                <span class="px-3 py-1 rounded-full bg-emerald-500/10 text-emerald-400 text-[10px] font-bold flex items-center gap-1 border border-emerald-500/10">
                    <span class="material-symbols-outlined text-[14px]">trending_up</span> +12.5%
                </span>
            </div>
            
            {# Clean SVG Chart #}
            <div class="relative h-64 w-full">
                <svg viewBox="0 0 100 50" class="w-full h-full overflow-visible" preserveAspectRatio="none">
                    <defs>
                        <linearGradient id="bronze-grad" x1="0%" y1="0%" x2="0%" y2="100%">
                            <stop offset="0%" style="stop-color:#B58863;stop-opacity:0.2" />
                            <stop offset="100%" style="stop-color:#B58863;stop-opacity:0" />
                        </linearGradient>
                    </defs>
                    <path d="M0,50 L0,35 Q10,20 20,30 T40,25 T60,15 T80,35 T100,20 L100,50 Z" fill="url(#bronze-grad)" />
                    <path d="M0,35 Q10,20 20,30 T40,25 T60,15 T80,35 T100,20" fill="none" stroke="#B58863" stroke-width="1" />
                    
                    {# Key Markers #}
                    <circle cx="60" cy="15" r="1.5" fill="#D3C3B9" />
                    <circle cx="100" cy="20" r="1.5" fill="#D3C3B9" />
                </svg>
            </div>
        </div>

        {# 2. Active Projects (Kanban Preview) #}
        <div class="md:col-span-2 row-span-2 glass-panel p-0 overflow-hidden flex flex-col">
            <div class="p-6 border-b border-white/5 bg-slate-900/50 backdrop-blur-md sticky top-0 z-10">
                <div class="flex justify-between items-center">
                    <h3 class="text-sm font-bold text-white uppercase tracking-widest flex items-center gap-3">
                        <span class="material-symbols-outlined text-nexus-primary">account_tree</span>
                        Active Portfolio
                    </h3>
                    <span class="px-2 py-0.5 text-[10px] font-bold bg-slate-800 rounded-lg text-slate-400 border border-white/5">4 Active</span>
                </div>
            </div>
            
            <div class="p-4 space-y-3 overflow-y-auto flex-1 custom-scrollbar">
                {% set projects = [
                    {'name': 'UX Infrastructure Upgrade', 'status': 'Development', 'color': 'indigo', 'progress': 75},
                    {'name': 'API Architecture Migration', 'status': 'Quality Assurance', 'color': 'cyan', 'progress': 90},
                    {'name': 'Marketing Alignment Q3', 'status': 'Strategic Planning', 'color': 'slate', 'progress': 10},
                    {'name': 'Operational Security Audit', 'status': 'Finalized', 'color': 'emerald', 'progress': 100},
                ] %}
                
                {% for project in projects %}
                <div class="bg-slate-900/40 p-5 rounded-2xl border border-white/5 hover:border-nexus-primary/30 transition-all group cursor-pointer">
                    <div class="flex justify-between items-start mb-3">
                        <h4 class="font-bold text-slate-200 text-sm tracking-tight">{{ project.name }}</h4>
                        <span class="text-[9px] font-bold px-2 py-0.5 rounded-full border border-current opacity-60 uppercase tracking-widest text-[#B58863]">
                            {{ project.status }}
                        </span>
                    </div>
                    <div class="w-full h-1 bg-slate-800 rounded-full overflow-hidden">
                        <div class="h-full bg-nexus-primary transition-all duration-500" style="width: {{ project.progress }}%"></div>
                    </div>
                    <div class="flex justify-between items-center mt-3">
                         <div class="flex -space-x-1.5 opacity-60">
                            {% for i in 1..random(2,4) %}
                                <div class="size-5 rounded-full bg-slate-700 border border-slate-900"></div>
                            {% endfor %}
                        </div>
                        <span class="text-[10px] font-bold text-slate-500">{{ project.progress }}% Complete</span>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>

        {# 3. Team Pulse #}
        <div class="md:col-span-1 glass-panel p-6 flex flex-col justify-between hover:border-nexus-primary/30 transition-all">
            <div>
                 <div class="size-10 rounded-xl bg-nexus-primary/10 text-nexus-primary flex items-center justify-center mb-4 border border-nexus-primary/10">
                    <span class="material-symbols-outlined">diversity_3</span>
                </div>
                <h3 class="text-2xl font-black text-white mb-1">{{ stats.total_users }}</h3>
                <p class="text-[10px] text-slate-500 uppercase tracking-widest font-bold">Total Staff Count</p>
            </div>
            
            <div class="mt-6">
                <div class="flex -space-x-2 mb-5">
                    {% for i in 1..5 %}
                         <div class="size-9 rounded-full bg-slate-800 border-2 border-slate-900 relative">
                             <div class="size-full rounded-full bg-slate-700"></div>
                             <span class="absolute bottom-0 right-0 size-2 bg-emerald-500 border border-slate-900 rounded-full"></span>
                        </div>
                    {% endfor %}
                </div>
                <a href="{{ path('admin_user_index') }}" class="w-full py-2.5 rounded-xl bg-slate-800 border border-slate-700 text-[10px] font-bold text-slate-300 uppercase tracking-widest hover:bg-slate-700 hover:text-white text-center transition-all block">
                    Manage Directory
                </a>
            </div>
        </div>

        {# 4. Performance Gauge #}
        <div class="md:col-span-1 glass-panel p-6 flex flex-col items-center justify-center relative hover:border-nexus-primary/30 transition-all">
             <div class="relative size-32">
                <svg class="size-full -rotate-90" viewBox="0 0 36 36">
                    <path class="text-slate-800" d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831" fill="none" stroke="currentColor" stroke-width="2.5"></path>
                    <path class="text-nexus-primary" stroke-dasharray="85, 100" d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round"></path>
                </svg>
                <div class="absolute inset-0 flex flex-col items-center justify-center">
                    <span class="text-3xl font-black text-white">85%</span>
                    <span class="text-[9px] uppercase tracking-widest text-slate-500 font-bold">Efficiency</span>
                </div>
            </div>
        </div>

        {# 5. Critical Infrastructure Status #}
        <div class="md:col-span-1 glass-panel p-6 bg-slate-900/40">
             <div class="flex items-center gap-3 mb-6">
                <div class="size-2 rounded-full bg-emerald-500"></div>
                <p class="text-[10px] font-bold text-emerald-400 uppercase tracking-widest">Environment stable</p>
            </div>
            <div class="space-y-5">
                <div>
                     <div class="flex justify-between text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-2">
                        <span>CPU Load</span>
                        <span class="text-slate-300">24%</span>
                    </div>
                    <div class="h-1 bg-slate-800 rounded-full overflow-hidden">
                        <div class="h-full bg-nexus-primary w-[24%]"></div>
                    </div>
                </div>
                 <div>
                     <div class="flex justify-between text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-2">
                        <span>Memory Index</span>
                        <span class="text-slate-300">60%</span>
                    </div>
                    <div class="h-1 bg-slate-800 rounded-full overflow-hidden">
                        <div class="h-full bg-slate-500 w-[60%]"></div>
                    </div>
                </div>
            </div>
        </div>
        
        {# 6. Tactical Shortcuts #}
         <div class="md:col-span-1 glass-panel p-6">
             <h4 class="text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-5">Command Registry</h4>
             <div class="grid grid-cols-2 gap-3">
                 <a href="{{ path('app_offre_emploi_index') }}" class="aspect-square rounded-2xl bg-slate-800 border border-white/5 hover:border-nexus-primary/30 text-slate-400 hover:text-white flex flex-col items-center justify-center transition-all group">
                     <span class="material-symbols-outlined mb-2 group-hover:scale-110 transition-transform">corporate_fare</span>
                     <span class="text-[10px] font-bold uppercase tracking-wider">Talent</span>
                 </a>
                 <a href="{{ path('app_candidature_index') }}" class="aspect-square rounded-2xl bg-slate-800 border border-white/5 hover:border-nexus-primary/30 text-slate-400 hover:text-white flex flex-col items-center justify-center transition-all group">
                     <span class="material-symbols-outlined mb-2 group-hover:scale-110 transition-transform">article</span>
                     <span class="text-[10px] font-bold uppercase tracking-wider">Assets</span>
                 </a>
                 <a href="{{ path('app_meeting_index') }}" class="aspect-square rounded-2xl bg-slate-800 border border-white/5 hover:border-nexus-primary/30 text-slate-400 hover:text-white flex flex-col items-center justify-center transition-all group">
                     <span class="material-symbols-outlined mb-2 group-hover:scale-110 transition-transform">connect_without_contact</span>
                     <span class="text-[10px] font-bold uppercase tracking-wider">Sync</span>
                 </a>
                 <a href="{{ path('app_tache_index') }}" class="aspect-square rounded-2xl bg-slate-800 border border-white/5 hover:border-nexus-primary/30 text-slate-400 hover:text-white flex flex-col items-center justify-center transition-all group">
                     <span class="material-symbols-outlined mb-2 group-hover:scale-110 transition-transform">center_focus_strong</span>
                     <span class="text-[10px] font-bold uppercase tracking-wider">Logic</span>
                 </a>
             </div>
         </div>

    </div>
</div>
{% endblock %}
