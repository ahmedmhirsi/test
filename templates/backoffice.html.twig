{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Backoffice specific overrides */
        :root {
            --admin-primary: #dc2626; /* Red for Admin */
        }
        .bg-primary { background-color: var(--admin-primary) !important; }
        .text-primary { color: var(--admin-primary) !important; }
        .border-primary { border-color: var(--admin-primary) !important; }
        .hover\:text-primary:hover { color: var(--admin-primary) !important; }
        .hover\:bg-primary:hover { background-color: var(--admin-primary) !important; }
        .nav-link.active {
            background-color: rgba(220, 38, 38, 0.1) !important;
            color: #dc2626 !important;
        }
        
        .admin-card {
            @apply bg-white dark:bg-[#1e2235] border-l-4 border-red-600 shadow-lg rounded-xl transition-all hover:scale-[1.02];
        }
        
        .admin-header {
            background: linear-gradient(135deg, #450a0a 0%, #7f1d1d 100%);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="min-h-full bg-gray-50 dark:bg-[#0f1223]">
        <!-- Admin Header -->
        <div class="admin-header p-8 text-white shadow-xl mb-8 relative overflow-hidden">
            <div class="absolute right-0 top-0 opacity-10 pointer-events-none">
                <span class="material-symbols-outlined text-[200px]">shield_person</span>
            </div>
            <div class="relative z-10 flex justify-between items-end">
                <div>
                    <h1 class="text-4xl font-display font-black tracking-tight uppercase">Administration</h1>
                    <p class="text-red-200 font-bold mt-2 uppercase tracking-widest text-xs">SmartNexus Security & Management Console</p>
                </div>
                <div class="flex gap-2">
                    <div class="px-3 py-1 bg-red-900/40 rounded-full border border-red-500/30 text-[10px] font-bold uppercase tracking-tighter flex items-center gap-1">
                        <span class="size-2 bg-red-500 rounded-full animate-pulse"></span>
                        Admin Mode Active
                    </div>
                </div>
            </div>
        </div>

        <div class="px-8 pb-12">
            {% block admin_content %}{% endblock %}
        </div>
    </div>
{% endblock %}
