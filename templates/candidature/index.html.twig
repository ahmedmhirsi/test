{% extends 'back_office/base.html.twig' %}

{% block title %}Pipeline Candidats - Nexus AI{% endblock %}

{% block header_title %}
    <span class="flex items-center gap-2">
        <span class="material-symbols-outlined text-nexus-primary animate-pulse-slow">dvr</span>
        Talent Pipeline
    </span>
{% endblock %}

{% block javascripts %}
<script>
    async function processCandidature(id, button) {
        button.disabled = true;
        button.innerHTML = '<span class="material-symbols-outlined animate-spin text-sm">sync</span> Analyse...';
        button.classList.add('opacity-75', 'cursor-not-allowed');
        
        try {
            const response = await fetch(`/api/candidature/${id}/process`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' }
            });
            const data = await response.json();
            
            if (data.success) {
                location.reload();
            } else {
                alert('Erreur: ' + data.message);
                button.disabled = false;
                button.innerHTML = '<span class="material-symbols-outlined text-[16px]">bolt</span> IA Scan';
                button.classList.remove('opacity-75', 'cursor-not-allowed');
            }
        } catch (error) {
            alert('Erreur de connexion: ' + error.message);
            button.disabled = false;
            button.innerHTML = '<span class="material-symbols-outlined text-[16px]">bolt</span> IA Scan';
            button.classList.remove('opacity-75', 'cursor-not-allowed');
        }
    }
</script>
{% endblock %}

{% block content %}
<div class="swup-transition-fade pb-20">

    {# ─── Header ─── #}
    <div class="flex flex-col md:flex-row justify-between items-end mb-8 gap-4">
        <div>
             <h1 class="text-4xl font-black text-white tracking-tight leading-tight animate-slide-up">
                Pipeline <span class="text-transparent bg-clip-text bg-gradient-to-r from-nexus-primary to-purple-400">Candidats</span>
            </h1>
            <p class="text-gray-400 text-sm mt-2 animate-slide-up" style="animation-delay: 0.1s">
                Suivi du processus de recrutement assisté par IA.
            </p>
        </div>
        
        <div class="flex gap-3 animate-slide-up" style="animation-delay: 0.2s">
             <a href="{{ path('app_candidature_export_pdf') }}" class="glass-panel px-4 py-2 flex items-center gap-2 rounded-full hover:bg-white/10 transition-colors group">
                <span class="material-symbols-outlined text-red-400 group-hover:scale-110 transition-transform">picture_as_pdf</span>
                <span class="text-xs font-bold text-gray-300 uppercase tracking-wider">Export PDF</span>
            </a>
            <a href="{{ path('app_candidature_new') }}" class="btn-nexus-primary rounded-full px-6 py-2 flex items-center gap-2 shadow-lg shadow-nexus-primary/30 group">
                <span class="material-symbols-outlined text-lg group-hover:rotate-90 transition-transform">add</span>
                <span>Candidature</span>
            </a>
        </div>
    </div>

    {# ─── Pipeline Stats ─── #}
    {% set stats = {
        'total': candidatures|length,
        'pending': candidatures|filter(c => c.statut == 'En attente')|length,
        'interview': candidatures|filter(c => c.statut == 'Entretien')|length,
        'accepted': candidatures|filter(c => c.statut == 'Accepté')|length,
        'rejected': candidatures|filter(c => c.statut == 'Refusé')|length
    } %}

    <div class="grid grid-cols-2 md:grid-cols-5 gap-4 mb-8 animate-slide-up" style="animation-delay: 0.3s">
        <div class="glass-panel p-4 flex flex-col items-center justify-center text-center group">
            <span class="text-2xl font-black text-white mb-1">{{ stats.total }}</span>
            <span class="text-[10px] font-bold text-gray-500 uppercase tracking-widest">Total</span>
        </div>
        <div class="glass-panel p-4 flex flex-col items-center justify-center text-center group border-amber-500/20 bg-amber-500/5">
            <span class="text-2xl font-black text-amber-500 mb-1">{{ stats.pending }}</span>
             <span class="text-[10px] font-bold text-amber-500/70 uppercase tracking-widest">En attente</span>
        </div>
        <div class="glass-panel p-4 flex flex-col items-center justify-center text-center group border-blue-500/20 bg-blue-500/5">
            <span class="text-2xl font-black text-blue-500 mb-1">{{ stats.interview }}</span>
             <span class="text-[10px] font-bold text-blue-500/70 uppercase tracking-widest">Entretien</span>
        </div>
        <div class="glass-panel px-4 py-3 flex flex-col items-center justify-center text-center group border-emerald-500/20 bg-emerald-500/5">
            <span class="text-2xl font-black text-emerald-500 mb-1">{{ stats.accepted }}</span>
             <span class="text-[10px] font-bold text-emerald-500/70 uppercase tracking-widest">Accepté</span>
        </div>
        <div class="glass-panel p-4 flex flex-col items-center justify-center text-center group border-red-500/20 bg-red-500/5">
            <span class="text-2xl font-black text-red-500 mb-1">{{ stats.rejected }}</span>
             <span class="text-[10px] font-bold text-red-500/70 uppercase tracking-widest">Refusé</span>
        </div>
    </div>

    {# ─── Candidates List ─── #}
    <div class="glass-panel overflow-hidden animate-slide-up" style="animation-delay: 0.4s">
        <div class="p-4 border-b border-white/5 flex items-center gap-4">
             <form method="get" action="{{ path('app_candidature_index') }}" class="flex-1 relative">
                <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-gray-500">search</span>
                <input type="text" name="q" value="{{ searchTerm }}" placeholder="Rechercher par nom, email..." 
                       class="w-full bg-white/5 border-none rounded-lg pl-10 text-white placeholder-gray-600 focus:ring-1 focus:ring-nexus-primary text-sm">
            </form>
        </div>

        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="border-b border-white/5 text-xs font-bold text-gray-500 uppercase tracking-wider">
                        <th class="p-4">Candidat</th>
                        <th class="p-4">Poste</th>
                        <th class="p-4">Statut</th>
                        <th class="p-4">Score IA</th>
                         <th class="p-4 text-right">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-white/5 text-sm">
                {% for candidature in candidatures %}
                    <tr class="group hover:bg-white/5 transition-colors">
                        <td class="p-4">
                            <div class="flex items-center gap-3">
                                {% set initials = candidature.nomCandidat|split(' ') %}
                                <div class="size-10 rounded-full bg-gradient-to-br from-gray-700 to-black flex items-center justify-center text-xs font-bold text-white border border-white/10 group-hover:border-nexus-primary/50 transition-colors">
                                    {{ initials[0]|first|upper }}{{ initials[1] is defined ? initials[1]|first|upper : '' }}
                                </div>
                                <div>
                                    <div class="font-bold text-white group-hover:text-nexus-primary transition-colors">{{ candidature.nomCandidat }}</div>
                                    <div class="text-xs text-gray-500">{{ candidature.dateDepot ? candidature.dateDepot|date('d/m/Y') : '' }}</div>
                                </div>
                            </div>
                        </td>
                        <td class="p-4">
                            <span class="px-2 py-1 rounded bg-white/5 border border-white/5 text-xs text-gray-300">
                                {{ candidature.offreEmploi.poste }}
                            </span>
                        </td>
                        <td class="p-4">
                            {% if candidature.statut == 'Accepté' %}
                                <span class="inline-flex items-center gap-1.5 px-2 py-0.5 rounded text-[10px] font-bold bg-emerald-500/10 text-emerald-400 border border-emerald-500/20 uppercase tracking-wider">
                                    Accepté
                                </span>
                            {% elseif candidature.statut == 'Refusé' %}
                                <span class="inline-flex items-center gap-1.5 px-2 py-0.5 rounded text-[10px] font-bold bg-red-500/10 text-red-400 border border-red-500/20 uppercase tracking-wider">
                                    Refusé
                                </span>
                             {% elseif candidature.statut == 'Entretien' %}
                                <span class="inline-flex items-center gap-1.5 px-2 py-0.5 rounded text-[10px] font-bold bg-blue-500/10 text-blue-400 border border-blue-500/20 uppercase tracking-wider">
                                    <span class="size-1.5 rounded-full bg-blue-400 animate-pulse"></span> Entretien
                                </span>
                            {% else %}
                                <span class="inline-flex items-center gap-1.5 px-2 py-0.5 rounded text-[10px] font-bold bg-amber-500/10 text-amber-400 border border-amber-500/20 uppercase tracking-wider">
                                    {{ candidature.statut }}
                                </span>
                            {% endif %}
                        </td>
                        <td class="p-4">
                            {% if candidature.scoreMatchingIA %}
                                <div class="flex items-center gap-2">
                                    <div class="w-16 h-1 bg-gray-700 rounded-full overflow-hidden">
                                        <div class="h-full rounded-full
                                            {% if candidature.scoreMatchingIA >= 70 %}bg-emerald-500
                                            {% elseif candidature.scoreMatchingIA >= 50 %}bg-amber-500
                                            {% else %}bg-red-500{% endif %}"
                                            style="width: {{ candidature.scoreMatchingIA }}%">
                                        </div>
                                    </div>
                                    <span class="text-xs font-bold text-white">{{ candidature.scoreMatchingIA|number_format(0) }}%</span>
                                </div>
                            {% else %}
                                <span class="text-xs text-gray-600 italic">En attente IA</span>
                            {% endif %}
                        </td>
                        <td class="p-4 text-right">
                            <div class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                {% if not candidature.scoreMatchingIA %}
                                <button onclick="processCandidature({{ candidature.id }}, this)" 
                                        class="px-2 py-1 bg-nexus-primary/20 hover:bg-nexus-primary text-nexus-primary hover:text-white rounded text-xs font-bold transition-colors border border-nexus-primary/20" title="Score IA">
                                    IA Scan
                                </button>
                                {% endif %}
                                <a href="{{ path('app_candidature_show', {'id': candidature.id}) }}" class="size-8 rounded-lg flex items-center justify-center text-gray-400 hover:text-white hover:bg-white/10 transition-colors">
                                    <span class="material-symbols-outlined text-[18px]">visibility</span>
                                </a>
                                <a href="{{ path('app_candidature_edit', {'id': candidature.id}) }}" class="size-8 rounded-lg flex items-center justify-center text-gray-400 hover:text-nexus-accent hover:bg-white/10 transition-colors">
                                    <span class="material-symbols-outlined text-[18px]">edit</span>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                     <tr>
                        <td colspan="5" class="p-12 text-center text-gray-500">
                            <span class="material-symbols-outlined text-4xl mb-2 opacity-20">dvr</span>
                            <p>Aucune candidature trouvée.</p>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
