{% extends 'base.html.twig' %}

{% block title %}Candidatures{% endblock %}

{% block body %}
    <div class="flex justify-between items-end mb-6">
         <div>
            <h1 class="text-2xl font-bold text-slate-900 tracking-tight">Candidatures</h1>
            <p class="text-slate-500 mt-1">Suivi des postulants et de leur statut.</p>
        </div>
        <a href="{{ path('app_candidature_new') }}" class="bg-blue-600 hover:bg-blue-700 text-white px-5 py-2.5 rounded-lg text-sm font-semibold shadow-lg shadow-blue-200 flex items-center gap-2 transition-all">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
            Ajouter un Candidat
        </a>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-slate-100 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left text-sm text-slate-600">
                <thead class="bg-slate-50 text-slate-500 font-semibold border-b border-slate-100 uppercase tracking-wider text-xs">
                    <tr>
                        <th class="px-6 py-4">Candidat</th>
                        <th class="px-6 py-4">Poste Visé</th>
                        <th class="px-6 py-4">Statut</th>
                        <th class="px-6 py-4">Score IA</th>
                        <th class="px-6 py-4">Date Dépôt</th>
                        <th class="px-6 py-4 text-right">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100">
                {% for candidature in candidatures %}
                    <tr class="hover:bg-slate-50/80 transition-colors group">
                        <td class="px-6 py-4">
                            <div class="flex items-center gap-3">
                                <div class="w-10 h-10 rounded-full bg-slate-200 overflow-hidden shrink-0">
                                    <img src="https://ui-avatars.com/api/?name={{ candidature.nomCandidat }}&background=random&color=fff" alt="{{ candidature.nomCandidat }}">
                                </div>
                                <div>
                                    <div class="font-bold text-slate-900">{{ candidature.nomCandidat }}</div>
                                    <div class="text-xs text-slate-400">{{ candidature.emailCandidat }}</div>
                                </div>
                            </div>
                        </td>
                         <td class="px-6 py-4">
                            <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-md bg-slate-100 text-slate-700 text-xs font-semibold">
                                <svg class="w-3.5 h-3.5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                                {{ candidature.offreEmploi.poste }}
                            </span>
                         </td>
                        <td class="px-6 py-4">
                             <span class="px-2.5 py-1 rounded-full text-xs font-bold uppercase tracking-wide
                                {% if candidature.statut == 'Accepté' %}bg-green-100 text-green-700
                                {% elseif candidature.statut == 'Refusé' %}bg-gray-100 text-gray-500
                                {% elseif candidature.statut == 'Entretien' %}bg-orange-100 text-orange-700
                                {% else %}bg-blue-100 text-blue-700{% endif %}">
                                {{ candidature.statut }}
                            </span>
                        </td>
                        <td class="px-6 py-4">
                            {% if candidature.scoreMatchingIA %}
                                <div class="flex items-center gap-2">
                                    <div class="w-16 h-2 bg-slate-100 rounded-full overflow-hidden">
                                        <div class="h-full bg-indigo-500" style="width: {{ candidature.scoreMatchingIA }}%"></div>
                                    </div>
                                    <span class="text-xs font-bold text-indigo-700">{{ candidature.scoreMatchingIA }}%</span>
                                </div>
                            {% else %}
                                <span class="text-xs text-slate-400">N/A</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 text-slate-500">{{ candidature.dateDepot ? candidature.dateDepot|date('d/m/Y') : '-' }}</td>
                        <td class="px-6 py-4 text-right">
                             <div class="flex justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                <a href="{{ path('app_candidature_show', {'id': candidature.id}) }}" class="text-blue-600 hover:text-blue-800 text-xs font-bold bg-blue-50 px-3 py-1.5 rounded-lg transition-colors">
                                    Review
                                </a>
                                 <a href="{{ path('app_candidature_edit', {'id': candidature.id}) }}" class="p-1.5 text-slate-400 hover:text-slate-600 transition-colors">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                         <td colspan="6" class="px-6 py-12 text-center text-slate-400">
                             <div class="flex flex-col items-center justify-center gap-2">
                                <svg class="w-12 h-12 text-slate-200" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path></svg>
                                <p>Aucune candidature pour le moment.</p>
                                <a href="{{ path('app_candidature_new') }}" class="text-blue-600 font-medium hover:underline">Ajouter un candidat manuel</a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
