{% extends 'back_office/base.html.twig' %}

{% block title %}Détails Candidature — {{ candidature.nomCandidat }}{% endblock %}

{% block breadcrumb %}
    <span class="text-[#9ca3af] material-symbols-outlined text-[16px]">chevron_right</span>
    <a href="{{ path('app_candidature_index') }}" class="text-[#A79E9C] hover:text-primary transition-colors font-medium">Candidatures</a>
    <span class="text-[#9ca3af] material-symbols-outlined text-[16px]">chevron_right</span>
    <span class="text-primary font-semibold">{{ candidature.nomCandidat }}</span>
{% endblock %}

{% block content %}
<div data-controller="page-transition">
    <div class="max-w-4xl mx-auto">

        {# ── Back + Actions ── #}
        <div class="mb-6 flex items-center justify-between">
            <a href="{{ path('app_candidature_index') }}" class="text-[#A79E9C] hover:text-primary flex items-center gap-2 text-sm font-medium transition-colors">
                <span class="material-symbols-outlined text-[18px]">arrow_back</span>
                Pipeline
            </a>
            <div class="flex gap-2">
                <a href="{{ path('app_candidature_edit', {'id': candidature.id}) }}" class="btn-primary-animated flex items-center gap-2 px-5 py-2.5 text-sm">
                    <span class="material-symbols-outlined text-[18px]">edit</span>
                    Modifier
                </a>
                {{ include('candidature/_delete_form.html.twig') }}
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {# ── Main Content ── #}
            <div class="md:col-span-2 space-y-6">
                {# Profile Card #}
                <div class="section-card animate-card">
                    <div class="p-8">
                        <div class="flex items-center gap-6 mb-6">
                            <div class="w-20 h-20 rounded-full bg-gradient-to-br from-primary to-electric flex items-center justify-center text-navy font-black text-2xl shadow-lg shadow-primary/20 shrink-0">
                                {{ candidature.nomCandidat|slice(0, 2)|upper }}
                            </div>
                            <div>
                                <h1 class="page-title text-2xl font-black text-[#D3C3B9] dark:text-white tracking-tight">{{ candidature.nomCandidat }}</h1>
                                <p class="text-[#A79E9C] dark:text-[#9ca3af]">{{ candidature.emailCandidat }}</p>
                                <div class="mt-2 flex items-center gap-2">
                                    <span class="status-badge
                                        {% if candidature.statut == 'Accepté' %}bg-emerald-100 text-emerald-700 dark:bg-emerald-900/30 dark:text-emerald-400
                                        {% elseif candidature.statut == 'Refusé' %}bg-red-100 text-red-700 dark:bg-red-900/30 dark:text-red-400
                                        {% elseif candidature.statut == 'Entretien' %}bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-400
                                        {% else %}bg-amber-100 text-amber-700 dark:bg-amber-900/30 dark:text-amber-400{% endif %}">
                                        <span class="size-1.5 rounded-full 
                                            {% if candidature.statut == 'Accepté' %}bg-emerald-500
                                            {% elseif candidature.statut == 'Refusé' %}bg-red-500
                                            {% elseif candidature.statut == 'Entretien' %}bg-blue-500
                                            {% else %}bg-amber-500{% endif %}"></span>
                                        {{ candidature.statut }}
                                    </span>
                                    <span class="text-xs text-[#9ca3af]">Candidaté le {{ candidature.dateDepot|date('d F Y') }}</span>
                                </div>
                            </div>
                        </div>
                    
                        <h3 class="text-sm font-black uppercase tracking-wider text-[#D3C3B9] dark:text-white mb-2 flex items-center gap-2">
                            <span class="material-symbols-outlined text-primary text-[18px]">description</span>
                            Lettre de Motivation
                        </h3>
                        <div class="text-sm text-[#A79E9C] dark:text-[#9ca3af] leading-relaxed bg-gray-50 dark:bg-[#161516] p-4 rounded-xl border border-gray-100 dark:border-gray-700">
                            {{ candidature.lettreMotivation|nl2br }}
                        </div>
                    </div>
                </div>
            </div>

            {# ── Sidebar ── #}
            <div class="space-y-6">
                {# Poste Visé #}
                <div class="section-card animate-card">
                    <div class="section-card-header">
                        <h3 class="text-sm font-bold dark:text-white">Poste Visé</h3>
                    </div>
                    <div class="p-6">
                        <div class="flex items-center gap-3 mb-4">
                            <div class="p-2.5 bg-blue-50 dark:bg-blue-900/20 text-blue-600 dark:text-blue-400 rounded-xl">
                                <span class="material-symbols-outlined text-[24px]">work</span>
                            </div>
                            <div>
                                <div class="font-bold text-[#D3C3B9] dark:text-white">{{ candidature.offreEmploi.poste }}</div>
                                <div class="text-xs text-[#A79E9C] dark:text-[#9ca3af]">{{ candidature.offreEmploi.typeContrat }}</div>
                            </div>
                        </div>
                        <a href="{{ path('app_offre_emploi_show', {'id': candidature.offreEmploi.id}) }}" class="w-full flex items-center justify-center gap-2 px-4 py-2.5 border border-[#e5e7eb] dark:border-[#1f2128] text-[#A79E9C] dark:text-gray-300 rounded-xl text-xs font-bold hover:bg-gray-50 dark:hover:bg-[#161516] transition-all">
                            <span class="material-symbols-outlined text-[16px]">visibility</span>
                            Voir l'offre
                        </a>
                    </div>
                </div>

                {# IA Score Card #}
                <div class="rounded-xl overflow-hidden animate-card shadow-lg relative">
                    <div class="bg-gradient-to-br from-indigo-500 to-purple-600 p-6 text-white relative overflow-hidden">
                        <div class="relative z-10">
                            <div class="flex items-center gap-2 mb-1">
                                <span class="material-symbols-outlined text-[24px]">smart_toy</span>
                                <h3 class="font-bold text-lg">Analyse IA</h3>
                            </div>
                            <p class="text-indigo-200 text-xs mb-5">Compatibilité estimée avec le poste.</p>
                            
                            <div class="flex items-end gap-2 mb-3">
                                <span class="text-5xl font-black" data-controller="counter" data-counter-target-value="{{ candidature.scoreMatchingIA|default(0) }}">0</span>
                                <span class="text-2xl font-bold mb-1">%</span>
                            </div>
                            <div class="w-full bg-white/20 rounded-full h-2 overflow-hidden">
                                <div class="bg-white h-full rounded-full animate-bar" style="width: {{ candidature.scoreMatchingIA|default(0) }}%"></div>
                            </div>
                        </div>
                        
                        {# Decorative orb #}
                        <div class="absolute top-0 right-0 w-40 h-40 bg-white/10 rounded-full -mr-20 -mt-20 blur-3xl"></div>
                        <div class="absolute bottom-0 left-0 w-24 h-24 bg-white/10 rounded-full -ml-10 -mb-10 blur-2xl"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
