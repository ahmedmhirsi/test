            <span>Recrutement</span>
            <span class="material-symbols-outlined text-[16px] transition-transform duration-300" :class="open ? 'rotate-180' : ''">expand_more</span>
        </button>

        <div x-show="open" 
             x-transition:enter="transition ease-out duration-200"
             x-transition:enter-start="opacity-0 -translate-y-2"
             x-transition:enter-end="opacity-100 translate-y-0"
             class="space-y-1">
            <a href="{{ path('app_client_explore') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-bold {{ app.request.get('_route') == 'app_client_explore' ? 'bg-primary/10 text-primary' : 'text-[#A79E9C] dark:text-[#9ca3af] hover:bg-gray-100 dark:hover:bg-[#161516]' }} transition-colors">
