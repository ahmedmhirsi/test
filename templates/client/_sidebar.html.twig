                <span>Explorer</span>
            </a>
            <a href="{{ path('app_client_offers') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-bold {{ app.request.get('_route') == 'app_client_offers' ? 'bg-primary/10 text-primary' : 'text-[#A79E9C] dark:text-[#9ca3af] hover:bg-gray-100 dark:hover:bg-[#161516]' }} transition-colors">
