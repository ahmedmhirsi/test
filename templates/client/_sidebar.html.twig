{% block sidebar_nav %}
    <a href="{{ path('app_client_dashboard') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-bold {{ app.request.get('_route') == 'app_client_dashboard' ? 'bg-primary/10 text-primary' : 'text-[#A79E9C] dark:text-[#9ca3af] hover:bg-gray-100 dark:hover:bg-[#161516]' }} transition-colors">
        <span class="material-symbols-outlined text-[20px]">dashboard</span>
        <span>Tableau de bord</span>
    </a>

    <div x-data="{ 
        open: {{ app.request.get('_route') in ['app_client_explore', 'app_client_offers', 'app_client_applications'] ? 'true' : 'false' }} 
    }">
