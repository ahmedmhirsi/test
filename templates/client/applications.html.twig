{% extends 'client/base_client.html.twig' %}

{% block title %}Mes Candidatures - Mon Espace{% endblock %}

{% block body %}
    <div class="mb-8">
        <h1 class="text-3xl font-display font-bold text-slate-900 mb-2">Mes Candidatures</h1>
        <p class="text-slate-500">Suivez l'avancement de toutes vos candidatures</p>
    </div>

    <!-- Status Legend -->
    <div class="flex flex-wrap gap-3 mb-6">
        <span class="inline-flex items-center gap-2 px-3 py-1.5 rounded-lg text-sm font-medium bg-amber-100 text-amber-700">
            <span class="w-2 h-2 rounded-full bg-amber-500"></span>
            En attente
        </span>
        <span class="inline-flex items-center gap-2 px-3 py-1.5 rounded-lg text-sm font-medium bg-blue-100 text-blue-700">
            <span class="w-2 h-2 rounded-full bg-blue-500"></span>
            Entretien
        </span>
        <span class="inline-flex items-center gap-2 px-3 py-1.5 rounded-lg text-sm font-medium bg-emerald-100 text-emerald-700">
            <span class="w-2 h-2 rounded-full bg-emerald-500"></span>
            Accepté
        </span>
        <span class="inline-flex items-center gap-2 px-3 py-1.5 rounded-lg text-sm font-medium bg-red-100 text-red-700">
            <span class="w-2 h-2 rounded-full bg-red-500"></span>
            Refusé
        </span>
    </div>

    <!-- Applications Table -->
    <div class="bg-white rounded-2xl border border-slate-100 shadow-sm overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-slate-50 border-b border-slate-100">
                    <tr>
                        <th class="px-6 py-4 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">Poste</th>
                        <th class="px-6 py-4 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">Date de dépôt</th>
                        <th class="px-6 py-4 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">Score IA</th>
                        <th class="px-6 py-4 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">Statut</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100">
                    {% for application in applications %}
                    <tr class="hover:bg-slate-50 transition-colors">
                        <td class="px-6 py-4">
                            <div class="flex items-center gap-3">
                                <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-brand-500 to-indigo-600 flex items-center justify-center text-white text-sm font-bold">
                                    {{ application.offreEmploi.poste|first|upper }}
                                </div>
                                <div>
                                    <p class="font-semibold text-slate-900">{{ application.offreEmploi.poste }}</p>
                                    <p class="text-sm text-slate-500">{{ application.offreEmploi.typeContrat }}</p>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            <span class="text-sm text-slate-600">{{ application.dateDepot|date('d M Y') }}</span>
                        </td>
                        <td class="px-6 py-4">
                            {% if application.scoreMatchingIA %}
                            <div class="flex items-center gap-2">
                                <div class="w-16 h-2 bg-slate-200 rounded-full overflow-hidden">
                                    <div class="h-full rounded-full 
                                        {% if application.scoreMatchingIA >= 70 %}bg-emerald-500
                                        {% elseif application.scoreMatchingIA >= 50 %}bg-amber-500
                                        {% else %}bg-red-500{% endif %}"
                                        style="width: {{ application.scoreMatchingIA }}%">
                                    </div>
                                </div>
                                <span class="text-sm font-semibold 
                                    {% if application.scoreMatchingIA >= 70 %}text-emerald-600
                                    {% elseif application.scoreMatchingIA >= 50 %}text-amber-600
                                    {% else %}text-red-600{% endif %}">
                                    {{ application.scoreMatchingIA|number_format(0) }}%
                                </span>
                            </div>
                            {% else %}
                            <span class="text-sm text-slate-400">Non évalué</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4">
                            <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-xs font-bold
                                {% if application.statut == 'Accepté' %}bg-emerald-100 text-emerald-700
                                {% elseif application.statut == 'Refusé' %}bg-red-100 text-red-700
                                {% elseif application.statut == 'Entretien' %}bg-blue-100 text-blue-700
                                {% else %}bg-amber-100 text-amber-700{% endif %}">
                                <span class="w-1.5 h-1.5 rounded-full 
                                    {% if application.statut == 'Accepté' %}bg-emerald-500
                                    {% elseif application.statut == 'Refusé' %}bg-red-500
                                    {% elseif application.statut == 'Entretien' %}bg-blue-500
                                    {% else %}bg-amber-500{% endif %}">
                                </span>
                                {{ application.statut }}
                            </span>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="4" class="px-6 py-12 text-center">
                            <div class="w-16 h-16 bg-slate-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
                                <svg class="w-8 h-8 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                                </svg>
                            </div>
                            <h3 class="text-lg font-bold text-slate-900 mb-2">Aucune candidature</h3>
                            <p class="text-slate-500 mb-4">Vous n'avez pas encore postulé à une offre</p>
                            <a href="{{ path('app_client_offers') }}" class="inline-flex items-center gap-2 px-4 py-2 bg-brand-600 text-white rounded-lg text-sm font-semibold hover:bg-brand-700 transition-colors">
                                Voir les offres
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
