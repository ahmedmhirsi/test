{% extends 'front_office/base.html.twig' %}

{% block title %}Dashboard - Client SmartNexus AI{% endblock %}

{% block sidebar_nav %}
    {% include 'client/_sidebar.html.twig' %}
{% endblock %}

{% block breadcrumb %}
    <span class="text-[#9ca3af] material-symbols-outlined text-[16px]">chevron_right</span>
    <span class="text-primary font-semibold">Tableau de bord Client</span>
{% endblock %}

{% block content %}
<!-- Welcome Section -->
<div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-6">
    <div>
        <h1 class="text-3xl md:text-4xl font-black tracking-tight text-[#101218] dark:text-white mb-2">
            Bonjour, {{ app.user.prenom }} üëã
        </h1>
        <p class="text-[#5e658d] dark:text-[#9ca3af] text-base">
            Voici un aper√ßu de votre espace recrutement SmartNexus AI
        </p>
    </div>
    <div class="flex items-center gap-3">
        <a href="{{ path('app_client_explore') }}" class="flex items-center justify-center gap-2 rounded-lg h-11 px-6 bg-primary hover:bg-primary/90 text-navy text-sm font-bold shadow-lg shadow-primary/30 transition-all">
            <span class="material-symbols-outlined text-[20px]">search</span>
            <span>Explorer les offres</span>
        </a>
    </div>
</div>

<!-- Stats Cards -->
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
    <div class="bg-white dark:bg-[#1a1d2d] p-6 rounded-xl border border-[#e5e7eb] dark:border-[#2d3142] shadow-sm">
        <div class="flex items-center justify-between mb-3">
            <p class="text-[#5e658d] dark:text-[#9ca3af] font-medium text-sm">Offres actives</p>
            <span class="bg-gradient-to-br from-blue-500 to-blue-600 p-2 rounded-lg shadow-md shadow-blue-500/20">
                <span class="material-symbols-outlined text-white text-[24px]">work</span>
            </span>
        </div>
        <p class="text-4xl font-black dark:text-white tracking-tight">{{ stats.total_offers }}</p>
        <p class="text-sm text-green-600 font-semibold mt-2">Derni√®res mises √† jour</p>
    </div>

    <div class="bg-white dark:bg-[#1a1d2d] p-6 rounded-xl border border-[#e5e7eb] dark:border-[#2d3142] shadow-sm">
        <div class="flex items-center justify-between mb-3">
            <p class="text-[#5e658d] dark:text-[#9ca3af] font-medium text-sm">Formations</p>
            <span class="bg-gradient-to-br from-purple-500 to-purple-600 p-2 rounded-lg shadow-md shadow-purple-500/20">
                <span class="material-symbols-outlined text-white text-[24px]">school</span>
            </span>
        </div>
        <p class="text-4xl font-black dark:text-white tracking-tight">{{ stats.total_trainings }}</p>
        <p class="text-sm text-blue-600 font-semibold mt-2">Nouvellement ajout√©es</p>
    </div>

    <div class="bg-white dark:bg-[#1a1d2d] p-6 rounded-xl border border-[#e5e7eb] dark:border-[#2d3142] shadow-sm">
        <div class="flex items-center justify-between mb-3">
            <p class="text-[#5e658d] dark:text-[#9ca3af] font-medium text-sm">En attente</p>
            <span class="bg-gradient-to-br from-orange-500 to-orange-600 p-2 rounded-lg shadow-md shadow-orange-500/20">
                <span class="material-symbols-outlined text-white text-[24px]">schedule</span>
            </span>
        </div>
        <p class="text-4xl font-black dark:text-white tracking-tight">{{ stats.pending }}</p>
        <p class="text-sm text-orange-600 font-semibold mt-2">{{ stats.interviewing }} en entretien</p>
    </div>

    <div class="bg-white dark:bg-[#1a1d2d] p-6 rounded-xl border border-[#e5e7eb] dark:border-[#2d3142] shadow-sm">
        <div class="flex items-center justify-between mb-3">
            <p class="text-[#5e658d] dark:text-[#9ca3af] font-medium text-sm">Accept√©es</p>
            <span class="bg-gradient-to-br from-green-500 to-green-600 p-2 rounded-lg shadow-md shadow-green-500/20">
                <span class="material-symbols-outlined text-white text-[24px]">check_circle</span>
            </span>
        </div>
        <p class="text-4xl font-black dark:text-white tracking-tight">{{ stats.accepted }}</p>
        <p class="text-sm text-green-600 font-semibold mt-2">F√©licitations !</p>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Offres d'emploi r√©centes -->
    <div class="bg-white dark:bg-[#1a1d2d] rounded-xl border border-[#e5e7eb] dark:border-[#2d3142] shadow-sm">
        <div class="p-6 border-b border-[#f0f0f5] dark:border-[#2d3142] flex items-center justify-between">
            <h2 class="text-lg font-bold dark:text-white flex items-center gap-2">
                <span class="material-symbols-outlined text-primary">work</span>
                Offres d'emploi r√©centes
            </h2>
            <a href="{{ path('app_client_offers') }}" class="text-sm font-semibold text-electric hover:underline">Voir tout</a>
        </div>
        <div class="p-6 space-y-4">
            {% for offer in active_offers %}
                <div class="flex items-start gap-4 p-4 rounded-lg border border-[#e5e7eb] dark:border-[#2d3142] hover:bg-gray-50 dark:hover:bg-[#252836] transition-colors group">
                    <div class="size-10 rounded-lg bg-primary/10 flex items-center justify-center flex-shrink-0 group-hover:bg-primary/20 transition-colors">
                        <span class="material-symbols-outlined text-primary text-[20px]">business_center</span>
                    </div>
                    <div class="flex-1 min-w-0">
                        <p class="font-bold text-[#101218] dark:text-white mb-1 truncate">{{ offer.poste }}</p>
                        <p class="text-sm text-[#5e658d] dark:text-[#9ca3af] line-clamp-1 mb-2">{{ offer.typeContrat }} ‚Ä¢ {{ offer.salaireMin|number_format(0, ',', ' ') }}‚Ç¨</p>
                        <div class="flex items-center gap-2">
                            <span class="text-[10px] px-2 py-1 rounded-full bg-blue-100 text-blue-700 font-bold uppercase">Nouveau</span>
                        </div>
                    </div>
                    <a href="{{ path('app_offre_emploi_public_show', {'id': offer.id}) }}" class="material-symbols-outlined text-[#9ca3af] hover:text-primary transition-colors">arrow_forward_ios</a>
                </div>
            {% else %}
                <div class="py-12 text-center">
                    <span class="material-symbols-outlined text-gray-400 text-[48px] mb-2">work_off</span>
                    <p class="text-gray-500">Aucune offre disponible</p>
                </div>
            {% endfor %}
        </div>
    </div>

    <!-- Mes Candidatures -->
    <div class="bg-white dark:bg-[#1a1d2d] rounded-xl border border-[#e5e7eb] dark:border-[#2d3142] shadow-sm">
        <div class="p-6 border-b border-[#f0f0f5] dark:border-[#2d3142] flex items-center justify-between">
            <h2 class="text-lg font-bold dark:text-white flex items-center gap-2">
                <span class="material-symbols-outlined text-primary">inbox</span>
                Mes Candidatures
            </h2>
            <a href="{{ path('app_client_applications') }}" class="text-sm font-semibold text-electric hover:underline">Voir tout</a>
        </div>
        <div class="p-6 space-y-4">
            {% for app in user_applications|slice(0, 4) %}
                <div class="flex items-start gap-3 p-4 rounded-lg bg-gray-50/50 dark:bg-[#252836]/30 border border-transparent hover:border-primary/20 transition-all">
                    <div class="size-10 rounded-full flex items-center justify-center flex-shrink-0
                        {% if app.statut == 'Accept√©' %}bg-green-100 text-green-600
                        {% elseif app.statut == 'Refus√©' %}bg-red-100 text-red-600
                        {% elseif app.statut == 'Entretien' %}bg-blue-100 text-blue-600
                        {% else %}bg-amber-100 text-amber-600{% endif %}">
                        <span class="material-symbols-outlined text-[20px]">
                            {% if app.statut == 'Accept√©' %}check_circle
                            {% elseif app.statut == 'Refus√©' %}cancel
                            {% elseif app.statut == 'Entretien' %}event
                            {% else %}hourglass_empty{% endif %}
                        </span>
                    </div>
                    <div class="flex-1">
                        <p class="font-semibold text-[#101218] dark:text-white text-sm">{{ app.offreEmploi.poste }}</p>
                        <p class="text-xs text-[#5e658d] mt-1">D√©pos√©e le {{ app.dateDepot|date('d/m/Y') }}</p>
                    </div>
                    <span class="text-[10px] font-black uppercase tracking-wider
                        {% if app.statut == 'Accept√©' %}text-green-600
                        {% elseif app.statut == 'Refus√©' %}text-red-600
                        {% elseif app.statut == 'Entretien' %}text-blue-600
                        {% else %}text-amber-600{% endif %}">
                        {{ app.statut }}
                    </span>
                </div>
            {% else %}
                <div class="py-12 text-center">
                    <span class="material-symbols-outlined text-gray-400 text-[48px] mb-2">inbox</span>
                    <p class="text-gray-500">Aucune candidature</p>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

<!-- Upcoming Trainings -->
<div class="mt-6 bg-white dark:bg-[#1a1d2d] rounded-xl border border-[#e5e7eb] dark:border-[#2d3142] shadow-sm overflow-hidden">
    <div class="p-6 border-b border-[#f0f0f5] dark:border-[#2d3142]">
        <h2 class="text-lg font-bold dark:text-white flex items-center gap-2">
            <span class="material-symbols-outlined text-purple-500">school</span>
            Formations recommand√©es
        </h2>
    </div>
    <div class="p-6 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        {% for training in upcoming_trainings %}
            <div class="p-4 rounded-xl bg-purple-50/50 dark:bg-purple-900/10 border border-purple-100 dark:border-purple-900/30 hover:shadow-md transition-all group">
                <p class="font-bold text-slate-900 dark:text-white text-sm mb-2 group-hover:text-purple-600 transition-colors">{{ training.titre }}</p>
                <div class="flex items-center gap-2 text-xs text-slate-500">
                    <span class="material-symbols-outlined text-[14px]">calendar_today</span>
                    {{ training.dateDebut|date('d M Y') }}
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
