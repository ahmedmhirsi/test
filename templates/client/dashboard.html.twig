{% extends 'client/base_client.html.twig' %}

{% block title %}Tableau de Bord - Mon Espace{% endblock %}

{% block body %}
    <!-- Welcome Header -->
    <div class="mb-8">
        <h1 class="text-3xl font-display font-bold text-slate-900 mb-2">
            Bienvenue{% if app.user %}, {{ app.user.email|split('@')[0] }}{% endif %} ðŸ‘‹
        </h1>
        <p class="text-slate-500">Voici un aperÃ§u de votre espace recrutement</p>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-10">
        <div class="bg-white rounded-2xl p-5 border border-slate-100 shadow-sm hover:shadow-md transition-shadow">
            <div class="flex items-center gap-3 mb-3">
                <div class="w-10 h-10 bg-blue-50 rounded-xl flex items-center justify-center">
                    <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                </div>
                <span class="text-sm font-medium text-slate-500">Offres actives</span>
            </div>
            <div class="text-3xl font-display font-bold text-slate-900">{{ stats.total_offers }}</div>
        </div>

        <div class="bg-white rounded-2xl p-5 border border-slate-100 shadow-sm hover:shadow-md transition-shadow">
            <div class="flex items-center gap-3 mb-3">
                <div class="w-10 h-10 bg-purple-50 rounded-xl flex items-center justify-center">
                    <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                    </svg>
                </div>
                <span class="text-sm font-medium text-slate-500">Formations</span>
            </div>
            <div class="text-3xl font-display font-bold text-slate-900">{{ stats.total_trainings }}</div>
        </div>

        <div class="bg-white rounded-2xl p-5 border border-slate-100 shadow-sm hover:shadow-md transition-shadow">
            <div class="flex items-center gap-3 mb-3">
                <div class="w-10 h-10 bg-amber-50 rounded-xl flex items-center justify-center">
                    <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                </div>
                <span class="text-sm font-medium text-slate-500">En attente</span>
            </div>
            <div class="text-3xl font-display font-bold text-slate-900">{{ stats.pending }}</div>
        </div>

        <div class="bg-white rounded-2xl p-5 border border-slate-100 shadow-sm hover:shadow-md transition-shadow">
            <div class="flex items-center gap-3 mb-3">
                <div class="w-10 h-10 bg-emerald-50 rounded-xl flex items-center justify-center">
                    <svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                </div>
                <span class="text-sm font-medium text-slate-500">AcceptÃ©es</span>
            </div>
            <div class="text-3xl font-display font-bold text-slate-900">{{ stats.accepted }}</div>
        </div>
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Job Offers Section -->
        <div class="lg:col-span-2">
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-xl font-display font-bold text-slate-900">Offres d'emploi rÃ©centes</h2>
                <a href="{{ path('app_client_offers') }}" class="text-sm font-semibold text-brand-600 hover:text-brand-700 flex items-center gap-1">
                    Voir tout
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
                </a>
            </div>

            <div class="space-y-4">
                {% for offer in active_offers %}
                <div class="bg-white rounded-xl p-5 border border-slate-100 shadow-sm hover:shadow-md hover:border-brand-200 transition-all group">
                    <div class="flex items-start justify-between gap-4">
                        <div class="flex-1">
                            <h3 class="font-bold text-slate-900 group-hover:text-brand-600 transition-colors mb-1">{{ offer.poste }}</h3>
                            <p class="text-sm text-slate-500 line-clamp-2 mb-3">{{ offer.description|slice(0, 100) }}...</p>
                            <div class="flex flex-wrap gap-2">
                                <span class="inline-flex items-center px-2.5 py-1 rounded-lg text-xs font-semibold bg-blue-50 text-blue-700">
                                    {{ offer.typeContrat }}
                                </span>
                                {% if offer.salaireMin and offer.salaireMax %}
                                <span class="inline-flex items-center px-2.5 py-1 rounded-lg text-xs font-semibold bg-emerald-50 text-emerald-700">
                                    {{ offer.salaireMin|number_format(0, ',', ' ') }} - {{ offer.salaireMax|number_format(0, ',', ' ') }} â‚¬
                                </span>
                                {% endif %}
                            </div>
                        </div>
                        <a href="{{ path('app_offre_emploi_public_show', {'id': offer.id}) }}" 
                           class="shrink-0 px-4 py-2 bg-brand-50 text-brand-600 rounded-lg text-sm font-semibold hover:bg-brand-100 transition-colors">
                            Postuler
                        </a>
                    </div>
                </div>
                {% else %}
                <div class="bg-white rounded-xl p-8 border border-slate-100 text-center">
                    <div class="w-12 h-12 bg-slate-100 rounded-xl flex items-center justify-center mx-auto mb-3">
                        <svg class="w-6 h-6 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                        </svg>
                    </div>
                    <p class="text-slate-500 font-medium">Aucune offre disponible pour le moment</p>
                </div>
                {% endfor %}
            </div>
        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
            <!-- My Applications Status -->
            <div class="bg-white rounded-xl border border-slate-100 shadow-sm overflow-hidden">
                <div class="px-5 py-4 border-b border-slate-100 bg-slate-50">
                    <h3 class="font-bold text-slate-900">Mes Candidatures</h3>
                </div>
                <div class="p-4 space-y-3">
                    {% for app in user_applications|slice(0, 5) %}
                    <div class="flex items-center justify-between py-2">
                        <div class="min-w-0 flex-1">
                            <p class="text-sm font-medium text-slate-900 truncate">{{ app.offreEmploi.poste }}</p>
                            <p class="text-xs text-slate-400">{{ app.dateDepot|date('d/m/Y') }}</p>
                        </div>
                        <span class="px-2.5 py-1 rounded-full text-xs font-semibold shrink-0
                            {% if app.statut == 'AcceptÃ©' %}bg-emerald-100 text-emerald-700
                            {% elseif app.statut == 'RefusÃ©' %}bg-red-100 text-red-700
                            {% elseif app.statut == 'Entretien' %}bg-blue-100 text-blue-700
                            {% else %}bg-amber-100 text-amber-700{% endif %}">
                            {{ app.statut }}
                        </span>
                    </div>
                    {% else %}
                    <p class="text-sm text-slate-500 text-center py-4">Aucune candidature</p>
                    {% endfor %}
                </div>
                {% if user_applications|length > 0 %}
                <div class="px-5 py-3 border-t border-slate-100 bg-slate-50">
                    <a href="{{ path('app_client_applications') }}" class="text-sm font-semibold text-brand-600 hover:text-brand-700">
                        Voir toutes mes candidatures â†’
                    </a>
                </div>
                {% endif %}
            </div>

            <!-- Upcoming Trainings -->
            <div class="bg-white rounded-xl border border-slate-100 shadow-sm overflow-hidden">
                <div class="px-5 py-4 border-b border-slate-100 bg-slate-50">
                    <h3 class="font-bold text-slate-900">Formations Ã  venir</h3>
                </div>
                <div class="p-4 space-y-3">
                    {% for training in upcoming_trainings %}
                    <div class="p-3 bg-purple-50 rounded-lg border border-purple-100">
                        <p class="font-medium text-slate-900 text-sm mb-1">{{ training.titre }}</p>
                        <div class="flex items-center gap-2 text-xs text-slate-500">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                            </svg>
                            {{ training.dateDebut|date('d/m/Y') }}
                        </div>
                    </div>
                    {% else %}
                    <p class="text-sm text-slate-500 text-center py-4">Aucune formation disponible</p>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
