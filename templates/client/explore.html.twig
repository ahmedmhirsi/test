{% extends 'front_office/base.html.twig' %}

{% block title %}Explorer - SmartNexus AI{% endblock %}

{% block sidebar_nav %}
    {% include 'client/_sidebar.html.twig' %}
{% endblock %}

{% block breadcrumb %}
    <span class="text-[#9ca3af] material-symbols-outlined text-[16px]">chevron_right</span>
    <span class="text-primary font-semibold">Explorer</span>
{% endblock %}

{% block content %}
<div class="space-y-8">
    <!-- Search and Filter Header -->
    <div class="bg-white dark:bg-[#1a1d2d] p-6 rounded-2xl border border-[#e5e7eb] dark:border-[#2d3142] shadow-sm">
        <div class="flex flex-col md:flex-row gap-4 items-center">
            <div class="flex-1 w-full relative">
                <span class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <span class="material-symbols-outlined text-gray-400">search</span>
                </span>
                <input type="text" placeholder="Rechercher une offre ou une formation..." class="block w-full pl-10 pr-4 py-3 bg-gray-50 dark:bg-[#252836] border-none rounded-xl text-sm focus:ring-2 focus:ring-primary/20 transition-all">
            </div>
            <div class="flex gap-2 w-full md:w-auto">
                <button class="flex-1 md:flex-none flex items-center justify-center gap-2 px-6 py-3 bg-primary text-navy rounded-xl font-bold text-sm hover:bg-primary/90 transition-all">
                    Filtrer
                </button>
            </div>
        </div>
    </div>

    <!-- Job Offers Section -->
    <section>
        <div class="flex items-center justify-between mb-6 px-2">
            <h2 class="text-2xl font-black dark:text-white flex items-center gap-2">
                <span class="material-symbols-outlined text-primary">work</span>
                Toutes les Offres
            </h2>
            <div class="flex items-center gap-2">
                <span class="text-xs font-bold text-slate-400 uppercase">{{ offers|length }} disponibles</span>
            </div>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for offer in offers %}
                <div class="bg-white dark:bg-[#1a1d2d] rounded-2xl p-6 border border-[#e5e7eb] dark:border-[#2d3142] shadow-sm hover:shadow-xl hover:border-primary/30 transition-all group">
                    <div class="flex justify-between items-start mb-4">
                        <div class="size-12 rounded-xl bg-primary/10 flex items-center justify-center group-hover:bg-primary/20 transition-colors">
                            <span class="material-symbols-outlined text-primary text-[24px]">business_center</span>
                        </div>
                        <span class="px-2.5 py-1 bg-green-50 dark:bg-green-900/20 text-green-600 dark:text-green-400 rounded-lg text-[9px] font-black uppercase tracking-widest">{{ offer.typeContrat }}</span>
                    </div>
                    <h3 class="text-lg font-bold text-slate-900 dark:text-white mb-2 group-hover:text-primary transition-colors line-clamp-1">{{ offer.poste }}</h3>
                    <div class="space-y-3 mb-6">
                        <div class="flex items-center gap-2 text-xs text-slate-500 dark:text-slate-400">
                            <span class="material-symbols-outlined text-[16px]">payments</span>
                            {{ offer.salaireMin|number_format(0, ',', ' ') }}€ - {{ offer.salaireMax|number_format(0, ',', ' ') }}€
                        </div>
                        <div class="flex items-center gap-2 text-xs text-slate-500 dark:text-slate-400">
                            <span class="material-symbols-outlined text-[16px]">location_on</span>
                            Télétravail possible
                        </div>
                    </div>
                    <a href="{{ path('app_offre_emploi_public_show', {'id': offer.id}) }}" class="w-full flex items-center justify-center py-3 bg-navy dark:bg-primary text-white dark:text-navy rounded-xl text-xs font-black hover:opacity-90 transition-all shadow-lg">
                        Consulter l'offre
                    </a>
                </div>
            {% endfor %}
        </div>
    </section>

    <!-- Formations Section -->
    <section>
        <div class="flex items-center justify-between mb-6 px-2">
            <h2 class="text-2xl font-black dark:text-white flex items-center gap-2">
                <span class="material-symbols-outlined text-purple-500">school</span>
                Formations recommandées
            </h2>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for formation in formations %}
                <div class="bg-white dark:bg-[#1a1d2d] rounded-2xl p-6 border border-[#e5e7eb] dark:border-[#2d3142] shadow-sm hover:shadow-xl hover:border-purple-300/30 transition-all group">
                    <div class="flex justify-between items-start mb-4">
                        <div class="size-12 rounded-xl bg-purple-50 dark:bg-purple-900/20 flex items-center justify-center group-hover:bg-purple-100 transition-colors">
                            <span class="material-symbols-outlined text-purple-500 text-[24px]">school</span>
                        </div>
                        <span class="px-2.5 py-1 bg-purple-50 dark:bg-purple-900/20 text-purple-600 dark:text-purple-400 rounded-lg text-[9px] font-black uppercase tracking-widest">{{ formation.niveauDifficulte }}</span>
                    </div>
                    <h3 class="text-lg font-bold text-slate-900 dark:text-white mb-2 group-hover:text-purple-600 transition-colors line-clamp-1">{{ formation.titre }}</h3>
                    <p class="text-xs text-slate-500 dark:text-slate-400 line-clamp-2 mb-6 leading-relaxed">{{ formation.description }}</p>
                    <div class="flex items-center gap-4 mb-6">
                        <div class="flex flex-col">
                            <span class="text-[9px] font-bold text-slate-400 uppercase tracking-tighter">Durée</span>
                            <span class="text-xs font-black text-slate-800 dark:text-slate-200">{{ formation.dureeHeures }}h</span>
                        </div>
                    </div>
                    <a href="{{ path('app_formation_show', {'id': formation.id}) }}" class="w-full flex items-center justify-center py-3 bg-purple-600 text-white rounded-xl text-xs font-black hover:bg-purple-700 transition-all shadow-lg">
                        En savoir plus
                    </a>
                </div>
            {% endfor %}
        </div>
    </section>
</div>
{% endblock %}
