{% extends 'front_office/base.html.twig' %}

{% block title %}Formations - SmartNexus AI{% endblock %}

{% block sidebar_nav %}
    {% include 'client/_sidebar.html.twig' %}
{% endblock %}

{% block breadcrumb %}
    <span class="text-[#9ca3af] material-symbols-outlined text-[16px]">chevron_right</span>
    <span class="text-primary font-semibold">Formations</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <div>
        <h1 class="text-3xl font-black dark:text-white">Nos Formations</h1>
        <p class="text-[#5e658d] dark:text-[#9ca3af]">Propulsez votre carrière avec nos programmes d'excellence</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for formation in formations %}
            <div class="bg-white dark:bg-[#1a1d2d] rounded-2xl overflow-hidden border border-[#e5e7eb] dark:border-[#2d3142] shadow-sm hover:shadow-xl transition-all group max-w-sm">
                <div class="h-2 bg-primary"></div>
                <div class="p-6">
                    <div class="flex items-center gap-2 mb-4">
                        <span class="px-2.5 py-1 rounded-lg bg-emerald-100 text-emerald-700 text-[10px] font-black uppercase">
                            {{ formation.niveauDifficulte }}
                        </span>
                        <span class="px-2.5 py-1 rounded-lg bg-purple-100 text-purple-700 text-[10px] font-black uppercase">
                            {{ formation.typeFormation }}
                        </span>
                    </div>
                    <h3 class="text-lg font-bold text-slate-900 dark:text-white mb-2 group-hover:text-primary transition-colors">{{ formation.titre }}</h3>
                    <p class="text-sm text-slate-500 dark:text-slate-400 line-clamp-2 mb-4">{{ formation.description }}</p>
                    
                    <div class="space-y-2 mb-6">
                        <div class="flex items-center gap-2 text-xs text-[#5e658d] dark:text-[#9ca3af]">
                            <span class="material-symbols-outlined text-[16px]">timer</span>
                            <span>{{ formation.dureeHeures }} heures de formation</span>
                        </div>
                        <div class="flex items-center gap-2 text-xs text-[#5e658d] dark:text-[#9ca3af]">
                            <span class="material-symbols-outlined text-[16px]">calendar_month</span>
                            <span>Du {{ formation.dateDebut|date('d/m/Y') }} au {{ formation.dateFin|date('d/m/Y') }}</span>
                        </div>
                    </div>

                    <button class="w-full py-3 bg-navy dark:bg-primary text-white dark:text-navy rounded-xl font-bold text-sm hover:opacity-90 transition-all">
                        S'inscrire à la session
                    </button>
                </div>
            </div>
        {% else %}
            <div class="col-span-full py-20 text-center bg-white dark:bg-[#1a1d2d] rounded-2xl border border-dashed border-gray-300">
                <span class="material-symbols-outlined text-gray-400 text-[64px] mb-4">school</span>
                <p class="text-gray-500 font-medium">Aucune formation disponible actuellement</p>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
