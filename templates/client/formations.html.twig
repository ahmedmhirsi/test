{% extends 'client/base_client.html.twig' %}

{% block title %}Formations - Mon Espace{% endblock %}

{% block body %}
    <div class="mb-8">
        <h1 class="text-3xl font-display font-bold text-slate-900 mb-2">Formations disponibles</h1>
        <p class="text-slate-500">Développez vos compétences avec nos programmes de formation</p>
    </div>

    <!-- Formations Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for formation in formations %}
        <div class="bg-white rounded-2xl border border-slate-100 shadow-sm hover:shadow-lg transition-all overflow-hidden group">
            <!-- Colored Header -->
            <div class="h-2 bg-gradient-to-r 
                {% if formation.niveauDifficulte == 'Débutant' %}from-emerald-400 to-emerald-500
                {% elseif formation.niveauDifficulte == 'Intermédiaire' %}from-amber-400 to-orange-500
                {% else %}from-red-400 to-rose-500{% endif %}">
            </div>
            
            <div class="p-5">
                <!-- Header -->
                <div class="flex items-start justify-between gap-3 mb-3">
                    <span class="inline-flex items-center px-2.5 py-1 rounded-lg text-xs font-bold
                        {% if formation.niveauDifficulte == 'Débutant' %}bg-emerald-100 text-emerald-700
                        {% elseif formation.niveauDifficulte == 'Intermédiaire' %}bg-amber-100 text-amber-700
                        {% else %}bg-red-100 text-red-700{% endif %}">
                        {{ formation.niveauDifficulte }}
                    </span>
                    <span class="px-2.5 py-1 rounded-lg text-xs font-medium bg-purple-50 text-purple-700">
                        {{ formation.typeFormation }}
                    </span>
                </div>

                <h3 class="font-bold text-lg text-slate-900 mb-2">{{ formation.titre }}</h3>
                <p class="text-sm text-slate-500 line-clamp-3 mb-4">{{ formation.description|slice(0, 120) }}...</p>

                <!-- Details -->
                <div class="space-y-2 mb-4">
                    <div class="flex items-center gap-2 text-sm text-slate-600">
                        <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        <span>{{ formation.dureeHeures }} heures</span>
                    </div>
                    <div class="flex items-center gap-2 text-sm text-slate-600">
                        <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                        </svg>
                        <span>{{ formation.dateDebut|date('d/m/Y') }} - {{ formation.dateFin|date('d/m/Y') }}</span>
                    </div>
                </div>

                <!-- Status -->
                {% if formation.isDisponible %}
                <div class="flex items-center gap-2 px-3 py-2 bg-emerald-50 text-emerald-700 rounded-lg text-sm font-medium">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    Inscriptions ouvertes
                </div>
                {% else %}
                <div class="flex items-center gap-2 px-3 py-2 bg-slate-100 text-slate-500 rounded-lg text-sm font-medium">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    En cours ou terminée
                </div>
                {% endif %}
            </div>
        </div>
        {% else %}
        <div class="col-span-full bg-white rounded-2xl p-12 border border-slate-100 text-center">
            <div class="w-16 h-16 bg-slate-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                </svg>
            </div>
            <h3 class="text-lg font-bold text-slate-900 mb-2">Aucune formation disponible</h3>
            <p class="text-slate-500">De nouvelles formations seront bientôt disponibles</p>
        </div>
        {% endfor %}
    </div>
{% endblock %}
