{% extends 'layout/client.html.twig' %}

{% block title %}SmartNexus - Jalons du Projet{% endblock %}

{% block body %}
<div class="space-y-6">
    <div class="flex justify-between items-center">
        <h1 class="text-2xl font-bold text-navy dark:text-white flex items-center gap-2">
            <span class="material-symbols-outlined text-primary">flag</span>
            Jalons &amp; Échéances
        </h1>
    </div>

    <div class="relative border-l-2 border-gray-200 dark:border-gray-700 ml-3 space-y-8">
        {% for jalon in jalons %}
            {% set daysRemaining = jalon.getDaysRemaining() %}
            <div class="relative pl-8">
                <!-- Timeline Dot -->
                <div class="absolute -left-[9px] top-1 bg-white dark:bg-gray-900 border-2 {{ daysRemaining < 0 ? 'border-green-500' : (daysRemaining <= 7 ? 'border-yellow-500 animate-pulse' : 'border-primary') }} w-4 h-4 rounded-full"></div>
                
                <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-sm border border-gray-100 dark:border-gray-700 hover:shadow-md transition-all">
                    <div class="flex flex-wrap justify-between items-start gap-4">
                        <div>
                            <p class="text-xs font-bold text-gray-400 uppercase mb-1">{{ jalon.projet.titre }}</p>
                            <h3 class="text-xl font-bold text-navy dark:text-white">{{ jalon.titre }}</h3>
                            <p class="text-gray-600 dark:text-gray-300 mt-2">{{ jalon.description|striptags }}</p>
                        </div>
                        <div class="text-right">
                            <span class="block text-2xl font-bold {{ daysRemaining < 0 ? 'text-green-600' : (daysRemaining <= 7 ? 'text-yellow-600' : 'text-primary') }}">
                                {{ jalon.dateEcheance|date('d M Y') }}
                            </span>
                            <span class="text-sm font-medium text-gray-500">
                                {% if daysRemaining < 0 %}
                                    Passé depuis {{ daysRemaining|abs }} jours
                                {% elseif daysRemaining == 0 %}
                                    Aujourd'hui !
                                {% else %}
                                    Dans {{ daysRemaining }} jours
                                {% endif %}
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="pl-8 text-gray-500 italic">Aucun jalon planifié pour le moment.</div>
        {% endfor %}
    </div>
</div>
{% endblock %}
