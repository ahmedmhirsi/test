{% extends 'front_office/base.html.twig' %}

{% block title %}Offres d'emploi - SmartNexus AI{% endblock %}

{% block sidebar_nav %}
    {% include 'client/_sidebar.html.twig' %}
{% endblock %}

{% block breadcrumb %}
    <span class="text-[#9ca3af] material-symbols-outlined text-[16px]">chevron_right</span>
    <span class="text-primary font-semibold">Mes Offres</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
        <div>
            <h1 class="text-3xl font-black dark:text-white">Dernières Offres</h1>
            <p class="text-[#A79E9C] dark:text-[#9ca3af]">Découvrez toutes les opportunités disponibles chez SmartNexus AI</p>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for offer in offers %}
        <div class="bg-white dark:bg-[#1a1d2d] rounded-2xl p-6 border border-[#e5e7eb] dark:border-[#1f2128] shadow-sm hover:shadow-xl hover:border-primary/30 transition-all group">
            <div class="flex items-start justify-between mb-4">
                <div class="size-12 rounded-xl bg-primary/10 flex items-center justify-center group-hover:bg-primary/20 transition-colors">
                    <span class="material-symbols-outlined text-primary text-[24px]">business_center</span>
                </div>
                <span class="px-3 py-1 bg-blue-100 text-blue-700 text-[10px] font-black uppercase rounded-full">
                    {{ offer.typeContrat }}
                </span>
            </div>
            
            <h3 class="text-lg font-bold text-slate-900 dark:text-white mb-2 group-hover:text-primary transition-colors truncate">{{ offer.poste }}</h3>
            <p class="text-sm text-slate-500 dark:text-slate-400 line-clamp-3 mb-6 leading-relaxed">{{ offer.description }}</p>
            
            <div class="space-y-3 mb-6">
                {% if offer.salaireMax %}
                <div class="flex items-center gap-2 text-sm text-[#A79E9C] dark:text-[#9ca3af]">
                    <span class="material-symbols-outlined text-[18px]">payments</span>
                    <span class="font-bold text-gray-900 dark:text-gray-100">{{ offer.salaireMax|number_format(0, ',', ' ') }} € / an</span>
                </div>
                {% endif %}
                <div class="flex items-center gap-2 text-sm text-[#A79E9C] dark:text-[#9ca3af]">
                    <span class="material-symbols-outlined text-[18px]">event</span>
                    <span>Publiée le {{ offer.datePublication|date('d/m/Y') }}</span>
                </div>
            </div>

            <a href="{{ path('app_offre_emploi_public_show', {'id': offer.id}) }}" class="w-full h-11 flex items-center justify-center bg-primary hover:bg-primary/90 text-navy rounded-xl font-bold text-sm shadow-lg shadow-primary/20 transition-all">
                Voir les détails
            </a>
        </div>
        {% else %}
            <div class="col-span-full py-20 text-center bg-white dark:bg-[#1a1d2d] rounded-2xl border border-dashed border-gray-300">
                <span class="material-symbols-outlined text-gray-400 text-[64px] mb-4">search_off</span>
                <p class="text-gray-500 font-medium">Aucune offre disponible pour le moment</p>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
