{% extends 'layout/client.html.twig' %}

{% block title %}SmartNexus - Avancement Détaillé{% endblock %}

{% block body %}
<div class="space-y-8">
    <h1 class="text-2xl font-bold text-navy dark:text-white flex items-center gap-2">
        <span class="material-symbols-outlined text-primary">trending_up</span>
        Rapport d'Avancement
    </h1>

    <div class="grid gap-6">
        {% for projet in projets %}
            <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-sm border border-gray-100 dark:border-gray-700">
                <div class="flex justify-between items-center mb-6">
                    <div>
                        <h2 class="text-xl font-bold text-navy dark:text-white">{{ projet.titre }}</h2>
                        <p class="text-gray-500 text-sm">Démarré le {{ projet.dateDebut|date('d/m/Y') }}</p>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-4 gap-4 text-center">
                    <div class="p-4 bg-gray-50 dark:bg-gray-700/50 rounded-lg">
                        <p class="text-xs text-gray-500 uppercase font-bold">Sprints Total</p>
                        <p class="text-2xl font-bold text-navy dark:text-white">{{ projet.sprints|length }}</p>
                    </div>
                    <div class="p-4 bg-gray-50 dark:bg-gray-700/50 rounded-lg">
                        <p class="text-xs text-gray-500 uppercase font-bold">Tâches Total</p>
                        {% set totalTasks = 0 %}
                        {% for sprint in projet.sprints %}
                            {% set totalTasks = totalTasks + sprint.taches|length %}
                        {% endfor %}
                        <p class="text-2xl font-bold text-navy dark:text-white">{{ totalTasks }}</p>
                    </div>
                    <div class="p-4 bg-gray-50 dark:bg-gray-700/50 rounded-lg">
                        <p class="text-xs text-gray-500 uppercase font-bold">Jalons</p>
                        <p class="text-2xl font-bold text-navy dark:text-white">{{ projet.jalons|length }}</p>
                    </div>
                    <div class="p-4 bg-green-50 dark:bg-green-900/10 rounded-lg border border-green-100 dark:border-green-800">
                        <p class="text-xs text-green-600 uppercase font-bold">Statut</p>
                        <p class="text-lg font-bold text-green-700">{{ projet.statut|replace({'_': ' '}) }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
