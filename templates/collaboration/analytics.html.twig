{% extends 'back_office/base.html.twig' %}
{% import '_components.html.twig' as ui %}

{% block title %}Collaboration Analytics – SmartNexus AI{% endblock %}

{% block header_title %}
    <span class="flex items-center gap-2">
        <span class="material-symbols-outlined text-nexus-primary">analytics</span>
        Collaboration Performance Audit
    </span>
{% endblock %}

{% block content %}
<div class="swup-transition-fade pb-20">
    <div class="max-w-7xl mx-auto space-y-8">
        
        {# ─── Page Header ─── #}
        <div class="flex flex-col md:flex-row justify-between items-end gap-6 animate-card">
            <div>
                 <p class="text-[11px] font-bold text-[#A79E9C] tracking-wider uppercase mb-2">Metrics Oversight</p>
                 <h1 class="text-4xl font-extrabold text-[#D3C3B9] tracking-tight">Collaboration <span class="text-[#A79E9C]">Intelligence</span></h1>
                 <p class="text-[#A79E9C]/80 text-sm font-medium mt-2">Comprehensive analysis of stakeholder engagement and operational sync patterns.</p>
            </div>
            <a href="{{ path('app_collaboration_dashboard') }}" class="group flex items-center gap-2 px-6 py-3 rounded-xl bg-slate-800 border border-slate-700 text-[11px] font-bold text-slate-400 uppercase tracking-widest hover:bg-slate-700 hover:text-white transition-all">
                <span class="material-symbols-outlined text-[20px] group-hover:-translate-x-1 transition-transform">arrow_back</span>
                Back to Dashboard
            </a>
        </div>

        {# ─── Quick Stats Summary ─── #}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 animate-card" style="animation-delay: 0.1s">
            
            <div class="glass-panel p-6 border-l-4 border-l-nexus-primary">
                <div class="flex justify-between items-start mb-4">
                    <div class="size-10 rounded-lg bg-nexus-primary/10 flex items-center justify-center text-nexus-primary">
                        <span class="material-symbols-outlined">event_available</span>
                    </div>
                    <span class="text-[10px] font-bold text-emerald-400 uppercase tracking-widest">Active</span>
                </div>
                <h3 class="text-3xl font-black text-white mb-1">{{ meetings|length }}</h3>
                <p class="text-[10px] text-slate-500 uppercase tracking-widest font-bold">Total Sync Sessions</p>
            </div>

            <div class="glass-panel p-6 border-l-4 border-l-[#B58863]">
                <div class="flex justify-between items-start mb-4">
                    <div class="size-10 rounded-lg bg-[#B58863]/10 flex items-center justify-center text-[#B58863]">
                        <span class="material-symbols-outlined">diversity_3</span>
                    </div>
                    <span class="text-[10px] font-bold text-[#B58863] uppercase tracking-widest">Engagement</span>
                </div>
                <h3 class="text-3xl font-black text-[#D3C3B9] mb-1">94%</h3>
                <p class="text-[10px] text-[#A79E9C] uppercase tracking-widest font-bold">Participation Rate</p>
            </div>

            <div class="glass-panel p-6 border-l-4 border-l-slate-600">
                <div class="flex justify-between items-start mb-4">
                    <div class="size-10 rounded-lg bg-slate-800 flex items-center justify-center text-slate-400">
                        <span class="material-symbols-outlined">timer</span>
                    </div>
                    <span class="text-[10px] font-bold text-slate-500 uppercase tracking-widest">Efficiency</span>
                </div>
                <h3 class="text-3xl font-black text-white mb-1">1,420</h3>
                <p class="text-[10px] text-slate-500 uppercase tracking-widest font-bold">Minutes Allocated</p>
            </div>

            <div class="glass-panel p-6 border-l-4 border-l-emerald-500">
                <div class="flex justify-between items-start mb-4">
                    <div class="size-10 rounded-lg bg-emerald-500/10 flex items-center justify-center text-emerald-500">
                        <span class="material-symbols-outlined">verified</span>
                    </div>
                    <span class="text-[10px] font-bold text-emerald-500 uppercase tracking-widest">Goal Status</span>
                </div>
                <h3 class="text-3xl font-black text-white mb-1">Stable</h3>
                <p class="text-[10px] text-slate-500 uppercase tracking-widest font-bold">Network Health</p>
            </div>
        </div>

        {# ─── Meetings Registry ─── #}
        <div class="animate-card" style="animation-delay: 0.2s">
            <div class="flex items-center justify-between mb-6 px-4">
                 <h3 class="text-sm font-bold text-white uppercase tracking-widest flex items-center gap-3">
                    <span class="size-2 rounded-full bg-nexus-primary"></span>
                    Event Registry
                </h3>
            </div>

            <div class="glass-panel overflow-hidden">
                <div class="overflow-x-auto">
                    <table class="w-full text-left">
                        <thead class="bg-slate-950/30 border-b border-white/5 text-[11px] font-bold text-slate-500 uppercase tracking-wider">
                            <tr>
                                <th class="py-5 px-8">Sync Designation</th>
                                <th class="py-5 px-6">Framework Timeline</th>
                                <th class="py-5 px-6 text-center">Status</th>
                                <th class="py-5 px-6 text-center">Delegation</th>
                                <th class="py-5 px-8 text-right">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-white/5">
                            {% for meeting in meetings %}
                                <tr class="group hover:bg-white/[0.02] transition-colors">
                                    <td class="py-5 px-8">
                                        <div class="flex items-center gap-4">
                                            <div class="size-10 rounded-xl bg-slate-900 border border-white/5 flex items-center justify-center text-nexus-primary group-hover:bg-nexus-primary group-hover:text-white transition-all shadow-lg">
                                                <span class="material-symbols-outlined text-[20px]">videocam</span>
                                            </div>
                                            <div>
                                                <p class="font-bold text-white group-hover:text-nexus-primary transition-colors">{{ meeting.titre }}</p>
                                                <p class="text-[10px] text-slate-500 font-bold uppercase tracking-wider">Session ID: #{{ meeting.id|default('---') }}</p>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="py-5 px-6">
                                        <div class="flex flex-col gap-1">
                                            <p class="text-xs font-bold text-white">{{ meeting.dateDebut|date('M d, Y') }}</p>
                                            <p class="text-[10px] text-slate-500 font-bold uppercase tracking-widest">
                                                {{ meeting.dateDebut|date('H:i') }} • {{ meeting.duree }} MIN
                                            </p>
                                        </div>
                                    </td>
                                    <td class="py-5 px-6 text-center">
                                         {{ ui.status_badge(meeting.statut) }}
                                    </td>
                                    <td class="py-5 px-6 text-center">
                                         <div class="flex items-center justify-center gap-2">
                                            <span class="text-xs font-bold text-white">{{ meeting.participantCount|default(0) }}</span>
                                            <span class="text-[10px] text-slate-600 font-bold uppercase">Staff</span>
                                         </div>
                                    </td>
                                    <td class="py-5 px-8 text-right">
                                         <a href="{{ path('app_meeting_show', {'id': meeting.id}) }}" class="size-9 rounded-xl flex items-center justify-center text-slate-500 hover:text-white hover:bg-slate-800 border border-transparent hover:border-white/10 transition-all ml-auto">
                                            <span class="material-symbols-outlined text-[18px]">open_in_new</span>
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5" class="py-16 text-center text-slate-600">
                                        <div class="flex flex-col items-center opacity-30">
                                            <span class="material-symbols-outlined text-[56px] mb-4">event_busy</span>
                                            <p class="text-sm font-bold uppercase tracking-widest">No synchronization events recorded</p>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
