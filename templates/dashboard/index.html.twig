{% extends user_layout %}
{% import '_components.html.twig' as ui %}

{% block title %}SmartNexus AI ‚Äì Dashboard{% endblock %}

{% block body %}

    <div class="flex flex-wrap justify-between items-end gap-4 mb-8">
        <div class="flex flex-col gap-1">
            {% if activeSprint %}
                <p class="text-navy dark:text-white text-4xl font-black leading-tight tracking-tight">
                    {{ activeSprint.nom }}
                    <span class="text-primary">(Active)</span>
                </p>
                <div class="flex items-center gap-2 text-gray-500">
                    <span class="material-symbols-outlined text-sm">calendar_today</span>
                    <p class="text-base font-normal">
                        {{ activeSprint.dateDebut|date('M d') }} - {{ activeSprint.dateFin|date('M d, Y') }}
                    </p>
                </div>
            {% else %}
                <p class="text-navy dark:text-white text-4xl font-black leading-tight tracking-tight">
                    Dashboard
                </p>
                <p class="text-gray-500 text-base">Welcome to SmartNexus AI Sprint Management</p>
            {% endif %}
        </div>
        
        <div class="flex gap-3 items-center">

            <div class="flex -space-x-3 overflow-hidden">
                {{ ui.avatar('Alex R.', null, 'md') }}
                {{ ui.avatar('Sarah J.', null, 'md') }}
                {{ ui.avatar('Mike T.', null, 'md') }}
                <div class="flex h-8 w-8 items-center justify-center rounded-full bg-gray-200 dark:bg-gray-700 text-xs font-medium text-gray-600 dark:text-gray-300 ring-2 ring-white dark:ring-gray-900">+{{ projectCount }}</div>
            </div>
            
            {% if activeSprint %}
                <a href="{{ path('app_sprint_show', {id: activeSprint.id}) }}" 
                   class="flex items-center gap-2 px-4 py-2 bg-primary hover:bg-yellow-500 text-white font-bold rounded-lg transition-colors shadow-lg shadow-primary/20">
                    <span class="material-symbols-outlined text-xl">check_circle</span>
                    <span>View Sprint</span>
                </a>
            {% endif %}
        </div>
    </div>


    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        

        <div class="flex flex-col gap-4 rounded-xl border border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-900 p-6 shadow-sm">
            <div class="flex justify-between items-start">
                <div>
                    <p class="text-gray-500 text-sm font-medium">Sprint Velocity</p>
                    <p class="text-navy dark:text-white text-3xl font-bold">{{ currentVelocity }} pts</p>
                </div>
                {% if velocityChange is not null %}
                    <div class="px-2 py-1 rounded {{ velocityChange >= 0 ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700' }} text-xs font-bold">
                        {{ velocityChange >= 0 ? '+' : '' }}{{ velocityChange }}%
                    </div>
                {% endif %}
            </div>
            <div class="grid grid-cols-4 gap-4 items-end h-32 pt-2">
                {% set maxVelocity = velocityData|reduce((carry, d) => (d.velocity > carry ? d.velocity : carry), 0) %}
                {% for data in velocityData %}
                    {% set heightPercent = maxVelocity > 0 ? (data.velocity / maxVelocity * 100) : 0 %}
                    <div class="flex flex-col items-center gap-2 h-full justify-end">
                        <div class="{{ data.isActive ? 'bg-primary' : 'bg-primary/40' }} w-full rounded-t transition-all duration-300" 
                             style="height: {{ heightPercent }}%;"></div>
                        <p class="{{ data.isActive ? 'text-navy dark:text-primary font-bold' : 'text-gray-400' }} text-[10px]">{{ data.name }}</p>
                    </div>
                {% else %}
                    <div class="col-span-4 flex items-center justify-center h-full text-gray-400 text-sm">
                        No sprint data
                    </div>
                {% endfor %}
            </div>
        </div>


        <div class="flex flex-col gap-4 rounded-xl border border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-900 p-6 shadow-sm">
            <div>
                <p class="text-gray-500 text-sm font-medium">Burndown</p>
                <p class="text-navy dark:text-white text-3xl font-bold">{{ pointsRemaining }} pts left</p>
            </div>
            <div class="relative h-32 w-full mt-2">
                <svg class="w-full h-full" viewBox="0 0 100 40" preserveAspectRatio="none">

                    <line x1="0" y1="0" x2="100" y2="40" stroke="#E5E7EB" stroke-width="1" stroke-dasharray="2"></line>

                    {% set progressX = completionPercentage %}
                    {% set progressY = totalPoints > 0 ? (pointsRemaining / totalPoints * 40) : 40 %}
                    <path d="M0,0 L{{ progressX }},{{ 40 - progressY }} L{{ progressX }},40 L0,40 Z" 
                          fill="url(#burndown-grad)" opacity="0.2"></path>
                    <path d="M0,0 L{{ progressX }},{{ 40 - progressY }}" 
                          fill="none" stroke="#ffb405" stroke-width="2.5" stroke-linecap="round"></path>
                    <circle cx="{{ progressX }}" cy="{{ 40 - progressY }}" r="3" fill="#ffb405"/>
                    <defs>
                        <linearGradient id="burndown-grad" x1="0%" y1="0%" x2="0%" y2="100%">
                            <stop offset="0%" style="stop-color:#ffb405;stop-opacity:1"></stop>
                            <stop offset="100%" style="stop-color:#ffb405;stop-opacity:0"></stop>
                        </linearGradient>
                    </defs>
                </svg>
                <div class="flex justify-between mt-2">
                    <span class="text-[10px] text-gray-400 font-bold">START</span>
                    <span class="text-[10px] text-primary font-bold">{{ completionPercentage }}%</span>
                    <span class="text-[10px] text-gray-400 font-bold">END</span>
                </div>
            </div>
        </div>


        <div class="flex flex-col gap-2 rounded-xl border border-primary/20 bg-gradient-to-br from-primary/10 to-primary/5 p-6 relative overflow-hidden">
            <div class="absolute -right-4 -top-4 opacity-10">
                <span class="material-symbols-outlined text-[120px]">auto_awesome</span>
            </div>
            <p class="text-navy dark:text-white text-sm font-bold flex items-center gap-2">
                <span class="material-symbols-outlined text-primary filled">auto_awesome</span>
                AI Progress Prediction
            </p>
            <div class="mt-4">
                <p class="text-navy dark:text-white text-5xl font-black leading-tight">{{ aiPrediction }}%</p>
                <p class="{{ aiPrediction >= 70 ? 'text-green-700' : (aiPrediction >= 40 ? 'text-yellow-700' : 'text-red-700') }} text-sm font-bold mt-1">
                    {% if aiPrediction >= 80 %}
                        Highly likely to complete on time
                    {% elseif aiPrediction >= 60 %}
                        Good progress, stay on track
                    {% elseif aiPrediction >= 40 %}
                        At risk, consider adjustments
                    {% else %}
                        Needs immediate attention
                    {% endif %}
                </p>
            </div>
            <div class="mt-4 w-full bg-white/50 dark:bg-white/10 rounded-full h-2">
                <div class="bg-primary h-2 rounded-full transition-all duration-500" style="width: {{ aiPrediction }}%"></div>
            </div>
        </div>
    </div>


    <div class="bg-white dark:bg-gray-900 rounded-xl border border-gray-200 dark:border-gray-800 shadow-sm overflow-hidden">
        <div class="p-6 border-b border-gray-100 dark:border-gray-800 flex justify-between items-center">
            <h3 class="text-navy dark:text-white font-bold text-lg">
                {% if activeSprint %}Current Sprint Tasks{% else %}Recent Tasks{% endif %}
            </h3>
            <div class="flex gap-2">
                {% if can_create_tache %}
                <a href="{{ path('app_tache_new') }}" class="flex items-center gap-1 px-3 py-1.5 text-sm bg-primary/10 text-primary hover:bg-primary/20 rounded-lg font-medium transition-colors">
                    <span class="material-symbols-outlined text-lg">add</span>
                    Add Task
                </a>
                {% endif %}
                <button class="p-2 text-gray-500 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg transition-colors">
                    <span class="material-symbols-outlined">filter_list</span>
                </button>
                <button class="p-2 text-gray-500 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg transition-colors">
                    <span class="material-symbols-outlined">sort</span>
                </button>
            </div>
        </div>

        <div class="overflow-x-auto">
            <table class="w-full text-left">
                <thead class="bg-gray-50 dark:bg-gray-800/50 text-gray-500 text-xs font-bold uppercase tracking-wider">
                    <tr>
                        <th class="px-6 py-4">Task Name</th>
                        <th class="px-6 py-4">Sprint</th>
                        <th class="px-6 py-4">Priority</th>
                        <th class="px-6 py-4">Status</th>
                        <th class="px-6 py-4">Estimate</th>
                        <th class="px-6 py-4">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100 dark:divide-gray-800">
                    {% for tache in tasks %}
                        <tr class="hover:bg-gray-50 dark:hover:bg-gray-800/30 transition-colors">
                            <td class="px-6 py-4">
                                <a href="{{ path('app_tache_show', {id: tache.id}) }}" class="hover:text-primary transition-colors">
                                    <p class="text-navy dark:text-white font-medium">{{ tache.titre }}</p>
                                    <p class="text-gray-400 text-xs italic">SN-{{ tache.id }}</p>
                                </a>
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-500">
                                {% if tache.sprint %}
                                    {{ tache.sprint.nom }}
                                {% else %}
                                    ‚Äî
                                {% endif %}
                            </td>
                            <td class="px-6 py-4">
                                {{ ui.priority_badge(tache.priorite) }}
                            </td>
                            <td class="px-6 py-4">
                                {{ ui.status_badge(tache.statut) }}
                            </td>
                            <td class="px-6 py-4 text-sm font-medium text-navy dark:text-white">
                                {{ tache.tempsEstime }} pts
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex gap-1">
                                    <a href="{{ path('app_tache_edit', {id: tache.id}) }}" 
                                       class="p-1.5 text-gray-400 hover:text-primary hover:bg-primary/10 rounded-lg transition-colors">
                                        <span class="material-symbols-outlined text-lg">edit</span>
                                    </a>
                                    <a href="{{ path('app_tache_show', {id: tache.id}) }}" 
                                       class="p-1.5 text-gray-400 hover:text-navy dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg transition-colors">
                                        <span class="material-symbols-outlined text-lg">visibility</span>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="px-6 py-16 text-center">
                                <div class="flex flex-col items-center">
                                    <span class="material-symbols-outlined text-5xl text-gray-300 mb-3">task_alt</span>
                                    <p class="text-gray-500 font-medium mb-1">No tasks found</p>
                                    <p class="text-gray-400 text-sm mb-4">
                                        {% if activeSprint %}
                                            This sprint has no tasks yet
                                        {% else %}
                                            Create a sprint and add tasks to get started
                                        {% endif %}
                                    </p>
                                    {% if can_create_tache %}
                                    <a href="{{ path('app_tache_new') }}" 
                                       class="flex items-center gap-2 px-4 py-2 bg-primary hover:bg-yellow-500 text-white font-bold rounded-lg transition-colors">
                                        <span class="material-symbols-outlined">add</span>
                                        Create Task
                                    </a>
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>


    {% if activeSprint %}
    <div class="mt-8 grid grid-cols-2 md:grid-cols-4 gap-4">
        <div class="bg-white dark:bg-gray-900 rounded-xl p-4 border border-gray-200 dark:border-gray-800">
            <p class="text-gray-500 text-xs font-medium uppercase">Total Tasks</p>
            <p class="text-navy dark:text-white text-2xl font-bold">{{ tasks|length }}</p>
        </div>
        <div class="bg-white dark:bg-gray-900 rounded-xl p-4 border border-gray-200 dark:border-gray-800">
            <p class="text-gray-500 text-xs font-medium uppercase">Completed</p>
            <p class="text-green-600 text-2xl font-bold">{{ completedPoints }} pts</p>
        </div>
        <div class="bg-white dark:bg-gray-900 rounded-xl p-4 border border-gray-200 dark:border-gray-800">
            <p class="text-gray-500 text-xs font-medium uppercase">Remaining</p>
            <p class="text-primary text-2xl font-bold">{{ pointsRemaining }} pts</p>
        </div>
        <div class="bg-white dark:bg-gray-900 rounded-xl p-4 border border-gray-200 dark:border-gray-800">
            <p class="text-gray-500 text-xs font-medium uppercase">Total Sprints</p>
            <p class="text-navy dark:text-white text-2xl font-bold">{{ sprints|length }}</p>
        </div>
    </div>
    {% endif %}


    {% if upcomingJalons|length > 0 or overdueJalons|length > 0 %}
    <div class="mt-8 bg-white dark:bg-gray-900 rounded-xl border border-gray-200 dark:border-gray-800 shadow-sm overflow-hidden">
        <div class="p-6 border-b border-gray-100 dark:border-gray-800 flex justify-between items-center">
            <h3 class="text-navy dark:text-white font-bold text-lg flex items-center gap-2">
                <span class="material-symbols-outlined text-primary">flag</span>
                Prochains Jalons
            </h3>
            <a href="{{ path('app_jalon_index') }}" class="flex items-center gap-1 px-3 py-1.5 text-sm bg-primary/10 text-primary hover:bg-primary/20 rounded-lg font-medium transition-colors">
                <span class="material-symbols-outlined text-lg">visibility</span>
                Voir tous
            </a>
        </div>
        
        <div class="divide-y divide-gray-100 dark:divide-gray-800">

            {% for jalon in overdueJalons %}
                <div class="p-4 flex items-center gap-4 bg-red-50 dark:bg-red-900/10 hover:bg-red-100 dark:hover:bg-red-900/20 transition-colors">
                    <div class="p-2 bg-red-100 dark:bg-red-900/30 rounded-lg">
                        <span class="material-symbols-outlined text-red-500 filled">warning</span>
                    </div>
                    <div class="flex-1 min-w-0">
                        <a href="{{ path('app_jalon_show', {id: jalon.id}) }}" class="text-navy dark:text-white font-medium hover:text-primary transition-colors">
                            {{ jalon.titre }}
                        </a>
                        <p class="text-red-500 text-xs font-bold">
                            ‚ö† En retard de {{ jalon.getDaysRemaining()|abs }} jour{{ jalon.getDaysRemaining()|abs > 1 ? 's' : '' }}
                        </p>
                    </div>
                    <div class="text-right">
                        <p class="text-red-500 font-bold text-sm">{{ jalon.dateEcheance|date('d M') }}</p>
                        <p class="text-gray-400 text-xs">{{ jalon.projet.titre }}</p>
                    </div>
                </div>
            {% endfor %}
            

            {% for jalon in upcomingJalons %}
                {% set daysRemaining = jalon.getDaysRemaining() %}
                <div class="p-4 flex items-center gap-4 hover:bg-gray-50 dark:hover:bg-gray-800/30 transition-colors">
                    <div class="p-2 {{ daysRemaining <= 7 ? 'bg-yellow-100 dark:bg-yellow-900/30' : 'bg-primary/20' }} rounded-lg">
                        <span class="material-symbols-outlined {{ daysRemaining <= 7 ? 'text-yellow-600' : 'text-primary' }}">flag</span>
                    </div>
                    <div class="flex-1 min-w-0">
                        <a href="{{ path('app_jalon_show', {id: jalon.id}) }}" class="text-navy dark:text-white font-medium hover:text-primary transition-colors">
                            {{ jalon.titre }}
                        </a>
                        <p class="text-gray-400 text-xs">
                            {% if daysRemaining == 0 %}
                                üìÖ Aujourd'hui
                            {% elseif daysRemaining <= 7 %}
                                ‚è∞ Dans {{ daysRemaining }} jour{{ daysRemaining > 1 ? 's' : '' }}
                            {% else %}
                                Dans {{ daysRemaining }} jours
                            {% endif %}
                        </p>
                    </div>
                    <div class="text-right">
                        <p class="text-navy dark:text-white font-bold text-sm">{{ jalon.dateEcheance|date('d M') }}</p>
                        <p class="text-gray-400 text-xs">{{ jalon.projet.titre }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    {% endif %}

    {# ========== Public Holidays Widget (Nager.Date API) ========== #}
    {% if upcomingHolidays|length > 0 %}
    <div class="mt-8 bg-white dark:bg-gray-900 rounded-xl border border-gray-200 dark:border-gray-800 shadow-sm overflow-hidden">
        <div class="p-6 border-b border-gray-100 dark:border-gray-800 flex justify-between items-center">
            <h3 class="text-navy dark:text-white font-bold text-lg flex items-center gap-2">
                <span class="material-symbols-outlined text-primary">celebration</span>
                Jours F√©ri√©s √† Venir
                <span class="text-xs font-normal text-gray-400 ml-2">(API: Nager.Date)</span>
            </h3>
            <span class="px-2 py-1 rounded-full bg-green-100 text-green-700 text-xs font-bold flex items-center gap-1">
                <span class="material-symbols-outlined text-sm">cloud_sync</span>
                API Live
            </span>
        </div>
        
        <div class="divide-y divide-gray-100 dark:divide-gray-800">
            {% for holiday in upcomingHolidays %}
                {% set daysUntil = date().diff(holiday.date).days %}
                <div class="p-4 flex items-center gap-4 hover:bg-gray-50 dark:hover:bg-gray-800/30 transition-colors">
                    <div class="p-3 bg-gradient-to-br from-primary/20 to-primary/10 rounded-xl">
                        <span class="material-symbols-outlined text-primary text-2xl">event</span>
                    </div>
                    <div class="flex-1 min-w-0">
                        <p class="text-navy dark:text-white font-medium">{{ holiday.name }}</p>
                        <p class="text-gray-400 text-xs">
                            {% if daysUntil == 0 %}
                                üéâ Aujourd'hui !
                            {% elseif daysUntil == 1 %}
                                ‚è∞ Demain
                            {% elseif daysUntil <= 7 %}
                                Dans {{ daysUntil }} jours
                            {% else %}
                                Dans {{ daysUntil }} jours
                            {% endif %}
                        </p>
                    </div>
                    <div class="text-right">
                        <p class="text-navy dark:text-white font-bold text-sm">{{ holiday.date|date('d M Y') }}</p>
                        <p class="text-gray-400 text-xs">{{ holiday.date|date('l') }}</p>
                    </div>
                    {% if daysUntil <= 14 %}
                        <div class="w-2 h-2 rounded-full {{ daysUntil <= 3 ? 'bg-red-500 animate-pulse' : 'bg-yellow-500' }}"></div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
        
        <div class="p-3 bg-gray-50 dark:bg-gray-800/30 text-center">
            <p class="text-gray-400 text-xs">
                Donn√©es fournies par <a href="https://date.nager.at" target="_blank" class="text-primary hover:underline">Nager.Date API</a> 
                ‚Ä¢ Pays: <span class="font-medium text-navy dark:text-white">Tunisie</span>
            </p>
        </div>
    </div>
    {% endif %}
{% endblock %}
