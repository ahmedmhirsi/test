{% extends 'base.html.twig' %}

{% block title %}Formations{% endblock %}

{% block body %}
    <div class="flex justify-between items-end mb-8">
        <div>
            <h1 class="text-2xl font-bold text-slate-900 tracking-tight">Catalogue de Formation</h1>
            <p class="text-slate-500 mt-1">Développez les compétences de votre équipe.</p>
        </div>
        <a href="{{ path('app_formation_new') }}" class="bg-blue-600 hover:bg-blue-700 text-white px-5 py-2.5 rounded-lg text-sm font-semibold shadow-lg shadow-blue-200 flex items-center gap-2 transition-all">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path></svg>
            Ajouter une Formation
        </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for formation in formations %}
            <div class="bg-white rounded-xl shadow-sm border border-slate-100 overflow-hidden hover:shadow-md transition-shadow group">
                <div class="h-32 bg-gradient-to-r from-teal-500 to-emerald-600 relative overflow-hidden">
                     <div class="absolute top-0 right-0 w-32 h-32 bg-white/10 rounded-full -mr-16 -mt-16 blur-2xl"></div>
                     <div class="p-6">
                        <span class="bg-white/20 text-white text-[10px] font-bold px-2 py-1 rounded backdrop-blur-sm uppercase">
                            {{ formation.typeFormation }}
                        </span>
                     </div>
                </div>
                <div class="p-6">
                    <h3 class="font-bold text-lg text-slate-900 mb-2 truncate" title="{{ formation.titre }}">{{ formation.titre }}</h3>
                    <p class="text-sm text-slate-500 mb-4 h-10 overflow-hidden text-ellipsis line-clamp-2">{{ formation.description }}</p>
                    
                    <div class="flex items-center gap-4 text-xs text-slate-500 font-medium mb-6">
                        <div class="flex items-center gap-1.5">
                            <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                            {{ formation.dureeHeures }}h
                        </div>
                        <div class="flex items-center gap-1.5">
                            <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                            {{ formation.dateDebut ? formation.dateDebut|date('d M') : 'Autonome' }}
                        </div>
                         <div class="flex items-center gap-1.5">
                            <span class="w-2 h-2 rounded-full 
                                {% if formation.niveauDifficulte == 'Beginner' %}bg-green-500
                                {% elseif formation.niveauDifficulte == 'Intermediate' %}bg-yellow-500
                                {% else %}bg-red-500{% endif %}">
                            </span>
                            {{ formation.niveauDifficulte }}
                        </div>
                    </div>

                    <div class="flex gap-2">
                        <a href="{{ path('app_formation_show', {'id': formation.id}) }}" class="flex-1 bg-slate-50 hover:bg-slate-100 text-slate-700 text-sm font-semibold py-2 rounded-lg text-center transition-colors">
                            Détails
                        </a>
                         <a href="{{ path('app_formation_edit', {'id': formation.id}) }}" class="px-3 py-2 bg-white border border-slate-200 hover:bg-slate-50 text-slate-500 rounded-lg transition-colors">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path></svg>
                        </a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-span-full py-16 text-center bg-white rounded-xl border border-dashed border-slate-200">
                <svg class="w-16 h-16 text-slate-200 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path></svg>
                <h3 class="text-lg font-medium text-slate-900 mb-1">Aucune formation disponible</h3>
                <p class="text-slate-500 mb-6">Commencez par créer votre premier module.</p>
                <a href="{{ path('app_formation_new') }}" class="inline-flex items-center gap-2 text-blue-600 font-semibold hover:underline">
                    Créer une Formation
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
                </a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
