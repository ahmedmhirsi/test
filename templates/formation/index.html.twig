{% extends 'back_office/base.html.twig' %}

{% block title %}Catalogue Formations - Nexus AI{% endblock %}

{% block header_title %}
    <span class="flex items-center gap-2">
        <span class="material-symbols-outlined text-nexus-primary animate-pulse-slow">school</span>
        Formation Command
    </span>
{% endblock %}

{% block content %}
<div class="swup-transition-fade pb-20">

    {# ─── Header ─── #}
    <div class="flex flex-col md:flex-row justify-between items-end mb-8 gap-4">
        <div>
             <h1 class="text-4xl font-black text-white tracking-tight leading-tight animate-slide-up">
                Catalogue <span class="text-transparent bg-clip-text bg-gradient-to-r from-nexus-primary to-orange-400">Compétences</span>
            </h1>
            <p class="text-gray-400 text-sm mt-2 animate-slide-up" style="animation-delay: 0.1s">
                Développement des équipes et certification.
            </p>
        </div>
        
        <div class="flex gap-3 animate-slide-up" style="animation-delay: 0.2s">
             <a href="{{ path('app_formation_export_pdf') }}" class="glass-panel px-4 py-2 flex items-center gap-2 rounded-full hover:bg-white/10 transition-colors group">
                <span class="material-symbols-outlined text-red-400 group-hover:scale-110 transition-transform">picture_as_pdf</span>
                <span class="text-xs font-bold text-gray-300 uppercase tracking-wider">Catalogue PDF</span>
            </a>
            <a href="{{ path('app_formation_new') }}" class="btn-nexus-primary rounded-full px-6 py-2 flex items-center gap-2 shadow-lg shadow-nexus-primary/30 group">
                <span class="material-symbols-outlined text-lg group-hover:rotate-12 transition-transform">add_circle</span>
                <span>Nouvelle Formation</span>
            </a>
        </div>
    </div>

    {# ─── Filters ─── #}
    <div class="glass-panel p-2 flex flex-col md:flex-row items-center gap-2 mb-8 animate-slide-up" style="animation-delay: 0.3s">
        <div class="flex-1 flex items-center gap-2 px-3">
             <span class="material-symbols-outlined text-gray-500">search</span>
             <input type="text" placeholder="Rechercher une formation..." class="bg-transparent border-none text-white w-full text-sm focus:ring-0 placeholder-gray-600">
        </div>
        <div class="h-8 w-px bg-white/10 hidden md:block"></div>
        <div class="flex gap-2 p-1 overflow-x-auto max-w-full">
            <a href="{{ path('app_formation_index', {sort: 'titre', order: 'ASC'}) }}" class="px-3 py-1.5 rounded-lg text-xs font-bold text-gray-400 hover:text-white hover:bg-white/5 transition-colors whitespace-nowrap">Par Titre</a>
            <a href="{{ path('app_formation_index', {sort: 'dureeHeures', order: 'DESC'}) }}" class="px-3 py-1.5 rounded-lg text-xs font-bold text-gray-400 hover:text-white hover:bg-white/5 transition-colors whitespace-nowrap">Par Durée</a>
            <a href="{{ path('app_formation_index', {sort: 'niveauDifficulte', order: 'ASC'}) }}" class="px-3 py-1.5 rounded-lg text-xs font-bold text-gray-400 hover:text-white hover:bg-white/5 transition-colors whitespace-nowrap bg-white/5">Par Niveau</a>
        </div>
    </div>

    {# ─── Formations Grid ─── #}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 animate-slide-up" style="animation-delay: 0.4s">
        {% for formation in formations %}
            <div class="glass-panel p-0 group hover:-translate-y-2 transition-transform duration-300 relative overflow-hidden flex flex-col">
                
                {# Card Image/Gradient Area #}
                <div class="h-32 bg-gradient-to-br from-gray-800 to-black relative overflow-hidden border-b border-white/5">
                     <div class="absolute top-0 right-0 w-32 h-32 bg-nexus-primary/20 rounded-full blur-2xl -translate-y-1/2 translate-x-1/2"></div>
                     
                     <div class="absolute top-4 left-4">
                        <span class="px-2 py-1 rounded text-[10px] font-bold uppercase tracking-wider bg-black/50 backdrop-blur border border-white/10 text-white">
                            {{ formation.typeFormation }}
                        </span>
                     </div>

                     <div class="absolute bottom-4 left-4 right-4 flex justify-between items-end">
                         <div class="flex items-center gap-1.5 text-xs font-bold text-white shadow-black drop-shadow-md">
                            <span class="material-symbols-outlined text-[16px] text-nexus-primary">timer</span>
                            {{ formation.dureeHeures }} Heures
                         </div>
                     </div>
                </div>

                <div class="p-6 flex-1 flex flex-col">
                    <h3 class="text-xl font-bold text-white mb-2 line-clamp-1 group-hover:text-nexus-primary transition-colors" title="{{ formation.titre }}">{{ formation.titre }}</h3>
                    <p class="text-sm text-gray-400 flex-1 line-clamp-2 mb-4">{{ formation.description }}</p>

                    <div class="flex items-center justify-between mb-6">
                        <div class="flex items-center gap-2">
                             <div class="flex items-center gap-1">
                                <span class="size-2 rounded-full 
                                    {% if formation.niveauDifficulte == 'Beginner' %}bg-green-500
                                    {% elseif formation.niveauDifficulte == 'Intermediate' %}bg-amber-500
                                    {% else %}bg-red-500{% endif %}">
                                </span>
                                <span class="text-xs text-gray-300 font-medium">{{ formation.niveauDifficulte }}</span>
                            </div>
                        </div>
                        <span class="text-xs text-gray-500">{{ formation.dateDebut ? formation.dateDebut|date('d M Y') : 'Accès immédiat' }}</span>
                    </div>

                    <div class="flex gap-2 mt-auto">
                        <a href="{{ path('app_formation_show', {'id': formation.id}) }}" class="flex-1 py-2.5 rounded-lg bg-white/5 hover:bg-nexus-primary hover:text-white text-gray-300 text-xs font-bold text-center transition-all">
                            Voir Module
                        </a>
                        <a href="{{ path('app_formation_edit', {'id': formation.id}) }}" class="size-9 rounded-lg border border-white/10 flex items-center justify-center text-gray-400 hover:text-white hover:bg-white/5 transition-colors">
                            <span class="material-symbols-outlined text-[18px]">edit</span>
                        </a>
                    </div>
                </div>
            </div>
        {% else %}
             <div class="col-span-full py-16 text-center glass-panel border-dashed">
                <div class="size-20 rounded-full bg-white/5 flex items-center justify-center mx-auto mb-4">
                    <span class="material-symbols-outlined text-4xl text-gray-600">school</span>
                </div>
                <h3 class="text-lg font-bold text-white mb-1">Catalogue vide</h3>
                <p class="text-gray-500 text-sm">Aucune formation disponible pour le moment.</p>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
