{% extends 'front/base.html.twig' %}

{% block title %}{{ campaign.name }}{% endblock %}

{% block body %}
<div class="page-shell fade-in">
    <!-- Back Link -->
    <a href="{{ path('app_front_campaigns') }}" class="inline-flex items-center gap-2 text-gray-500 hover:text-gold text-sm font-semibold transition-colors">
        <span class="material-symbols-outlined text-[18px]">arrow_back</span>
        Back to Campaigns
    </a>

    <!-- Campaign Header -->
    <div class="section-card p-6 rise-in">
        <div class="flex items-start justify-between">
            <div class="flex items-start gap-5">
                <div class="size-14 rounded-2xl bg-purple-100 dark:bg-purple-900/30 flex items-center justify-center">
                    <span class="material-symbols-outlined text-purple-600 text-2xl">campaign</span>
                </div>
                <div>
                    <h1 class="text-2xl font-display font-black text-navy dark:text-white">{{ campaign.name }}</h1>
                    <p class="text-gray-500 mt-1">{{ campaign.objective ?? 'No objective defined' }}</p>
                </div>
            </div>
            <span class="px-3 py-1.5 text-xs font-black uppercase tracking-widest rounded-full 
                {% if campaign.status == 'active' %}bg-green-100 text-green-700
                {% elseif campaign.status == 'paused' %}bg-amber-100 text-amber-700
                {% elseif campaign.status == 'planned' %}bg-blue-100 text-blue-700
                {% else %}bg-gray-100 text-gray-600{% endif %}">
                {{ campaign.statusLabel }}
            </span>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <div class="kpi-card rise-in stagger-1">
            <p class="text-[10px] font-black text-gray-400 uppercase tracking-widest">Target</p>
            <p class="text-xl font-black text-navy dark:text-white mt-1">{{ campaign.targetLeads }} leads</p>
        </div>
        <div class="kpi-card rise-in stagger-2">
            <p class="text-[10px] font-black text-gray-400 uppercase tracking-widest">Current Leads</p>
            <p class="text-xl font-black text-gold mt-1">{{ campaign.leads|length }}</p>
        </div>
        <div class="kpi-card rise-in stagger-3">
            <p class="text-[10px] font-black text-gray-400 uppercase tracking-widest">Status</p>
            <p class="text-xl font-black text-purple-600 mt-1">{{ campaign.statusLabel }}</p>
        </div>
        <div class="kpi-card rise-in stagger-4">
            <p class="text-[10px] font-black text-gray-400 uppercase tracking-widest">Channels</p>
            <p class="text-xl font-black text-primary mt-1">{{ campaign.campaignChannels|length }}</p>
        </div>
    </div>

    <!-- Details -->
    <div class="grid md:grid-cols-2 gap-6">
        <!-- Period & Info -->
        <div class="section-card p-6 rise-in">
            <h3 class="section-title flex items-center gap-2 mb-4">
                <span class="material-symbols-outlined text-gold">calendar_month</span>
                Period
            </h3>
            <div class="space-y-4">
                <div>
                    <p class="text-[10px] font-black text-gray-400 uppercase tracking-widest">Start Date</p>
                    <p class="text-navy dark:text-white font-medium mt-1">{{ campaign.startDate|date('M d, Y') }}</p>
                </div>
                <div>
                    <p class="text-[10px] font-black text-gray-400 uppercase tracking-widest">End Date</p>
                    <p class="text-navy dark:text-white font-medium mt-1">{{ campaign.endDate ? campaign.endDate|date('M d, Y') : 'Not defined' }}</p>
                </div>
                <div>
                    <p class="text-[10px] font-black text-gray-400 uppercase tracking-widest">Created At</p>
                    <p class="text-navy dark:text-white font-medium mt-1">{{ campaign.createdAt|date('M d, Y \\a\\t h:i A') }}</p>
                </div>
            </div>
        </div>

        <!-- Description -->
        <div class="section-card p-6 rise-in">
            <h3 class="section-title flex items-center gap-2 mb-4">
                <span class="material-symbols-outlined text-purple-600">description</span>
                Description
            </h3>
            <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
                {{ campaign.objective ?? 'No description for this campaign.' }}
            </p>
        </div>
    </div>
</div>
{% endblock %}
