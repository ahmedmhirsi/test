{% extends 'front/base.html.twig' %}

{% block title %}Campaigns{% endblock %}

{% block body %}
<div class="page-shell fade-in">
    <!-- Header -->
    <div class="page-header">
        <div>
            <h1 class="text-2xl font-display font-black text-navy dark:text-white tracking-tight">Campaigns</h1>
            <p class="subtle text-sm mt-1">{{ campaigns|length }} campaign(s)</p>
        </div>
    </div>

    <!-- Campaigns Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for campaign in campaigns %}
        <a href="{{ path('app_front_campaign_show', {id: campaign.id}) }}" class="section-card p-6 card-hover rise-in stagger-{{ loop.index > 4 ? 4 : loop.index }} group">
            <div class="flex items-start justify-between mb-4">
                <div class="p-3 rounded-xl 
                    {% if campaign.status == 'active' %}bg-green-50 dark:bg-green-900/20
                    {% elseif campaign.status == 'paused' %}bg-amber-50 dark:bg-amber-900/20
                    {% elseif campaign.status == 'planned' %}bg-blue-50 dark:bg-blue-900/20
                    {% else %}bg-gray-100 dark:bg-gray-800{% endif %}">
                    <span class="material-symbols-outlined text-xl
                        {% if campaign.status == 'active' %}text-green-600
                        {% elseif campaign.status == 'paused' %}text-amber-600
                        {% elseif campaign.status == 'planned' %}text-blue-600
                        {% else %}text-gray-500{% endif %}">
                        {% if campaign.status == 'active' %}play_circle
                        {% elseif campaign.status == 'paused' %}pause_circle
                        {% elseif campaign.status == 'planned' %}schedule
                        {% else %}stop_circle{% endif %}
                    </span>
                </div>
                <span class="px-2 py-1 text-[10px] font-black uppercase tracking-widest rounded-full 
                    {% if campaign.status == 'active' %}bg-green-100 text-green-700
                    {% elseif campaign.status == 'paused' %}bg-amber-100 text-amber-700
                    {% elseif campaign.status == 'planned' %}bg-blue-100 text-blue-700
                    {% else %}bg-gray-100 text-gray-600{% endif %}">
                    {{ campaign.statusLabel }}
                </span>
            </div>

            <h3 class="font-display font-bold text-navy dark:text-white group-hover:text-gold transition-colors">{{ campaign.name }}</h3>
            <p class="text-sm text-gray-500 mt-1 line-clamp-1">{{ campaign.objective ?? 'No objective defined' }}</p>

            <div class="mt-4 pt-4 border-t border-gray-100 dark:border-[#2a2e3f]">
                <div class="flex items-center justify-between text-sm">
                    <span class="text-gray-500">Target</span>
                    <span class="font-bold text-navy dark:text-white">{{ campaign.targetLeads }} leads</span>
                </div>
                <div class="flex items-center justify-between text-sm mt-2">
                    <span class="text-gray-500">Period</span>
                    <span class="text-gray-600 dark:text-gray-400">{{ campaign.startDate|date('M d') }}{% if campaign.endDate %} - {{ campaign.endDate|date('M d, Y') }}{% endif %}</span>
                </div>
            </div>
        </a>
        {% else %}
        <div class="col-span-full text-center py-12">
            <span class="material-symbols-outlined text-gray-300 dark:text-gray-600 text-5xl block mb-4">rocket_launch</span>
            <p class="text-gray-500 dark:text-gray-400">No campaigns yet</p>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
