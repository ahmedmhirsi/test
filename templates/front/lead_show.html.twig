{% extends 'front/base.html.twig' %}

{% block title %}{{ lead.contactName }}{% endblock %}

{% block body %}
<div class="page-shell fade-in">
    <!-- Back Link -->
    <a href="{{ path('app_front_leads') }}" class="inline-flex items-center gap-2 text-gray-500 hover:text-gold text-sm font-semibold transition-colors">
        <span class="material-symbols-outlined text-[18px]">arrow_back</span>
        Back to Leads
    </a>

    <!-- Lead Header -->
    <div class="section-card p-6 rise-in">
        <div class="flex items-start gap-5">
            <div class="size-16 rounded-2xl bg-gold/20 flex items-center justify-center">
                <span class="text-2xl font-black text-gold">{{ lead.contactName|slice(0,1)|upper }}</span>
            </div>
            <div class="flex-1">
                <div class="flex items-start justify-between">
                    <div>
                        <h1 class="text-2xl font-display font-black text-navy dark:text-white">{{ lead.contactName }}</h1>
                        <p class="text-gray-500 mt-1">{% if lead.position %}{{ lead.position }} at {% endif %}{{ lead.companyName }}</p>
                    </div>
                    <span class="px-3 py-1.5 text-xs font-black uppercase tracking-widest rounded-full 
                        {% if lead.status == 'new' %}bg-blue-100 text-blue-700
                        {% elseif lead.status == 'contacted' %}bg-amber-100 text-amber-700
                        {% elseif lead.status == 'qualified' %}bg-purple-100 text-purple-700
                        {% elseif lead.status == 'converted' %}bg-green-100 text-green-700
                        {% else %}bg-gray-100 text-gray-700{% endif %}">
                        {{ lead.statusLabel }}
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- Details Grid -->
    <div class="grid md:grid-cols-2 gap-6">
        <!-- Contact Info -->
        <div class="section-card p-6 rise-in stagger-1">
            <h3 class="section-title flex items-center gap-2 mb-4">
                <span class="material-symbols-outlined text-gold">person</span>
                Contact
            </h3>
            <div class="space-y-4">
                <div>
                    <p class="text-[10px] font-black text-gray-400 uppercase tracking-widest">Email</p>
                    <p class="text-navy dark:text-white font-medium mt-1">{{ lead.email }}</p>
                </div>
                <div>
                    <p class="text-[10px] font-black text-gray-400 uppercase tracking-widest">Phone</p>
                    <p class="text-navy dark:text-white font-medium mt-1">{{ lead.phone ?? 'Not provided' }}</p>
                </div>
                {% if lead.position %}
                <div>
                    <p class="text-[10px] font-black text-gray-400 uppercase tracking-widest">Position</p>
                    <p class="text-navy dark:text-white font-medium mt-1">{{ lead.position }}</p>
                </div>
                {% endif %}
            </div>
        </div>

        <!-- Company & Campaign -->
        <div class="section-card p-6 rise-in stagger-2">
            <h3 class="section-title flex items-center gap-2 mb-4">
                <span class="material-symbols-outlined text-purple-600">business</span>
                Information
            </h3>
            <div class="space-y-4">
                <div>
                    <p class="text-[10px] font-black text-gray-400 uppercase tracking-widest">Company</p>
                    <p class="text-navy dark:text-white font-medium mt-1">{{ lead.companyName }}</p>
                </div>
                {% if lead.campaign %}
                <div>
                    <p class="text-[10px] font-black text-gray-400 uppercase tracking-widest">Campaign</p>
                    <p class="text-navy dark:text-white font-medium mt-1">{{ lead.campaign.name }}</p>
                </div>
                {% endif %}
                {% if lead.channel %}
                <div>
                    <p class="text-[10px] font-black text-gray-400 uppercase tracking-widest">Channel</p>
                    <p class="text-navy dark:text-white font-medium mt-1">{{ lead.channel.name }}</p>
                </div>
                {% endif %}
                <div>
                    <p class="text-[10px] font-black text-gray-400 uppercase tracking-widest">Created At</p>
                    <p class="text-navy dark:text-white font-medium mt-1">{{ lead.createdAt|date('M d, Y \\a\\t h:i A') }}</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
