{% extends 'front/base.html.twig' %}

{% block title %}Leads{% endblock %}

{% block body %}
<div class="page-shell fade-in">
    <!-- Header -->
    <div class="page-header">
        <div>
            <h1 class="text-2xl font-display font-black text-navy dark:text-white tracking-tight">Leads</h1>
            <p class="subtle text-sm mt-1">{{ leads|length }} total lead(s)</p>
        </div>
    </div>

    <!-- Leads Table -->
    <div class="table-wrap rise-in">
        <table class="w-full">
            <thead>
                <tr class="bg-gray-50 dark:bg-[#1f2937]">
                    <th class="text-left p-4 text-[10px] font-black text-gray-500 uppercase tracking-widest">Contact</th>
                    <th class="text-left p-4 text-[10px] font-black text-gray-500 uppercase tracking-widest hidden md:table-cell">Company</th>
                    <th class="text-left p-4 text-[10px] font-black text-gray-500 uppercase tracking-widest hidden lg:table-cell">Email</th>
                    <th class="text-left p-4 text-[10px] font-black text-gray-500 uppercase tracking-widest">Status</th>
                    <th class="text-left p-4 text-[10px] font-black text-gray-500 uppercase tracking-widest hidden sm:table-cell">Date</th>
                    <th class="text-right p-4 text-[10px] font-black text-gray-500 uppercase tracking-widest"></th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100 dark:divide-[#2a2e3f]">
                {% for lead in leads %}
                <tr class="hover:bg-gray-50 dark:hover:bg-white/5 transition-colors">
                    <td class="p-4">
                        <div class="flex items-center gap-3">
                            <div class="size-9 rounded-full bg-primary/10 dark:bg-primary/20 flex items-center justify-center">
                                <span class="text-sm font-bold text-primary">{{ lead.contactName|slice(0,1)|upper }}</span>
                            </div>
                            <span class="font-semibold text-navy dark:text-white text-sm">{{ lead.contactName }}</span>
                        </div>
                    </td>
                    <td class="p-4 text-gray-600 dark:text-gray-300 text-sm hidden md:table-cell">{{ lead.companyName }}</td>
                    <td class="p-4 text-gray-500 dark:text-gray-400 text-sm hidden lg:table-cell">{{ lead.email }}</td>
                    <td class="p-4">
                        <span class="px-2 py-1 text-[10px] font-black uppercase tracking-widest rounded-full 
                            {% if lead.status == 'new' %}bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-400
                            {% elseif lead.status == 'contacted' %}bg-amber-100 text-amber-700 dark:bg-amber-900/30 dark:text-amber-400
                            {% elseif lead.status == 'qualified' %}bg-purple-100 text-purple-700 dark:bg-purple-900/30 dark:text-purple-400
                            {% elseif lead.status == 'converted' %}bg-green-100 text-green-700 dark:bg-green-900/30 dark:text-green-400
                            {% else %}bg-gray-100 text-gray-700{% endif %}">
                            {{ lead.statusLabel }}
                        </span>
                    </td>
                    <td class="p-4 text-gray-500 text-sm hidden sm:table-cell">{{ lead.createdAt|date('M d, Y') }}</td>
                    <td class="p-4 text-right">
                        <a href="{{ path('app_front_lead_show', {id: lead.id}) }}" class="inline-flex items-center gap-1 text-gold hover:text-gold/80 font-bold text-xs uppercase tracking-wider">
                            Details
                            <span class="material-symbols-outlined text-[14px]">arrow_forward</span>
                        </a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="6" class="p-12 text-center">
                        <span class="material-symbols-outlined text-gray-300 dark:text-gray-600 text-5xl block mb-4">groups</span>
                        <p class="text-gray-500 dark:text-gray-400">No leads yet</p>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
