{% extends 'front_office/base.html.twig' %}

{% block title %}Mes Réclamations - SmartNexus AI{% endblock %}

{% block sidebar_nav %}
    {% include 'client/_sidebar.html.twig' %}
{% endblock %}

{% block breadcrumb %}
    <span class="text-[#9ca3af] material-symbols-outlined text-[16px]">chevron_right</span>
    <span class="text-primary font-semibold">Réclamations</span>
{% endblock %}

{% block content %}
<div class="space-y-8">
    <!-- Header -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-6">
        <div>
            <h1 class="text-3xl font-black text-[#D3C3B9] dark:text-white flex items-center gap-3">
                <span class="material-symbols-outlined text-primary text-[32px]">support_agent</span>
                Mes Réclamations
            </h1>
            <p class="text-slate-500 dark:text-slate-400 mt-2 font-medium">Nous sommes là pour vous aider. Suivez l'état de vos demandes.</p>
        </div>
        <a href="{{ path('front_reclamation_new') }}" class="w-full md:w-auto flex items-center justify-center gap-2 rounded-2xl h-14 px-8 bg-primary hover:bg-primary/90 text-navy text-sm font-black shadow-xl shadow-primary/20 transition-all transform active:scale-95">
            <span class="material-symbols-outlined text-[24px]">add_comment</span>
            <span>Nouvelle réclamation</span>
        </a>
    </div>

    <!-- Metrics (Optional but adds premium feel) -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <div class="bg-white dark:bg-[#1a1d2d] p-4 rounded-2xl border border-[#e5e7eb] dark:border-[#1f2128] shadow-sm">
            <p class="text-[10px] font-black uppercase text-slate-400 mb-1">Total</p>
            <p class="text-xl font-black dark:text-white">{{ reclamations|length }}</p>
        </div>
        <div class="bg-white dark:bg-[#1a1d2d] p-4 rounded-2xl border border-[#e5e7eb] dark:border-[#1f2128] shadow-sm">
            <p class="text-[10px] font-black uppercase text-amber-500 mb-1">En attente</p>
            {% set pending = 0 %}
            {% for r in reclamations %}{% if r.statut == 'en_cours' %}{% set pending = pending + 1 %}{% endif %}{% endfor %}
            <p class="text-xl font-black dark:text-white">{{ pending }}</p>
        </div>
    </div>

    <!-- Reclamations Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for reclamation in reclamations %}
            <div class="group bg-white dark:bg-[#1a1d2d] rounded-2xl p-6 border border-[#e5e7eb] dark:border-[#1f2128] shadow-sm hover:shadow-2xl hover:border-primary/30 transition-all flex flex-col h-full overflow-hidden relative">
                <!-- Status Background Glow -->
                <div class="absolute -right-4 -top-4 size-24 bg-primary/5 rounded-full blur-2xl group-hover:bg-primary/10 transition-colors"></div>

                <div class="flex items-center justify-between mb-6 relative">
                    <div class="size-12 rounded-xl bg-primary/10 flex items-center justify-center group-hover:bg-primary/20 transition-colors">
                        <span class="material-symbols-outlined text-primary text-[24px]">contact_support</span>
                    </div>
                    {% if reclamation.statut == 'en_cours' %}
                        <span class="px-3 py-1.5 rounded-xl text-[10px] font-black uppercase tracking-widest bg-amber-50 text-amber-600 dark:bg-amber-900/20 dark:text-amber-400 border border-amber-200/50">En cours</span>
                    {% elseif reclamation.statut == 'repondu' %}
                        <span class="px-3 py-1.5 rounded-xl text-[10px] font-black uppercase tracking-widest bg-green-50 text-green-600 dark:bg-green-900/20 dark:text-green-400 border border-green-200/50">Répondu</span>
                    {% else %}
                        <span class="px-3 py-1.5 rounded-xl text-[10px] font-black uppercase tracking-widest bg-slate-50 text-slate-500 dark:bg-slate-900/20 dark:text-slate-400 border border-slate-200/50">Fermée</span>
                    {% endif %}
                </div>

                <div class="space-y-3 mb-8 flex-grow">
                    <h3 class="text-lg font-black text-slate-900 dark:text-white group-hover:text-primary transition-colors line-clamp-2 leading-tight">{{ reclamation.titre }}</h3>
                    <p class="text-sm text-slate-500 dark:text-slate-400 line-clamp-3 leading-relaxed">{{ reclamation.description }}</p>
                </div>
                
                <div class="pt-6 border-t border-[#f0f0f5] dark:border-[#1f2128] flex items-center justify-between mt-auto">
                    <div class="flex items-center gap-2 text-[11px] font-black text-[#A79E9C] dark:text-[#9ca3af] uppercase tracking-tighter">
                        <span class="material-symbols-outlined text-[16px] text-primary">schedule</span>
                        {{ reclamation.dateCreation|date('d M Y') }}
                    </div>
                    <a href="{{ path('front_reclamation_show', {id: reclamation.id}) }}" class="flex items-center gap-1 px-4 py-2 rounded-xl bg-navy dark:bg-primary text-white dark:text-navy text-[10px] font-black uppercase hover:opacity-90 transition-all">
                        Détails
                        <span class="material-symbols-outlined text-[14px]">arrow_forward</span>
                    </a>
                </div>
            </div>
        {% else %}
            <div class="col-span-full py-24 text-center bg-white dark:bg-[#1a1d2d] rounded-3xl border border-dashed border-[#e5e7eb] dark:border-[#1f2128]">
                <div class="size-20 rounded-full bg-slate-50 dark:bg-[#161516] flex items-center justify-center mx-auto mb-6">
                    <span class="material-symbols-outlined text-slate-300 text-[48px]">mark_email_read</span>
                </div>
                <h3 class="text-xl font-black text-slate-900 dark:text-white">Tout est en ordre !</h3>
                <p class="text-slate-500 dark:text-slate-400 mt-2 max-w-sm mx-auto">Vous n'avez aucune réclamation active pour le moment.</p>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
