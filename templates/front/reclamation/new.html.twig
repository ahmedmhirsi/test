{% extends 'front_office/base.html.twig' %}

{% block title %}Nouvelle Réclamation - SmartNexus AI{% endblock %}

{% block sidebar_nav %}
    <a href="{{ path('app_client_dashboard') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-bold text-[#5e658d] dark:text-[#9ca3af] hover:bg-gray-100 dark:hover:bg-[#252836] transition-colors">
        <span class="material-symbols-outlined text-[20px]">dashboard</span>
        <span>Tableau de bord</span>
    </a>
    <a href="{{ path('app_client_explore') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-bold text-[#5e658d] dark:text-[#9ca3af] hover:bg-gray-100 dark:hover:bg-[#252836] transition-colors">
        <span class="material-symbols-outlined text-[20px]">explore</span>
        <span>Explorer</span>
    </a>
    <a href="{{ path('app_client_offers') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-bold text-[#5e658d] dark:text-[#9ca3af] hover:bg-gray-100 dark:hover:bg-[#252836] transition-colors">
        <span class="material-symbols-outlined text-[20px]">work</span>
        <span>Mes Offres</span>
    </a>
    <a href="{{ path('app_client_applications') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-bold text-[#5e658d] dark:text-[#9ca3af] hover:bg-gray-100 dark:hover:bg-[#252836] transition-colors">
        <span class="material-symbols-outlined text-[20px]">group</span>
        <span>Candidatures</span>
    </a>
    <a href="{{ path('front_reclamation_index') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-bold bg-primary/10 text-primary transition-colors">
        <span class="material-symbols-outlined text-[20px]">list_alt</span>
        <span>Réclamations</span>
    </a>
    <a href="{{ path('app_profile') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-bold text-[#5e658d] dark:text-[#9ca3af] hover:bg-gray-100 dark:hover:bg-[#252836] transition-colors">
        <span class="material-symbols-outlined text-[20px]">person</span>
        <span>Mon Profil</span>
    </a>
{% endblock %}

{% block breadcrumb %}
    <span class="text-[#9ca3af] material-symbols-outlined text-[16px]">chevron_right</span>
    <a href="{{ path('front_reclamation_index') }}" class="text-[#9ca3af] hover:text-primary">Réclamations</a>
    <span class="text-[#9ca3af] material-symbols-outlined text-[16px]">chevron_right</span>
    <span class="text-primary font-semibold">Nouvelle</span>
{% endblock %}

{% block content %}
<div class="max-w-3xl">
    <div class="mb-8">
        <h1 class="text-3xl font-black dark:text-white">Soumettre une Réclamation</h1>
        <p class="text-[#5e658d] dark:text-[#9ca3af]">Décrivez-nous votre problème pour une assistance personnalisée</p>
    </div>

    <div class="bg-white dark:bg-[#1a1d2d] rounded-2xl p-8 border border-[#e5e7eb] dark:border-[#2d3142] shadow-sm">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'enctype': 'multipart/form-data'}}) }}
            <div class="space-y-6">
                <div>
                    <label class="block text-sm font-bold text-slate-900 dark:text-white mb-2">Titre de la réclamation</label>
                    {{ form_widget(form.titre, {'attr': {'class': 'w-full h-11 px-4 rounded-xl border border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800 text-sm focus:ring-2 focus:ring-primary/20 focus:border-primary outline-none transition-all'}}) }}
                    <div class="text-red-500 text-[10px] font-bold uppercase mt-1">{{ form_errors(form.titre) }}</div>
                </div>

                <div>
                    <label class="block text-sm font-bold text-slate-900 dark:text-white mb-2">Description détaillée</label>
                    {{ form_widget(form.description, {'attr': {'class': 'w-full px-4 py-3 rounded-xl border border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800 text-sm focus:ring-2 focus:ring-primary/20 focus:border-primary outline-none transition-all min-h-[150px]'}}) }}
                    <div class="text-red-500 text-[10px] font-bold uppercase mt-1">{{ form_errors(form.description) }}</div>
                </div>

                <div>
                    <label class="block text-sm font-bold text-slate-900 dark:text-white mb-2">Email de contact</label>
                    {{ form_widget(form.email, {'attr': {'class': 'w-full h-11 px-4 rounded-xl border border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800 text-sm focus:ring-2 focus:ring-primary/20 focus:border-primary outline-none transition-all'}}) }}
                    <div class="text-red-500 text-[10px] font-bold uppercase mt-1">{{ form_errors(form.email) }}</div>
                </div>

                <div>
                    <label class="block text-sm font-bold text-slate-900 dark:text-white mb-2">Pièce jointe</label>
                    <div class="relative group">
                        {{ form_widget(form.pieceJointe, {'attr': {'class': 'w-full px-4 py-2.5 rounded-xl border border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800 text-sm file:mr-4 file:py-1 file:px-4 file:rounded-full file:border-0 file:text-xs file:font-black file:bg-primary file:text-navy cursor-pointer'}}) }}
                    </div>
                </div>

                <div class="pt-6 border-t border-gray-100 dark:border-gray-800 flex gap-4">
                    <button type="submit" class="flex-1 h-12 bg-primary hover:bg-primary/90 text-navy rounded-xl font-bold text-sm shadow-lg shadow-primary/20 transition-all">
                        Envoyer la réclamation
                    </button>
                    <a href="{{ path('front_reclamation_index') }}" class="h-12 px-8 flex items-center justify-center bg-gray-100 dark:bg-gray-800 text-slate-600 dark:text-slate-400 rounded-xl font-bold text-sm hover:bg-gray-200 transition-all">
                        Annuler
                    </a>
                </div>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
