{% extends 'front_office/base.html.twig' %}

{% block title %}Nouvelle Réclamation - SmartNexus AI{% endblock %}

{% block sidebar_nav %}
    {% include 'client/_sidebar.html.twig' %}
{% endblock %}

{% block breadcrumb %}
    <span class="text-[#9ca3af] material-symbols-outlined text-[16px]">chevron_right</span>
    <a href="{{ path('front_reclamation_index') }}" class="text-[#9ca3af] hover:text-primary transition-colors">Réclamations</a>
    <span class="text-[#9ca3af] material-symbols-outlined text-[16px]">chevron_right</span>
    <span class="text-primary font-semibold">Nouvelle Réclamation</span>
{% endblock %}

{% block content %}
<div class="space-y-8">
    <!-- Header -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
        <div>
            <h1 class="text-3xl font-black text-[#D3C3B9] dark:text-white flex items-center gap-3">
                <span class="material-symbols-outlined text-primary text-[32px]">add_task</span>
                Soumettre une Réclamation
            </h1>
            <p class="text-slate-500 dark:text-slate-400 mt-2 font-medium">Décrivez-nous votre problème pour une assistance personnalisée et rapide.</p>
        </div>
    </div>

    <!-- Form Container -->
    <div class="max-w-4xl mx-auto">
        <div class="bg-white dark:bg-[#1a1d2d] rounded-2xl border border-[#e5e7eb] dark:border-[#1f2128] shadow-sm overflow-hidden">
            <div class="p-8 border-b border-[#e5e7eb] dark:border-[#1f2128] bg-gray-50/50 dark:bg-[#161516]/30">
                <h3 class="text-lg font-black text-slate-900 dark:text-white flex items-center gap-2">
                    <span class="material-symbols-outlined text-primary">edit_note</span>
                    Détails de la réclamation
                </h3>
            </div>

            <div class="p-8">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'enctype': 'multipart/form-data', 'class': 'space-y-6'}}) }}
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="md:col-span-2">
                            <label class="block text-xs font-black text-slate-500 dark:text-slate-400 uppercase tracking-widest mb-2 px-1">Titre de la réclamation</label>
                            {{ form_widget(form.titre, {'attr': {
                                'class': 'w-full h-12 px-4 rounded-xl border border-[#e5e7eb] dark:border-[#1f2128] bg-gray-50 dark:bg-[#161516] text-sm font-medium focus:ring-2 focus:ring-primary/20 focus:border-primary outline-none transition-all placeholder:text-slate-400',
                                'placeholder': 'Ex: Problème d\'accès au module de facturation'
                            }}) }}
                            {{ form_errors(form.titre, {'attr': {'class': 'text-red-500 text-[10px] font-black uppercase mt-2 ml-1'}}) }}
                        </div>

                        <div class="md:col-span-2">
                            <label class="block text-xs font-black text-slate-500 dark:text-slate-400 uppercase tracking-widest mb-2 px-1">Description détaillée</label>
                            {{ form_widget(form.description, {'attr': {
                                'class': 'w-full px-4 py-3 rounded-xl border border-[#e5e7eb] dark:border-[#1f2128] bg-gray-50 dark:bg-[#161516] text-sm font-medium focus:ring-2 focus:ring-primary/20 focus:border-primary outline-none transition-all min-h-[160px] placeholder:text-slate-400',
                                'placeholder': 'Veuillez fournir le plus de détails possible...'
                            }}) }}
                            {{ form_errors(form.description, {'attr': {'class': 'text-red-500 text-[10px] font-black uppercase mt-2 ml-1'}}) }}
                        </div>

                        <div>
                            <label class="block text-xs font-black text-slate-500 dark:text-slate-400 uppercase tracking-widest mb-2 px-1">Email de contact</label>
                            {{ form_widget(form.email, {'attr': {
                                'class': 'w-full h-12 px-4 rounded-xl border border-[#e5e7eb] dark:border-[#1f2128] bg-gray-50 dark:bg-[#161516] text-sm font-medium focus:ring-2 focus:ring-primary/20 focus:border-primary outline-none transition-all placeholder:text-slate-400',
                                'placeholder': 'votre.email@exemple.com'
                            }}) }}
                            {{ form_errors(form.email, {'attr': {'class': 'text-red-500 text-[10px] font-black uppercase mt-2 ml-1'}}) }}
                        </div>

                        <div>
                            <label class="block text-xs font-black text-slate-500 dark:text-slate-400 uppercase tracking-widest mb-2 px-1">Pièce jointe (Optionnel)</label>
                            <div class="relative">
                                {{ form_widget(form.pieceJointe, {'attr': {
                                    'class': 'w-full px-4 py-2 rounded-xl border border-[#e5e7eb] dark:border-[#1f2128] bg-gray-50 dark:bg-[#161516] text-sm font-medium file:mr-4 file:py-1.5 file:px-4 file:rounded-lg file:border-0 file:text-[10px] file:font-black file:bg-primary file:text-navy cursor-pointer'
                                }}) }}
                            </div>
                        </div>
                    </div>

                    <div class="pt-8 mt-8 border-t border-[#e5e7eb] dark:border-[#1f2128] flex flex-col sm:flex-row items-center gap-4">
                        <button type="submit" class="w-full sm:flex-1 h-12 bg-primary hover:bg-primary/90 text-navy rounded-xl font-black text-sm shadow-xl shadow-primary/20 transition-all flex items-center justify-center gap-2">
                            <span class="material-symbols-outlined text-[20px]">send</span>
                            Envoyer la réclamation
                        </button>
                        <a href="{{ path('front_reclamation_index') }}" class="w-full sm:w-auto px-8 h-12 flex items-center justify-center bg-slate-100 dark:bg-[#161516] text-slate-600 dark:text-slate-300 rounded-xl font-black text-sm hover:bg-slate-200 dark:hover:bg-[#1f2128] transition-all">
                            Annuler
                        </a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>

        <!-- Help Card -->
        <div class="mt-8 p-6 bg-navy rounded-2xl border border-transparent flex items-center gap-6 group hover:border-primary/30 transition-all">
            <div class="size-14 rounded-xl bg-primary/10 flex items-center justify-center group-hover:scale-110 transition-transform">
                <span class="material-symbols-outlined text-primary text-[28px]">support_agent</span>
            </div>
            <div>
                <h4 class="text-white font-black">Besoin d'une aide urgente ?</h4>
                <p class="text-white/60 text-sm">Nos conseillers sont disponibles du lundi au vendredi de 9h à 18h.</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
