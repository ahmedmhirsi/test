{% extends 'front_office/base.html.twig' %}

{% block title %}Réclamation : {{ reclamation.titre }} - SmartNexus AI{% endblock %}

{% block sidebar_nav %}
    {% include 'client/_sidebar.html.twig' %}
{% endblock %}

{% block breadcrumb %}
    <span class="text-[#9ca3af] material-symbols-outlined text-[16px]">chevron_right</span>
    <a href="{{ path('front_reclamation_index') }}" class="text-[#9ca3af] hover:text-primary transition-colors">Réclamations</a>
    <span class="text-[#9ca3af] material-symbols-outlined text-[16px]">chevron_right</span>
    <span class="text-primary font-semibold">Détails de la Réclamation</span>
{% endblock %}

{% block content %}
<div class="space-y-8">
    <!-- Header -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
        <div class="flex items-center gap-4">
            <a href="{{ path('front_reclamation_index') }}" class="size-10 flex items-center justify-center bg-white dark:bg-[#1a1d2d] border border-[#e5e7eb] dark:border-[#1f2128] rounded-xl text-[#A79E9C] hover:text-primary transition-all">
                <span class="material-symbols-outlined">arrow_back</span>
            </a>
            <div>
                <h1 class="text-3xl font-black text-[#D3C3B9] dark:text-white flex items-center gap-3">
                    {{ reclamation.titre }}
                </h1>
                <p class="text-slate-500 dark:text-slate-400 mt-1 font-medium flex items-center gap-2">
                    <span class="material-symbols-outlined text-xs">calendar_today</span>
                    Soumise le {{ reclamation.dateCreation|date('d F Y à H:i') }}
                </p>
            </div>
        </div>
        <div class="flex gap-2">
            <a href="{{ path('front_reclamation_edit', {id: reclamation.id}) }}" class="flex items-center gap-2 px-6 py-2.5 bg-white dark:bg-[#1a1d2d] border border-[#e5e7eb] dark:border-[#1f2128] rounded-xl text-sm font-black text-slate-700 dark:text-slate-200 hover:border-primary/50 transition-all shadow-sm">
                <span class="material-symbols-outlined text-[20px]">edit</span>
                Modifier
            </a>
            <form method="post" action="{{ path('front_reclamation_delete', {id: reclamation.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette réclamation ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reclamation.id) }}">
                <button class="flex items-center gap-2 px-6 py-2.5 bg-red-50 text-red-600 rounded-xl text-sm font-black hover:bg-red-100 transition-all shadow-sm">
                    <span class="material-symbols-outlined text-[20px]">delete</span>
                    Supprimer
                </button>
            </form>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Main Conversation Area -->
        <div class="lg:col-span-2 space-y-8">
            <!-- Initial Reclamation Card -->
            <div class="bg-white dark:bg-[#1a1d2d] rounded-2xl border border-[#e5e7eb] dark:border-[#1f2128] shadow-sm overflow-hidden">
                <div class="p-6 border-b border-[#e5e7eb] dark:border-[#1f2128] bg-gray-50/50 dark:bg-[#161516]/30 flex items-center justify-between font-black text-xs uppercase tracking-widest text-slate-500">
                    <span>Message Initial</span>
                    <span class="material-symbols-outlined text-primary">priority_high</span>
                </div>
                <div class="p-8">
                    <p class="text-slate-900 dark:text-white leading-relaxed whitespace-pre-wrap font-medium">{{ reclamation.description }}</p>
                    
                    {% if reclamation.pieceJointe %}
                        <div class="mt-8 flex items-center gap-4 p-4 rounded-2xl bg-slate-50 dark:bg-[#161516] border border-[#e5e7eb] dark:border-[#1f2128] group hover:border-primary/30 transition-all">
                            <div class="size-12 rounded-xl bg-primary/10 flex items-center justify-center">
                                <span class="material-symbols-outlined text-primary">attach_file</span>
                            </div>
                            <div class="flex-1 min-w-0">
                                <p class="text-xs font-black text-slate-900 dark:text-white truncate">Pièce jointe</p>
                                <a href="{{ asset('uploads/reclamations/' ~ reclamation.pieceJointe) }}" target="_blank" class="inline-flex items-center gap-1 text-[10px] text-primary hover:underline font-black uppercase tracking-tighter mt-1">
                                    Télécharger le document
                                    <span class="material-symbols-outlined text-[14px]">download</span>
                                </a>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>

            <!-- Responses Timeline -->
            <div class="space-y-6">
                <div class="flex items-center gap-4 px-2">
                    <div class="h-px flex-1 bg-gradient-to-r from-transparent to-[#e5e7eb] dark:to-[#1f2128]"></div>
                    <h2 class="text-xs font-black text-slate-400 uppercase tracking-[0.2em]">Historique des échanges</h2>
                    <div class="h-px flex-1 bg-gradient-to-l from-transparent to-[#e5e7eb] dark:to-[#1f2128]"></div>
                </div>

                {% if reclamation.reponses|length > 0 %}
                    <div class="space-y-6">
                        {% for reponse in reclamation.reponses %}
                            <div class="flex gap-4 {{ reponse.auteurType == 'client' ? 'flex-row-reverse' : '' }} group animate-fadeIn">
                                <div class="size-10 rounded-xl flex items-center justify-center shrink-0 shadow-lg group-hover:scale-110 transition-transform
                                    {{ reponse.auteurType == 'client' ? 'bg-primary text-navy' : 'bg-navy text-white' }}">
                                    <span class="material-symbols-outlined text-[20px]">{{ reponse.auteurType == 'client' ? 'person' : 'support_agent' }}</span>
                                </div>
                                <div class="max-w-[85%] {{ reponse.auteurType == 'client' ? 'items-end' : 'items-start' }} flex flex-col">
                                    <div class="mb-2 flex items-center gap-3 {{ reponse.auteurType == 'client' ? 'flex-row-reverse' : '' }}">
                                        <span class="text-xs font-black text-slate-900 dark:text-white">{{ reponse.auteur }}</span>
                                        <span class="text-[10px] text-slate-400 font-bold bg-slate-100 dark:bg-slate-800 px-2 py-0.5 rounded-full">{{ reponse.dateReponse|date('H:i, d M') }}</span>
                                    </div>
                                    <div class="p-5 rounded-2xl shadow-sm text-sm font-medium leading-relaxed border
                                        {{ reponse.auteurType == 'client' 
                                            ? 'bg-primary/5 border-primary/20 text-slate-900 dark:text-white rounded-tr-none' 
                                            : 'bg-white dark:bg-[#1a1d2d] border-[#e5e7eb] dark:border-[#1f2128] text-slate-900 dark:text-white rounded-tl-none' 
                                        }}">
                                        {{ reponse.message }}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="py-10 text-center flex flex-col items-center justify-center bg-gray-50/50 dark:bg-[#161516]/30 rounded-3xl border border-dashed border-[#e5e7eb] dark:border-[#1f2128]">
                        <span class="material-symbols-outlined text-slate-300 text-[48px] mb-3">chat_bubble_outline</span>
                        <p class="text-slate-400 font-bold italic">En attente d'une première réponse de notre équipe.</p>
                    </div>
                {% endif %}
            </div>

            <!-- Add Response Form -->
            <div class="bg-white dark:bg-[#1a1d2d] rounded-2xl border border-[#e5e7eb] dark:border-[#1f2128] shadow-lg overflow-hidden focus-within:ring-2 focus-within:ring-primary/20 transition-all">
                <div class="px-6 py-4 border-b border-[#e5e7eb] dark:border-[#1f2128] bg-gray-50 dark:bg-[#161516] flex items-center gap-2">
                    <span class="material-symbols-outlined text-primary text-[20px]">reply</span>
                    <h3 class="text-xs font-black dark:text-white uppercase tracking-widest">Ajouter une réponse</h3>
                </div>
                <div class="p-6">
                    {{ form_start(reponse_form, {'attr': {'novalidate': 'novalidate'}}) }}
                        {{ form_widget(reponse_form.message, {'attr': {
                            'class': 'w-full px-4 py-3 rounded-xl border border-[#e5e7eb] dark:border-[#1f2128] bg-gray-50 dark:bg-[#161516] text-sm font-medium focus:ring-2 focus:ring-primary/20 focus:border-primary outline-none mb-6 min-h-[120px] placeholder:text-slate-400',
                            'placeholder': 'Écrivez votre message ici...'
                        }}) }}
                        <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
                            <div class="flex-1 w-full">
                                <label class="block text-[10px] font-black text-slate-400 uppercase tracking-widest mb-2 px-1">Pièce jointe (si nécessaire)</label>
                                {{ form_widget(reponse_form.pieceJointe, {'attr': {
                                    'class': 'w-full text-xs font-medium file:mr-4 file:py-1 file:px-3 file:rounded-lg file:border-0 file:text-[10px] file:font-black file:bg-slate-100 file:text-slate-600 cursor-pointer'
                                }}) }}
                            </div>
                            <button class="w-full sm:w-auto h-11 px-8 bg-primary hover:bg-primary/90 text-navy rounded-xl font-black text-sm shadow-xl shadow-primary/20 transition-all flex items-center justify-center gap-2">
                                <span class="material-symbols-outlined text-[18px]">send</span>
                                Répondre
                            </button>
                        </div>
                    {{ form_end(reponse_form) }}
                </div>
            </div>
        </div>

        <!-- Meta Sidebar -->
        <div class="space-y-6">
            <div class="bg-white dark:bg-[#1a1d2d] rounded-2xl border border-[#e5e7eb] dark:border-[#1f2128] shadow-sm overflow-hidden sticky top-8">
                <div class="p-6 border-b border-[#e5e7eb] dark:border-[#1f2128] flex items-center gap-3">
                    <span class="material-symbols-outlined text-primary">analytics</span>
                    <h3 class="text-sm font-black dark:text-white uppercase tracking-widest">Informations</h3>
                </div>
                <div class="p-6 space-y-6">
                    <div>
                        <p class="text-[10px] font-black uppercase text-slate-400 mb-2 tracking-widest">État actuel</p>
                        {% if reclamation.statut == 'en_cours' %}
                            <div class="flex items-center gap-2 px-3 py-2 bg-amber-50 dark:bg-amber-900/20 text-amber-600 dark:text-amber-400 rounded-xl border border-amber-200/50 dark:border-amber-800/30">
                                <span class="size-2 bg-amber-500 rounded-full animate-pulse"></span>
                                <span class="text-xs font-black uppercase">En cours d'examen</span>
                            </div>
                        {% elseif reclamation.statut == 'repondu' %}
                            <div class="flex items-center gap-2 px-3 py-2 bg-green-50 dark:bg-green-900/20 text-green-600 dark:text-green-400 rounded-xl border border-green-200/50 dark:border-green-800/30">
                                <span class="size-2 bg-green-500 rounded-full"></span>
                                <span class="text-xs font-black uppercase">Réponse apportée</span>
                            </div>
                        {% else %}
                            <div class="flex items-center gap-2 px-3 py-2 bg-slate-50 dark:bg-slate-900/40 text-slate-500 dark:text-slate-400 rounded-xl border border-slate-200/50 dark:border-slate-800/30">
                                <span class="size-2 bg-slate-400 rounded-full"></span>
                                <span class="text-xs font-black uppercase">Dossier Classé</span>
                            </div>
                        {% endif %}
                    </div>
                    
                    <div class="grid grid-cols-1 gap-4">
                        <div class="p-4 bg-gray-50 dark:bg-[#161516] rounded-xl border border-[#e5e7eb] dark:border-[#1f2128]">
                            <p class="text-[10px] font-black uppercase text-slate-400 mb-1">Contact</p>
                            <p class="text-xs font-black text-slate-900 dark:text-white break-all">{{ reclamation.email }}</p>
                        </div>
                        <div class="p-4 bg-gray-50 dark:bg-[#161516] rounded-xl border border-[#e5e7eb] dark:border-[#1f2128]">
                            <p class="text-[10px] font-black uppercase text-slate-400 mb-1">Dernière activité</p>
                            <p class="text-xs font-black text-slate-900 dark:text-white">Aujourd'hui, 14:30</p>
                        </div>
                    </div>

                    <div class="pt-6 border-t border-[#e5e7eb] dark:border-[#1f2128]">
                        <h4 class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-4 italic text-center">Besoin d'aide supplémentaire ?</h4>
                        <button class="w-full py-3 px-4 bg-navy dark:bg-white text-white dark:text-navy rounded-xl text-[11px] font-black uppercase hover:opacity-90 transition-all flex items-center justify-center gap-2">
                            <span class="material-symbols-outlined text-[18px]">contact_support</span>
                            Contacter le support
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }
    .animate-fadeIn {
        animation: fadeIn 0.4s ease-out forwards;
    }
</style>
{% endblock %}
