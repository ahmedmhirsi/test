{% extends 'base.html.twig' %}

{% block title %}Choisissez votre r√¥le{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl w-full space-y-8">
        <!-- En-t√™te -->
        <div class="text-center">
            <img src="{{ googleData.picture }}" alt="{{ googleData.given_name }}" class="mx-auto h-20 w-20 rounded-full shadow-lg border-4 border-white">
            <h2 class="mt-6 text-3xl font-extrabold text-gray-900">
                Bienvenue {{ googleData.given_name }} !
            </h2>
            <p class="mt-2 text-sm text-gray-600">
                Choisissez votre r√¥le pour continuer sur SmartNexus
            </p>
            <p class="mt-1 text-xs text-gray-500">
                <span class="font-medium">Email:</span> {{ googleData.email }}
            </p>
        </div>

        <!-- Formulaire de s√©lection de r√¥le -->
        <form method="POST" action="{{ path('google_choose_role') }}">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-10">
                
                <!-- Carte EMPLOYEE -->
                <label for="role_employee" class="cursor-pointer">
                    <input type="radio" id="role_employee" name="role" value="ROLE_EMPLOYEE" class="hidden peer" required>
                    <div class="peer-checked:ring-4 peer-checked:ring-blue-500 peer-checked:border-blue-500 border-2 border-gray-200 rounded-xl p-6 hover:shadow-xl transition-all duration-300 bg-white hover:scale-105">
                        <div class="flex items-center space-x-4">
                            <div class="flex-shrink-0">
                                <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center">
                                    <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                    </svg>
                                </div>
                            </div>
                            <div class="flex-1">
                                <h3 class="text-xl font-bold text-gray-900">Employ√©</h3>
                                <p class="text-sm text-gray-500 mt-1">Acc√®s aux outils internes et gestion des t√¢ches</p>
                            </div>
                            <div class="peer-checked:block hidden">
                                <svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                </svg>
                            </div>
                        </div>
                    </div>
                </label>

                <!-- Carte CLIENT -->
                <label for="role_client" class="cursor-pointer">
                    <input type="radio" id="role_client" name="role" value="ROLE_CLIENT" class="hidden peer" required>
                    <div class="peer-checked:ring-4 peer-checked:ring-green-500 peer-checked:border-green-500 border-2 border-gray-200 rounded-xl p-6 hover:shadow-xl transition-all duration-300 bg-white hover:scale-105">
                        <div class="flex items-center space-x-4">
                            <div class="flex-shrink-0">
                                <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center">
                                    <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                                    </svg>
                                </div>
                            </div>
                            <div class="flex-1">
                                <h3 class="text-xl font-bold text-gray-900">Client</h3>
                                <p class="text-sm text-gray-500 mt-1">Acc√®s aux services et suivi des projets</p>
                            </div>
                            <div class="peer-checked:block hidden">
                                <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                </svg>
                            </div>
                        </div>
                    </div>
                </label>


                <!-- Carte VISITEUR -->
                <label for="role_visiteur" class="cursor-pointer">
                    <input type="radio" id="role_visiteur" name="role" value="ROLE_VISITEUR" class="hidden peer" required>
                    <div class="peer-checked:ring-4 peer-checked:ring-yellow-500 peer-checked:border-yellow-500 border-2 border-gray-200 rounded-xl p-6 hover:shadow-xl transition-all duration-300 bg-white hover:scale-105">
                        <div class="flex items-center space-x-4">
                            <div class="flex-shrink-0">
                                <div class="w-16 h-16 bg-yellow-100 rounded-full flex items-center justify-center">
                                    <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                    </svg>
                                </div>
                            </div>
