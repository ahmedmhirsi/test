{% extends 'base.html.twig' %}

{% block title %}Tableau de Bord{% endblock %}

{% block body %}
    <!-- Header Section -->
    <div class="flex flex-col lg:flex-row justify-between items-start lg:items-end gap-6 mb-10">
        <div>
            <h1 class="text-3xl font-display font-bold text-slate-900 tracking-tight mb-2">Vue d'ensemble</h1>
            <p class="text-slate-500 font-medium">Bienvenue, voici ce qui se passe aujourd'hui.</p>
        </div>
        <div class="flex flex-wrap gap-3 w-full lg:w-auto">
             <a href="{{ path('app_offre_emploi_index') }}" class="flex-1 lg:flex-none justify-center bg-white border border-slate-200 text-slate-700 font-semibold px-5 py-2.5 rounded-xl hover:bg-slate-50 hover:border-slate-300 flex items-center gap-2 transition-all shadow-sm">
                <svg class="w-5 h-5 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path></svg>
                Consulter les offres
            </a>
            <a href="{{ path('app_candidature_new') }}" class="flex-1 lg:flex-none justify-center bg-blue-600 hover:bg-blue-700 text-white font-semibold px-5 py-2.5 rounded-xl shadow-lg shadow-blue-500/20 flex items-center gap-2 transition-all transform hover:-translate-y-0.5">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
                Ajouter une candidature
            </a>
        </div>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-12 gap-6 mb-10">
        <!-- AI Card (Span 4) -->
        <div class="md:col-span-5 xl:col-span-4 bg-gradient-to-br from-indigo-600 to-violet-700 rounded-2xl p-6 text-white shadow-xl shadow-indigo-200 relative overflow-hidden group">
            <div class="absolute top-0 right-0 w-40 h-40 bg-white/10 rounded-full -mr-16 -mt-16 blur-3xl group-hover:bg-white/20 transition-all duration-700"></div>
            <div class="absolute bottom-0 left-0 w-32 h-32 bg-indigo-500/30 rounded-full -ml-10 -mb-10 blur-2xl"></div>
            
            <div class="relative z-10 h-full flex flex-col justify-between">
                <div class="flex justify-between items-start mb-6">
                    <div class="w-12 h-12 bg-white/10 backdrop-blur-md rounded-xl flex items-center justify-center border border-white/10">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
                    </div>
                    <div class="bg-amber-400/90 backdrop-blur-sm text-amber-900 text-[10px] font-bold px-3 py-1.5 rounded-full uppercase tracking-wide shadow-sm">IA ACTIVE</div>
                </div>
                
                <div>
                    <div class="text-indigo-100 text-sm font-medium mb-1">Recommandations</div>
                    <div class="text-4xl font-display font-bold mb-3">3 Profils Top</div>
                    <p class="text-indigo-100 text-sm leading-relaxed opacity-90">Basé sur l'analyse sémantique de <span class="font-bold text-white">{{ total_applications }} candidatures</span> récentes.</p>
                </div>
            </div>
        </div>
        
        <!-- Metrics (Span 8) -->
        <div class="md:col-span-7 xl:col-span-8 grid grid-cols-1 sm:grid-cols-2 gap-6">
            <!-- Skill Gap -->
            <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100 hover:border-slate-200 transition-colors">
                <div class="flex items-center gap-4 mb-6">
                    <div class="w-10 h-10 bg-purple-50 rounded-xl flex items-center justify-center text-purple-600">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path></svg>
                    </div>
                    <div>
                        <div class="font-bold text-lg text-slate-900">Compétences</div>
                        <div class="text-xs text-slate-400 font-medium uppercase">Analyse Globale</div>
                    </div>
                </div>
                
                <div class="space-y-4">
                    <div>
                        <div class="flex justify-between text-sm mb-2">
                            <span class="text-slate-600 font-medium">Figma & Design</span>
                            <span class="text-slate-900 font-bold">92%</span>
                        </div>
                        <div class="h-2 bg-slate-100 rounded-full overflow-hidden">
                            <div class="h-full bg-purple-500 rounded-full w-[92%] shadow-sm"></div>
                        </div>
                    </div>
                    <div>
                        <div class="flex justify-between text-sm mb-2">
                             <span class="text-slate-600 font-medium">Leadership</span>
                             <span class="text-slate-900 font-bold">65%</span>
                        </div>
                        <div class="h-2 bg-slate-100 rounded-full overflow-hidden">
                            <div class="h-full bg-amber-400 rounded-full w-[65%] shadow-sm"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Time to Hire -->
             <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100 hover:border-slate-200 transition-colors">
                <div class="flex items-center gap-4 mb-6">
                     <div class="w-10 h-10 bg-emerald-50 rounded-xl flex items-center justify-center text-emerald-600">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                    </div>
                    <div>
                        <div class="font-bold text-lg text-slate-900">Temps Recrutement</div>
                        <div class="text-xs text-slate-400 font-medium uppercase">Moyenne</div>
                    </div>
                </div>
                
                <div>
                    <div class="text-5xl font-display font-bold text-slate-900 mb-3 tracking-tight">12 <span class="text-lg font-medium text-slate-400 font-sans">jours</span></div>
                    <div class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg bg-emerald-50 text-emerald-700 text-sm font-semibold border border-emerald-100">
                         <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path></svg>
                        -15% vs mois dernier
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Pipeline Section -->
    <div class="space-y-6">
        <div class="flex justify-between items-center">
            <h2 class="text-xl font-display font-bold text-slate-900">Pipeline des Candidatures</h2>
             <a href="{{ path('app_candidature_index') }}" class="text-blue-600 font-semibold text-sm hover:text-blue-800 hover:underline flex items-center gap-1">
                Tout voir
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
             </a>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 h-full">
            <!-- Column: NOUVEAUX -->
            <div class="bg-slate-50 rounded-2xl p-4 border border-slate-200/60 flex flex-col h-full">
                <div class="flex items-center justify-between mb-4 px-1">
                    <div class="text-xs font-bold text-slate-500 uppercase tracking-wider flex items-center gap-2">
                        <span class="w-2 h-2 bg-slate-400 rounded-full"></span>
                        Reçus
                    </div>
                    <span class="bg-white border border-slate-200 text-slate-600 px-2 py-0.5 rounded-md text-xs font-bold shadow-sm">{{ applications_applied|length }}</span>
                </div>
                
                <div class="space-y-3 flex-1">
                    {% for app in applications_applied %}
                    <div class="bg-white p-4 rounded-xl shadow-sm border border-slate-200 hover:shadow-md hover:border-blue-200 transition-all group cursor-pointer">
                        <div class="flex items-start gap-3 mb-3">
                            <div class="w-10 h-10 rounded-full bg-gradient-to-br from-slate-100 to-slate-200 text-slate-600 flex items-center justify-center font-bold text-sm shrink-0 border border-slate-100">
                                {{ app.nomCandidat|first|upper }}
                            </div>
                            <div class="min-w-0">
                                <h3 class="font-bold text-slate-900 text-sm truncate">{{ app.nomCandidat }}</h3>
                                <p class="text-xs text-slate-500 truncate">{{ app.offreEmploi.poste }}</p>
                            </div>
                        </div>
                        <div class="flex justify-between items-center pt-3 border-t border-slate-50 mt-2">
                            <span class="text-[11px] font-medium text-slate-400">{{ app.dateDepot|date('d M') }}</span>
                             <a href="{{ path('app_candidature_show', {'id': app.id}) }}" class="text-xs font-semibold text-blue-600 hover:text-blue-800 transition-colors">Détails</a>
                        </div>
                    </div>
                    {% else %}
                        <div class="flex flex-col items-center justify-center py-10 text-slate-400 border-2 border-dashed border-slate-200 rounded-xl h-40">
                            <svg class="w-8 h-8 mb-2 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path></svg>
                            <span class="text-sm font-medium">Vide</span>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <!-- Column: ANALYSÉS -->
            <div class="bg-blue-50/50 rounded-2xl p-4 border border-blue-100 flex flex-col h-full">
                <div class="flex items-center justify-between mb-4 px-1">
                     <div class="flex items-center gap-2">
                        <span class="w-2 h-2 bg-blue-500 rounded-full"></span>
                        <div class="text-xs font-bold text-blue-800 uppercase tracking-wider">Analysés IA</div>
                    </div>
                    <span class="bg-white border border-blue-100 text-blue-600 px-2 py-0.5 rounded-md text-xs font-bold shadow-sm">3</span>
                </div>

                <!-- Featured Mockup Card -->
                <div class="bg-gradient-to-br from-white to-blue-50 p-4 rounded-xl border border-blue-200 shadow-sm relative overflow-hidden group hover:shadow-md transition-shadow">
                     <div class="flex items-start gap-3 mb-3 relative z-10">
                        <div class="w-10 h-10 rounded-full bg-orange-100 text-orange-600 flex items-center justify-center font-bold text-sm border-2 border-white shadow-sm shrink-0">
                            SJ
                        </div>
                        <div class="flex-1 min-w-0">
                            <div class="flex justify-between items-start">
                                <div>
                                    <h3 class="font-bold text-slate-900 text-sm">Sarah Jenkins</h3>
                                    <div class="bg-amber-400 text-amber-950 text-[9px] font-bold px-1.5 py-0.5 rounded inline-block mt-1">TOP PROFIL</div>
                                </div>
                                <div class="text-right">
                                    <div class="text-lg font-bold text-emerald-600 leading-none">98%</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="bg-white/80 p-2.5 rounded-lg border border-blue-100 mb-3 text-xs leading-relaxed text-slate-600">
                        <span class="font-bold text-blue-600">IA Insight:</span> Forte expertise Figma détectée. Correspondance parfaite avec le poste Senior UX.
                    </div>

                    <button class="w-full bg-white hover:bg-slate-50 text-slate-700 border border-slate-200 text-xs font-bold py-2 rounded-lg shadow-sm transition-all hover:border-slate-300">Voir le profil</button>
                </div>
            </div>

            <!-- Column: ENTRETIEN -->
            <div class="bg-slate-50 rounded-2xl p-4 border border-slate-200/60 flex flex-col h-full">
                 <div class="flex items-center justify-between mb-4 px-1">
                    <div class="text-xs font-bold text-slate-500 uppercase tracking-wider flex items-center gap-2">
                        <span class="w-2 h-2 bg-emerald-500 rounded-full"></span>
                        Entretiens
                    </div>
                    <span class="bg-white border border-slate-200 text-slate-600 px-2 py-0.5 rounded-md text-xs font-bold shadow-sm">{{ applications_interviewing|length }}</span>
                </div>

                <div class="space-y-3 flex-1">
                     {% for app in applications_interviewing %}
                    <div class="bg-white p-4 rounded-xl shadow-sm border-l-4 border-l-emerald-500 border border-slate-200">
                        <div class="flex items-start gap-3">
                            <div class="w-10 h-10 rounded-full bg-slate-100 text-slate-600 flex items-center justify-center font-bold text-sm shrink-0">
                                {{ app.nomCandidat|first|upper }}
                            </div>
                            <div class="min-w-0">
                                <h3 class="font-bold text-slate-900 text-sm truncate">{{ app.nomCandidat }}</h3>
                                <p class="text-xs text-slate-500">Tech Review</p>
                            </div>
                        </div>
                        <div class="mt-3 bg-emerald-50 text-emerald-700 px-3 py-2 rounded-lg text-xs font-medium flex items-center gap-2">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                            Tomorrow, 10:00 AM
                        </div>
                    </div>
                    {% else %}
                          <div class="flex flex-col items-center justify-center py-10 text-slate-400 border-2 border-dashed border-slate-200 rounded-xl h-40 opacity-75">
                            <span class="text-sm font-medium">Aucun entretien</span>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
