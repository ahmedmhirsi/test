{% extends 'base.html.twig' %}

{% block title %}SmartNexus AI – Enterprise Management Hub{% endblock %}

{% block body %}
<div class="min-h-screen bg-[#10202A] text-[#D3C3B9]/80 selection:bg-nexus-primary selection:text-black overflow-x-hidden"
     data-controller="scroll-animation">

    {# ─── Sophisticated Background ─── #}
    <div class="fixed inset-0 z-0 pointer-events-none">
        <div class="absolute inset-0 bg-[#10202A]"></div>
        <div class="absolute top-0 inset-x-0 h-[800px] bg-gradient-to-b from-nexus-primary/10 via-transparent to-transparent"></div>
        {# Subtle Noise #}
        <div class="absolute inset-0 opacity-[0.05] bg-[url('https://grainy-gradients.vercel.app/noise.svg')]"></div>
    </div>

    {# ─── Navigation (Clean Enterprise) ─── #}
    <nav class="fixed top-0 inset-x-0 z-50 backdrop-blur-xl border-b border-white/5 bg-[#161516]/60">
        <div class="max-w-7xl mx-auto px-6 h-16 flex items-center justify-between">
            <div class="flex items-center gap-3">
                <img src="{{ asset('images/logo.png') }}" alt="SmartNexus Logo" class="h-10 w-auto transition-transform hover:scale-105">
                <span class="font-display font-black text-xl tracking-tight text-white uppercase tracking-widest">SmartNexus</span>
            </div>
            
            <div class="hidden md:flex items-center gap-8 text-sm font-semibold text-nexus-stone">
                <a href="#features" class="hover:text-white transition-colors">Platform</a>
                <a href="#solutions" class="hover:text-white transition-colors">Solutions</a>
                <a href="#enterprise" class="hover:text-white transition-colors">Enterprise</a>
            </div>

            <div class="flex items-center gap-4">
                <a href="{{ path('app_login') }}" class="text-sm font-bold text-[#A79E9C] hover:text-white">Sign In</a>
                <a href="{{ path('app_register') }}" class="bg-nexus-primary text-black px-6 py-2.5 rounded-xl text-xs font-black uppercase tracking-widest hover:bg-nexus-primary/90 transition-all shadow-xl shadow-nexus-primary/20">
                    Get Started
                </a>
            </div>
        </div>
    </nav>

    {# ─── Hero Section (High-Contrast) ─── #}
    <section class="relative pt-40 pb-24 z-10">
        <div class="max-w-7xl mx-auto px-6 text-center lg:text-left flex flex-col lg:flex-row items-center gap-16">
            
            <div class="lg:w-1/2 space-y-8 animate-card">
                <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-nexus-primary/10 border border-nexus-primary/20 text-nexus-primary text-[10px] font-black uppercase tracking-[0.2em]">
                    Enterprise Management Hub
                </div>

                <h1 class="text-6xl md:text-7xl font-extrabold text-white leading-[1.1] tracking-tight">
                    Scale your team <br>
                    <span class="text-[#A79E9C]">with precision.</span>
                </h1>

                <p class="text-xl text-[#A79E9C] max-w-xl leading-relaxed">
                    The modern standard for project management and talent orchestration. High-fidelity analytics, predictive matching, and seamless collaboration.
                </p>

                <div class="flex flex-col sm:flex-row gap-4">
                    <a href="{{ path('app_register') }}" class="btn-nexus-primary px-10 py-4 rounded-xl text-sm font-black uppercase tracking-widest shadow-2xl shadow-nexus-primary/20">
                        Start for Free
                    </a>
                    <a href="#features" class="bg-white/5 hover:bg-white/10 border border-white/10 px-10 py-4 rounded-xl text-sm font-black uppercase tracking-widest text-white transition-all flex items-center justify-center gap-2">
                        <span class="material-symbols-outlined text-[20px]">keyboard_arrow_down</span>
                        Learn More
                    </a>
                </div>

                <div class="flex items-center justify-center lg:justify-start gap-12 pt-8 border-t border-white/5 opacity-50">
                    <img src="https://www.svgrepo.com/show/443372/stripe.svg" class="h-6 grayscale brightness-200" alt="Partner">
                    <img src="https://www.svgrepo.com/show/342151/revolut.svg" class="h-5 grayscale brightness-200" alt="Partner">
                    <img src="https://www.svgrepo.com/show/354005/linear.svg" class="h-5 grayscale brightness-200" alt="Partner">
                </div>
            </div>

            <div class="lg:w-1/2 relative">
                <div class="relative bg-[#161516]/80 p-3 rounded-[32px] border border-white/5 shadow-2xl animate-card">
                    <img src="https://images.unsplash.com/photo-1551288049-bbda38a5f0ea?auto=format&fit=crop&w=1200&q=80" alt="App Preview" class="rounded-[24px] opacity-90 brightness-75 border border-white/5">
                    <div class="absolute -bottom-10 -right-10 bg-[#161516] p-8 rounded-3xl border border-white/5 shadow-2xl backdrop-blur-3xl animate-float">
                        <div class="flex items-center gap-5">
                            <div class="size-14 rounded-2xl bg-nexus-primary/10 flex items-center justify-center text-nexus-primary border border-nexus-primary/20">
                                <span class="material-symbols-outlined text-[28px]">analytics</span>
                            </div>
                            <div>
                                <p class="text-[10px] text-nexus-stone font-black uppercase tracking-[0.2em] mb-1">Efficiency</p>
                                <p class="text-3xl font-black text-white">+142%</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# ─── Feature Bento Grid (Enterprise) ─── #}
    <section id="features" class="py-24 z-10 relative">
        <div class="max-w-7xl mx-auto px-6">
            <div class="text-center mb-16">
                <h2 class="text-4xl font-bold text-white mb-4">Powerful foundations.</h2>
                <p class="text-slate-400">Everything you need to manage complex organizations.</p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                {# Talent Card #}
                <div class="nexus-card p-10 bg-[#161516]/50 hover:bg-[#161516] transition-colors border-white/5">
                    <div class="size-14 rounded-2xl bg-[#B58863]/10 flex items-center justify-center mb-8 text-[#B58863] border border-[#B58863]/10">
                        <span class="material-symbols-outlined text-3xl">group</span>
                    </div>
                    <h3 class="text-2xl font-bold text-[#D3C3B9] mb-4">Talent Hub</h3>
                    <p class="text-[#A79E9C] leading-relaxed">Centralized member directory with skill mapping and performance tracking.</p>
                </div>

                {# Project Card #}
                <div class="nexus-card p-12 bg-[#161516]/40 hover:bg-[#161516]/60 transition-all border border-white/5">
                    <div class="size-14 rounded-2xl bg-cyan-500/10 flex items-center justify-center mb-8 text-cyan-400 border border-cyan-500/10">
                        <span class="material-symbols-outlined text-3xl">grid_view</span>
                    </div>
                    <h3 class="text-2xl font-bold text-white mb-4">Project Engine</h3>
                    <p class="text-slate-400 leading-relaxed">Sprint planning, Kanban boards, and milestone tracking without the noise.</p>
                </div>

                {# Insight Card #}
                <div class="nexus-card p-12 bg-[#161516]/40 hover:bg-[#161516]/60 transition-all border border-white/5">
                    <div class="size-14 rounded-2xl bg-emerald-500/10 flex items-center justify-center mb-8 text-emerald-400 border border-emerald-500/10">
                        <span class="material-symbols-outlined text-3xl">insights</span>
                    </div>
                    <h3 class="text-2xl font-bold text-white mb-4">Deep Insights</h3>
                    <p class="text-slate-400 leading-relaxed">Predictive analytics to catch bottlenecks before they impact your delivery date.</p>
                </div>
            </div>
        </div>
    </section>

    {# ─── Final CTA ─── #}
    <section class="py-32 relative">
        <div class="max-w-4xl mx-auto px-6 text-center relative z-10">
            <h2 class="text-5xl md:text-6xl font-black text-white mb-6 tracking-tight">
                Ready for the next level?
            </h2>
            <p class="text-xl text-slate-400 mb-10 max-w-2xl mx-auto">
                Join 500+ teams who scale their operations with SmartNexus AI.
            </p>
            <div class="flex flex-wrap justify-center gap-4">
                <a href="{{ path('app_register') }}" class="btn-nexus-primary px-10 py-5 text-xl rounded-2xl scale-100 hover:scale-105 transition-transform">
                    Start Now
                </a>
                <a href="#" class="bg-slate-800 border border-slate-700 text-white px-10 py-5 text-xl rounded-2xl hover:bg-slate-700 transition-all font-bold">
                    Talk to Sales
                </a>
            </div>
        </div>
    </section>

    <footer class="border-t border-white/5 py-12 text-center opacity-40">
        <p class="text-sm">© 2026 SmartNexus AI. Enterprise Solutions Division.</p>
    </footer>

</div>

{# Chatbot #}
{{ include('components/chatbot_widget.html.twig') }}

{% endblock %}
