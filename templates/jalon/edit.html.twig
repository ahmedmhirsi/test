{% extends 'back_office/base.html.twig' %}

{% block title %}Update Milestone – SmartNexus AI{% endblock %}

{% block header_title %}
    <span class="flex items-center gap-2">
        <span class="material-symbols-outlined text-nexus-primary">edit_location_alt</span>
        Objective Realignment
    </span>
{% endblock %}

{% block content %}
<div class="swup-transition-fade pb-20">
    <div class="max-w-3xl mx-auto">
        
        {# ─── Header ─── #}
        <div class="mb-8 flex items-end justify-between px-4 animate-card">
            <div>
                 <nav class="flex items-center gap-2 text-[11px] font-bold uppercase tracking-wider text-slate-500 mb-2">
                    <a href="{{ path('app_jalon_index') }}" class="hover:text-nexus-primary transition-colors">Milestones</a>
                    <span class="material-symbols-outlined text-[16px]">chevron_right</span>
                    <a href="{{ path('app_jalon_show', {id: jalon.id}) }}" class="hover:text-nexus-primary transition-colors">{{ jalon.titre }}</a>
                </nav>
                <h1 class="text-3xl font-extrabold text-white tracking-tight">Modify <span class="text-slate-400">Milestone</span></h1>
            </div>
            
            <a href="{{ path('app_jalon_show', {id: jalon.id}) }}" class="flex items-center gap-2 text-[11px] font-bold uppercase tracking-wider text-slate-500 hover:text-white transition-colors">
                <span class="material-symbols-outlined text-[20px]">arrow_back</span>
                Back to Details
            </a>
        </div>

        {# ─── Form Container ─── #}
        <div class="glass-panel p-10 animate-card bg-slate-900/40 relative overflow-hidden group" style="animation-delay: 0.1s">
            <div class="relative z-10">
                {{ include('jalon/_form.html.twig', {'button_label': 'Save Changes'}) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
