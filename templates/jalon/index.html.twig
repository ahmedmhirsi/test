{% extends is_granted('ROLE_ADMIN') ? 'back_office/base.html.twig' : 'layout/employe.html.twig' %}
{% import '_components.html.twig' as ui %}

{% block title %}Jalons - Nexus AI{% endblock %}

{% block header_title %}
    <span class="flex items-center gap-2">
        <span class="material-symbols-outlined text-nexus-accent animate-pulse-slow">flag</span>
        Jalons & Milestones
    </span>
{% endblock %}

{% block content %}
<div class="swup-transition-fade pb-20">

    {# ─── Header ─── #}
    <div class="flex flex-col md:flex-row justify-between items-end mb-8 gap-4">
        <div>
            <h1 class="text-3xl md:text-4xl font-black text-white tracking-tight mb-2">Feuille de Route</h1>
            <p class="text-gray-400 text-sm">Points de contrôle stratégiques et objectifs clés.</p>
        </div>
        
        <div class="flex gap-3">
             <a href="{{ path('app_jalon_export_pdf') }}" class="size-10 rounded-full glass-panel flex items-center justify-center text-red-400 hover:bg-red-500/10 hover:border-red-500/30 transition-all group" title="Export PDF">
                <span class="material-symbols-outlined text-[20px] group-hover:scale-110 transition-transform">picture_as_pdf</span>
            </a>
            {% if can_create_jalon %}
            <a href="{{ path('app_jalon_new') }}" class="btn-nexus-primary rounded-full px-5 py-2.5 flex items-center gap-2 shadow-lg shadow-nexus-primary/30 group">
                <span class="material-symbols-outlined text-[18px] group-hover:rotate-12 transition-transform">add_flag</span>
                <span class="font-bold text-sm">Nouveau Jalon</span>
            </a>
            {% endif %}
        </div>
    </div>

    {# ─── Controls ─── #}
    <div class="glass-panel p-2 mb-8 flex flex-wrap items-center gap-4 rounded-2xl">
        <form method="get" action="{{ path('app_jalon_index') }}" class="flex-1 flex items-center px-4">
            <span class="material-symbols-outlined text-gray-500 mr-3">search</span>
            <input type="text" name="q" value="{{ searchTerm }}" placeholder="Rechercher milestone..." class="bg-transparent border-none text-white w-full text-sm focus:ring-0">
            <input type="hidden" name="sort" value="{{ currentSort }}">
            <input type="hidden" name="order" value="{{ currentOrder }}">
        </form>

        <div class="h-8 w-px bg-white/10 hidden md:block"></div>

        <div class="flex gap-2 px-2">
             <a href="{{ path('app_jalon_index', {q: searchTerm, sort: 'dateEcheance', order: 'ASC'}) }}" class="px-3 py-1.5 rounded-lg text-xs font-bold transition-colors {{ currentSort == 'dateEcheance' ? 'bg-nexus-primary text-white' : 'text-gray-400 hover:text-white hover:bg-white/5' }}">Date</a>
             <a href="{{ path('app_jalon_index', {q: searchTerm, sort: 'priorite', order: 'DESC'}) }}" class="px-3 py-1.5 rounded-lg text-xs font-bold transition-colors {{ currentSort == 'priorite' ? 'bg-nexus-primary text-white' : 'text-gray-400 hover:text-white hover:bg-white/5' }}">Priorité</a>
             <a href="{{ path('app_jalon_index', {q: searchTerm, sort: 'statut', order: 'ASC'}) }}" class="px-3 py-1.5 rounded-lg text-xs font-bold transition-colors {{ currentSort == 'statut' ? 'bg-nexus-primary text-white' : 'text-gray-400 hover:text-white hover:bg-white/5' }}">Statut</a>
        </div>
    </div>

    {# ─── Milestones Grid ─── #}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for jalon in jalons %}
            {% set isAtteint = jalon.statut == 'atteint' %}
            {% set isOverdue = jalon.isOverdue() %}
            {% set daysRemaining = jalon.getDaysRemaining() %}
            
            <div class="glass-panel p-6 antigravity-shadow group relative overflow-visible hover:-translate-y-2 transition-transform duration-500
                 {{ isOverdue and not isAtteint ? 'border-red-500/30' : '' }}">
                
                {# Status Glow #}
                <div class="absolute inset-0 rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-700 pointer-events-none
                    {% if isAtteint %}bg-gradient-to-br from-green-500/10 to-transparent
                    {% elseif isOverdue %}bg-gradient-to-br from-red-500/10 to-transparent
                    {% else %}bg-gradient-to-br from-nexus-primary/10 to-transparent{% endif %}">
                </div>

                {# Header #}
                <div class="flex justify-between items-start mb-6 relative z-10">
                    <div class="size-12 rounded-xl flex items-center justify-center border border-white/10 shadow-inner
                        {% if isAtteint %}bg-green-500/10 text-green-400
                        {% elseif isOverdue %}bg-red-500/10 text-red-400 animate-pulse-slow
                        {% else %}bg-nexus-accent/10 text-nexus-accent{% endif %}">
                        <span class="material-symbols-outlined text-2xl">
                             {% if isAtteint %}check_circle{% elseif isOverdue %}warning{% else %}flag{% endif %}
                        </span>
                    </div>
                    
                    <span class="px-2.5 py-1 rounded-full text-[10px] font-black uppercase tracking-wider border border-white/5
                        {% if isAtteint %}bg-green-500/10 text-green-400 border-green-500/20
                        {% elseif isOverdue %}bg-red-500/10 text-red-400 border-red-500/20
                        {% else %}bg-gray-500/10 text-gray-400{% endif %}">
                        {{ jalon.statut }}
                    </span>
                </div>

                {# Content #}
                <div class="relative z-10 mb-6">
                    <h3 class="text-xl font-bold text-white mb-2 leading-tight group-hover:text-nexus-primary transition-colors">
                        {{ jalon.titre }}
                    </h3>
                    {% if jalon.description %}
                        <p class="text-sm text-gray-400 line-clamp-2">{{ jalon.description }}</p>
                    {% endif %}
                </div>

                {# Timeline Info #}
                <div class="space-y-3 relative z-10 p-4 rounded-xl bg-white/5 border border-white/5 mb-6">
                    <div class="flex justify-between text-xs">
                        <span class="text-gray-500 font-bold uppercase">Échéance</span>
                        <span class="font-mono text-white {{ isOverdue and not isAtteint ? 'text-red-400' : '' }}">
                            {{ jalon.dateEcheance|date('d M Y') }}
                        </span>
                    </div>
                    
                    {% if not isAtteint %}
                         <div class="w-full h-1 bg-gray-700 rounded-full overflow-hidden">
                            {% set progress = max(0, min(100, 100 - (daysRemaining * 5))) %}
                            <div class="h-full {{ isOverdue ? 'bg-red-500' : 'bg-nexus-accent' }}" style="width: {{ progress }}%"></div>
                        </div>
                        <div class="text-[10px] text-right font-bold {{ isOverdue ? 'text-red-400' : 'text-nexus-accent' }}">
                            {% if isOverdue %}
                                {{ daysRemaining|abs }} jours de retard
                            {% else %}
                                {{ daysRemaining }} jours restants
                            {% endif %}
                        </div>
                    {% endif %}
                </div>

                {# Footer #}
                <div class="flex items-center justify-between relative z-10">
                     <div class="text-xs">
                        <span class="block text-gray-500 font-bold uppercase tracking-wider mb-0.5">Priorité</span>
                        <span class="font-bold text-white capitalize">{{ jalon.priorite }}</span>
                    </div>

                    <div class="flex gap-2">
                        <a href="{{ path('app_jalon_show', {id: jalon.id}) }}" class="size-8 rounded-lg bg-white/5 flex items-center justify-center text-gray-400 hover:bg-nexus-primary hover:text-white transition-all">
                            <span class="material-symbols-outlined text-[16px]">visibility</span>
                        </a>
                        {% if can_edit_jalon %}
                        <a href="{{ path('app_jalon_edit', {id: jalon.id}) }}" class="size-8 rounded-lg bg-white/5 flex items-center justify-center text-gray-400 hover:bg-nexus-accent hover:text-white transition-all">
                            <span class="material-symbols-outlined text-[16px]">edit</span>
                        </a>
                        {% endif %}
                    </div>
                </div>

            </div>
        {% else %}
             <div class="col-span-full flex flex-col items-center justify-center p-16 glass-panel text-center">
                <div class="size-20 rounded-full bg-white/5 flex items-center justify-center mb-4">
                    <span class="material-symbols-outlined text-4xl text-gray-600">flag</span>
                </div>
                <h3 class="text-xl font-bold text-white mb-2">Aucun Jalon</h3>
                <p class="text-gray-400 max-w-md mx-auto mb-6">Définissez les étapes clés pour structurer votre projet.</p>
                {% if can_create_jalon %}
                <a href="{{ path('app_jalon_new') }}" class="btn-nexus-primary rounded-full px-6 py-3">
                    Créer un Jalon
                </a>
                {% endif %}
            </div>
        {% endfor %}
    </div>

</div>
{% endblock %}
