{% extends user_layout %}

{% block title %}Nouvelle Entrée - Journal de Bord - SmartNexus AI{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto space-y-6">
    {# Header #}
    <div class="flex items-center gap-4">
        <a href="{{ path('app_journal_temps_index') }}" 
           class="p-2 text-gray-500 hover:text-navy dark:hover:text-white rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors">
            <span class="material-symbols-outlined">arrow_back</span>
        </a>
        <div>
            <h1 class="text-2xl font-bold text-navy dark:text-white">Nouvelle Entrée de Temps</h1>
            <p class="text-gray-500">Enregistrez votre temps de travail</p>
        </div>
    </div>

    {# Form Card #}
    <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6">
        {{ form_start(form, {'attr': {'class': 'space-y-6', 'novalidate': 'novalidate'}}) }}
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {# Date #}
            <div>
                {{ form_label(form.date, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-600 dark:text-gray-400 mb-2'}}) }}
                {{ form_widget(form.date, {'attr': {'class': 'w-full px-4 py-3 bg-gray-100 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-lg text-navy dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent'}}) }}
                {{ form_errors(form.date) }}
            </div>

            {# Duration #}
            <div>
                {{ form_label(form.duree, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-600 dark:text-gray-400 mb-2'}}) }}
                {{ form_widget(form.duree, {'attr': {'class': 'w-full px-4 py-3 bg-gray-100 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-lg text-navy dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent'}}) }}
                {{ form_errors(form.duree) }}
                <p class="mt-1 text-xs text-gray-500">Ex: 60 = 1h, 90 = 1h30</p>
            </div>
        </div>

        {# Task Selection #}
        <div>
            {{ form_label(form.tache, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-600 dark:text-gray-400 mb-2'}}) }}
            {{ form_widget(form.tache, {'attr': {'class': 'w-full px-4 py-3 bg-gray-100 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-lg text-navy dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent'}}) }}
            {{ form_errors(form.tache) }}
        </div>

        {# Notes #}
        <div>
            {{ form_label(form.notes, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-600 dark:text-gray-400 mb-2'}}) }}
            {{ form_widget(form.notes, {'attr': {'class': 'w-full px-4 py-3 bg-gray-100 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-lg text-navy dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent', 'rows': 4, 'placeholder': 'Décrivez le travail effectué...'}}) }}
            {{ form_errors(form.notes) }}
        </div>

        {# Quick Duration Buttons #}
        <div>
            <p class="block text-sm font-medium text-gray-600 dark:text-gray-400 mb-2">Durées rapides</p>
            <div class="flex flex-wrap gap-2">
                {% for duration, label in {15: '15min', 30: '30min', 60: '1h', 90: '1h30', 120: '2h', 240: '4h'} %}
                <button type="button" onclick="document.getElementById('journal_temps_duree').value = {{ duration }}"
                        class="px-3 py-1.5 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg text-sm font-medium hover:bg-accent hover:text-navy transition-colors">
                    {{ label }}
                </button>
                {% endfor %}
            </div>
        </div>

        {# Actions #}
        <div class="flex items-center justify-end gap-3 pt-4 border-t border-gray-200 dark:border-gray-700">
            <a href="{{ path('app_journal_temps_index') }}"
               class="px-6 py-3 bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg font-medium hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors">
                Annuler
            </a>
            <button type="submit"
                    class="px-6 py-3 bg-primary hover:bg-primary/90 text-white font-bold rounded-lg transition-all shadow-lg shadow-primary/20">
                <span class="flex items-center gap-2">
                    <span class="material-symbols-outlined">save</span>
                    Enregistrer
                </span>
            </button>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
