{% extends 'layout/employe.html.twig' %}

{% block title %}Kanban Board - SmartNexus AI{% endblock %}

{% block head %}
<style>
    .kanban-column {
        min-height: 500px;
    }
    .task-card {
        cursor: grab;
        transition: all 0.2s ease;
    }
    .task-card:active {
        cursor: grabbing;
    }
    .task-card.dragging {
        opacity: 0.5;
        transform: rotate(3deg);
    }
    .kanban-column.drag-over {
        background: rgba(255, 180, 5, 0.1);
        border-color: #ffb405;
    }
    .priority-critique { border-left: 4px solid #ef4444; }
    .priority-haute { border-left: 4px solid #f97316; }
    .priority-moyenne { border-left: 4px solid #eab308; }
    .priority-basse { border-left: 4px solid #22c55e; }
</style>
{% endblock %}

{% block body %}
<div class="space-y-6">
    {# Header #}
    <div class="flex flex-wrap items-center justify-between gap-4">
        <div>
            <h1 class="text-3xl font-bold text-navy dark:text-white">Kanban Board</h1>
            <p class="text-gray-500 mt-1">Tableau de bord intelligent - Glissez-d√©posez vos t√¢ches</p>
        </div>
        
        {# Sprint Selector #}
        <div class="flex items-center gap-3">
            <label class="text-sm font-medium text-gray-600 dark:text-gray-400">Sprint:</label>
            <select id="sprint-selector" onchange="window.location.href='{{ path('app_kanban_index') }}?sprint=' + this.value"
                    class="px-4 py-2 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg text-navy dark:text-white focus:ring-2 focus:ring-primary">
                {% for s in sprints %}
                    <option value="{{ s.id }}" {{ sprint and sprint.id == s.id ? 'selected' : '' }}>
                        {{ s.nom }} ({{ s.projet.titre }})
                    </option>
                {% endfor %}
            </select>
        </div>
    </div>

    {% if sprint %}
    {# Sprint Info Bar #}
    <div class="bg-white dark:bg-gray-800 rounded-xl p-4 border border-gray-200 dark:border-gray-700 flex flex-wrap items-center justify-between gap-4">
        <div class="flex items-center gap-4">
            <div class="p-3 bg-primary/10 rounded-lg">
                <span class="material-symbols-outlined text-primary text-2xl">history</span>
            </div>
            <div>
                <h2 class="font-bold text-navy dark:text-white">{{ sprint.nom }}</h2>
                <p class="text-sm text-gray-500">
                    {{ sprint.dateDebut|date('d/m/Y') }} - {{ sprint.dateFin|date('d/m/Y') }}
                </p>
            </div>
        </div>
        <div class="flex items-center gap-6 text-sm">
            <div class="text-center">
                <div class="text-2xl font-bold text-navy dark:text-white">{{ tasks.todo|length + tasks.in_progress|length + tasks.review|length + tasks.done|length }}</div>
                <div class="text-gray-500">Total</div>
            </div>
            <div class="text-center">
                <div class="text-2xl font-bold text-green-500">{{ tasks.done|length }}</div>
                <div class="text-gray-500">Termin√©es</div>
            </div>
            <div class="text-center">
                <div class="text-2xl font-bold text-blue-500">{{ tasks.in_progress|length }}</div>
                <div class="text-gray-500">En cours</div>
            </div>
        </div>
    </div>

    {# Kanban Board #}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        {# TODO Column #}
        <div class="kanban-column bg-white dark:bg-gray-800 rounded-xl border-2 border-gray-200 dark:border-gray-700 p-4"
             data-status="todo"
             ondragover="handleDragOver(event)" ondragleave="handleDragLeave(event)" ondrop="handleDrop(event)">
            <div class="flex items-center justify-between mb-4">
                <div class="flex items-center gap-2">
                    <span class="w-3 h-3 bg-gray-400 rounded-full"></span>
                    <h3 class="font-bold text-navy dark:text-white">√Ä Faire</h3>
                </div>
                <span class="bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-400 text-sm font-bold px-2 py-1 rounded">{{ tasks.todo|length }}</span>
            </div>
            <div class="space-y-3" id="column-todo">
                {% for task in tasks.todo %}
                    {{ include('kanban/_task_card.html.twig', {task: task}) }}
                {% endfor %}
            </div>
        </div>

        {# IN PROGRESS Column #}
        <div class="kanban-column bg-white dark:bg-gray-800 rounded-xl border-2 border-blue-200 dark:border-blue-900 p-4"
             data-status="in_progress"
             ondragover="handleDragOver(event)" ondragleave="handleDragLeave(event)" ondrop="handleDrop(event)">
            <div class="flex items-center justify-between mb-4">
                <div class="flex items-center gap-2">
                    <span class="w-3 h-3 bg-blue-500 rounded-full"></span>
                    <h3 class="font-bold text-navy dark:text-white">En Cours</h3>
                </div>
                <span class="bg-blue-100 dark:bg-blue-900 text-blue-600 dark:text-blue-400 text-sm font-bold px-2 py-1 rounded">{{ tasks.in_progress|length }}</span>
            </div>
            <div class="space-y-3" id="column-in_progress">
                {% for task in tasks.in_progress %}
                    {{ include('kanban/_task_card.html.twig', {task: task}) }}
                {% endfor %}
            </div>
        </div>

        {# REVIEW Column #}
        <div class="kanban-column bg-white dark:bg-gray-800 rounded-xl border-2 border-yellow-200 dark:border-yellow-900 p-4"
             data-status="review"
             ondragover="handleDragOver(event)" ondragleave="handleDragLeave(event)" ondrop="handleDrop(event)">
            <div class="flex items-center justify-between mb-4">
                <div class="flex items-center gap-2">
                    <span class="w-3 h-3 bg-yellow-500 rounded-full"></span>
                    <h3 class="font-bold text-navy dark:text-white">En R√©vision</h3>
                </div>
                <span class="bg-yellow-100 dark:bg-yellow-900 text-yellow-600 dark:text-yellow-400 text-sm font-bold px-2 py-1 rounded">{{ tasks.review|length }}</span>
            </div>
            <div class="space-y-3" id="column-review">
                {% for task in tasks.review %}
                    {{ include('kanban/_task_card.html.twig', {task: task}) }}
                {% endfor %}
            </div>
        </div>

        {# DONE Column #}
        <div class="kanban-column bg-white dark:bg-gray-800 rounded-xl border-2 border-green-200 dark:border-green-900 p-4"
             data-status="done"
             ondragover="handleDragOver(event)" ondragleave="handleDragLeave(event)" ondrop="handleDrop(event)">
            <div class="flex items-center justify-between mb-4">
                <div class="flex items-center gap-2">
                    <span class="w-3 h-3 bg-green-500 rounded-full"></span>
                    <h3 class="font-bold text-navy dark:text-white">Termin√©</h3>
                </div>
                <span class="bg-green-100 dark:bg-green-900 text-green-600 dark:text-green-400 text-sm font-bold px-2 py-1 rounded">{{ tasks.done|length }}</span>
            </div>
            <div class="space-y-3" id="column-done">
                {% for task in tasks.done %}
                    {{ include('kanban/_task_card.html.twig', {task: task}) }}
                {% endfor %}
            </div>
        </div>
    </div>

    {% else %}
    <div class="bg-white dark:bg-gray-800 rounded-xl p-12 text-center border border-gray-200 dark:border-gray-700">
        <span class="material-symbols-outlined text-6xl text-gray-300 dark:text-gray-600 mb-4">view_kanban</span>
        <h3 class="text-xl font-bold text-navy dark:text-white mb-2">Aucun sprint s√©lectionn√©</h3>
        <p class="text-gray-500 mb-6">Cr√©ez un sprint pour commencer √† utiliser le tableau Kanban.</p>
        <a href="{{ path('app_sprint_new') }}" class="inline-flex items-center gap-2 px-6 py-3 bg-primary hover:bg-yellow-500 text-navy font-bold rounded-lg transition-all">
            <span class="material-symbols-outlined">add</span>
            Cr√©er un Sprint
        </a>
    </div>
    {% endif %}
</div>

{# Quick Log Modal #}
<div id="quick-log-modal" class="fixed inset-0 bg-black/50 hidden items-center justify-center z-50">
    <div class="bg-white dark:bg-gray-800 rounded-xl p-6 w-full max-w-md mx-4 shadow-2xl">
        <h3 class="text-xl font-bold text-navy dark:text-white mb-4">Enregistrer du temps</h3>
        <form id="quick-log-form">
            <input type="hidden" id="ql-task-id">
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-600 dark:text-gray-400 mb-1">Dur√©e (minutes)</label>
                <input type="number" id="ql-duree" min="1" required
                       class="w-full px-4 py-2 bg-gray-100 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-lg text-navy dark:text-white focus:ring-2 focus:ring-primary">
            </div>
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-600 dark:text-gray-400 mb-1">Notes (optionnel)</label>
                <textarea id="ql-notes" rows="2"
                          class="w-full px-4 py-2 bg-gray-100 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-lg text-navy dark:text-white focus:ring-2 focus:ring-primary"></textarea>
            </div>
            <div class="flex gap-3">
                <button type="button" onclick="closeQuickLogModal()"
                        class="flex-1 px-4 py-2 bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg font-medium hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors">
                    Annuler
                </button>
                <button type="submit"
                        class="flex-1 px-4 py-2 bg-primary text-navy rounded-lg font-bold hover:bg-yellow-500 transition-colors">
                    Enregistrer
                </button>
            </div>
        </form>
    </div>
</div>

<script>
let draggedTask = null;

function handleDragStart(e) {
    draggedTask = e.target;
    e.target.classList.add('dragging');
    e.dataTransfer.effectAllowed = 'move';
    e.dataTransfer.setData('text/plain', e.target.dataset.taskId);
}

function handleDragEnd(e) {
    e.target.classList.remove('dragging');
    document.querySelectorAll('.kanban-column').forEach(col => {
        col.classList.remove('drag-over');
    });
}

function handleDragOver(e) {
    e.preventDefault();
    e.currentTarget.classList.add('drag-over');
}

function handleDragLeave(e) {
    e.currentTarget.classList.remove('drag-over');
}

async function handleDrop(e) {
    e.preventDefault();
    e.currentTarget.classList.remove('drag-over');
    
    const taskId = e.dataTransfer.getData('text/plain');
    const newStatus = e.currentTarget.dataset.status;
    const column = e.currentTarget.querySelector('[id^="column-"]');
    
    if (draggedTask && column) {
        column.appendChild(draggedTask);
        
        // Update on server
        try {
            const response = await fetch('{{ path('app_kanban_update_status') }}', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    taskId: parseInt(taskId),
                    status: newStatus
                })
            });
            
            const data = await response.json();
            
            if (data.milestoneUpdate && data.milestoneUpdate.isValidated) {
                showNotification('üéâ Jalon "' + data.milestoneUpdate.titre + '" valid√©!', 'success');
            }
        } catch (error) {
            console.error('Error updating task:', error);
            showNotification('Erreur lors de la mise √† jour', 'error');
        }
    }
}

function openQuickLogModal(taskId) {
    document.getElementById('ql-task-id').value = taskId;
    document.getElementById('ql-duree').value = '';
    document.getElementById('ql-notes').value = '';
    document.getElementById('quick-log-modal').classList.remove('hidden');
    document.getElementById('quick-log-modal').classList.add('flex');
}

function closeQuickLogModal() {
    document.getElementById('quick-log-modal').classList.add('hidden');
    document.getElementById('quick-log-modal').classList.remove('flex');
}

document.getElementById('quick-log-form').addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const taskId = document.getElementById('ql-task-id').value;
    const duree = document.getElementById('ql-duree').value;
    const notes = document.getElementById('ql-notes').value;
    
    try {
        const response = await fetch('/kanban/quick-log/' + taskId, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ duree, notes })
        });
        
        const data = await response.json();
        
        if (data.success) {
            showNotification('Temps enregistr√©: ' + data.entry.dureeFormatted, 'success');
            closeQuickLogModal();
        }
    } catch (error) {
        console.error('Error logging time:', error);
        showNotification('Erreur lors de l\'enregistrement', 'error');
    }
});

function showNotification(message, type) {
    const notification = document.createElement('div');
    notification.className = `fixed bottom-4 right-4 z-50 px-6 py-4 rounded-lg shadow-xl ${type === 'success' ? 'bg-green-500' : 'bg-red-500'} text-white font-medium`;
    notification.textContent = message;
    document.body.appendChild(notification);
    
    setTimeout(() => notification.remove(), 3000);
}
</script>
{% endblock %}
