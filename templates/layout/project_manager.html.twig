<!DOCTYPE html>
<html class="light" lang="fr">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>{% block title %}SmartNexus AI - Chef de Projet{% endblock %}</title>

    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet"/>

    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#1A237E", // Navy (Same as Employee)
                        "accent": "#F59E0B", // Amber-500 (Slightly different Yellow/Gold)
                        "navy": "#1A237E",
                        "background-light": "#FFFBF0", // Cream/Light Grey
                        "background-dark": "#231d0f",
                    },
                    fontFamily: { 
                        "display": ["Inter", "sans-serif"],
                        "sans": ["Inter", "sans-serif"]
                    },
                    borderRadius: {
                        "DEFAULT": "0.5rem",
                        "lg": "1rem",
                        "xl": "1.5rem",
                        "full": "9999px"
                    },
                },
            },
        }
    </script>

    <style>
        body { font-family: 'Inter', sans-serif; }
        .material-symbols-outlined { font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24; }
        .material-symbols-outlined.filled { font-variation-settings: 'FILL' 1, 'wght' 400, 'GRAD' 0, 'opsz' 24; }
        ::-webkit-scrollbar { width: 8px; height: 8px; }
        ::-webkit-scrollbar-track { background: transparent; }
        ::-webkit-scrollbar-thumb { background: #d1d5db; border-radius: 4px; }
        .page-enter { animation: fadeIn 0.3s ease-out; }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .nav-active {
            background: rgba(37, 99, 235, 0.2);
            border: 1px solid rgba(37, 99, 235, 0.3);
        }
    </style>

    {% block head %}{% endblock %}
</head>

<body class="bg-background-light dark:bg-background-dark text-navy dark:text-white min-h-screen flex flex-col">

<header class="flex items-center justify-between whitespace-nowrap border-b-2 border-solid border-primary/30 bg-white dark:bg-background-dark px-6 py-3 z-20 sticky top-0">
    <div class="flex items-center gap-8">
        <a href="{{ path('app_projet_index') }}" class="flex items-center gap-3 hover:opacity-90 transition-opacity">
            <img src="{{ asset('assets/logo22.png') }}" alt="SmartNexus Logo" class="h-10 w-auto object-contain">
        </a>

        <form action="{{ path('app_search') }}" method="GET" class="flex flex-col min-w-40 h-10 max-w-72 hidden md:flex">
            <div class="flex w-full flex-1 items-stretch rounded-xl h-full bg-slate-100 dark:bg-slate-800">
                <div class="text-slate-500 flex items-center justify-center pl-4 rounded-l-xl">
                    <span class="material-symbols-outlined">search</span>
                </div>
                <input type="text" name="q" class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-xl text-navy dark:text-white focus:outline-0 focus:ring-0 border-none bg-transparent h-full placeholder:text-slate-400 px-4 pl-2 text-sm font-normal"
                       placeholder="Rechercher sprints, tâches..." />
            </div>
        </form>
    </div>

    <div class="flex items-center gap-3">
        {% include 'layout/_header_controls.html.twig' %}
    </div>
</header>

<!-- Navigation Bar for Project Manager -->
<nav class="bg-white dark:bg-background-dark border-b border-slate-200 dark:border-slate-700 px-6 py-2">
    <div class="flex items-center justify-between">
        <div class="flex items-center gap-1">
            <a class="flex items-center gap-2 px-4 py-2 rounded-lg transition-all {{ app.request.attributes.get('_route') starts with 'app_projet' ? 'bg-primary text-white font-bold shadow-lg' : 'text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800' }}"
               href="{{ path('app_projet_index') }}">
                <span class="material-symbols-outlined text-lg">folder_open</span>
                <span class="text-sm font-medium">Projets</span>
            </a>

            <a class="flex items-center gap-2 px-4 py-2 rounded-lg transition-all {{ app.request.attributes.get('_route') starts with 'app_sprint' ? 'bg-primary text-white font-bold shadow-lg' : 'text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800' }}"
               href="{{ path('app_sprint_index') }}">
                <span class="material-symbols-outlined text-lg">history</span>
                <span class="text-sm font-medium">Sprints</span>
            </a>

            <a class="flex items-center gap-2 px-4 py-2 rounded-lg transition-all {{ app.request.attributes.get('_route') starts with 'app_tache' ? 'bg-primary text-white font-bold shadow-lg' : 'text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800' }}"
               href="{{ path('app_tache_index') }}">
                <span class="material-symbols-outlined text-lg">task_alt</span>
                <span class="text-sm font-medium">Tâches</span>
            </a>

            <a class="flex items-center gap-2 px-4 py-2 rounded-lg transition-all {{ app.request.attributes.get('_route') starts with 'app_jalon' ? 'bg-primary text-white font-bold shadow-lg' : 'text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800' }}"
               href="{{ path('app_jalon_index') }}">
                <span class="material-symbols-outlined text-lg">flag</span>
                <span class="text-sm font-medium">Jalons</span>
            </a>

            <div class="w-px h-6 bg-slate-200 dark:bg-slate-700 mx-2"></div>

            <a class="flex items-center gap-2 px-4 py-2 rounded-lg transition-all {{ app.request.attributes.get('_route') starts with 'app_kanban' ? 'bg-primary text-white font-bold shadow-lg' : 'text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800' }}"
               href="{{ path('app_kanban_index') }}">
                <span class="material-symbols-outlined text-lg">view_kanban</span>
                <span class="text-sm font-medium">Kanban</span>
            </a>
        </div>

        <!-- Quick Actions for PM -->
        <div class="flex items-center gap-2">
            <a href="{{ path('app_sprint_new') }}" 
               class="flex items-center gap-2 px-4 py-2 bg-primary hover:bg-primary/90 text-white font-bold rounded-lg transition-all shadow-md hover:shadow-lg">
                <span class="material-symbols-outlined text-lg">add</span>
                <span class="text-sm">Nouveau Sprint</span>
            </a>
            <a href="{{ path('app_tache_new') }}" 
               class="flex items-center gap-2 px-4 py-2 bg-accent hover:bg-accent/90 text-white font-bold rounded-lg transition-all shadow-md hover:shadow-lg">
                <span class="material-symbols-outlined text-lg">add_task</span>
                <span class="text-sm">Nouvelle Tâche</span>
            </a>
        </div>
    </div>
</nav>

<main class="flex-1 overflow-y-auto bg-background-light dark:bg-background-dark p-8">
    <div class="max-w-7xl mx-auto page-enter">
        {% block body %}{% endblock %}
    </div>
</main>

{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="fixed bottom-4 right-4 z-50 px-6 py-4 rounded-lg shadow-xl 
                    {{ label == 'success' ? 'bg-green-500' : (label == 'error' ? 'bg-red-500' : 'bg-primary') }} 
                    text-white font-medium animate-pulse">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}

</body>
</html>
