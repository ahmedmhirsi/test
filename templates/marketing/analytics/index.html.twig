{% extends 'marketing/base.html.twig' %}

{% block title %}Analytics{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto space-y-6">
    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <div>
            <h1 class="text-2xl font-display font-black text-navy dark:text-white tracking-tight">Marketing Analytics</h1>
            <p class="text-gray-500 dark:text-gray-400 text-sm mt-1">Performance insights & ROI tracking</p>
        </div>
    </div>

    <!-- Main KPIs -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <!-- CAC Card -->
        <div class="md:col-span-1 bg-gold rounded-xl p-5 text-navy shadow-lg relative overflow-hidden group">
            <div class="absolute -right-6 -top-6 w-24 h-24 bg-white/20 rounded-full group-hover:scale-150 transition-transform duration-500"></div>
            <div class="relative z-10 flex flex-col h-full justify-between">
                <div class="flex justify-between items-start">
                    <p class="text-navy/80 text-[10px] font-black uppercase tracking-widest">Customer Acquisition Cost</p>
                    <span class="material-symbols-outlined text-navy/80">payments</span>
                </div>
                <div class="mt-4">
                    <div class="flex items-end gap-1">
                        <span class="text-4xl font-black tracking-tighter">{{ performanceMetrics.avgCac|number_format(0) }}</span>
                        <span class="text-lg text-navy/60 mb-1 font-bold">TND</span>
                    </div>
                    <p class="text-[10px] text-navy/70 mt-1">Cost to acquire one customer</p>
                </div>
            </div>
        </div>

        <!-- Total Spent -->
        <div class="bg-white dark:bg-[#1a1d2d] rounded-xl p-5 border border-gray-100 dark:border-[#2a2e3f] shadow-sm flex flex-col justify-between">
            <div class="flex items-center gap-3 mb-2">
                <div class="p-2 bg-red-50 dark:bg-red-900/20 rounded-lg text-red-600">
                    <span class="material-symbols-outlined">account_balance_wallet</span>
                </div>
                <span class="text-gray-500 dark:text-gray-400 text-xs font-bold uppercase tracking-wider">Total Spent</span>
            </div>
            <div>
                <span class="text-2xl font-black text-navy dark:text-white">{{ budgetStats.totalActual|number_format(0) }}</span>
                <span class="text-sm text-gray-500 ml-1">TND</span>
            </div>
        </div>

        <!-- Total Leads -->
        <div class="bg-white dark:bg-[#1a1d2d] rounded-xl p-5 border border-gray-100 dark:border-[#2a2e3f] shadow-sm flex flex-col justify-between">
            <div class="flex items-center gap-3 mb-2">
                <div class="p-2 bg-primary/10 dark:bg-primary/20 rounded-lg text-primary">
                    <span class="material-symbols-outlined">groups</span>
                </div>
                <span class="text-gray-500 dark:text-gray-400 text-xs font-bold uppercase tracking-wider">Total Leads</span>
            </div>
            <div>
                <span class="text-2xl font-black text-navy dark:text-white">{{ leadStats.total }}</span>
                <span class="text-[10px] font-black text-green-600 dark:text-green-400 ml-2 uppercase tracking-tighter">{{ leadStats.converted }} Converted</span>
            </div>
        </div>

        <!-- Conversion Rate -->
        <div class="bg-white dark:bg-[#1a1d2d] rounded-xl p-5 border border-gray-100 dark:border-[#2a2e3f] shadow-sm flex flex-col justify-between">
            <div class="flex items-center gap-3 mb-2">
                <div class="p-2 bg-green-50 dark:bg-green-900/20 rounded-lg text-green-600">
                    <span class="material-symbols-outlined">conversion_path</span>
                </div>
                <span class="text-gray-500 dark:text-gray-400 text-xs font-bold uppercase tracking-wider">Conversion Rate</span>
            </div>
            <div>
                <span class="text-2xl font-black text-navy dark:text-white">{{ leadStats.conversionRate }}%</span>
                <span class="text-[10px] font-black text-gray-500 ml-2 uppercase tracking-tighter">Lead to customer</span>
            </div>
        </div>
    </div>

    <!-- Performance by Channel -->
    <div class="bg-white dark:bg-[#1a1d2d] rounded-xl border border-gray-100 dark:border-[#2a2e3f] shadow-sm p-6">
        <h3 class="text-lg font-display font-bold text-navy dark:text-white mb-6">Channel Performance</h3>
        
        {% if performanceByChannel|length > 0 %}
        <div class="space-y-4">
            {% for perf in performanceByChannel %}
            <div class="flex items-center gap-4 p-4 rounded-lg bg-gray-50 dark:bg-white/5">
                <div class="p-3 rounded-xl bg-primary/10 dark:bg-primary/20">
                    <span class="material-symbols-outlined text-primary">podcasts</span>
                </div>
                <div class="flex-1">
                    <div class="flex justify-between items-center mb-2">
                        <p class="text-sm font-bold text-navy dark:text-white">{{ perf.channelName }}</p>
                        <p class="text-sm font-bold text-navy dark:text-white">{{ perf.leads }} leads</p>
                    </div>
                    <div class="flex gap-6 text-xs text-gray-500">
                        <span><span class="font-bold text-navy dark:text-white">{{ perf.spent|number_format(0) }}</span> TND spent</span>
                        <span><span class="font-bold text-green-600">{{ perf.converted }}</span> converted</span>
                        <span>CAC: <span class="font-bold text-gold">{{ perf.converted > 0 ? (perf.spent / perf.converted)|number_format(0) : 'N/A' }}</span> TND</span>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        {% else %}
        <div class="text-center py-12">
            <span class="material-symbols-outlined text-gray-300 dark:text-gray-600 text-5xl mb-4">analytics</span>
            <p class="text-gray-500 dark:text-gray-400">No performance data yet</p>
            <p class="text-xs text-gray-400 mt-2">Channel performance will appear here once you have campaign data</p>
        </div>
        {% endif %}
    </div>

    <!-- Budget Analysis -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="bg-white dark:bg-[#1a1d2d] rounded-xl border border-gray-100 dark:border-[#2a2e3f] shadow-sm p-6">
            <h3 class="text-lg font-display font-bold text-navy dark:text-white mb-4">Budget Overview</h3>
            <div class="space-y-4">
                <div>
                    <div class="flex justify-between items-center mb-2">
                        <span class="text-sm text-gray-600 dark:text-gray-400">Planned Budget</span>
                        <span class="text-sm font-bold text-navy dark:text-white">{{ budgetStats.totalPlanned|number_format(0) }} TND</span>
                    </div>
                    <div class="h-2 bg-gray-100 dark:bg-gray-800 rounded-full overflow-hidden">
                        <div class="h-full bg-primary rounded-full" style="width: 100%"></div>
                    </div>
                </div>
                <div>
                    <div class="flex justify-between items-center mb-2">
                        <span class="text-sm text-gray-600 dark:text-gray-400">Actual Spent</span>
                        <span class="text-sm font-bold text-navy dark:text-white">{{ budgetStats.totalActual|number_format(0) }} TND</span>
                    </div>
                    <div class="h-2 bg-gray-100 dark:bg-gray-800 rounded-full overflow-hidden">
                        {% set budgetPercent = budgetStats.totalPlanned > 0 ? (budgetStats.totalActual / budgetStats.totalPlanned) * 100 : 0 %}
                        <div class="h-full {{ budgetPercent > 100 ? 'bg-red-500' : 'bg-gold' }} rounded-full" style="width: {{ budgetPercent > 100 ? 100 : budgetPercent }}%"></div>
                    </div>
                </div>
                <div class="pt-4 border-t border-gray-100 dark:border-[#2a2e3f]">
                    {% set variance = budgetStats.totalActual - budgetStats.totalPlanned %}
                    <div class="flex justify-between items-center">
                        <span class="text-sm text-gray-600 dark:text-gray-400">Variance</span>
                        <span class="text-sm font-bold {{ variance > 0 ? 'text-red-600' : 'text-green-600' }}">
                            {{ variance > 0 ? '+' : '' }}{{ variance|number_format(0) }} TND
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-white dark:bg-[#1a1d2d] rounded-xl border border-gray-100 dark:border-[#2a2e3f] shadow-sm p-6">
            <h3 class="text-lg font-display font-bold text-navy dark:text-white mb-4">Lead Funnel</h3>
            <div class="space-y-4">
                <div class="flex items-center gap-4">
                    <div class="w-24 text-right">
                        <span class="text-xs font-bold text-gray-500 uppercase tracking-widest">New</span>
                    </div>
                    <div class="flex-1 h-8 bg-blue-100 dark:bg-blue-900/30 rounded flex items-center px-4">
                        <span class="text-sm font-bold text-blue-700 dark:text-blue-400">{{ leadStats.new|default(0) }}</span>
                    </div>
                </div>
                <div class="flex items-center gap-4">
                    <div class="w-24 text-right">
                        <span class="text-xs font-bold text-gray-500 uppercase tracking-widest">Qualified</span>
                    </div>
                    <div class="flex-1 h-8 bg-purple-100 dark:bg-purple-900/30 rounded flex items-center px-4" style="width: 75%">
                        <span class="text-sm font-bold text-purple-700 dark:text-purple-400">{{ leadStats.qualified|default(0) }}</span>
                    </div>
                </div>
                <div class="flex items-center gap-4">
                    <div class="w-24 text-right">
                        <span class="text-xs font-bold text-gray-500 uppercase tracking-widest">Converted</span>
                    </div>
                    <div class="flex-1 h-8 bg-green-100 dark:bg-green-900/30 rounded flex items-center px-4" style="width: 50%">
                        <span class="text-sm font-bold text-green-700 dark:text-green-400">{{ leadStats.converted }}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- AI Insight -->
    <div class="p-4 bg-gold/5 dark:bg-gold/10 rounded-lg border border-gold/20">
        <div class="flex items-start gap-3">
            <span class="material-symbols-outlined text-gold mt-1">auto_awesome</span>
            <div>
                <p class="text-xs font-black text-gold uppercase tracking-widest">AI Analytics Insight</p>
                <p class="text-[13px] text-navy/80 dark:text-gray-400 leading-relaxed font-medium">
                    {% if leadStats.total > 0 %}
                        Your marketing is generating leads at a cost of <span class="text-gold font-black">{{ performanceMetrics.avgCac|number_format(0) }} TND</span> per customer.
                        {% if leadStats.conversionRate >= 20 %}
                            Your conversion rate of {{ leadStats.conversionRate }}% is excellent - above the B2B industry average of 15-20%.
                        {% elseif leadStats.conversionRate >= 10 %}
                            Your conversion rate is healthy. Focus on lead qualification to improve it further.
                        {% else %}
                            Consider reviewing your lead qualification process to improve conversion rates.
                        {% endif %}
                    {% else %}
                        Start tracking your marketing campaigns to get AI-powered insights on CAC, ROI, and channel performance.
                    {% endif %}
                </p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
