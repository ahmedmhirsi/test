{% extends 'back_office/base.html.twig' %}

{% block title %}Channels - Nexus AI{% endblock %}

{% block header_title %}
    <span class="flex items-center gap-2">
        <span class="material-symbols-outlined text-nexus-primary animate-pulse-slow">hub</span>
        Channel Command
    </span>
{% endblock %}

{% block content %}
<div class="swup-transition-fade pb-20">

    {# ─── Header ─── #}
    <div class="flex flex-col md:flex-row justify-between items-end mb-8 gap-4">
        <div>
            <h1 class="text-4xl font-black text-white tracking-tight leading-tight animate-slide-up">
                Canaux <span class="text-transparent bg-clip-text bg-gradient-to-r from-nexus-primary to-purple-400">Marketing</span>
            </h1>
            <p class="text-gray-400 text-sm mt-2 animate-slide-up" style="animation-delay: 0.1s">
                Gérez vos vecteurs d'acquisition de trafic.
            </p>
        </div>
        
        <div class="animate-slide-up" style="animation-delay: 0.2s">
            <a href="{{ path('app_marketing_channel_new') }}" class="btn-nexus-primary rounded-full px-6 py-2 flex items-center gap-2 shadow-lg shadow-nexus-primary/30 group">
                <span class="material-symbols-outlined text-lg group-hover:rotate-90 transition-transform">add</span>
                <span>Ajouter Canal</span>
            </a>
        </div>
    </div>

    {# ─── Channels Grid ─── #}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 animate-slide-up" style="animation-delay: 0.3s">
        {% for channel in channels %}
            <div class="glass-panel p-0 group hover:-translate-y-2 transition-transform duration-300 relative overflow-hidden">
                
                {# Type Indicator Stripe #}
                <div class="absolute top-0 left-0 right-0 h-1
                    {% if channel.type == 'paid' %}bg-amber-500 shadow-[0_0_10px_rgba(245,158,11,0.5)]
                    {% elseif channel.type == 'organic' %}bg-green-500 shadow-[0_0_10px_rgba(34,197,94,0.5)]
                    {% else %}bg-purple-500 shadow-[0_0_10px_rgba(168,85,247,0.5)]{% endif %}">
                </div>

                <div class="p-6">
                    <div class="flex justify-between items-start mb-6">
                        <div class="size-14 rounded-2xl bg-white/5 border border-white/10 flex items-center justify-center text-3xl group-hover:scale-110 transition-transform duration-300 shadow-inner">
                            {{ channel.icon }}
                        </div>
                        
                        <span class="px-2.5 py-1 rounded-full text-[10px] font-black uppercase tracking-wider border border-white/5
                             {% if channel.type == 'paid' %}bg-amber-500/10 text-amber-400 border-amber-500/20
                            {% elseif channel.type == 'organic' %}bg-green-500/10 text-green-400 border-green-500/20
                            {% else %}bg-purple-500/10 text-purple-400 border-purple-500/20{% endif %}">
                            {{ channel.typeLabel }}
                        </span>
                    </div>

                    <h3 class="text-xl font-bold text-white mb-2 group-hover:text-nexus-primary transition-colors">{{ channel.name }}</h3>
                    <p class="text-sm text-gray-400 mb-6 line-clamp-2 h-10">{{ channel.description|default('Aucune description disponible.') }}</p>

                    <div class="flex items-center justify-between pt-4 border-t border-white/5">
                        <div class="flex items-center gap-2 text-xs font-mono text-gray-500">
                            <span class="material-symbols-outlined text-[16px]">campaign</span>
                            <span class="text-white font-bold">{{ channel.campaignChannels|length }}</span> campagnes
                        </div>

                        <div class="opacity-0 group-hover:opacity-100 transition-opacity translate-x-2 group-hover:translate-x-0">
                            <a href="{{ path('app_marketing_channel_edit', {id: channel.id}) }}" class="size-8 rounded-lg bg-white/5 flex items-center justify-center text-gray-400 hover:bg-nexus-accent hover:text-white transition-all">
                                <span class="material-symbols-outlined text-[18px]">edit</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
             {# Empty State for Channels #}
            <div class="col-span-full">
                {# Quick Start Suggestions (Only if empty) #}
                <div class="glass-panel p-8 text-center mb-8">
                    <div class="size-20 rounded-full bg-white/5 flex items-center justify-center mx-auto mb-4">
                        <span class="material-symbols-outlined text-4xl text-gray-600">hub</span>
                    </div>
                    <h3 class="text-xl font-bold text-white mb-2">Aucun canal configuré</h3>
                    <p class="text-gray-400 max-w-md mx-auto mb-8">Commencez par ajouter les canaux standards ci-dessous.</p>
                </div>

                <div class="grid grid-cols-2 md:grid-cols-4 gap-4 opacity-70">
                    <div class="glass-panel p-4 flex flex-col items-center justify-center gap-2 text-center hover:opacity-100 transition-opacity cursor-pointer">
                        <span class="material-symbols-outlined text-2xl text-blue-400">share</span>
                        <span class="text-xs font-bold text-white">Réseaux Sociaux</span>
                    </div>
                    <div class="glass-panel p-4 flex flex-col items-center justify-center gap-2 text-center hover:opacity-100 transition-opacity cursor-pointer">
                        <span class="material-symbols-outlined text-green-400">ads_click</span>
                        <span class="text-xs font-bold text-white">Référencement Payant</span>
                    </div>
                    <div class="glass-panel p-4 flex flex-col items-center justify-center gap-2 text-center hover:opacity-100 transition-opacity cursor-pointer">
                         <span class="material-symbols-outlined text-purple-400">mail</span>
                        <span class="text-xs font-bold text-white">Emailing</span>
                    </div>
                     <div class="glass-panel p-4 flex flex-col items-center justify-center gap-2 text-center hover:opacity-100 transition-opacity cursor-pointer">
                         <span class="material-symbols-outlined text-orange-400">event</span>
                        <span class="text-xs font-bold text-white">Événementiel</span>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
