{% extends 'marketing/base.html.twig' %}

{% block title %}New Channel{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto">
    <div class="mb-6">
        <a href="{{ path('app_marketing_channels') }}" class="inline-flex items-center gap-2 text-gray-500 hover:text-primary text-sm font-semibold transition-colors">
            <span class="material-symbols-outlined text-[18px]">arrow_back</span>
            Back to Channels
        </a>
    </div>

    <div class="bg-white dark:bg-[#1a1d2d] rounded-xl shadow-sm border border-gray-100 dark:border-[#2a2e3f] p-6">
        <div class="mb-6">
            <h1 class="text-2xl font-display font-black text-navy dark:text-white tracking-tight">Add New Channel</h1>
            <p class="text-gray-500 dark:text-gray-400 text-sm mt-1">Configure a new marketing distribution channel</p>
        </div>

        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            <div class="space-y-6">
                <div>
                    {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm font-bold text-navy dark:text-white mb-2'}}) }}
                    {{ form_widget(form.name, {'attr': {'class': 'w-full rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-[#0f1223] px-4 py-3 text-sm text-navy dark:text-white focus:outline-none focus:ring-2 focus:ring-primary/50'}}) }}
                </div>

                <div>
                    {{ form_label(form.type, null, {'label_attr': {'class': 'block text-sm font-bold text-navy dark:text-white mb-2'}}) }}
                    {{ form_widget(form.type, {'attr': {'class': 'w-full rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-[#0f1223] px-4 py-3 text-sm text-navy dark:text-white focus:outline-none focus:ring-2 focus:ring-primary/50'}}) }}
                    <p class="mt-2 text-xs text-gray-500">
                        <strong>Paid:</strong> LinkedIn Ads, Google Ads | <strong>Organic:</strong> SEO, Content marketing | <strong>Partnership:</strong> Co-marketing, Affiliates
                    </p>
                </div>

                <div>
                    {{ form_label(form.description, null, {'label_attr': {'class': 'block text-sm font-bold text-navy dark:text-white mb-2'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'w-full rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-[#0f1223] px-4 py-3 text-sm text-navy dark:text-white focus:outline-none focus:ring-2 focus:ring-primary/50'}}) }}
                </div>
            </div>

            <div class="flex gap-4 pt-4">
                <button type="submit" class="flex-1 h-12 rounded-lg bg-gold text-navy text-sm font-black uppercase tracking-widest hover:brightness-110 transition-all shadow-lg shadow-gold/20">
                    Add Channel
                </button>
                <a href="{{ path('app_marketing_channels') }}" class="h-12 px-6 rounded-lg border-2 border-gray-200 dark:border-gray-600 text-navy dark:text-white text-sm font-black uppercase tracking-widest hover:bg-gray-50 dark:hover:bg-gray-800 flex items-center justify-center transition-all">
                    Cancel
                </a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
