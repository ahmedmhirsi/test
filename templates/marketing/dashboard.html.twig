{% extends 'back_office/base.html.twig' %}

{% block title %}Dashboard - Marketing{% endblock %}

{% block breadcrumb %}
    <span class="material-symbols-outlined text-gray-400">chevron_right</span>
    <span class="text-sm font-semibold text-navy dark:text-white">Marketing</span>
{% endblock %}

{% block content %}
<div class="p-4 md:p-8 space-y-6">
    
    <!-- Page Header -->
    <div class="flex justify-between items-center">
        <div>
            <h1 class="text-3xl font-display font-black text-navy dark:text-white tracking-tight">Marketing Dashboard</h1>
            <p class="text-gray-500 dark:text-gray-400 text-sm font-semibold mt-1">Growth engine overview & performance metrics</p>
        </div>
        <div class="flex gap-3">
            <a href="{{ path('app_marketing_campaign_new') }}" class="h-11 px-6 rounded-lg bg-gold text-navy text-xs font-black uppercase tracking-widest hover:brightness-110 flex items-center justify-center gap-2 shadow-lg shadow-gold/20 transition-all">
                <span class="material-symbols-outlined text-[18px]">add</span>
                New Campaign
            </a>
        </div>
    </div>

    <!-- KPI Cards Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        
        <!-- CAC Score -->
        <div class="bg-gold rounded-xl p-5 text-navy shadow-lg relative overflow-hidden group hover:shadow-xl transition-all">
            <div class="absolute -right-6 -top-6 w-24 h-24 bg-white/20 rounded-full group-hover:scale-150 transition-transform duration-500"></div>
            <div class="relative z-10 flex flex-col h-full justify-between">
                <div class="flex justify-between items-start">
                    <p class="text-navy/80 text-[10px] font-black uppercase tracking-widest">Avg. CAC</p>
                    <span class="material-symbols-outlined text-navy/80">payments</span>
                </div>
                <div class="mt-4">
                    <div class="flex items-end gap-1">
                        <span class="text-3xl font-black tracking-tighter">{{ performanceMetrics.avgCac|number_format(0) }}</span>
                        <span class="text-sm text-navy/60 mb-1 font-bold">TND</span>
                    </div>
                    <div class="flex items-center gap-1 mt-2 text-navy text-[10px] font-black bg-white/40 w-fit px-2 py-1 rounded-full uppercase tracking-tighter">
                        <span class="material-symbols-outlined text-[14px]">trending_down</span>
                        <span>Cost per client</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Leads -->
        <div class="bg-white dark:bg-[#1a1d2d] rounded-xl p-5 border border-gray-100 dark:border-[#2a2e3f] shadow-sm hover:border-primary/30 transition-all group">
            <div class="flex items-center gap-3 mb-2">
                <div class="p-2 bg-blue-50 dark:bg-blue-900/20 rounded-lg text-blue-600">
                    <span class="material-symbols-outlined">groups</span>
                </div>
                <span class="text-gray-500 dark:text-gray-400 text-xs font-bold uppercase tracking-wider">Total Leads</span>
            </div>
            <div>
                <span class="text-2xl font-black text-navy dark:text-white">{{ leadStats.total }}</span>
                <span class="text-[10px] font-black text-green-600 dark:text-green-400 ml-2 uppercase tracking-tighter">{{ leadStats.new }} New</span>
            </div>
        </div>

        <!-- Conversion Rate -->
        <div class="bg-white dark:bg-[#1a1d2d] rounded-xl p-5 border border-gray-100 dark:border-[#2a2e3f] shadow-sm hover:border-purple-500/30 transition-all group">
            <div class="flex items-center gap-3 mb-2">
                <div class="p-2 bg-purple-50 dark:bg-purple-900/20 rounded-lg text-purple-600">
                    <span class="material-symbols-outlined">conversion_path</span>
                </div>
                <span class="text-gray-500 dark:text-gray-400 text-xs font-bold uppercase tracking-wider">Conversion</span>
            </div>
            <div>
                <span class="text-2xl font-black text-navy dark:text-white">{{ leadStats.conversionRate }}%</span>
                <span class="text-[10px] font-black text-gray-500 ml-2 uppercase tracking-tighter">{{ leadStats.converted }} Converted</span>
            </div>
        </div>

        <!-- Budget -->
        <div class="bg-white dark:bg-[#1a1d2d] rounded-xl p-5 border border-gray-100 dark:border-[#2a2e3f] shadow-sm hover:border-orange-500/30 transition-all group">
            <div class="flex items-center gap-3 mb-2">
                <div class="p-2 bg-orange-50 dark:bg-orange-900/20 rounded-lg text-orange-600">
                    <span class="material-symbols-outlined">account_balance_wallet</span>
                </div>
                <span class="text-gray-500 dark:text-gray-400 text-xs font-bold uppercase tracking-wider">Budget Used</span>
            </div>
            <div>
                <span class="text-2xl font-black text-navy dark:text-white">{{ budgetStats.totalActual|number_format(0) }}</span>
                <span class="text-[10px] font-black text-gray-500 ml-2 uppercase tracking-tighter">/ {{ budgetStats.totalPlanned|number_format(0) }} TND</span>
            </div>
        </div>
    </div>

    <!-- Campaigns & AI Insight Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        
        <!-- Active Campaigns -->
        <div class="lg:col-span-2 bg-white dark:bg-[#1a1d2d] rounded-xl border border-gray-100 dark:border-[#2a2e3f] shadow-sm overflow-hidden">
            <div class="p-6 border-b border-gray-100 dark:border-[#2a2e3f] flex items-center justify-between">
                <div>
                    <h3 class="text-lg font-display font-bold text-navy dark:text-white">Active Campaigns</h3>
                    <p class="text-[11px] font-semibold text-gray-400 uppercase tracking-widest mt-1">{{ campaignStats.active }} active of {{ campaignStats.total }} total</p>
                </div>
                <a href="{{ path('app_marketing_campaigns') }}" class="text-primary text-xs font-bold hover:underline">View All</a>
            </div>
            
            <div class="divide-y divide-gray-100 dark:divide-[#2a2e3f]">
                {% for campaign in campaigns|slice(0, 5) %}
                <div class="flex items-center justify-between p-4 hover:bg-gray-50 dark:hover:bg-[#252836] transition-colors">
                    <div class="flex items-center gap-4">
                        <div class="size-10 rounded-lg bg-blue-50 dark:bg-blue-900/20 flex items-center justify-center text-blue-600">
                            <span class="material-symbols-outlined">campaign</span>
                        </div>
                        <div>
                            <p class="text-sm font-bold text-navy dark:text-white">{{ campaign.name }}</p>
                            <p class="text-xs text-gray-500">{{ campaign.startDate|date('M d, Y') }} - {{ campaign.endDate ? campaign.endDate|date('M d, Y') : 'Ongoing' }}</p>
                        </div>
                    </div>
                    <div class="flex items-center gap-4">
                        <div class="text-right hidden sm:block">
                            <p class="text-sm font-bold text-navy dark:text-white">{{ campaign.targetLeads }} leads</p>
                            <p class="text-xs text-gray-500">Target</p>
                        </div>
                        <span class="px-2.5 py-1 rounded-full text-[10px] font-bold uppercase tracking-wider
                            {% if campaign.status == 'active' %}bg-green-100 text-green-700 dark:bg-green-900/30 dark:text-green-400
                            {% elseif campaign.status == 'planned' %}bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-400
                            {% elseif campaign.status == 'paused' %}bg-amber-100 text-amber-700 dark:bg-amber-900/30 dark:text-amber-400
                            {% else %}bg-gray-100 text-gray-700 dark:bg-gray-800 dark:text-gray-400{% endif %}">
                            {{ campaign.statusLabel }}
                        </span>
                    </div>
                </div>
                {% else %}
                <div class="p-12 text-center">
                    <div class="size-16 bg-gray-100 dark:bg-[#252836] rounded-full flex items-center justify-center mx-auto mb-3">
                        <span class="material-symbols-outlined text-gray-400 text-[32px]">campaign</span>
                    </div>
                    <p class="text-gray-500 dark:text-gray-400 text-sm">No campaigns yet</p>
                    <a href="{{ path('app_marketing_campaign_new') }}" class="inline-flex items-center gap-2 mt-4 text-primary font-bold text-sm hover:underline">
                        Create your first campaign
                    </a>
                </div>
                {% endfor %}
            </div>
        </div>

        <!-- Right Column: Quick Actions & AI Insight -->
        <div class="space-y-6">
            <!-- AI Insight -->
            <div class="bg-gradient-to-br from-navy to-navy/90 dark:from-[#1a1d2d] dark:to-[#1a1d2d] rounded-xl p-6 text-white shadow-lg relative overflow-hidden">
                <div class="absolute top-0 right-0 p-4 opacity-10">
                    <span class="material-symbols-outlined text-9xl">auto_awesome</span>
                </div>
                <div class="relative z-10">
                    <div class="flex items-center gap-2 mb-4">
                        <span class="material-symbols-outlined text-gold">auto_awesome</span>
                        <h3 class="text-sm font-black text-gold uppercase tracking-widest">AI Insight</h3>
                    </div>
                    <p class="text-sm leading-relaxed font-medium text-gray-100 mb-4">
                        {% if leadStats.total > 0 %}
                        Your current CAC is <span class="text-gold font-bold">{{ performanceMetrics.avgCac|number_format(0) }} TND</span>. 
                        {% if performanceMetrics.avgCac < 500 %}Excellent! Your acquisition cost is below industry average.{% else %}Consider optimizing your highest-spending channels to reduce costs.{% endif %}
                        {% else %}
                        Start by creating a campaign and tracking leads to get AI-powered insights on your marketing performance.
                        {% endif %}
                    </p>
                    <button class="text-xs font-bold text-white bg-white/10 hover:bg-white/20 px-3 py-2 rounded-lg transition-colors w-full text-center">
                        View Detailed Analytics
                    </button>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="bg-white dark:bg-[#1a1d2d] rounded-xl p-6 border border-gray-100 dark:border-[#2a2e3f] shadow-sm">
                <h3 class="text-lg font-display font-bold text-navy dark:text-white mb-4">Quick Actions</h3>
                <div class="grid grid-cols-2 gap-3">
                    <a href="{{ path('app_marketing_leads') }}" class="flex flex-col items-center justify-center p-4 bg-gray-50 dark:bg-gray-800 rounded-lg hover:shadow-md transition-all group">
                        <span class="material-symbols-outlined text-primary mb-1 group-hover:scale-110 transition-transform">groups</span>
                        <span class="text-[10px] font-black text-gray-700 dark:text-gray-300 uppercase tracking-tighter">Leads</span>
                    </a>
                    {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_marketing_channels') }}" class="flex flex-col items-center justify-center p-4 bg-gray-50 dark:bg-gray-800 rounded-lg hover:shadow-md transition-all group">
                        <span class="material-symbols-outlined text-primary mb-1 group-hover:scale-110 transition-transform">alt_route</span>
                        <span class="text-[10px] font-black text-gray-700 dark:text-gray-300 uppercase tracking-tighter">Channels</span>
                    </a>
                    <a href="{{ path('app_marketing_analytics') }}" class="flex flex-col items-center justify-center p-4 bg-gray-50 dark:bg-gray-800 rounded-lg hover:shadow-md transition-all group">
                        <span class="material-symbols-outlined text-primary mb-1 group-hover:scale-110 transition-transform">monitoring</span>
                        <span class="text-[10px] font-black text-gray-700 dark:text-gray-300 uppercase tracking-tighter">Analytics</span>
                    </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
