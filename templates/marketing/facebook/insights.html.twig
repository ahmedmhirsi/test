{% extends 'marketing/base.html.twig' %}

{% block title %}Campaign Insights{% endblock %}

{% block body %}
<div class="page-shell fade-in">
    <!-- Header -->
    <div class="page-header">
        <div>
            <h1 class="text-2xl font-display font-black text-navy dark:text-white tracking-tight">Campaign Insights</h1>
            <p class="subtle text-sm mt-1">Performance metrics for campaign {{ campaignId }}</p>
        </div>
        <div class="flex gap-3">
            <a href="{{ path('app_facebook_ads_campaigns') }}" class="btn-secondary">
                <span class="material-symbols-outlined text-[18px]">arrow_back</span>
                Back to Campaigns
            </a>
        </div>
    </div>

    {% if not isConfigured %}
    <!-- Configuration Warning -->
    <div class="p-4 bg-amber-50 dark:bg-amber-900/20 rounded-lg border border-amber-200 dark:border-amber-800 mb-6">
        <div class="flex items-start gap-3">
            <span class="material-symbols-outlined text-amber-600 mt-1">warning</span>
            <div>
                <p class="text-sm font-bold text-amber-800 dark:text-amber-200">Configuration requise</p>
                <p class="text-sm text-amber-700 dark:text-amber-300 mt-1">
                    Veuillez configurer vos credentials Facebook.
                </p>
            </div>
        </div>
    </div>
    {% endif %}

    {% if insights|length > 0 %}
    {% for insight in insights %}
    <!-- Campaign Name -->
    <div class="mb-6">
        <h2 class="text-xl font-bold text-navy dark:text-white">{{ insight.campaign_name }}</h2>
        <p class="text-sm text-gray-500">Last 30 days performance</p>
    </div>

    <!-- KPI Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
        <!-- Impressions -->
        <div class="kpi-card card-hover rise-in stagger-1">
            <div class="flex items-center gap-3 mb-2">
                <div class="p-2 bg-blue-50 dark:bg-blue-900/20 rounded-lg text-blue-600">
                    <span class="material-symbols-outlined">visibility</span>
                </div>
                <span class="text-gray-500 dark:text-gray-400 text-xs font-bold uppercase tracking-wider">Impressions</span>
            </div>
            <div>
                <span class="text-2xl font-black text-navy dark:text-white">{{ insight.impressions|number_format(0, ',', ' ') }}</span>
            </div>
        </div>

        <!-- Clicks -->
        <div class="kpi-card card-hover rise-in stagger-2">
            <div class="flex items-center gap-3 mb-2">
                <div class="p-2 bg-green-50 dark:bg-green-900/20 rounded-lg text-green-600">
                    <span class="material-symbols-outlined">touch_app</span>
                </div>
                <span class="text-gray-500 dark:text-gray-400 text-xs font-bold uppercase tracking-wider">Clicks</span>
            </div>
            <div>
                <span class="text-2xl font-black text-navy dark:text-white">{{ insight.clicks|number_format(0, ',', ' ') }}</span>
            </div>
        </div>

        <!-- CTR -->
        <div class="kpi-card card-hover rise-in stagger-3">
            <div class="flex items-center gap-3 mb-2">
                <div class="p-2 bg-purple-50 dark:bg-purple-900/20 rounded-lg text-purple-600">
                    <span class="material-symbols-outlined">percent</span>
                </div>
                <span class="text-gray-500 dark:text-gray-400 text-xs font-bold uppercase tracking-wider">CTR</span>
            </div>
            <div>
                <span class="text-2xl font-black text-navy dark:text-white">{{ insight.ctr }}%</span>
            </div>
        </div>

        <!-- Spend -->
        <div class="kpi-card card-hover rise-in stagger-4">
            <div class="flex items-center gap-3 mb-2">
                <div class="p-2 bg-orange-50 dark:bg-orange-900/20 rounded-lg text-orange-600">
                    <span class="material-symbols-outlined">payments</span>
                </div>
                <span class="text-gray-500 dark:text-gray-400 text-xs font-bold uppercase tracking-wider">Spend</span>
            </div>
            <div>
                <span class="text-2xl font-black text-navy dark:text-white">{{ insight.spend }}</span>
                <span class="text-sm text-gray-500 ml-1">USD</span>
            </div>
        </div>
    </div>

    <!-- Additional Metrics -->
    <div class="section-card rise-in">
        <div class="p-6 border-b border-gray-100 dark:border-[#2a2e3f]">
            <h3 class="section-title">Detailed Metrics</h3>
        </div>
        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div>
                    <p class="text-xs font-bold text-gray-500 uppercase tracking-wider mb-1">Reach</p>
                    <p class="text-lg font-black text-navy dark:text-white">{{ insight.reach|number_format(0, ',', ' ') }}</p>
                </div>
                <div>
                    <p class="text-xs font-bold text-gray-500 uppercase tracking-wider mb-1">CPC (Cost per Click)</p>
                    <p class="text-lg font-black text-navy dark:text-white">{{ insight.cpc }} USD</p>
                </div>
                <div>
                    <p class="text-xs font-bold text-gray-500 uppercase tracking-wider mb-1">CPM (Cost per 1000)</p>
                    <p class="text-lg font-black text-navy dark:text-white">{{ insight.cpm }} USD</p>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
    {% else %}
    <div class="section-card p-12 text-center">
        <span class="material-symbols-outlined text-gray-300 dark:text-gray-600 text-5xl mb-4 block">analytics</span>
        <p class="text-gray-500 dark:text-gray-400">Aucune donnée disponible pour cette campagne.</p>
        <p class="text-sm text-gray-400 mt-2">Les insights peuvent prendre quelques heures à apparaître après le lancement d'une campagne.</p>
    </div>
    {% endif %}
</div>
{% endblock %}
