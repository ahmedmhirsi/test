{% extends 'marketing/base.html.twig' %}

{% block title %}Edit Lead{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto">
    <div class="mb-6">
        <a href="{{ path('app_marketing_lead_show', {id: lead.id}) }}" class="inline-flex items-center gap-2 text-gray-500 hover:text-primary text-sm font-semibold transition-colors">
            <span class="material-symbols-outlined text-[18px]">arrow_back</span>
            Back to Lead
        </a>
    </div>

    <div class="bg-white dark:bg-[#1a1d2d] rounded-xl shadow-sm border border-gray-100 dark:border-[#2a2e3f] p-6">
        <div class="mb-6">
            <h1 class="text-2xl font-display font-black text-navy dark:text-white tracking-tight">Edit Lead</h1>
            <p class="text-gray-500 dark:text-gray-400 text-sm mt-1">Update lead information</p>
        </div>

        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    {{ form_label(form.contactName, null, {'label_attr': {'class': 'block text-sm font-bold text-navy dark:text-white mb-2'}}) }}
                    {{ form_widget(form.contactName, {'attr': {'class': 'w-full rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-[#0f1223] px-4 py-3 text-sm text-navy dark:text-white focus:outline-none focus:ring-2 focus:ring-primary/50'}}) }}
                </div>

                <div>
                    {{ form_label(form.companyName, null, {'label_attr': {'class': 'block text-sm font-bold text-navy dark:text-white mb-2'}}) }}
                    {{ form_widget(form.companyName, {'attr': {'class': 'w-full rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-[#0f1223] px-4 py-3 text-sm text-navy dark:text-white focus:outline-none focus:ring-2 focus:ring-primary/50'}}) }}
                </div>

                <div>
                    {{ form_label(form.email, null, {'label_attr': {'class': 'block text-sm font-bold text-navy dark:text-white mb-2'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'w-full rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-[#0f1223] px-4 py-3 text-sm text-navy dark:text-white focus:outline-none focus:ring-2 focus:ring-primary/50'}}) }}
                </div>

                <div>
                    {{ form_label(form.phone, null, {'label_attr': {'class': 'block text-sm font-bold text-navy dark:text-white mb-2'}}) }}
                    {{ form_widget(form.phone, {'attr': {'class': 'w-full rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-[#0f1223] px-4 py-3 text-sm text-navy dark:text-white focus:outline-none focus:ring-2 focus:ring-primary/50'}}) }}
                </div>

                <div>
                    {{ form_label(form.position, null, {'label_attr': {'class': 'block text-sm font-bold text-navy dark:text-white mb-2'}}) }}
                    {{ form_widget(form.position, {'attr': {'class': 'w-full rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-[#0f1223] px-4 py-3 text-sm text-navy dark:text-white focus:outline-none focus:ring-2 focus:ring-primary/50'}}) }}
                </div>

                <div>
                    {{ form_label(form.status, null, {'label_attr': {'class': 'block text-sm font-bold text-navy dark:text-white mb-2'}}) }}
                    {{ form_widget(form.status, {'attr': {'class': 'w-full rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-[#0f1223] px-4 py-3 text-sm text-navy dark:text-white focus:outline-none focus:ring-2 focus:ring-primary/50'}}) }}
                </div>

                <div>
                    {{ form_label(form.campaign, null, {'label_attr': {'class': 'block text-sm font-bold text-navy dark:text-white mb-2'}}) }}
                    {{ form_widget(form.campaign, {'attr': {'class': 'w-full rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-[#0f1223] px-4 py-3 text-sm text-navy dark:text-white focus:outline-none focus:ring-2 focus:ring-primary/50'}}) }}
                </div>

                <div>
                    {{ form_label(form.channel, null, {'label_attr': {'class': 'block text-sm font-bold text-navy dark:text-white mb-2'}}) }}
                    {{ form_widget(form.channel, {'attr': {'class': 'w-full rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-[#0f1223] px-4 py-3 text-sm text-navy dark:text-white focus:outline-none focus:ring-2 focus:ring-primary/50'}}) }}
                </div>
            </div>

            <div class="flex gap-4 pt-4">
                <button type="submit" class="flex-1 h-12 rounded-lg bg-gold text-navy text-sm font-black uppercase tracking-widest hover:brightness-110 transition-all shadow-lg shadow-gold/20">
                    Update Lead
                </button>
                <a href="{{ path('app_marketing_lead_show', {id: lead.id}) }}" class="h-12 px-6 rounded-lg border-2 border-gray-200 dark:border-gray-600 text-navy dark:text-white text-sm font-black uppercase tracking-widest hover:bg-gray-50 dark:hover:bg-gray-800 flex items-center justify-center transition-all">
                    Cancel
                </a>
            </div>
        {{ form_end(form) }}

        <!-- Delete section -->
        <div class="mt-8 pt-6 border-t border-gray-200 dark:border-gray-700">
            <h3 class="text-sm font-bold text-red-600 mb-2">Danger Zone</h3>
            <p class="text-xs text-gray-500 mb-4">Once you delete a lead, there is no going back.</p>
            <form method="post" action="{{ path('app_marketing_lead_delete', {id: lead.id}) }}" onsubmit="return confirm('Are you sure you want to delete this lead?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ lead.id) }}">
                <button type="submit" class="h-10 px-4 rounded-lg border-2 border-red-300 text-red-600 text-xs font-black uppercase tracking-widest hover:bg-red-50 dark:hover:bg-red-900/20 transition-all">
                    Delete Lead
                </button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
