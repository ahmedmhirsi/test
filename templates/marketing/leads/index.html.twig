{% extends 'back_office/base.html.twig' %}

{% block title %}Marketing Leads{% endblock %}

{% block breadcrumb %}
    <span class="material-symbols-outlined text-gray-400">chevron_right</span>
    <span class="text-sm font-semibold text-gray-500">Marketing</span>
    <span class="material-symbols-outlined text-gray-400">chevron_right</span>
    <span class="text-sm font-semibold text-primary">Leads</span>
{% endblock %}

{% block content %}
<div data-controller="page-transition">
<div class="p-4 md:p-8 space-y-6">
    
    {# ── Header ── #}
    <div class="flex justify-between items-center">
        <div>
            <h1 class="page-title text-3xl font-black text-[#D3C3B9] dark:text-white tracking-tight">Lead Management</h1>
            <p class="page-subtitle text-[#A79E9C] dark:text-[#9ca3af] text-sm font-semibold mt-1">Track and manage your B2B prospects</p>
        </div>
    </div>

    {# ── Status Filters ── #}
    <div class="flex gap-2 overflow-x-auto pb-1 animate-toolbar">
        <a href="{{ path('app_marketing_leads') }}" class="sort-pill {{ not currentStatus ? 'active' : '' }}">
            All ({{ leads|length }})
        </a>
        <a href="{{ path('app_marketing_leads', {status: 'new'}) }}" class="px-4 py-2 rounded-full text-[11px] font-bold uppercase tracking-wider whitespace-nowrap transition-all
            {% if currentStatus == 'new' %}bg-blue-500 text-white shadow-md{% else %}bg-white dark:bg-[#1a1d2d] text-gray-600 dark:text-gray-400 border border-gray-200 dark:border-gray-700 hover:border-blue-500 hover:text-blue-500{% endif %}">
            New ({{ leadCounts.new|default(0) }})
        </a>
        <a href="{{ path('app_marketing_leads', {status: 'contacted'}) }}" class="px-4 py-2 rounded-full text-[11px] font-bold uppercase tracking-wider whitespace-nowrap transition-all
            {% if currentStatus == 'contacted' %}bg-amber-500 text-white shadow-md{% else %}bg-white dark:bg-[#1a1d2d] text-gray-600 dark:text-gray-400 border border-gray-200 dark:border-gray-700 hover:border-amber-500 hover:text-amber-500{% endif %}">
            Contacted ({{ leadCounts.contacted|default(0) }})
        </a>
        <a href="{{ path('app_marketing_leads', {status: 'qualified'}) }}" class="px-4 py-2 rounded-full text-[11px] font-bold uppercase tracking-wider whitespace-nowrap transition-all
            {% if currentStatus == 'qualified' %}bg-purple-500 text-white shadow-md{% else %}bg-white dark:bg-[#1a1d2d] text-gray-600 dark:text-gray-400 border border-gray-200 dark:border-gray-700 hover:border-purple-500 hover:text-purple-500{% endif %}">
            Qualified ({{ leadCounts.qualified|default(0) }})
        </a>
        <a href="{{ path('app_marketing_leads', {status: 'converted'}) }}" class="px-4 py-2 rounded-full text-[11px] font-bold uppercase tracking-wider whitespace-nowrap transition-all
            {% if currentStatus == 'converted' %}bg-green-500 text-white shadow-md{% else %}bg-white dark:bg-[#1a1d2d] text-gray-600 dark:text-gray-400 border border-gray-200 dark:border-gray-700 hover:border-green-500 hover:text-green-500{% endif %}">
            Converted ({{ leadCounts.converted|default(0) }})
        </a>
        <a href="{{ path('app_marketing_leads', {status: 'lost'}) }}" class="px-4 py-2 rounded-full text-[11px] font-bold uppercase tracking-wider whitespace-nowrap transition-all
            {% if currentStatus == 'lost' %}bg-red-500 text-white shadow-md{% else %}bg-white dark:bg-[#1a1d2d] text-gray-600 dark:text-gray-400 border border-gray-200 dark:border-gray-700 hover:border-red-500 hover:text-red-500{% endif %}">
            Lost ({{ leadCounts.lost|default(0) }})
        </a>
    </div>

    {# ── Search & PDF Bar ── #}
    <div class="flex flex-wrap items-center gap-3 animate-toolbar">
        <form method="get" action="{{ path('app_marketing_leads') }}" class="flex-1 min-w-[200px]">
            <div class="search-bar">
                <span class="material-symbols-outlined search-icon">search</span>
                <input type="text" name="q" value="{{ search }}" placeholder="Rechercher un lead...">
                <input type="hidden" name="sort" value="{{ sort }}">
                <input type="hidden" name="order" value="{{ order }}">
                {% if currentStatus %}<input type="hidden" name="status" value="{{ currentStatus }}">{% endif %}
            </div>
        </form>
        <a href="{{ path('app_marketing_leads_pdf') }}" 
           class="flex items-center gap-2 px-4 py-2.5 bg-red-600 hover:bg-red-700 text-white font-semibold rounded-xl transition-all shadow-sm hover:shadow-lg hover:-translate-y-0.5">
            <span class="material-symbols-outlined text-lg">picture_as_pdf</span>
            PDF
        </a>
    </div>

    {# ── Sort Bar ── #}
    <div class="flex items-center gap-3 animate-toolbar">
        <span class="text-[#A79E9C] dark:text-[#9ca3af] text-sm font-medium">Sort by:</span>
        <div class="flex gap-2 flex-wrap">
            <a href="{{ path('app_marketing_leads', {q: search, status: currentStatus, sort: 'contactName', order: sort == 'contactName' and order == 'ASC' ? 'DESC' : 'ASC'}) }}" 
               class="sort-pill {{ sort == 'contactName' ? 'active' : '' }}">
                Contact {{ sort == 'contactName' ? (order == 'ASC' ? '↑' : '↓') : '' }}
            </a>
            <a href="{{ path('app_marketing_leads', {q: search, status: currentStatus, sort: 'companyName', order: sort == 'companyName' and order == 'ASC' ? 'DESC' : 'ASC'}) }}" 
               class="sort-pill {{ sort == 'companyName' ? 'active' : '' }}">
                Company {{ sort == 'companyName' ? (order == 'ASC' ? '↑' : '↓') : '' }}
            </a>
            <a href="{{ path('app_marketing_leads', {q: search, status: currentStatus, sort: 'createdAt', order: sort == 'createdAt' and order == 'DESC' ? 'ASC' : 'DESC'}) }}" 
               class="sort-pill {{ sort == 'createdAt' ? 'active' : '' }}">
                Date {{ sort == 'createdAt' ? (order == 'ASC' ? '↑' : '↓') : '' }}
            </a>
        </div>
    </div>

    {# ── Leads Table ── #}
    <div class="section-card">
        <div class="overflow-x-auto">
            <table class="premium-table">
                <thead>
                    <tr>
                        <th class="text-left">Contact</th>
                        <th class="text-left">Company</th>
                        <th class="text-left">Position</th>
                        <th class="text-left">Campaign</th>
                        <th class="text-left">Status</th>
                        <th class="text-right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for lead in leads %}
                    <tr class="animate-row">
                        <td>
                            <div class="flex items-center gap-3">
                                <div class="size-9 rounded-full bg-primary/10 flex items-center justify-center text-primary font-bold text-xs">
                                    {{ lead.contactName|slice(0, 2)|upper }}
                                </div>
                                <div>
                                    <p class="text-sm font-bold text-[#D3C3B9] dark:text-white">{{ lead.contactName }}</p>
                                    <p class="text-xs text-[#A79E9C] dark:text-[#9ca3af]">{{ lead.email }}</p>
                                </div>
                            </div>
                        </td>
                        <td>
                            <p class="text-sm font-medium text-[#D3C3B9] dark:text-white">{{ lead.companyName }}</p>
                        </td>
                        <td>
                            <p class="text-sm text-[#A79E9C] dark:text-[#9ca3af]">{{ lead.position }}</p>
                        </td>
                        <td>
                            {% if lead.campaign %}
                            <span class="status-badge bg-gray-100 text-gray-600 dark:bg-gray-800 dark:text-gray-300">
                                {{ lead.campaign.name }}
                            </span>
                            {% else %}
                            <span class="text-xs text-[#9ca3af] italic">No Campaign</span>
                            {% endif %}
                        </td>
                        <td>
                            <span class="status-badge
                                {% if lead.status == 'converted' %}bg-green-100 text-green-700 dark:bg-green-900/30 dark:text-green-400
                                {% elseif lead.status == 'new' %}bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-400
                                {% elseif lead.status == 'contacted' %}bg-amber-100 text-amber-700 dark:bg-amber-900/30 dark:text-amber-400
                                {% elseif lead.status == 'qualified' %}bg-purple-100 text-purple-700 dark:bg-purple-900/30 dark:text-purple-400
                                {% else %}bg-red-100 text-red-700 dark:bg-red-900/30 dark:text-red-400{% endif %}">
                                {{ lead.statusLabel }}
                            </span>
                        </td>
                        <td class="text-right">
                            <div class="flex items-center justify-end gap-1 row-actions">
                                <a href="{{ path('app_marketing_lead_show', {id: lead.id}) }}" class="action-icon tooltip-hover" data-tooltip="View">
                                    <span class="material-symbols-outlined text-[18px]">visibility</span>
                                </a>
                                <a href="{{ path('app_marketing_lead_edit', {id: lead.id}) }}" class="action-icon edit tooltip-hover" data-tooltip="Edit">
                                    <span class="material-symbols-outlined text-[18px]">edit</span>
                                </a>
                                {% if lead.status != 'converted' and lead.status != 'lost' %}
                                <form method="post" action="{{ path('app_marketing_lead_update_status', {id: lead.id}) }}" class="inline">
                                    <select name="status" onchange="this.form.submit()" class="text-xs border border-gray-200 dark:border-gray-700 rounded-lg px-2 py-1 bg-white dark:bg-[#1a1d2d] text-[#D3C3B9] dark:text-white cursor-pointer focus:ring-1 focus:ring-primary focus:border-primary transition-all">
                                        <option value="">Status...</option>
                                        <option value="contacted">Contacted</option>
                                        <option value="qualified">Qualified</option>
                                        <option value="converted">Converted</option>
                                        <option value="lost">Lost</option>
                                    </select>
                                </form>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="6" class="px-6 py-12 text-center">
                            <div class="flex flex-col items-center gap-3 text-[#9ca3af]">
                                <span class="material-symbols-outlined text-[40px]">groups</span>
                                <p class="text-sm">No leads found</p>
                                <a href="{{ path('app_marketing_lead_new') }}" class="text-primary font-bold text-sm hover:underline">
                                    Add your first lead
                                </a>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>
{% endblock %}
