{% extends 'back_office/base.html.twig' %}

{% block title %}Meetings - Collaboration{% endblock %}

{% block breadcrumb %}
    <span class="material-symbols-outlined text-gray-400">chevron_right</span>
    <span class="text-sm font-semibold text-navy dark:text-white">Meetings</span>
{% endblock %}

{% block content %}
<main class="flex-1 overflow-y-auto bg-background-light dark:bg-background-dark p-4 md:p-8">
    <div class="max-w-7xl mx-auto space-y-6">
        
        <div class="flex justify-between items-center">
            <h1 class="text-3xl font-display font-black text-navy dark:text-white">Meetings</h1>
            <a href="{{ path('app_meeting_new') }}" class="h-11 px-6 rounded-lg bg-gold text-navy text-xs font-black uppercase tracking-widest hover:brightness-110 flex items-center gap-2 shadow-lg">
                <span class="material-symbols-outlined text-[18px]">add</span>
                Nouveau Meeting
            </a>
        </div>

        {# ========== Search & PDF Bar ========== #}
        <div class="flex flex-wrap items-center gap-3">
            <form method="get" action="{{ path('app_meeting_index') }}" class="flex-1 min-w-[200px]">
                <div class="relative">
                    <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-gray-400">search</span>
                    <input type="text" name="q" value="{{ searchTerm }}" placeholder="Rechercher un meeting..."
                           class="w-full pl-10 pr-4 py-2.5 bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800 rounded-xl text-sm focus:ring-2 focus:ring-primary/20 focus:border-primary outline-none transition-all">
                    <input type="hidden" name="sort" value="{{ currentSort }}">
                    <input type="hidden" name="order" value="{{ currentOrder }}">
                </div>
            </form>
            <a href="{{ path('app_meeting_export_pdf') }}" 
               class="flex items-center gap-2 px-4 py-2.5 bg-red-600 hover:bg-red-700 text-white font-semibold rounded-xl transition-all shadow-sm">
                <span class="material-symbols-outlined text-lg">picture_as_pdf</span>
                PDF
            </a>
        </div>

        {# ========== Sort Bar ========== #}
        <div class="flex items-center gap-3 bg-white dark:bg-gray-900 rounded-xl border border-gray-200 dark:border-gray-800 p-3">
            <span class="text-gray-500 text-sm font-medium">Trier par:</span>
            <div class="flex gap-2 flex-wrap">
                <a href="{{ path('app_meeting_index', {q: searchTerm, sort: 'titre', order: currentSort == 'titre' and currentOrder == 'ASC' ? 'DESC' : 'ASC'}) }}" 
                   class="px-3 py-1.5 rounded-lg text-sm font-medium transition-colors {{ currentSort == 'titre' ? 'bg-primary text-white' : 'bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400 hover:bg-gray-200 dark:hover:bg-gray-700' }}">
                    Titre {{ currentSort == 'titre' ? (currentOrder == 'ASC' ? '↑' : '↓') : '' }}
                </a>
                <a href="{{ path('app_meeting_index', {q: searchTerm, sort: 'date_debut', order: currentSort == 'date_debut' and currentOrder == 'DESC' ? 'ASC' : 'DESC'}) }}" 
                   class="px-3 py-1.5 rounded-lg text-sm font-medium transition-colors {{ currentSort == 'date_debut' ? 'bg-primary text-white' : 'bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400 hover:bg-gray-200 dark:hover:bg-gray-700' }}">
                    Date {{ currentSort == 'date_debut' ? (currentOrder == 'ASC' ? '↑' : '↓') : '' }}
                </a>
                <a href="{{ path('app_meeting_index', {q: searchTerm, sort: 'statut', order: currentSort == 'statut' and currentOrder == 'ASC' ? 'DESC' : 'ASC'}) }}" 
                   class="px-3 py-1.5 rounded-lg text-sm font-medium transition-colors {{ currentSort == 'statut' ? 'bg-primary text-white' : 'bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400 hover:bg-gray-200 dark:hover:bg-gray-700' }}">
                    Statut {{ currentSort == 'statut' ? (currentOrder == 'ASC' ? '↑' : '↓') : '' }}
                </a>
            </div>
        </div>


        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            {% for meeting in meetings %}
                <div class="bg-white dark:bg-[#1a1d2d] rounded-xl border border-gray-100 dark:border-[#2a2e3f] shadow-sm p-6">
                    <div class="flex justify-between items-start mb-4">
                        <h3 class="text-lg font-bold text-navy dark:text-white">{{ meeting.titre }}</h3>
                        <span class="px-2 py-1 text-[10px] font-bold rounded-full 
                            {% if meeting.statut == 'En cours' %}bg-green-100 text-green-800
                            {% elseif meeting.statut == 'Planifié' %}bg-blue-100 text-blue-800
                            {% else %}bg-gray-100 text-gray-800{% endif %}">
                            {{ meeting.statut }}
                        </span>
                    </div>
                    <div class="space-y-2 text-sm text-gray-600 dark:text-gray-400 mb-4">
                        <p><span class="material-symbols-outlined text-[16px] inline">schedule</span> {{ meeting.dateDebut|date('d/m/Y H:i') }}</p>
                        <p><span class="material-symbols-outlined text-[16px] inline">timer</span> {{ meeting.duree }} minutes</p>
                        <p><span class="material-symbols-outlined text-[16px] inline">group</span> {{ meeting.participantCount }} participants</p>
                    </div>
                    <div class="flex gap-2">
                        <a href="{{ path('app_meeting_show', {'id': meeting.id}) }}" class="flex-1 px-4 py-2 bg-primary text-white rounded-lg text-xs font-bold text-center hover:brightness-110">Voir</a>
                        <a href="{{ path('app_meeting_edit', {'id': meeting.id}) }}" class="px-4 py-2 border-2 border-gray-200 dark:border-gray-600 rounded-lg text-xs font-bold hover:bg-gray-50 dark:hover:bg-gray-800">Modifier</a>
                    </div>
                </div>
            {% else %}
                <div class="col-span-3 text-center py-12 text-gray-500">
                    Aucun meeting trouvé. <a href="{{ path('app_meeting_new') }}" class="text-primary font-bold">Créer le premier meeting</a>
                </div>
            {% endfor %}
        </div>
    </div>
</main>
{% endblock %}
