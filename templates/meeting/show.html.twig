{% extends 'base.html.twig' %}

{% block title %}{{ meeting.titre }} - Meeting{% endblock %}

{% block body %}
<main class="flex-1 overflow-y-auto bg-background-light dark:bg-background-dark p-4 md:p-8">
    <div class="max-w-5xl mx-auto space-y-6">
        
        <div class="bg-white dark:bg-[#1a1d2d] rounded-xl border border-gray-100 dark:border-[#2a2e3f] shadow-sm p-6">
            <div class="flex justify-between items-start mb-6">
                <div>
                    <h1 class="text-3xl font-display font-black text-navy dark:text-white">{{ meeting.titre }}</h1>
                    <p class="text-gray-500 mt-2">{{ meeting.dateDebut|date('d/m/Y à H:i') }} • {{ meeting.duree }} minutes</p>
                </div>
                <span class="px-4 py-2 text-sm font-bold rounded-full 
                    {% if meeting.statut == 'En cours' %}bg-green-100 text-green-800
                    {% elseif meeting.statut == 'Planifié' %}bg-blue-100 text-blue-800
                    {% else %}bg-gray-100 text-gray-800{% endif %}">
                    {{ meeting.statut }}
                </span>
            </div>

            {% if meeting.agenda %}
                <div class="mb-6">
                    <h3 class="font-bold text-navy dark:text-white mb-2">Agenda</h3>
                    <p class="text-gray-600 dark:text-gray-400">{{ meeting.agenda }}</p>
                </div>
            {% endif %}

            <div class="grid grid-cols-2 gap-4 mb-6">
                {% if meeting.channelVocal %}
                    <div class="p-4 bg-orange-50 dark:bg-orange-900/20 rounded-lg">
                        <div class="flex items-center gap-2 mb-2">
                            <span class="material-symbols-outlined text-orange-600">mic</span>
                            <span class="font-bold text-navy dark:text-white">Channel Vocal</span>
                        </div>
                        <p class="text-sm text-gray-600 dark:text-gray-400">{{ meeting.channelVocal.nom }}</p>
                    </div>
                {% endif %}

                {% if meeting.channelMessage %}
                    <div class="p-4 bg-blue-50 dark:bg-blue-900/20 rounded-lg">
                        <div class="flex items-center gap-2 mb-2">
                            <span class="material-symbols-outlined text-blue-600">chat</span>
                            <span class="font-bold text-navy dark:text-white">Channel Messages</span>
                        </div>
                        <p class="text-sm text-gray-600 dark:text-gray-400">{{ meeting.channelMessage.nom }}</p>
                    </div>
                {% endif %}
            </div>

            {% if meeting.googleMeetLink %}
                <div class="mb-6 p-4 bg-green-50 dark:bg-green-900/20 border-2 border-green-200 dark:border-green-800 rounded-lg">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center gap-3">
                            <span class="material-symbols-outlined text-green-600 text-[32px]">videocam</span>
                            <div>
                                <h3 class="font-bold text-navy dark:text-white">Visioconférence Active</h3>
                                <p class="text-sm text-gray-600 dark:text-gray-400">Le meeting est en cours en visioconférence</p>
                            </div>
                        </div>
                        <a href="{{ meeting.googleMeetLink }}" target="_blank" class="h-11 px-6 rounded-lg bg-green-600 text-white text-xs font-black uppercase tracking-widest hover:brightness-110 shadow-lg flex items-center gap-2">
                            <span class="material-symbols-outlined text-[18px]">videocam</span>
                            Rejoindre
                        </a>
                    </div>
                    <div class="mt-3 p-2 bg-white dark:bg-gray-800 rounded border border-gray-200 dark:border-gray-700">
                        <p class="text-xs text-gray-500 mb-1">Lien :</p>
                        <code class="text-xs text-primary font-mono break-all">{{ meeting.googleMeetLink }}</code>
                    </div>
                </div>
            {% endif %}

            <div class="flex gap-3">
                {% if meeting.statut == 'Planifié' %}
                    <form method="post" action="{{ path('app_meeting_start', {'id': meeting.id}) }}" data-turbo="false">
                        <input type="hidden" name="_token" value="{{ csrf_token('start' ~ meeting.id) }}">
                        <button type="submit" class="h-11 px-6 rounded-lg bg-green-600 text-white text-xs font-black uppercase tracking-widest hover:brightness-110">
                            <span class="material-symbols-outlined text-[18px] inline">play_arrow</span>
                            Démarrer
                        </button>
                    </form>
                {% endif %}

                {% if meeting.statut == 'En cours' %}
                    <form method="post" action="{{ path('app_meeting_end', {'id': meeting.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('end' ~ meeting.id) }}">
                        <button type="submit" class="h-11 px-6 rounded-lg bg-red-600 text-white text-xs font-black uppercase tracking-widest hover:brightness-110">
                            <span class="material-symbols-outlined text-[18px] inline">stop</span>
                            Terminer
                        </button>
                    </form>
                {% endif %}

                <a href="{{ path('app_meeting_edit', {'id': meeting.id}) }}" class="h-11 px-6 rounded-lg border-2 border-gray-200 dark:border-gray-600 text-navy dark:text-white text-xs font-black uppercase tracking-widest hover:bg-gray-50 dark:hover:bg-gray-800 flex items-center">
                    Modifier
                </a>

                <form method="post" action="{{ path('app_meeting_delete', {'id': meeting.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce meeting ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ meeting.id) }}">
                    <button type="submit" class="h-11 px-6 rounded-lg border-2 border-red-200 text-red-600 text-xs font-black uppercase tracking-widest hover:bg-red-50">
                        Supprimer
                    </button>
                </form>
            </div>
        </div>

    </div>
</main>
{% endblock %}
