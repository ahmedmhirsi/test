{% extends 'layout/employe.html.twig' %}

{% block title %}Détails du Message - SmartNexus AI{% endblock %}

{% block breadcrumb %}
    <span class="text-[#9ca3af] material-symbols-outlined text-[16px]">chevron_right</span>
    <span class="text-primary font-semibold">Collaboration</span>
    <span class="text-[#9ca3af] material-symbols-outlined text-[16px]">chevron_right</span>
    <span class="text-[#A79E9C] dark:text-[#9ca3af]">Détails du Message</span>
{% endblock %}

{% block content %}
<div class="max-w-5xl mx-auto space-y-6">
    <!-- Message Card -->
    <div class="bg-white dark:bg-[#1a1d2d] rounded-2xl border border-[#e5e7eb] dark:border-[#1f2128] shadow-xl overflow-hidden">
        <div class="p-8">
            <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-8">
                <div class="flex items-center gap-4">
                    <div class="w-14 h-14 rounded-full bg-gradient-to-br from-navy to-electric flex items-center justify-center text-white font-black text-xl shadow-lg shadow-navy/20">
                        {{ message.authorName|slice(0, 1)|upper }}
                    </div>
                    <div>
                        <h1 class="text-2xl font-black text-[#D3C3B9] dark:text-white">Message de {{ message.authorName }}</h1>
                        <p class="text-[#A79E9C] dark:text-[#9ca3af] text-sm font-medium">
                            <span class="material-symbols-outlined text-[16px] align-middle">calendar_month</span> {{ message.dateEnvoi|date('d/m/Y à H:i') }} 
                            <span class="mx-2">•</span> 
                            <span class="material-symbols-outlined text-[16px] align-middle">forum</span> {{ message.channel.nom }}
                        </p>
                    </div>
                </div>
                <div class="flex gap-2">
                    <span class="px-3 py-1.5 text-[10px] font-black uppercase tracking-wider rounded-lg 
                        {% if message.statut == 'Visible' %}bg-green-100 text-green-700
                        {% else %}bg-red-100 text-red-700{% endif %}">
                        {{ message.statut }}
                    </span>
                    <span class="px-3 py-1.5 text-[10px] font-black uppercase tracking-wider rounded-lg bg-blue-100 text-blue-700">
                        {{ message.visibility }}
                    </span>
                </div>
            </div>

            <div class="mb-8 p-6 bg-[#f8f8f5] dark:bg-[#0f1115] rounded-2xl border border-[#e5e7eb] dark:border-[#1f2128]">
                <p class="text-[#D3C3B9] dark:text-[#cbd5e1] text-lg leading-relaxed whitespace-pre-wrap">{{ message.contenu }}</p>
            </div>

            {% if message.hashtags|length > 0 %}
                <div class="mb-8">
                    <h3 class="text-sm font-black text-navy dark:text-white uppercase tracking-widest mb-3 flex items-center gap-2">
                        <span class="material-symbols-outlined text-primary">tag</span>
                        Hashtags
                    </h3>
                    <div class="flex flex-wrap gap-2">
                        {% for tag in message.hashtags %}
                            <a href="{{ path('app_message_hashtag', {'tag': tag}) }}" class="px-3 py-1 bg-primary/10 text-primary text-xs font-black rounded-lg hover:bg-primary/20 transition-all uppercase tracking-wider">
                                #{{ tag }}
                            </a>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

            <div class="flex flex-wrap gap-4 pt-8 border-t border-[#e5e7eb] dark:border-[#1f2128]">
                <a href="{{ path('app_message_edit', {'id': message.id}) }}" class="h-11 px-6 rounded-xl border-2 border-[#e5e7eb] dark:border-[#1f2128] text-navy dark:text-white text-xs font-black uppercase tracking-widest hover:bg-gray-50 dark:hover:bg-[#161516] flex items-center gap-2 transition-all">
                    <span class="material-symbols-outlined text-[18px]">edit</span>
                    Modifier
                </a>

                <form method="post" action="{{ path('app_message_delete', {'id': message.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce message ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ message.id) }}">
                    <button type="submit" class="h-11 px-6 rounded-xl border-2 border-red-100 text-red-600 text-xs font-black uppercase tracking-widest hover:bg-red-50 transition-all flex items-center gap-2">
                        <span class="material-symbols-outlined text-[18px]">delete</span>
                        Supprimer
                    </button>
                </form>

                <a href="{{ path('app_message_index') }}" class="h-11 px-6 rounded-xl bg-[#f0f0f5] dark:bg-[#161516] text-[#A79E9C] dark:text-[#9ca3af] text-xs font-black uppercase tracking-widest hover:brightness-95 flex items-center gap-2 ml-auto transition-all">
                    <span class="material-symbols-outlined text-[18px]">arrow_back</span>
                    Retour à la liste
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
