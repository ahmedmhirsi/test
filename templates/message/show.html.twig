{% extends 'base.html.twig' %}

{% block title %}{{ message.id ? 'Message' : 'Nouveau Message' }}{% endblock %}

{% block body %}
<main class="flex-1 overflow-y-auto bg-background-light dark:bg-background-dark p-4 md:p-8">
    <div class="max-w-5xl mx-auto space-y-6">
        
        <div class="bg-white dark:bg-[#1a1d2d] rounded-xl border border-gray-100 dark:border-[#2a2e3f] shadow-sm p-6">
            <div class="flex justify-between items-start mb-6">
                <div>
                    <h1 class="text-2xl font-display font-black text-navy dark:text-white">Message de {{ message.user.nom }}</h1>
                    <p class="text-gray-500 mt-1">{{ message.dateEnvoi|date('d/m/Y à H:i') }} • {{ message.channel.nom }}</p>
                </div>
                <div class="flex gap-2">
                    <span class="px-3 py-1 text-xs font-bold rounded-full 
                        {% if message.statut == 'Visible' %}bg-green-100 text-green-800
                        {% else %}bg-red-100 text-red-800{% endif %}">
                        {{ message.statut }}
                    </span>
                    <span class="px-3 py-1 text-xs font-bold rounded-full bg-blue-100 text-blue-800">
                        {{ message.visibility }}
                    </span>
                </div>
            </div>

            <div class="mb-6 p-4 bg-gray-50 dark:bg-gray-800 rounded-lg">
                <p class="text-gray-700 dark:text-gray-300 whitespace-pre-wrap">{{ message.contenu }}</p>
            </div>

            {% if message.hashtags|length > 0 %}
                <div class="mb-6">
                    <h3 class="font-bold text-navy dark:text-white mb-2">Hashtags</h3>
                    <div class="flex gap-2">
                        {% for tag in message.hashtags %}
                            <a href="{{ path('app_message_hashtag', {'tag': tag}) }}" class="px-3 py-1 bg-primary/10 text-primary text-sm font-bold rounded-full hover:bg-primary/20">
                                #{{ tag }}
                            </a>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

            <div class="flex gap-3">
                <a href="{{ path('app_message_edit', {'id': message.id}) }}" class="h-11 px-6 rounded-lg border-2 border-gray-200 dark:border-gray-600 text-navy dark:text-white text-xs font-black uppercase tracking-widest hover:bg-gray-50 dark:hover:bg-gray-800 flex items-center">
                    Modifier
                </a>

                <form method="post" action="{{ path('app_message_delete', {'id': message.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce message ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ message.id) }}">
                    <button type="submit" class="h-11 px-6 rounded-lg border-2 border-red-200 text-red-600 text-xs font-black uppercase tracking-widest hover:bg-red-50">
                        Supprimer
                    </button>
                </form>

                <a href="{{ path('app_message_index') }}" class="h-11 px-6 rounded-lg bg-gray-100 dark:bg-gray-700 text-navy dark:text-white text-xs font-black uppercase tracking-widest hover:bg-gray-200 dark:hover:bg-gray-600 flex items-center ml-auto">
                    Retour
                </a>
            </div>
        </div>

    </div>
</main>
{% endblock %}
