{% extends 'back_office/base.html.twig' %}

{% block title %}Modifier l'Offre{% endblock %}

{% block breadcrumb %}
    <span class="text-[#9ca3af] material-symbols-outlined text-[16px]">chevron_right</span>
    <a href="{{ path('app_offre_emploi_index') }}" class="text-[#A79E9C] hover:text-primary transition-colors font-medium">Offres</a>
    <span class="text-[#9ca3af] material-symbols-outlined text-[16px]">chevron_right</span>
    <span class="text-primary font-semibold">Modification</span>
{% endblock %}

{% block content %}
<div data-controller="page-transition">
    <div class="max-w-3xl mx-auto">
        <div class="mb-8 flex items-center justify-between">
            <div>
                <h1 class="page-title text-2xl font-black text-[#D3C3B9] dark:text-white tracking-tight">Modifier l'Offre</h1>
                <p class="page-subtitle text-[#A79E9C] dark:text-[#9ca3af] mt-1">Mettez à jour les détails de ce poste.</p>
            </div>
            <a href="{{ path('app_offre_emploi_index') }}" class="text-[#A79E9C] hover:text-primary flex items-center gap-2 text-sm font-bold transition-colors">
                <span class="material-symbols-outlined text-[18px]">close</span>
                Annuler
            </a>
        </div>

        <div class="section-card animate-card p-8">
            {{ include('offre_emploi/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        </div>
        
        <div class="mt-6 flex justify-end animate-row">
            {{ include('offre_emploi/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
