{% extends 'back_office/base.html.twig' %}

{% block title %}Offres d'Emploi - Nexus AI{% endblock %}

{% block header_title %}
    <span class="flex items-center gap-2">
        <span class="material-symbols-outlined text-nexus-primary animate-pulse-slow">work</span>
        Recrutement Command
    </span>
{% endblock %}

{% block content %}
<div class="swup-transition-fade pb-20">

    {# ─── Header ─── #}
    <div class="flex flex-col md:flex-row justify-between items-end mb-8 gap-4">
        <div>
             <h1 class="text-4xl font-black text-white tracking-tight leading-tight animate-slide-up">
                Postes <span class="text-transparent bg-clip-text bg-gradient-to-r from-nexus-primary to-emerald-400">Ouverts</span>
            </h1>
            <p class="text-gray-400 text-sm mt-2 animate-slide-up" style="animation-delay: 0.1s">
                Gérez les opportunités et attirez les meilleurs talents.
            </p>
        </div>
        
        <div class="flex gap-3 animate-slide-up" style="animation-delay: 0.2s">
             <a href="{{ path('app_offre_emploi_export_pdf') }}" class="glass-panel px-4 py-2 flex items-center gap-2 rounded-full hover:bg-white/10 transition-colors group">
                <span class="material-symbols-outlined text-red-400 group-hover:scale-110 transition-transform">picture_as_pdf</span>
                <span class="text-xs font-bold text-gray-300 uppercase tracking-wider">Export PDF</span>
            </a>
            <a href="{{ path('app_offre_emploi_new') }}" class="btn-nexus-primary rounded-full px-6 py-2 flex items-center gap-2 shadow-lg shadow-nexus-primary/30 group">
                <span class="material-symbols-outlined text-lg group-hover:rotate-90 transition-transform">add</span>
                <span>Nouvelle Offre</span>
            </a>
        </div>
    </div>

    {# ─── Stats & Filter ─── #}
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8 animate-slide-up" style="animation-delay: 0.3s">
        <div class="glass-panel p-5 relative overflow-hidden">
            <div class="absolute top-0 right-0 p-4 opacity-5">
                <span class="material-symbols-outlined text-6xl">work_history</span>
            </div>
            <p class="text-[10px] font-black text-gray-500 uppercase tracking-widest mb-1">Total Offres</p>
            <h3 class="text-3xl font-black text-white">{{ offres|length }}</h3>
        </div>
        
        <div class="glass-panel p-5 relative overflow-hidden">
             <div class="absolute top-0 right-0 p-4 opacity-5">
                <span class="material-symbols-outlined text-6xl">check_circle</span>
            </div>
             <p class="text-[10px] font-black text-gray-500 uppercase tracking-widest mb-1">Actives</p>
            <h3 class="text-3xl font-black text-emerald-400">{{ offres|filter(o => o.statut == 'Active')|length }}</h3>
        </div>

        <div class="col-span-1 md:col-span-2 glass-panel p-2 flex items-center gap-2">
            <span class="material-symbols-outlined text-gray-500 pl-3">search</span>
            <input type="text" id="searchInput" placeholder="Rechercher par poste, description..." 
                   class="bg-transparent border-none text-white w-full focus:ring-0 placeholder-gray-600">
        </div>
    </div>

    {# ─── Offers Grid ─── #}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 animate-slide-up" style="animation-delay: 0.4s">
        {% for offre in offres %}
        <div class="glass-panel p-0 group hover:-translate-y-2 transition-transform duration-300 relative overflow-hidden flex flex-col h-full">
            
            {# Status Strip #}
            <div class="absolute top-0 left-0 w-1 h-full
                {% if offre.statut == 'Active' %}bg-emerald-500 shadow-[0_0_10px_rgba(16,185,129,0.5)]
                {% elseif offre.statut == 'Closed' %}bg-red-500
                {% else %}bg-gray-500{% endif %}">
            </div>

            <div class="p-6 flex flex-col h-full">
                <div class="flex justify-between items-start mb-4 pl-2">
                    <span class="px-2.5 py-1 rounded-full text-[10px] font-bold uppercase tracking-wider border border-white/5
                        {% if offre.typeContrat == 'CDI' %}bg-blue-500/10 text-blue-400 border-blue-500/20
                        {% elseif offre.typeContrat == 'CDD' %}bg-amber-500/10 text-amber-400 border-amber-500/20
                        {% elseif offre.typeContrat == 'Freelance' %}bg-purple-500/10 text-purple-400 border-purple-500/20
                        {% else %}bg-gray-500/10 text-gray-400 border-gray-500/20{% endif %}">
                        {{ offre.typeContrat }}
                    </span>
                    
                    {% if offre.statut == 'Active' %}
                        <span class="flex items-center gap-1 text-[10px] font-bold text-emerald-400 uppercase tracking-wider">
                            <span class="size-1.5 rounded-full bg-emerald-400 animate-pulse"></span> Active
                        </span>
                    {% else %}
                         <span class="text-[10px] font-bold text-gray-500 uppercase tracking-wider">{{ offre.statut }}</span>
                    {% endif %}
                </div>

                <h3 class="text-xl font-bold text-white mb-2 pl-2 group-hover:text-nexus-primary transition-colors line-clamp-2">{{ offre.poste }}</h3>
                <p class="text-sm text-gray-400 mb-6 pl-2 line-clamp-3 flex-1">{{ offre.description|striptags }}</p>

                <div class="mt-auto pl-2">
                     <div class="flex items-center gap-2 text-xs font-mono text-gray-500 mb-4">
                        <span class="material-symbols-outlined text-[16px]">payments</span>
                        <span class="text-white">{{ offre.salaireMin|number_format(0, '.', ' ') }} - {{ offre.salaireMax|number_format(0, '.', ' ') }}</span> TND
                    </div>

                    <div class="flex items-center gap-2 pt-4 border-t border-white/5">
                        <a href="{{ path('app_offre_emploi_show', {'id': offre.id}) }}" class="flex-1 py-2 text-center rounded-lg bg-white/5 hover:bg-white/10 text-xs font-bold text-gray-300 hover:text-white transition-colors">
                            Voir Détails
                        </a>
                         <a href="{{ path('app_offre_emploi_edit', {'id': offre.id}) }}" class="size-8 flex items-center justify-center rounded-lg hover:bg-nexus-accent hover:text-white text-gray-500 transition-colors">
                            <span class="material-symbols-outlined text-[18px]">edit</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        {% else %}
        <div class="col-span-full py-16 text-center glass-panel border-dashed">
            <div class="size-20 rounded-full bg-white/5 flex items-center justify-center mx-auto mb-4">
                <span class="material-symbols-outlined text-4xl text-gray-600">work_off</span>
            </div>
            <h3 class="text-lg font-bold text-white mb-1">Aucune offre publiée</h3>
            <p class="text-gray-500 text-sm">Créez une nouvelle offre pour commencer à recruter.</p>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
