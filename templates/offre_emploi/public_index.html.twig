{% extends 'front_office/base.html.twig' %}

{% block title %}Nos Offres d'Emploi - SmartNexus AI{% endblock %}

{% block sidebar_nav %}
    {% include 'client/_sidebar.html.twig' %}
{% endblock %}

{% block breadcrumb %}
    <span class="text-[#9ca3af] material-symbols-outlined text-[16px]">chevron_right</span>
    <span class="text-primary font-semibold">Carrières</span>
{% endblock %}

{% block content %}
<div data-controller="page-transition" class="space-y-8">

    {# ── Search ── #}
    <div class="form-glass p-6">
        <form action="{{ path('app_offre_emploi_public') }}" method="get" class="flex flex-col md:flex-row gap-4 items-center">
            <div class="flex-1 w-full">
                <div class="search-bar">
                    <span class="material-symbols-outlined search-icon">search</span>
                    <input type="text" name="q" value="{{ searchTerm }}" placeholder="Rechercher un poste (ex: Développeur, UX, Data...)">
                </div>
            </div>
            <button type="submit" class="btn-primary-animated flex items-center justify-center gap-2 px-6 py-3 text-sm w-full md:w-auto">
                <span class="material-symbols-outlined text-[18px]">search</span>
                Rechercher
            </button>
        </form>
    </div>

    {# ── Job Offers ── #}
    <section>
        <div class="flex items-center justify-between mb-6 px-2">
            <h2 class="page-title text-2xl font-black text-[#D3C3B9] dark:text-white flex items-center gap-2">
                <span class="material-symbols-outlined text-primary">work</span>
                Postes Ouverts
            </h2>
            <span class="page-subtitle text-xs font-bold text-[#9ca3af] uppercase tracking-wider">{{ offres|length }} opportunités</span>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for offre in offres %}
                <div class="stat-card animate-card group">
                    <div class="flex justify-between items-start mb-4">
                        <div class="size-12 rounded-xl bg-primary/10 flex items-center justify-center group-hover:bg-primary/20 group-hover:scale-110 transition-all">
                            <span class="material-symbols-outlined text-primary text-[24px]">business_center</span>
                        </div>
                        <span class="status-badge bg-green-100 text-green-700 dark:bg-green-900/20 dark:text-green-400">
                            {{ offre.typeContrat }}
                        </span>
                    </div>
                    <h3 class="text-lg font-bold text-[#D3C3B9] dark:text-white mb-2 group-hover:text-primary transition-colors line-clamp-1">
                        <a href="{{ path('app_offre_emploi_public_show', {'id': offre.id}) }}">
                            {{ offre.poste }}
                        </a>
                    </h3>
                    <p class="text-xs text-[#A79E9C] dark:text-[#9ca3af] line-clamp-2 mb-6 leading-relaxed min-h-[2.5em]">{{ offre.description }}</p>
                    <div class="space-y-3 mb-6 border-t border-gray-100 dark:border-gray-700 pt-4">
                        <div class="flex items-center gap-2 text-xs text-[#A79E9C] dark:text-[#9ca3af]">
                            <span class="material-symbols-outlined text-[16px] text-primary">calendar_today</span>
                            {{ offre.datePublication|date('d M Y') }}
                        </div>
                        {% if offre.salaireMin %}
                        <div class="flex items-center gap-2 text-xs text-[#A79E9C] dark:text-[#9ca3af]">
                            <span class="material-symbols-outlined text-[16px] text-primary">payments</span>
                            <span class="font-bold text-emerald-600 dark:text-emerald-400">{{ offre.salaireMin|number_format(0, ',', ' ') }}€ - {{ offre.salaireMax|number_format(0, ',', ' ') }}€</span>
                        </div>
                        {% endif %}
                    </div>
                    <a href="{{ path('app_offre_emploi_public_show', {'id': offre.id}) }}" class="btn-primary-animated w-full flex items-center justify-center py-3 text-xs font-black">
                        Détails du poste
                    </a>
                </div>
            {% else %}
                <div class="col-span-full text-center py-20 section-card border-dashed animate-card">
                    <div class="mx-auto h-20 w-20 bg-gray-50 dark:bg-[#161516] rounded-full flex items-center justify-center mb-4">
                        <span class="material-symbols-outlined text-[#9ca3af] text-[40px]">search_off</span>
                    </div>
                    <h3 class="text-lg font-bold text-[#D3C3B9] dark:text-white">Aucun résultat trouvé</h3>
                    <p class="text-[#A79E9C] dark:text-[#9ca3af] mt-1 max-w-sm mx-auto text-sm">Essayez d'autres mots-clés ou consultez toutes nos offres.</p>
                </div>
            {% endfor %}
        </div>
    </section>
</div>
{% endblock %}
