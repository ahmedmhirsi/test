{% extends 'front_office/base.html.twig' %}

{% block title %}{{ offre.poste }} - SmartNexus AI{% endblock %}

{% block sidebar_nav %}
    {% include 'client/_sidebar.html.twig' %}
{% endblock %}

{% block breadcrumb %}
    <span class="text-[#9ca3af] material-symbols-outlined text-[16px]">chevron_right</span>
    <a href="{{ path('app_offre_emploi_public') }}" class="text-[#A79E9C] dark:text-[#9ca3af] hover:text-primary transition-colors font-medium">Carrières</a>
    <span class="text-[#9ca3af] material-symbols-outlined text-[16px]">chevron_right</span>
    <span class="text-primary font-semibold">{{ offre.poste }}</span>
{% endblock %}

{% block content %}
<div data-controller="page-transition">
    {# ── Header Card ── #}
    <div class="section-card animate-card p-8 mb-8 relative overflow-hidden">
        <div class="absolute top-0 right-0 p-6 opacity-5">
            <span class="material-symbols-outlined text-[128px]">work_outline</span>
        </div>
        
        <div class="relative z-10 flex flex-col lg:flex-row lg:items-start lg:justify-between gap-6">
            <div class="flex-1 min-w-0">
                <div class="flex items-start gap-5 mb-4">
                    <div class="size-16 rounded-2xl bg-primary/10 flex items-center justify-center shrink-0">
                        <span class="material-symbols-outlined text-primary text-[32px]">business_center</span>
                    </div>
                    <div>
                        <h1 class="page-title text-3xl font-black text-[#D3C3B9] dark:text-white tracking-tight sm:text-4xl mb-2">
                            {{ offre.poste }}
                        </h1>
                        <div class="flex flex-wrap gap-3">
                            <span class="status-badge bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-400">
                                <span class="material-symbols-outlined text-[16px]">work</span>
                                {{ offre.typeContrat }}
                            </span>
                            <span class="status-badge bg-gray-100 text-gray-700 dark:bg-gray-800 dark:text-gray-400">
                                <span class="material-symbols-outlined text-[16px]">calendar_today</span>
                                Publié le {{ offre.datePublication|date('d F Y') }}
                            </span>
                             {% if offre.salaireMin %}
                            <span class="status-badge bg-emerald-100 text-emerald-700 dark:bg-emerald-900/30 dark:text-emerald-400">
                                <span class="material-symbols-outlined text-[16px]">payments</span>
                                {{ offre.salaireMin|number_format(0, ',', ' ') }} - {{ offre.salaireMax|number_format(0, ',', ' ') }} €
                            </span>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="flex-shrink-0">
                <a href="{{ path('app_candidature_new', {'offre': offre.id}) }}" class="btn-primary-animated flex items-center justify-center px-8 py-4 text-sm font-black shadow-lg shadow-primary/25 hover:shadow-xl hover:-translate-y-0.5 transition-all">
                    <span class="material-symbols-outlined mr-2">send</span>
                    Postuler maintenant
                </a>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        {# ── Main Content ── #}
        <div class="lg:col-span-2 space-y-8">
            <div class="section-card animate-card p-8">
                <h3 class="text-xl font-black text-[#D3C3B9] dark:text-white mb-6 flex items-center gap-2">
                    <span class="material-symbols-outlined text-primary text-[24px]">description</span>
                    Description du poste
                </h3>
                <div class="text-[#A79E9C] dark:text-[#9ca3af] leading-relaxed text-sm space-y-4">
                    {{ offre.description|nl2br }}
                </div>
                
                <h3 class="text-xl font-black text-[#D3C3B9] dark:text-white mt-10 mb-6 flex items-center gap-2">
                    <span class="material-symbols-outlined text-primary text-[24px]">psychology</span>
                    Compétences requises
                </h3>
                <div class="flex flex-wrap gap-2">
                    {% for comp in offre.competencesRequises %}
                        <span class="inline-flex items-center px-3 py-1.5 rounded-lg text-xs font-bold bg-primary/10 text-primary border border-primary/20">
                            {{ comp }}
                        </span>
                    {% endfor %}
                </div>
            </div>
        </div>
        
        {# ── Sidebar ── #}
        <div class="space-y-8">
            <div class="section-card animate-card p-8">
                <h3 class="text-lg font-black text-[#D3C3B9] dark:text-white mb-6 flex items-center gap-2">
                    <span class="material-symbols-outlined text-purple-500 text-[24px]">school</span>
                    Formations suggérées
                </h3>
                {% if offre.formations is not empty %}
                    <div class="space-y-4 animate-row">
                        {% for formation in offre.formations %}
                            <a href="{{ path('app_formation_show', {'id': formation.id}) }}" class="block group bg-gray-50 dark:bg-[#161516] p-4 rounded-xl border border-transparent hover:border-purple-500/30 hover:shadow-md transition-all">
                                <h4 class="font-bold text-[#D3C3B9] dark:text-white group-hover:text-purple-500 transition-colors text-sm mb-1">{{ formation.titre }}</h4>
                                <p class="text-xs text-[#A79E9C] dark:text-[#9ca3af] line-clamp-2 mb-3">{{ formation.description }}</p>
                                <div class="flex items-center justify-between">
                                    <span class="flex items-center gap-1 text-[10px] font-black text-[#9ca3af] uppercase">
                                        <span class="material-symbols-outlined text-[14px]">schedule</span>
                                        {{ formation.dureeHeures }}h
                                    </span>
                                    <span class="text-xs font-black text-purple-600 dark:text-purple-400 group-hover:underline">Voir</span>
                                </div>
                            </a>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="text-center py-8">
                        <span class="material-symbols-outlined text-[#9ca3af] text-[40px] mb-2">school</span>
                        <p class="text-xs text-[#A79E9C] dark:text-[#9ca3af] italic">Aucune formation spécifique recommandée.</p>
                    </div>
                {% endif %}
            </div>
             <div class="section-card animate-card p-6 bg-gradient-to-br from-primary to-electric text-navy">
                <h3 class="font-black text-lg mb-2">Prêt à postuler ?</h3>
                <p class="text-sm text-navy/80 mb-4 font-medium">Rejoignez notre équipe et participez à des projets innovants.</p>
                <a href="{{ path('app_candidature_new', {'offre': offre.id}) }}" class="block w-full py-3 bg-navy text-white text-center rounded-xl text-xs font-black hover:opacity-90 transition-opacity shadow-lg">
                    Candidater maintenant
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
