{% extends 'back_office/base.html.twig' %}

{% block title %}Détails Offre{% endblock %}

{% block content %}
    <div class="max-w-4xl mx-auto">
        <div class="mb-6 flex items-center justify-between">
            <a href="{{ path('app_offre_emploi_index') }}" class="text-slate-500 hover:text-slate-700 flex items-center gap-2 text-sm font-medium">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
                Back to List
            </a>
            <div class="flex gap-2">
                 <a href="{{ path('app_offre_emploi_edit', {'id': offre_emploi.id}) }}" class="bg-amber-50 text-amber-700 border border-amber-200 px-4 py-2 rounded-lg text-sm font-medium hover:bg-amber-100 transition-colors">Edit</a>
                 {{ include('offre_emploi/_delete_form.html.twig') }}
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-sm border border-slate-100 overflow-hidden">
            <div class="p-8 border-b border-slate-100">
                 <div class="flex justify-between items-start">
                    <div>
                        <h1 class="text-3xl font-bold text-slate-900 mb-2">{{ offre_emploi.poste }}</h1>
                         <div class="flex items-center gap-4 text-slate-500 text-sm">
                            <span class="flex items-center gap-1.5 bg-slate-50 px-2.5 py-1 rounded-md border border-slate-100">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                                {{ offre_emploi.typeContrat }}
                            </span>
                            <span class="flex items-center gap-1.5 bg-green-50 text-green-700 px-2.5 py-1 rounded-md border border-green-100">
                                {{ offre_emploi.salaireMin|number_format }} - {{ offre_emploi.salaireMax|number_format }} €
                            </span>
                             <span class="flex items-center gap-1.5">
                                Publié le {{ offre_emploi.datePublication|date('d F Y') }}
                            </span>
                        </div>
                    </div>
                     <span class="px-3 py-1 rounded-full text-sm font-bold 
                        {% if offre_emploi.statut == 'Active' %}bg-green-100 text-green-700
                        {% elseif offre_emploi.statut == 'Closed' %}bg-red-100 text-red-700
                        {% else %}bg-gray-100 text-gray-700{% endif %}">
                        {{ offre_emploi.statut }}
                    </span>
                </div>
            </div>

            <div class="p-8">
                <div class="prose max-w-none text-slate-600">
                    <h3 class="text-lg font-semibold text-slate-900 mb-4">Description du Poste</h3>
                    {{ offre_emploi.description|nl2br }}
                </div>

                <div class="mt-8 pt-8 border-t border-slate-100">
                    <h3 class="text-lg font-semibold text-slate-900 mb-4">Compétences Requises</h3>
                    <div class="flex flex-wrap gap-2">
                        {% for comp in offre_emploi.competencesRequises %}
                            <span class="bg-blue-50 text-blue-700 px-3 py-1.5 rounded-lg text-sm font-medium border border-blue-100">
                                {{ comp }}
                            </span>
                        {% else %}
                             <span class="text-slate-400 italic">Aucune compétence spécifiée.</span>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
