{% extends 'layout/employe.html.twig' %}

{% block title %}Nouveau Sondage - SmartNexus AI{% endblock %}

{% block breadcrumb %}
    <span class="text-[#9ca3af] material-symbols-outlined text-[16px]">chevron_right</span>
    <a href="{{ path('app_poll_index') }}" class="text-[#A79E9C] dark:text-[#9ca3af] hover:text-primary font-medium tracking-tight">Sondages</a>
    <span class="text-[#9ca3af] material-symbols-outlined text-[16px]">chevron_right</span>
    <span class="text-primary font-semibold tracking-tight">Création</span>
{% endblock %}

{% block content %}
<div class="max-w-4xl mx-auto">
    <!-- Header Section -->
    <div class="mb-8">
        <h1 class="text-3xl md:text-4xl font-black tracking-tight text-[#D3C3B9] dark:text-white mb-2 font-display uppercase italic">
            Nouveau Sondage
        </h1>
        <p class="text-[#A79E9C] dark:text-[#9ca3af] text-base font-medium flex items-center gap-2">
            <span class="material-symbols-outlined text-primary">psychology</span>
            Configurez votre sondage pour recueillir les avis de l'équipe
        </p>
    </div>

    <!-- Form Card -->
    <div class="bg-white dark:bg-[#1a1d2d] rounded-2xl border border-[#e5e7eb] dark:border-[#1f2128] shadow-xl overflow-hidden">
        <div class="p-8">
            <form method="post" id="pollForm" novalidate class="space-y-8">
                <!-- Question Section -->
                <div class="bg-[#f8f8f5] dark:bg-[#0f1115] p-6 rounded-2xl border border-[#e5e7eb] dark:border-[#1f2128]">
                    <h3 class="text-xs font-black text-[#D3C3B9] dark:text-white uppercase tracking-widest mb-4 flex items-center gap-2">
                        <span class="material-symbols-outlined text-primary text-lg">quiz</span>
                        Question principale
                    </h3>
                    <input type="text" name="question" required
                        class="w-full px-5 py-4 bg-white dark:bg-[#1a1d2d] border border-[#e5e7eb] dark:border-[#1f2128] rounded-xl text-[#D3C3B9] dark:text-white font-black text-lg focus:ring-2 focus:ring-primary focus:border-primary outline-none transition-all placeholder:text-[#9ca3af] placeholder:font-medium"
                        placeholder="Ex: Quelle direction artistique préférez-vous ?">
                </div>

                <!-- Description Section -->
                <div>
                    <label class="block text-sm font-black text-[#D3C3B9] dark:text-white uppercase tracking-widest mb-2 px-1">Description additionnelle (optionnel)</label>
                    <textarea name="description" rows="3"
                        class="w-full px-5 py-4 bg-[#f8f8f5] dark:bg-[#0f1115] border border-[#e5e7eb] dark:border-[#1f2128] rounded-xl text-[#D3C3B9] dark:text-white font-medium focus:ring-2 focus:ring-primary outline-none transition-all placeholder:text-[#9ca3af]"
                        placeholder="Précisez le contexte ou les règles du vote..."></textarea>
                </div>

                <!-- Options Section -->
                <div>
                    <label class="block text-sm font-black text-[#D3C3B9] dark:text-white uppercase tracking-widest mb-4 px-1 flex items-center justify-between">
                        Options de réponse
                        <span class="text-[10px] text-primary font-black lowercase tracking-normal bg-primary/10 px-2 py-0.5 rounded-lg">min. 2 options</span>
                    </label>
                    <div id="optionsContainer" class="space-y-3">
                        <div class="group flex gap-3">
                            <div class="w-12 h-12 rounded-xl bg-[#f0f0f5] dark:bg-[#161516] flex items-center justify-center text-navy dark:text-[#9ca3af] font-black text-xs shrink-0">01</div>
                            <input type="text" name="options[]" required
                                class="flex-1 px-5 bg-[#f8f8f5] dark:bg-[#0f1115] border border-[#e5e7eb] dark:border-[#1f2128] rounded-xl text-sm font-bold focus:ring-2 focus:ring-primary outline-none transition-all text-[#D3C3B9] dark:text-white"
                                placeholder="Première option">
                        </div>
                        <div class="group flex gap-3">
                            <div class="w-12 h-12 rounded-xl bg-[#f0f0f5] dark:bg-[#161516] flex items-center justify-center text-navy dark:text-[#9ca3af] font-black text-xs shrink-0">02</div>
                            <input type="text" name="options[]" required
                                class="flex-1 px-5 bg-[#f8f8f5] dark:bg-[#0f1115] border border-[#e5e7eb] dark:border-[#1f2128] rounded-xl text-sm font-bold focus:ring-2 focus:ring-primary outline-none transition-all text-[#D3C3B9] dark:text-white"
                                placeholder="Deuxième option">
                        </div>
                    </div>
                    
                    <button type="button" id="addOption" class="mt-4 flex items-center gap-2 px-6 py-3 rounded-xl border-2 border-dashed border-[#e5e7eb] dark:border-[#1f2128] text-[#A79E9C] dark:text-[#9ca3af] text-xs font-black uppercase tracking-widest hover:border-primary hover:text-primary transition-all group">
                        <span class="material-symbols-outlined text-[20px] group-hover:scale-125 transition-transform">add_circle</span>
                        Ajouter un choix
                    </button>
                </div>

                <!-- Settings Section -->
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 p-6 bg-[#f8f8f5] dark:bg-[#0f1115] rounded-2xl border border-[#e5e7eb] dark:border-[#1f2128]">
                    <label class="flex items-center gap-4 cursor-pointer group p-3 rounded-xl hover:bg-white dark:hover:bg-[#1a1d2d] transition-all border border-transparent hover:border-[#e5e7eb] dark:hover:border-[#1f2128]">
                        <div class="relative flex items-center">
                            <input type="checkbox" name="allow_multiple" value="1" class="peer hidden">
                            <div class="w-6 h-6 border-2 border-[#cbd5e1] dark:border-[#475569] rounded-lg peer-checked:bg-primary peer-checked:border-primary transition-all flex items-center justify-center">
                                <span class="material-symbols-outlined text-white text-[16px] opacity-0 peer-checked:opacity-100 transition-opacity">check</span>
                            </div>
                        </div>
                        <div class="flex flex-col">
                            <span class="text-sm font-black text-[#D3C3B9] dark:text-white uppercase tracking-tight">Choix multiples</span>
                            <span class="text-[10px] text-[#A79E9C] dark:text-[#9ca3af] font-medium leading-none mt-0.5">Autoriser plusieurs réponses</span>
                        </div>
                    </label>

                    <label class="flex items-center gap-4 cursor-pointer group p-3 rounded-xl hover:bg-white dark:hover:bg-[#1a1d2d] transition-all border border-transparent hover:border-[#e5e7eb] dark:hover:border-[#1f2128]">
                        <div class="relative flex items-center">
                            <input type="checkbox" name="anonymous" value="1" class="peer hidden">
                            <div class="w-6 h-6 border-2 border-[#cbd5e1] dark:border-[#475569] rounded-lg peer-checked:bg-primary peer-checked:border-primary transition-all flex items-center justify-center">
                                <span class="material-symbols-outlined text-white text-[16px] opacity-0 peer-checked:opacity-100 transition-opacity">check</span>
                            </div>
                        </div>
                        <div class="flex flex-col">
                            <span class="text-sm font-black text-[#D3C3B9] dark:text-white uppercase tracking-tight">Vote anonyme</span>
                            <span class="text-[10px] text-[#A79E9C] dark:text-[#9ca3af] font-medium leading-none mt-0.5">Masquer l'identité des votants</span>
                        </div>
                    </label>
                </div>

                <!-- Footer Actions -->
                <div class="flex flex-col sm:flex-row gap-4 pt-4">
                    <button type="submit" class="flex-1 h-14 flex items-center justify-center gap-3 rounded-2xl bg-primary text-navy text-sm font-black uppercase tracking-widest hover:bg-primary/90 shadow-xl shadow-primary/20 transition-all border-none group">
                        <span class="material-symbols-outlined text-[24px] group-hover:scale-110 transition-transform">rocket_launch</span>
                        Lancer le Sondage
                    </button>
                    <a href="{{ path('app_poll_index') }}" class="h-14 px-10 flex items-center justify-center gap-2 rounded-2xl border-2 border-[#e5e7eb] dark:border-[#1f2128] text-[#A79E9C] dark:text-[#9ca3af] text-sm font-black uppercase tracking-widest hover:bg-[#f8f8f5] dark:hover:bg-[#0f1115] transition-all">
                        Annuler
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
document.getElementById('addOption').addEventListener('click', function() {
    const container = document.getElementById('optionsContainer');
    const optionCount = container.children.length + 1;
    const countStr = optionCount.toString().padStart(2, '0');
    
    const div = document.createElement('div');
    div.className = 'group flex gap-3 animate-fadeIn';
    div.innerHTML = `
        <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center text-primary font-black text-xs shrink-0">${countStr}</div>
        <input type="text" name="options[]" required
            class="flex-1 px-5 bg-[#f8f8f5] dark:bg-[#0f1115] border border-[#e5e7eb] dark:border-[#1f2128] rounded-xl text-sm font-bold focus:ring-2 focus:ring-primary outline-none transition-all text-[#D3C3B9] dark:text-white"
            placeholder="Option ${optionCount}">
        <button type="button" onclick="this.parentElement.remove()" class="w-12 h-12 flex items-center justify-center text-red-500 hover:bg-red-50 dark:hover:bg-red-900/10 rounded-xl transition-all">
            <span class="material-symbols-outlined text-[24px]">delete</span>
        </button>
    `;
    
    container.appendChild(div);
});
</script>

<style>
@keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
}
.animate-fadeIn {
    animation: fadeIn 0.3s ease-out forwards;
}
</style>
{% endblock %}
