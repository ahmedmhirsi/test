{% extends 'front_office/base.html.twig' %}

{% block title %}Activer 2FA - SmartNexus AI{% endblock %}

{% block content %}
<div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <div class="bg-gradient-to-r from-navy to-electric px-6 py-8">
        <div class="max-w-4xl mx-auto">
            <div class="flex items-center gap-4">
                <a href="{{ path('app_2fa_settings') }}" class="w-10 h-10 rounded-lg bg-white/10 flex items-center justify-center text-white hover:bg-white/20 transition-colors">
                    <span class="material-symbols-outlined">arrow_back</span>
                </a>
                <div class="text-white">
                    <h1 class="text-2xl font-bold">Configuration de l'authentification 2FA</h1>
                    <p class="text-blue-100">√âtape 2 sur 3 : Scanner le QR Code</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Content -->
    <div class="max-w-2xl mx-auto px-6 py-8">
        <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8">
            <!-- Progress -->
            <div class="flex items-center justify-between mb-8">
                <div class="flex items-center gap-2">
                    <div class="w-8 h-8 rounded-full bg-green-500 text-white flex items-center justify-center text-sm font-bold">
                        <span class="material-symbols-outlined text-lg">check</span>
                    </div>
                    <span class="text-sm font-medium text-gray-600">Installation app</span>
                </div>
                <div class="flex-1 h-0.5 bg-primary mx-3"></div>
                <div class="flex items-center gap-2">
                    <div class="w-8 h-8 rounded-full bg-primary text-navy flex items-center justify-center text-sm font-bold">2</div>
                    <span class="text-sm font-medium text-navy">Scanner QR</span>
                </div>
                <div class="flex-1 h-0.5 bg-gray-200 mx-3"></div>
                <div class="flex items-center gap-2">
                    <div class="w-8 h-8 rounded-full bg-gray-200 text-gray-600 flex items-center justify-center text-sm font-bold">3</div>
                    <span class="text-sm font-medium text-gray-600">V√©rification</span>
                </div>
            </div>

            <!-- Instructions -->
            <div class="mb-8">
                <h3 class="text-lg font-bold text-gray-900 mb-4">Scanner ce QR Code avec votre application</h3>
                <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
                    <p class="text-sm text-blue-900">
                        <span class="font-semibold">üì± Applications recommand√©es :</span><br>
                        ‚Ä¢ Google Authenticator<br>
                        ‚Ä¢ Microsoft Authenticator<br>
                        ‚Ä¢ Authy<br>
                        ‚Ä¢ 1Password
                    </p>
                </div>
            </div>

            <!-- QR Code -->
            <div class="flex flex-col items-center mb-8">
                <div class="bg-white p-6 rounded-2xl border-4 border-gray-100 shadow-lg">
                    <img src="{{ qrCodeDataUri }}" alt="QR Code 2FA" class="w-64 h-64">
                </div>
                <p class="text-xs text-gray-500 mt-4 text-center max-w-sm">
                    Ouvrez votre application d'authentification et scannez ce code QR pour ajouter votre compte SmartNexus
                </p>
            </div>

            <!-- Alternative Manual Entry -->
            <details class="mb-8">
                <summary class="cursor-pointer text-sm text-gray-600 hover:text-navy font-medium flex items-center gap-2">
                    <span class="material-symbols-outlined text-lg">key</span>
                    Vous ne pouvez pas scanner ? Entrer la cl√© manuellement
                </summary>
                <div class="mt-4 p-4 bg-gray-50 rounded-lg border border-gray-200">
                    <p class="text-xs text-gray-600 mb-2">Entrez cette cl√© secr√®te dans votre application :</p>
                    <div class="flex items-center gap-2">
                        <code class="flex-1 px-3 py-2 bg-white border border-gray-200 rounded text-sm font-mono text-navy break-all" id="secret-key">{{ secret }}</code>
                        <button type="button" onclick="copySecret()" class="px-3 py-2 bg-navy text-white rounded hover:bg-navy/90 transition-colors text-sm font-semibold">
                            <span class="material-symbols-outlined text-lg">content_copy</span>
                        </button>
                    </div>
                    <p class="text-xs text-gray-500 mt-2">
                        <strong>Type :</strong> Bas√© sur le temps (TOTP)<br>
                        <strong>Algorithme :</strong> SHA1<br>
                        <strong>Nombre de chiffres :</strong> 6<br>
                        <strong>P√©riode :</strong> 30 secondes
                    </p>
                </div>
            </details>

            <!-- Verification Form -->
            <form action="{{ path('app_2fa_confirm') }}" method="post" class="space-y-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        Entrez le code √† 6 chiffres affich√© dans votre application
                    </label>
                    <input 
                        type="text" 
                        name="code" 
                        id="code-input"
                        maxlength="6" 
                        pattern="[0-9]{6}" 
                        required 
                        placeholder="000000"
                        class="w-full text-center text-2xl font-mono tracking-widest rounded-lg border border-gray-200 px-4 py-4 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all"
                        autocomplete="off"
                    >
                    <p class="text-xs text-gray-500 mt-2 text-center">Le code change toutes les 30 secondes</p>
                </div>

                <div class="flex gap-4">
                    <a href="{{ path('app_2fa_settings') }}" class="flex-1 px-6 py-3 border border-gray-200 text-gray-700 font-semibold rounded-lg hover:bg-gray-50 transition-colors text-center">
                        Annuler
                    </a>
                    <button type="submit" class="flex-1 px-6 py-3 bg-primary text-navy rounded-lg font-bold hover:bg-yellow-400 transition-colors shadow-lg shadow-primary/30">
                        V√©rifier et activer
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
// Auto-focus on code input
document.getElementById('code-input').focus();

// Auto-format code input (only numbers)
document.getElementById('code-input').addEventListener('input', function(e) {
    this.value = this.value.replace(/[^0-9]/g, '');
});

// Copy secret to clipboard
function copySecret() {
    const secretKey = document.getElementById('secret-key').textContent;
    navigator.clipboard.writeText(secretKey).then(function() {
        // Visual feedback
        const button = event.target.closest('button');
        const originalHTML = button.innerHTML;
        button.innerHTML = '<span class="material-symbols-outlined text-lg">check</span>';
        button.classList.add('bg-green-600');
        
        setTimeout(function() {
            button.innerHTML = originalHTML;
            button.classList.remove('bg-green-600');
        }, 2000);
    });
}
</script>
{% endblock %}
