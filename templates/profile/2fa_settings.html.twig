{% extends 'front_office/base.html.twig' %}

{% block title %}Authentification 2FA - SmartNexus AI{% endblock %}

{% block content %}
<div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <div class="bg-gradient-to-r from-navy to-electric px-6 py-8">
        <div class="max-w-4xl mx-auto">
            <div class="flex items-center gap-4">
                <a href="{{ path('app_profile') }}" class="w-10 h-10 rounded-lg bg-white/10 flex items-center justify-center text-white hover:bg-white/20 transition-colors">
                    <span class="material-symbols-outlined">arrow_back</span>
                </a>
                <div class="text-white">
                    <h1 class="text-2xl font-bold">Authentification à deux facteurs</h1>
                    <p class="text-blue-100">Sécurisez votre compte avec 2FA</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Content -->
    <div class="max-w-4xl mx-auto px-6 py-8">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Sidebar -->
            <div class="lg:col-span-1">
                <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
                    <h3 class="text-lg font-bold text-gray-900 mb-4">Navigation</h3>
                    <nav class="space-y-2">
                        <a href="{{ path('app_profile') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-600 hover:bg-gray-50 transition-colors">
                            <span class="material-symbols-outlined">person</span>
                            Mon profil
                        </a>
                        <a href="{{ path('app_profile_edit') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-600 hover:bg-gray-50 transition-colors">
                            <span class="material-symbols-outlined">edit</span>
                            Modifier le profil
                        </a>
                        <a href="{{ path('app_profile_password') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-600 hover:bg-gray-50 transition-colors">
                            <span class="material-symbols-outlined">lock</span>
                            Changer le mot de passe
                        </a>
                        <a href="{{ path('app_2fa_settings') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg bg-primary/10 text-navy font-semibold">
                            <span class="material-symbols-outlined">security</span>
                            Authentification 2FA
                        </a>
                        <a href="{{ path('app_dashboard') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-600 hover:bg-gray-50 transition-colors">
                            <span class="material-symbols-outlined">dashboard</span>
                            Retour au dashboard
                        </a>
                    </nav>
                </div>
            </div>

            <!-- Main Content -->
            <div class="lg:col-span-2 space-y-6">
                <!-- 2FA Status Card -->
                <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
                    <div class="flex items-start justify-between mb-6">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 rounded-xl bg-{% if is2faEnabled %}green-100 text-green-600{% else %}gray-100 text-gray-400{% endif %} flex items-center justify-center">
                                <span class="material-symbols-outlined text-2xl">{% if is2faEnabled %}shield_check{% else %}shield{% endif %}</span>
                            </div>
                            <div>
                                <h3 class="text-xl font-bold text-gray-900">Authentification à deux facteurs</h3>
                                <p class="text-sm text-gray-600 mt-1">
                                    {% if is2faEnabled %}
                                        <span class="inline-flex items-center gap-1 text-green-600 font-semibold">
                                            <span class="w-2 h-2 bg-green-500 rounded-full"></span>
                                            Activée
                                        </span>
                                    {% else %}
                                        <span class="inline-flex items-center gap-1 text-gray-500">
                                            <span class="w-2 h-2 bg-gray-400 rounded-full"></span>
                                            Désactivée
                                        </span>
                                    {% endif %}
                                </p>
                            </div>
                        </div>
                    </div>

                    {% if is2faEnabled %}
                        <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-6">
                            <div class="flex items-start gap-3">
                                <span class="material-symbols-outlined text-green-600">check_circle</span>
                                <div class="flex-1">
                                    <p class="text-sm font-medium text-green-900">Votre compte est protégé</p>
                                    <p class="text-xs text-green-700 mt-1">Vous devrez entrer un code à 6 chiffres depuis votre application d'authentification lors de chaque connexion.</p>
                                </div>
                            </div>
                        </div>

                        <div class="space-y-4">
                            <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                                <div class="flex items-center gap-3">
                                    <span class="material-symbols-outlined text-gray-600">key</span>
                                    <div>
                                        <p class="font-medium text-gray-900">Codes de secours</p>
                                        <p class="text-sm text-gray-600">{{ backupCodesCount }} codes disponibles</p>
                                    </div>
                                </div>
                                <a href="{{ path('app_2fa_backup_codes') }}" class="px-4 py-2 text-navy font-semibold hover:bg-primary/10 rounded-lg transition-colors">
                                    Voir
                                </a>
                            </div>

                            <button type="button" onclick="showDisableModal()" class="w-full flex items-center justify-center gap-2 px-6 py-3 bg-red-50 text-red-600 border border-red-200 rounded-lg font-semibold hover:bg-red-100 transition-colors">
                                <span class="material-symbols-outlined">shield_off</span>
                                Désactiver l'authentification 2FA
                            </button>
                        </div>
                    {% else %}
                        <div class="bg-amber-50 border border-amber-200 rounded-lg p-4 mb-6">
                            <div class="flex items-start gap-3">
                                <span class="material-symbols-outlined text-amber-600">warning</span>
                                <div class="flex-1">
                                    <p class="text-sm font-medium text-amber-900">Compte non protégé</p>
                                    <p class="text-xs text-amber-700 mt-1">Activez la 2FA pour renforcer la sécurité de votre compte contre les accès non autorisés.</p>
                                </div>
                            </div>
                        </div>

                        <div class="space-y-4">
                            <h4 class="font-semibold text-gray-900">Pourquoi activer la 2FA ?</h4>
                            <ul class="space-y-3">
                                <li class="flex items-start gap-3">
                                    <span class="material-symbols-outlined text-primary mt-0.5">check_circle</span>
                                    <div>
                                        <p class="text-sm font-medium text-gray-900">Protection renforcée</p>
                                        <p class="text-xs text-gray-600">Même si votre mot de passe est compromis, votre compte reste sécurisé</p>
                                    </div>
                                </li>
                                <li class="flex items-start gap-3">
                                    <span class="material-symbols-outlined text-primary mt-0.5">check_circle</span>
                                    <div>
                                        <p class="text-sm font-medium text-gray-900">Compatible avec vos apps</p>
                                        <p class="text-xs text-gray-600">Fonctionne avec Google Authenticator, Microsoft Authenticator, Authy, etc.</p>
                                    </div>
                                </li>
                                <li class="flex items-start gap-3">
                                    <span class="material-symbols-outlined text-primary mt-0.5">check_circle</span>
                                    <div>
                                        <p class="text-sm font-medium text-gray-900">Codes de secours</p>
                                        <p class="text-xs text-gray-600">Accédez à votre compte même sans votre téléphone</p>
                                    </div>
                                </li>
                            </ul>

                            <a href="{{ path('app_2fa_enable') }}" class="w-full flex items-center justify-center gap-2 px-6 py-3 bg-primary text-navy rounded-lg font-bold hover:bg-yellow-400 transition-colors shadow-lg shadow-primary/30 mt-6">
                                <span class="material-symbols-outlined">security</span>
                                Activer l'authentification 2FA
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de désactivation -->
{% if is2faEnabled %}
<div id="disableModal" class="hidden fixed inset-0 bg-black/50 flex items-center justify-center z-50 p-4">
    <div class="bg-white rounded-2xl shadow-xl max-w-md w-full p-6">
        <div class="flex items-center gap-3 mb-4">
            <div class="w-12 h-12 rounded-full bg-red-100 flex items-center justify-center">
                <span class="material-symbols-outlined text-red-600 text-2xl">warning</span>
            </div>
            <h3 class="text-xl font-bold text-gray-900">Désactiver la 2FA ?</h3>
        </div>
        
        <p class="text-gray-600 mb-6">Cette action rendra votre compte moins sécurisé. Pour confirmer, entrez votre mot de passe.</p>
        
        <form action="{{ path('app_2fa_disable') }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('disable_2fa') }}">
            
            <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-2">Mot de passe actuel</label>
                <input type="password" name="password" required class="w-full rounded-lg border border-gray-200 px-4 py-3 focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all" placeholder="Entrez votre mot de passe">
            </div>
            
            <div class="flex gap-3">
                <button type="button" onclick="hideDisableModal()" class="flex-1 px-4 py-3 border border-gray-200 text-gray-700 font-semibold rounded-lg hover:bg-gray-50 transition-colors">
                    Annuler
                </button>
                <button type="submit" class="flex-1 px-4 py-3 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 transition-colors">
                    Désactiver
                </button>
            </div>
        </form>
    </div>
</div>

<script>
function showDisableModal() {
    document.getElementById('disableModal').classList.remove('hidden');
}

function hideDisableModal() {
    document.getElementById('disableModal').classList.add('hidden');
}

// Close modal on escape key
document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
        hideDisableModal();
    }
});

// Close modal on backdrop click
document.getElementById('disableModal')?.addEventListener('click', function(e) {
    if (e.target === this) {
        hideDisableModal();
    }
});
</script>
{% endif %}
{% endblock %}
