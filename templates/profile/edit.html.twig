{% extends 'front_office/base.html.twig' %}

{% block title %}Modifier mon Profil - SmartNexus AI{% endblock %}

{% block content %}
<div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <div class="bg-gradient-to-r from-navy to-electric px-6 py-8">
        <div class="max-w-4xl mx-auto">
            <div class="flex items-center gap-4">
                <a href="{{ path('app_profile') }}" class="w-10 h-10 rounded-lg bg-white/10 flex items-center justify-center text-white hover:bg-white/20 transition-colors">
                    <span class="material-symbols-outlined">arrow_back</span>
                </a>
                <div class="text-white">
                    <h1 class="text-2xl font-bold">Modifier mon profil</h1>
                    <p class="text-blue-100">Mettez à jour vos informations personnelles</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Content -->
    <div class="max-w-4xl mx-auto px-6 py-8">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Sidebar -->
            <div class="lg:col-span-1">
                <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
                    <h3 class="text-lg font-bold text-gray-900 mb-4">Navigation</h3>
                    <nav class="space-y-2">
                        <a href="{{ path('app_profile') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-600 hover:bg-gray-50 transition-colors">
                            <span class="material-symbols-outlined">person</span>
                            Mon profil
                        </a>
                        <a href="{{ path('app_profile_edit') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg bg-primary/10 text-navy font-semibold">
                            <span class="material-symbols-outlined">edit</span>
                            Modifier le profil
                        </a>
                        <a href="{{ path('app_profile_password') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-600 hover:bg-gray-50 transition-colors">
                            <span class="material-symbols-outlined">lock</span>
                            Changer le mot de passe
                        </a>
                        <a href="{{ path('app_dashboard') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-600 hover:bg-gray-50 transition-colors">
                            <span class="material-symbols-outlined">dashboard</span>
                            Retour au dashboard
                        </a>
                    </nav>
                </div>
            </div>

            <!-- Main Content -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
                    <h3 class="text-xl font-bold text-gray-900 flex items-center gap-2 mb-6">
                        <span class="material-symbols-outlined text-navy">edit</span>
                        Modifier mes informations
                    </h3>

                    {{ form_start(form, {'attr': {'class': 'space-y-6', 'novalidate': 'novalidate'}}) }}
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div class="flex flex-col gap-2">
                                <label class="text-sm font-medium text-gray-700">Prénom *</label>
                                {{ form_widget(form.prenom, {'attr': {'class': 'w-full rounded-lg border border-gray-200 bg-white px-4 py-3 text-base focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all'}}) }}
                                <div class="text-red-600 text-sm">{{ form_errors(form.prenom) }}</div>
                            </div>
                            <div class="flex flex-col gap-2">
                                <label class="text-sm font-medium text-gray-700">Nom *</label>
                                {{ form_widget(form.nom, {'attr': {'class': 'w-full rounded-lg border border-gray-200 bg-white px-4 py-3 text-base focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all'}}) }}
                                <div class="text-red-600 text-sm">{{ form_errors(form.nom) }}</div>
                            </div>
                        </div>

                        <div class="flex flex-col gap-2">
                            <label class="text-sm font-medium text-gray-700">Email *</label>
                            {{ form_widget(form.email, {'attr': {'class': 'w-full rounded-lg border border-gray-200 bg-white px-4 py-3 text-base focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all'}}) }}
                            <div class="text-red-600 text-sm">{{ form_errors(form.email) }}</div>
                        </div>

                        <div class="flex flex-col gap-2">
                            <label class="text-sm font-medium text-gray-700">Téléphone</label>
                            {{ form_widget(form.phoneNumber, {'attr': {'class': 'w-full rounded-lg border border-gray-200 bg-white px-4 py-3 text-base focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all', 'placeholder': '+33 6 12 34 56 78'}}) }}
                            <div class="text-red-600 text-sm">{{ form_errors(form.phoneNumber) }}</div>
                        </div>

                        <div class="flex flex-col gap-2">
                            <label class="text-sm font-medium text-gray-700">Expertise</label>
                            {{ form_widget(form.expertise, {'attr': {'class': 'w-full rounded-lg border border-gray-200 bg-white px-4 py-3 text-base focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all', 'placeholder': 'Ex: Développement Web, Marketing Digital...'}}) }}
                            <div class="text-red-600 text-sm">{{ form_errors(form.expertise) }}</div>
                        </div>

                        <div class="flex flex-col gap-2">
                            <label class="text-sm font-medium text-gray-700">Biographie</label>
                            {{ form_widget(form.bio, {'attr': {'class': 'w-full rounded-lg border border-gray-200 bg-white px-4 py-3 text-base focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all resize-none', 'rows': 4, 'placeholder': 'Parlez-nous de vous...'}}) }}
                            <p class="text-xs text-gray-500">Maximum 1000 caractères</p>
                            <div class="text-red-600 text-sm">{{ form_errors(form.bio) }}</div>
                        </div>

                        <div class="flex items-center justify-end gap-4 pt-4 border-t border-gray-100">
                            <a href="{{ path('app_profile') }}" class="px-6 py-3 text-gray-600 font-semibold hover:text-gray-900 transition-colors">
                                Annuler
                            </a>
                            <button type="submit" class="inline-flex items-center gap-2 px-6 py-3 bg-primary text-navy rounded-lg font-bold hover:bg-yellow-400 transition-colors shadow-lg shadow-primary/30">
                                <span class="material-symbols-outlined">save</span>
                                Enregistrer
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
