{% extends 'front_office/base.html.twig' %}

{% block title %}Modifier mon Profil - SmartNexus AI{% endblock %}

{% block content %}
<div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <div class="bg-gradient-to-r from-navy to-electric px-6 py-8">
        <div class="max-w-4xl mx-auto">
            <div class="flex items-center gap-4">
                <a href="{{ path('app_profile') }}" class="w-10 h-10 rounded-lg bg-white/10 flex items-center justify-center text-white hover:bg-white/20 transition-colors">
                    <span class="material-symbols-outlined">arrow_back</span>
                </a>
                <div class="text-white">
                    <h1 class="text-2xl font-bold">Modifier mon profil</h1>
                    <p class="text-blue-100">Mettez à jour vos informations personnelles</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Content -->
    <div class="max-w-4xl mx-auto px-6 py-8">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Sidebar -->
            <div class="lg:col-span-1">
                <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
                    <h3 class="text-lg font-bold text-gray-900 mb-4">Navigation</h3>
                    <nav class="space-y-2">
                        <a href="{{ path('app_profile') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-600 hover:bg-gray-50 transition-colors">
                            <span class="material-symbols-outlined">person</span>
                            Mon profil
                        </a>
                        <a href="{{ path('app_profile_edit') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg bg-primary/10 text-navy font-semibold">
                            <span class="material-symbols-outlined">edit</span>
                            Modifier le profil
                        </a>
                        <a href="{{ path('app_profile_password') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-600 hover:bg-gray-50 transition-colors">
                            <span class="material-symbols-outlined">lock</span>
                            Changer le mot de passe
                        </a>
                        <a href="{{ path('app_2fa_settings') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-600 hover:bg-gray-50 transition-colors">
                            <span class="material-symbols-outlined">security</span>
                            Authentification 2FA
                        </a>
                        <a href="{{ path('app_dashboard') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-600 hover:bg-gray-50 transition-colors">
                            <span class="material-symbols-outlined">dashboard</span>
                            Retour au dashboard
                        </a>
                    </nav>
                </div>
            </div>

            <!-- Main Content -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
                    <h3 class="text-xl font-bold text-gray-900 flex items-center gap-2 mb-6">
                        <span class="material-symbols-outlined text-navy">edit</span>
                        Modifier mes informations
                    </h3>

                    {{ form_start(form, {'attr': {'class': 'space-y-6', 'novalidate': 'novalidate', 'enctype': 'multipart/form-data'}}) }}
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div class="flex flex-col gap-2">
                                <label class="text-sm font-medium text-gray-700">Prénom *</label>
                                {{ form_widget(form.prenom, {'attr': {'class': 'w-full rounded-lg border border-gray-200 bg-white px-4 py-3 text-base focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all'}}) }}
                                <div class="text-red-600 text-sm">{{ form_errors(form.prenom) }}</div>
                            </div>
                            <div class="flex flex-col gap-2">
                                <label class="text-sm font-medium text-gray-700">Nom *</label>
                                {{ form_widget(form.nom, {'attr': {'class': 'w-full rounded-lg border border-gray-200 bg-white px-4 py-3 text-base focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all'}}) }}
                                <div class="text-red-600 text-sm">{{ form_errors(form.nom) }}</div>
                            </div>
                        </div>

                        <div class="flex flex-col gap-2">
                            <label class="text-sm font-medium text-gray-700">Email *</label>
                            {{ form_widget(form.email, {'attr': {'class': 'w-full rounded-lg border border-gray-200 bg-white px-4 py-3 text-base focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all'}}) }}
                            <div class="text-red-600 text-sm">{{ form_errors(form.email) }}</div>
                        </div>

                        <div class="flex flex-col gap-2">
                            <label class="text-sm font-medium text-gray-700">Téléphone</label>
                            {{ form_widget(form.phoneNumber, {'attr': {'class': 'w-full rounded-lg border border-gray-200 bg-white px-4 py-3 text-base focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all', 'placeholder': '+33 6 12 34 56 78'}}) }}
                            <div class="text-red-600 text-sm">{{ form_errors(form.phoneNumber) }}</div>
                        </div>

                        <!-- Photo de profil - Modern Upload Design -->
                        <div class="flex flex-col gap-2">
                            <label class="text-sm font-medium text-gray-700 flex items-center gap-2">
                                <span class="material-symbols-outlined text-[20px] text-primary">account_circle</span>
                                Photo de profil
                            </label>
                            
                            <!-- Current Photo -->
                            {% if user.photo %}
                            <div class="flex items-center gap-4 mb-3 p-4 bg-gray-50 rounded-lg border border-gray-200">
                                <div class="w-16 h-16 rounded-full overflow-hidden bg-gray-100 flex-shrink-0 shadow-sm">
                                    <img src="{{ user.photo }}" class="w-full h-full object-cover" alt="Photo actuelle" onerror="this.src='';this.parentElement.innerHTML='<div class=\"w-full h-full flex items-center justify-center bg-gray-100\"><span class=\"material-symbols-outlined text-3xl text-gray-400\">person</span></div>';">
                                </div>
                                <div class="flex-1">
                                    <p class="text-sm font-medium text-gray-700">Photo actuelle</p>
                                    <p class="text-xs text-gray-500 mt-0.5">Téléchargez une nouvelle photo pour la remplacer</p>
                                </div>
                            </div>
                            {% endif %}
                            
                            <!-- Upload Zone -->
                            <div class="photo-upload-container">
                                {{ form_widget(form.photoFile, {'attr': {'class': 'hidden', 'id': 'photo-upload-input', 'accept': 'image/jpeg,image/png,image/gif,image/webp'}}) }}
                                
                                <div id="photo-upload-zone" class="relative group cursor-pointer border-2 border-dashed border-gray-200 rounded-xl p-6 hover:border-primary hover:bg-primary/5 transition-all duration-300">
                                    <div id="photo-preview-container" class="hidden">
                                        <div class="flex items-center gap-4">
                                            <div class="relative">
                                                <img id="photo-preview" src="" alt="Preview" class="w-20 h-20 rounded-lg object-cover border-2 border-primary">
                                                <button type="button" id="remove-photo" class="absolute -top-2 -right-2 bg-red-500 text-white rounded-full w-6 h-6 flex items-center justify-center hover:bg-red-600 transition-colors shadow-md">
                                                    <span class="material-symbols-outlined text-[16px]">close</span>
                                                </button>
                                            </div>
                                            <div class="flex-1">
                                                <p id="photo-name" class="text-sm font-medium text-gray-700"></p>
                                                <p id="photo-size" class="text-xs text-gray-500 mt-0.5"></p>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div id="photo-upload-placeholder" class="text-center">
                                        <div class="flex justify-center mb-3">
                                            <div class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center group-hover:bg-primary/20 transition-colors">
                                                <span class="material-symbols-outlined text-primary text-3xl">add_photo_alternate</span>
                                            </div>
                                        </div>
                                        <div class="space-y-1">
                                            <p class="text-sm font-medium text-gray-700">
                                                <span class="text-primary font-semibold">Cliquez pour choisir</span> ou glissez une image
                                            </p>
                                            <p class="text-xs text-gray-500">JPG, PNG, GIF ou WEBP • Max 10MB</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="text-red-600 text-sm mt-1">{{ form_errors(form.photoFile) }}</div>
                            </div>
                        </div>

                        <div class="flex flex-col gap-2">
                            <label class="text-sm font-medium text-gray-700">Expertise</label>
                            {{ form_widget(form.expertise, {'attr': {'class': 'w-full rounded-lg border border-gray-200 bg-white px-4 py-3 text-base focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all', 'placeholder': 'Ex: Développement Web, Marketing Digital...'}}) }}
                            <div class="text-red-600 text-sm">{{ form_errors(form.expertise) }}</div>
                        </div>

                        <div class="flex flex-col gap-2">
                            <label class="text-sm font-medium text-gray-700">Biographie</label>
                            {{ form_widget(form.bio, {'attr': {'class': 'w-full rounded-lg border border-gray-200 bg-white px-4 py-3 text-base focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all resize-none', 'rows': 4, 'placeholder': 'Parlez-nous de vous...'}}) }}
                            <p class="text-xs text-gray-500">Maximum 1000 caractères</p>
                            <div class="text-red-600 text-sm">{{ form_errors(form.bio) }}</div>
                        </div>

                        <div class="flex items-center justify-end gap-4 pt-4 border-t border-gray-100">
                            <a href="{{ path('app_profile') }}" class="px-6 py-3 text-gray-600 font-semibold hover:text-gray-900 transition-colors">
                                Annuler
                            </a>
                            <button type="submit" class="inline-flex items-center gap-2 px-6 py-3 bg-primary text-navy rounded-lg font-bold hover:bg-yellow-400 transition-colors shadow-lg shadow-primary/30">
                                <span class="material-symbols-outlined">save</span>
                                Enregistrer
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Photo upload with drag & drop and preview
document.addEventListener('DOMContentLoaded', function() {
    const photoInput = document.getElementById('photo-upload-input');
    const photoZone = document.getElementById('photo-upload-zone');
    const photoPreviewContainer = document.getElementById('photo-preview-container');
    const photoPlaceholder = document.getElementById('photo-upload-placeholder');
    const photoPreview = document.getElementById('photo-preview');
    const photoName = document.getElementById('photo-name');
    const photoSize = document.getElementById('photo-size');

    if (!photoInput || !photoZone) {
        console.error('Photo upload elements not found');
        return;
    }

    console.log('Photo upload initialized');

    // Single click handler for the entire zone
    photoZone.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        
        // Check if clicking the remove button
        if (e.target.closest('#remove-photo')) {
            clearPhotoPreview();
            return;
        }
        
        // Otherwise open file picker
        photoInput.click();
    });

    // File input change
    photoInput.addEventListener('change', function(e) {
        console.log('File selected:', e.target.files);
        if (e.target.files && e.target.files[0]) {
            handleFileSelect(e.target.files[0]);
        }
    });

    // Prevent default drag behaviors on the zone
    ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
        photoZone.addEventListener(eventName, function(e) {
            e.preventDefault();
            e.stopPropagation();
        }, false);
    });

    // Visual feedback on dragover
    photoZone.addEventListener('dragenter', function(e) {
        console.log('Drag enter');
        photoZone.classList.add('border-primary', 'bg-primary/10');
    });

    photoZone.addEventListener('dragover', function(e) {
        photoZone.classList.add('border-primary', 'bg-primary/10');
    });

    photoZone.addEventListener('dragleave', function(e) {
        // Only remove styling if leaving the zone completely
        if (e.target === photoZone) {
            console.log('Drag leave');
            photoZone.classList.remove('border-primary', 'bg-primary/10');
        }
    });

    // Handle dropped files
    photoZone.addEventListener('drop', function(e) {
        console.log('File dropped');
        photoZone.classList.remove('border-primary', 'bg-primary/10');
        
        const files = e.dataTransfer.files;
        if (files && files.length > 0) {
            const file = files[0];
            console.log('Dropped file:', file.name, file.type, file.size);
            
            // Update the input element with the dropped file
            try {
                const dataTransfer = new DataTransfer();
                dataTransfer.items.add(file);
                photoInput.files = dataTransfer.files;
                handleFileSelect(file);
            } catch (error) {
                console.error('Error setting file:', error);
                // Fallback: just process the file without updating input
                handleFileSelect(file);
            }
        }
    });

    function handleFileSelect(file) {
        if (!file) {
            console.log('No file provided');
            return;
        }

        console.log('Handling file:', file.name);

        // Validate file type
        const validTypes = ['image/jpeg', 'image/png', 'image/gif', 'image/webp'];
        if (!validTypes.includes(file.type)) {
            alert('Format de fichier non valide. Veuillez choisir une image JPG, PNG, GIF ou WEBP.');
            clearPhotoPreview();
            return;
        }

        // Validate file size (10MB)
        if (file.size > 10 * 1024 * 1024) {
            alert('Le fichier est trop volumineux. La taille maximale est de 10 MB.');
            clearPhotoPreview();
            return;
        }

        // Show preview
        const reader = new FileReader();
        reader.onload = function(e) {
            console.log('Preview loaded');
            photoPreview.src = e.target.result;
            photoName.textContent = file.name;
            photoSize.textContent = formatFileSize(file.size);
            photoPlaceholder.classList.add('hidden');
            photoPreviewContainer.classList.remove('hidden');
        };
        reader.onerror = function(e) {
            console.error('Error reading file:', e);
        };
        reader.readAsDataURL(file);
    }

    function clearPhotoPreview() {
        console.log('Clearing preview');
        photoInput.value = '';
        photoPreview.src = '';
        photoName.textContent = '';
        photoSize.textContent = '';
        photoPlaceholder.classList.remove('hidden');
        photoPreviewContainer.classList.add('hidden');
    }

    function formatFileSize(bytes) {
        if (bytes === 0) return '0 Bytes';
        const k = 1024;
        const sizes = ['Bytes', 'KB', 'MB'];
        const i = Math.floor(Math.log(bytes) / Math.log(k));
        return Math.round(bytes / Math.pow(k, i) * 100) / 100 + ' ' + sizes[i];
    }
});
</script>
{% endblock %}
