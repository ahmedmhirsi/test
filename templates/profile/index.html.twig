{% extends 'front_office/base.html.twig' %}

{% block title %}Mon Profil - SmartNexus AI{% endblock %}

{% block content %}
<div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <div class="bg-gradient-to-r from-navy to-electric px-6 py-12">
        <div class="max-w-4xl mx-auto">
            <div class="flex flex-col md:flex-row md:items-center gap-6">
                <div class="flex-shrink-0">
                    {% if user.photo %}
                        <div class="w-24 h-24 rounded-2xl bg-cover bg-center border-4 border-white/20 shadow-xl" style="background-image: url('{{ user.photo }}');"></div>
                    {% else %}
                        <div class="w-24 h-24 rounded-2xl bg-gradient-to-br from-primary to-orange-400 flex items-center justify-center border-4 border-white/20 shadow-xl">
                            <span class="text-navy font-black text-3xl">{{ user.prenom|slice(0, 1)|upper }}{{ user.nom|slice(0, 1)|upper }}</span>
                        </div>
                    {% endif %}
                </div>
                <div class="text-white flex-1">
                    <h1 class="text-3xl font-bold mb-1">{{ user.prenom }} {{ user.nom }}</h1>
                    <p class="text-blue-100 text-lg">{{ user.email }}</p>
                    <div class="flex items-center gap-3 mt-3">
                        {% set roleLabel = 'Utilisateur' %}
                        {% set roleColor = 'bg-gray-500/30' %}
                        {% if 'ROLE_ADMIN' in user.roles %}
                            {% set roleLabel = 'Administrateur' %}
                            {% set roleColor = 'bg-orange-500/30' %}
                        {% elseif 'ROLE_EMPLOYEE' in user.roles %}
                            {% set roleLabel = 'Employé' %}
                            {% set roleColor = 'bg-blue-500/30' %}
                        {% elseif 'ROLE_CLIENT' in user.roles %}
                            {% set roleLabel = 'Client' %}
                            {% set roleColor = 'bg-indigo-500/30' %}
                        {% elseif 'ROLE_CANDIDAT' in user.roles %}
                            {% set roleLabel = 'Candidat' %}
                            {% set roleColor = 'bg-purple-500/30' %}
                        {% elseif 'ROLE_VISITEUR' in user.roles %}
                            {% set roleLabel = 'Visiteur' %}
                            {% set roleColor = 'bg-teal-500/30' %}
                        {% endif %}
                        <span class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full {{ roleColor }} text-white text-sm font-medium backdrop-blur-sm">
                            <span class="material-symbols-outlined text-lg">verified_user</span>
                            {{ roleLabel }}
                        </span>
                        {% if user.isVerified %}
                            <span class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-green-500/30 text-white text-sm font-medium backdrop-blur-sm">
                                <span class="material-symbols-outlined text-lg">check_circle</span>
                                Vérifié
                            </span>
                        {% endif %}
                    </div>
                </div>
                <div class="flex gap-3">
                    <a href="{{ path('app_profile_edit') }}" class="inline-flex items-center gap-2 px-5 py-2.5 bg-white text-navy rounded-lg font-bold text-sm hover:bg-gray-100 transition-colors shadow-lg">
                        <span class="material-symbols-outlined text-lg">edit</span>
                        Modifier
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Flash messages -->
    <div class="max-w-4xl mx-auto px-6 mt-6">
        {% for flash in app.flashes('success') %}
            <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-lg mb-4 flex items-center gap-3">
                <span class="material-symbols-outlined text-green-500">check_circle</span>
                <span class="text-sm font-medium">{{ flash }}</span>
            </div>
        {% endfor %}
        {% for flash in app.flashes('error') %}
            <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-4 flex items-center gap-3">
                <span class="material-symbols-outlined text-red-500">error</span>
                <span class="text-sm font-medium">{{ flash }}</span>
            </div>
        {% endfor %}
    </div>

    <!-- Content -->
    <div class="max-w-4xl mx-auto px-6 py-8">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Sidebar -->
            <div class="lg:col-span-1">
                <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
                    <h3 class="text-lg font-bold text-gray-900 mb-4">Navigation</h3>
                    <nav class="space-y-2">
                        <a href="{{ path('app_profile') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg bg-primary/10 text-navy font-semibold">
                            <span class="material-symbols-outlined">person</span>
                            Mon profil
                        </a>
                        <a href="{{ path('app_profile_edit') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-600 hover:bg-gray-50 transition-colors">
                            <span class="material-symbols-outlined">edit</span>
                            Modifier le profil
                        </a>
                        <a href="{{ path('app_profile_password') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-600 hover:bg-gray-50 transition-colors">
                            <span class="material-symbols-outlined">lock</span>
                            Changer le mot de passe
                        </a>
                        <a href="{{ path('app_2fa_settings') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-600 hover:bg-gray-50 transition-colors">
                            <span class="material-symbols-outlined">security</span>
                            Authentification 2FA
                        </a>
                        <a href="{{ path('app_dashboard') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-600 hover:bg-gray-50 transition-colors">
                            <span class="material-symbols-outlined">dashboard</span>
                            Retour au dashboard
                        </a>
                    </nav>
                </div>
            </div>

            <!-- Main Content -->
            <div class="lg:col-span-2 space-y-6">
                <!-- Personal Info -->
                <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
                    <div class="flex items-center justify-between mb-6">
                        <h3 class="text-xl font-bold text-gray-900 flex items-center gap-2">
                            <span class="material-symbols-outlined text-navy">person</span>
                            Informations personnelles
                        </h3>
                        <a href="{{ path('app_profile_edit') }}" class="text-sm text-navy font-semibold hover:underline">Modifier</a>
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="flex items-center gap-3 p-4 bg-gray-50 rounded-lg">
                            <span class="material-symbols-outlined text-gray-400">badge</span>
                            <div>
                                <p class="text-xs text-gray-500 uppercase tracking-wider">Prénom</p>
                                <p class="font-semibold text-gray-900">{{ user.prenom }}</p>
                            </div>
                        </div>
                        <div class="flex items-center gap-3 p-4 bg-gray-50 rounded-lg">
                            <span class="material-symbols-outlined text-gray-400">badge</span>
                            <div>
                                <p class="text-xs text-gray-500 uppercase tracking-wider">Nom</p>
                                <p class="font-semibold text-gray-900">{{ user.nom }}</p>
                            </div>
                        </div>
                        <div class="flex items-center gap-3 p-4 bg-gray-50 rounded-lg">
                            <span class="material-symbols-outlined text-gray-400">mail</span>
                            <div>
                                <p class="text-xs text-gray-500 uppercase tracking-wider">Email</p>
                                <p class="font-semibold text-gray-900">{{ user.email }}</p>
                            </div>
                        </div>
                        <div class="flex items-center gap-3 p-4 bg-gray-50 rounded-lg">
                            <span class="material-symbols-outlined text-gray-400">phone</span>
                            <div>
                                <p class="text-xs text-gray-500 uppercase tracking-wider">Téléphone</p>
                                <p class="font-semibold text-gray-900">{{ user.phoneNumber ?: 'Non renseigné' }}</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Bio & Expertise -->
                <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
                    <h3 class="text-xl font-bold text-gray-900 flex items-center gap-2 mb-6">
                        <span class="material-symbols-outlined text-navy">description</span>
                        Biographie & Expertise
                    </h3>
                    <div class="space-y-4">
                        <div>
                            <p class="text-xs text-gray-500 uppercase tracking-wider mb-2">Biographie</p>
                            <p class="text-gray-700 leading-relaxed">{{ user.bio ?: 'Aucune biographie renseignée.' }}</p>
                        </div>
                        <div>
                            <p class="text-xs text-gray-500 uppercase tracking-wider mb-2">Expertise</p>
                            <p class="text-gray-700">{{ user.expertise ?: 'Aucune expertise renseignée.' }}</p>
                        </div>
                    </div>
                </div>

                <!-- Account Info -->
                <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
                    <h3 class="text-xl font-bold text-gray-900 flex items-center gap-2 mb-6">
                        <span class="material-symbols-outlined text-navy">settings</span>
                        Informations du compte
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="flex items-center gap-3 p-4 bg-gray-50 rounded-lg">
                            <span class="material-symbols-outlined text-gray-400">calendar_month</span>
                            <div>
                                <p class="text-xs text-gray-500 uppercase tracking-wider">Membre depuis</p>
                                <p class="font-semibold text-gray-900">{{ user.createdAt ? user.createdAt|date('d F Y') : 'N/A' }}</p>
                            </div>
                        </div>
                        <div class="flex items-center gap-3 p-4 bg-gray-50 rounded-lg">
                            <span class="material-symbols-outlined text-gray-400">schedule</span>
                            <div>
                                <p class="text-xs text-gray-500 uppercase tracking-wider">Dernière connexion</p>
                                <p class="font-semibold text-gray-900">{{ user.lastLoginAt ? user.lastLoginAt|date('d/m/Y H:i') : 'Jamais' }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
