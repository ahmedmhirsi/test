{% extends 'front_office/base.html.twig' %}

{% block title %}Changer le mot de passe - SmartNexus AI{% endblock %}

{% block content %}
<div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <div class="bg-gradient-to-r from-navy to-electric px-6 py-8">
        <div class="max-w-4xl mx-auto">
            <div class="flex items-center gap-4">
                <a href="{{ path('app_profile') }}" class="w-10 h-10 rounded-lg bg-white/10 flex items-center justify-center text-white hover:bg-white/20 transition-colors">
                    <span class="material-symbols-outlined">arrow_back</span>
                </a>
                <div class="text-white">
                    <h1 class="text-2xl font-bold">Changer le mot de passe</h1>
                    <p class="text-blue-100">Sécurisez votre compte avec un nouveau mot de passe</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Flash messages -->
    <div class="max-w-4xl mx-auto px-6 mt-6">
        {% for flash in app.flashes('success') %}
            <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-lg mb-4 flex items-center gap-3">
                <span class="material-symbols-outlined text-green-500">check_circle</span>
                <span class="text-sm font-medium">{{ flash }}</span>
            </div>
        {% endfor %}
        {% for flash in app.flashes('error') %}
            <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-4 flex items-center gap-3">
                <span class="material-symbols-outlined text-red-500">error</span>
                <span class="text-sm font-medium">{{ flash }}</span>
            </div>
        {% endfor %}
    </div>

    <!-- Content -->
    <div class="max-w-4xl mx-auto px-6 py-8">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Sidebar -->
            <div class="lg:col-span-1">
                <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
                    <h3 class="text-lg font-bold text-gray-900 mb-4">Navigation</h3>
                    <nav class="space-y-2">
                        <a href="{{ path('app_profile') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-600 hover:bg-gray-50 transition-colors">
                            <span class="material-symbols-outlined">person</span>
                            Mon profil
                        </a>
                        <a href="{{ path('app_profile_edit') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-600 hover:bg-gray-50 transition-colors">
                            <span class="material-symbols-outlined">edit</span>
                            Modifier le profil
                        </a>
                        <a href="{{ path('app_profile_password') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg bg-primary/10 text-navy font-semibold">
                            <span class="material-symbols-outlined">lock</span>
                            Changer le mot de passe
                        </a>
                        <a href="{{ path('app_dashboard') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-600 hover:bg-gray-50 transition-colors">
                            <span class="material-symbols-outlined">dashboard</span>
                            Retour au dashboard
                        </a>
                    </nav>
                </div>

                <!-- Security Tips -->
                <div class="bg-gradient-to-br from-primary/10 to-yellow-100 rounded-2xl p-6 mt-6 border border-primary/20">
                    <h4 class="font-bold text-gray-900 mb-3 flex items-center gap-2">
                        <span class="material-symbols-outlined text-primary">tips_and_updates</span>
                        Conseils de sécurité
                    </h4>
                    <ul class="space-y-2 text-sm text-gray-600">
                        <li class="flex items-start gap-2">
                            <span class="material-symbols-outlined text-green-600 text-[16px] mt-0.5">check_circle</span>
                            Minimum 8 caractères
                        </li>
                        <li class="flex items-start gap-2">
                            <span class="material-symbols-outlined text-green-600 text-[16px] mt-0.5">check_circle</span>
                            Au moins une majuscule
                        </li>
                        <li class="flex items-start gap-2">
                            <span class="material-symbols-outlined text-green-600 text-[16px] mt-0.5">check_circle</span>
                            Au moins une minuscule
                        </li>
                        <li class="flex items-start gap-2">
                            <span class="material-symbols-outlined text-green-600 text-[16px] mt-0.5">check_circle</span>
                            Au moins un chiffre
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Main Content -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
                    <h3 class="text-xl font-bold text-gray-900 flex items-center gap-2 mb-6">
                        <span class="material-symbols-outlined text-navy">lock</span>
                        Modifier votre mot de passe
                    </h3>

                    {{ form_start(form, {'attr': {'class': 'space-y-6', 'novalidate': 'novalidate'}}) }}
                        <div class="flex flex-col gap-2">
                            <label class="text-sm font-medium text-gray-700">Mot de passe actuel *</label>
                            <div class="relative group">
                                <span class="material-symbols-outlined absolute left-3 top-3.5 text-gray-400 group-focus-within:text-primary transition-colors text-[20px]">lock</span>
                                {{ form_widget(form.currentPassword, {'attr': {'class': 'w-full rounded-lg border border-gray-200 bg-white pl-10 pr-4 py-3 text-base focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all', 'placeholder': 'Entrez votre mot de passe actuel'}}) }}
                            </div>
                            <div class="text-red-600 text-sm">{{ form_errors(form.currentPassword) }}</div>
                        </div>

                        <div class="flex flex-col gap-2">
                            <label class="text-sm font-medium text-gray-700">Nouveau mot de passe *</label>
                            <div class="relative group">
                                <span class="material-symbols-outlined absolute left-3 top-3.5 text-gray-400 group-focus-within:text-primary transition-colors text-[20px]">key</span>
                                {{ form_widget(form.newPassword.first, {'attr': {'class': 'w-full rounded-lg border border-gray-200 bg-white pl-10 pr-4 py-3 text-base focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all', 'placeholder': 'Entrez votre nouveau mot de passe'}}) }}
                            </div>
                            <div class="text-red-600 text-sm">{{ form_errors(form.newPassword.first) }}</div>
                        </div>

                        <div class="flex flex-col gap-2">
                            <label class="text-sm font-medium text-gray-700">Confirmer le nouveau mot de passe *</label>
                            <div class="relative group">
                                <span class="material-symbols-outlined absolute left-3 top-3.5 text-gray-400 group-focus-within:text-primary transition-colors text-[20px]">key</span>
                                {{ form_widget(form.newPassword.second, {'attr': {'class': 'w-full rounded-lg border border-gray-200 bg-white pl-10 pr-4 py-3 text-base focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all', 'placeholder': 'Confirmez votre nouveau mot de passe'}}) }}
                            </div>
                            <div class="text-red-600 text-sm">{{ form_errors(form.newPassword.second) }}</div>
                        </div>

                        <div class="flex items-center justify-end gap-4 pt-4 border-t border-gray-100">
                            <a href="{{ path('app_profile') }}" class="px-6 py-3 text-gray-600 font-semibold hover:text-gray-900 transition-colors">
                                Annuler
                            </a>
                            <button type="submit" class="inline-flex items-center gap-2 px-6 py-3 bg-primary text-navy rounded-lg font-bold hover:bg-yellow-400 transition-colors shadow-lg shadow-primary/30">
                                <span class="material-symbols-outlined">lock_reset</span>
                                Changer le mot de passe
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
