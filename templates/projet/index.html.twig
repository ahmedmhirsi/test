{% extends user_layout %}
{% import '_components.html.twig' as ui %}

{% block title %}Projets – SmartNexus AI{% endblock %}

{% block body %}
    {# ========== Page Header ========== #}
    <div class="flex flex-wrap justify-between items-center gap-4 mb-6">
        <div>
            <h1 class="text-navy dark:text-white text-3xl font-black">Projets</h1>
            <p class="text-gray-500 mt-1">Manage your projects and track overall progress</p>
        </div>
        {% if can_create_projet %}
        <a href="{{ path('app_projet_new') }}" 
           class="flex items-center gap-2 px-5 py-2.5 bg-primary hover:bg-yellow-500 text-white font-bold rounded-lg transition-all shadow-lg shadow-primary/20">
            <span class="material-symbols-outlined">add</span>
            New Project
        </a>
        {% endif %}
    </div>

    {# ========== Sort Bar ========== #}
    <div class="flex items-center gap-3 mb-6 bg-white dark:bg-gray-900 rounded-xl border border-gray-200 dark:border-gray-800 p-3">
        <span class="text-gray-500 text-sm font-medium">Sort by:</span>
        <div class="flex gap-2 flex-wrap">
            <a href="{{ path('app_projet_index', {sort: 'dateDebut', order: currentSort == 'dateDebut' and currentOrder == 'DESC' ? 'ASC' : 'DESC'}) }}" 
               class="px-3 py-1.5 rounded-lg text-sm font-medium transition-colors {{ currentSort == 'dateDebut' ? 'bg-primary text-white' : 'bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400 hover:bg-gray-200 dark:hover:bg-gray-700' }}">
                Date {{ currentSort == 'dateDebut' ? (currentOrder == 'ASC' ? '↑' : '↓') : '' }}
            </a>
            <a href="{{ path('app_projet_index', {sort: 'priorite', order: currentSort == 'priorite' and currentOrder == 'ASC' ? 'DESC' : 'ASC'}) }}" 
               class="px-3 py-1.5 rounded-lg text-sm font-medium transition-colors {{ currentSort == 'priorite' ? 'bg-primary text-white' : 'bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400 hover:bg-gray-200 dark:hover:bg-gray-700' }}">
                Priority {{ currentSort == 'priorite' ? (currentOrder == 'ASC' ? '↑' : '↓') : '' }}
            </a>
            <a href="{{ path('app_projet_index', {sort: 'statut', order: currentSort == 'statut' and currentOrder == 'ASC' ? 'DESC' : 'ASC'}) }}" 
               class="px-3 py-1.5 rounded-lg text-sm font-medium transition-colors {{ currentSort == 'statut' ? 'bg-primary text-white' : 'bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400 hover:bg-gray-200 dark:hover:bg-gray-700' }}">
                Status {{ currentSort == 'statut' ? (currentOrder == 'ASC' ? '↑' : '↓') : '' }}
            </a>
            <a href="{{ path('app_projet_index', {sort: 'titre', order: currentSort == 'titre' and currentOrder == 'ASC' ? 'DESC' : 'ASC'}) }}" 
               class="px-3 py-1.5 rounded-lg text-sm font-medium transition-colors {{ currentSort == 'titre' ? 'bg-primary text-white' : 'bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400 hover:bg-gray-200 dark:hover:bg-gray-700' }}">
                Title {{ currentSort == 'titre' ? (currentOrder == 'ASC' ? '↑' : '↓') : '' }}
            </a>
        </div>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for projet in projets %}
            {% set isActive = projet.statut|lower in ['actif', 'active', 'en_cours', 'en cours'] %}
            <div class="group bg-white dark:bg-gray-900 rounded-xl border-2 {{ isActive ? 'border-primary shadow-lg shadow-primary/10' : 'border-gray-200 dark:border-gray-800' }} overflow-hidden hover:shadow-xl transition-all duration-300">
                {# Header with color band #}
                <div class="h-2 {{ isActive ? 'bg-primary' : 'bg-gray-200 dark:bg-gray-700' }}"></div>
                
                <div class="p-6">
                    {# Title and Status #}
                    <div class="flex justify-between items-start mb-3">
                        <h3 class="text-navy dark:text-white font-bold text-lg group-hover:text-primary transition-colors">
                            <a href="{{ path('app_projet_show', {id: projet.id}) }}">{{ projet.titre }}</a>
                        </h3>
                        {{ ui.status_badge(projet.statut) }}
                    </div>

                    {# Description #}
                    {% if projet.description %}
                        <p class="text-gray-500 text-sm mb-4 line-clamp-2">
                            {{ projet.description|slice(0, 100) }}{{ projet.description|length > 100 ? '...' : '' }}
                        </p>
                    {% endif %}

                    {# Dates #}
                    {% if projet.dateDebut %}
                        <div class="flex items-center gap-2 text-gray-500 text-sm mb-4">
                            <span class="material-symbols-outlined text-base">calendar_today</span>
                            <span>{{ projet.dateDebut|date('M d, Y') }}{% if projet.dateFin %} - {{ projet.dateFin|date('M d, Y') }}{% endif %}</span>
                        </div>
                    {% endif %}

                    {# Stats Row #}
                    <div class="grid grid-cols-3 gap-3 mb-4">
                        <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-3 text-center">
                            <p class="text-gray-400 text-[10px] uppercase font-bold">Sprints</p>
                            <p class="text-navy dark:text-white text-xl font-bold">{{ projet.sprints|length }}</p>
                        </div>
                        <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-3 text-center">
                            <p class="text-gray-400 text-[10px] uppercase font-bold">Priority</p>
                            <p class="text-primary text-sm font-bold mt-1">{{ projet.priorite|upper }}</p>
                        </div>
                        {% if projet.budget %}
                        <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-3 text-center">
                            <p class="text-gray-400 text-[10px] uppercase font-bold">Budget</p>
                            <p class="text-navy dark:text-white text-sm font-bold">{{ projet.budget|number_format(0, '.', ' ') }}€</p>
                        </div>
                        {% else %}
                        <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-3 text-center">
                            <p class="text-gray-400 text-[10px] uppercase font-bold">Budget</p>
                            <p class="text-gray-400 text-sm font-bold">—</p>
                        </div>
                        {% endif %}
                    </div>

                    {# Actions #}
                    <div class="flex gap-2 pt-4 border-t border-gray-100 dark:border-gray-800">
                        <a href="{{ path('app_projet_show', {id: projet.id}) }}" 
                           class="flex-1 flex items-center justify-center gap-1 py-2 text-sm font-medium text-gray-600 dark:text-gray-400 hover:text-navy dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg transition-colors">
                            <span class="material-symbols-outlined text-lg">visibility</span>
                            View
                        </a>
                        {% if can_edit_projet %}
                        <a href="{{ path('app_projet_edit', {id: projet.id}) }}" 
                           class="flex-1 flex items-center justify-center gap-1 py-2 text-sm font-medium text-gray-600 dark:text-gray-400 hover:text-primary hover:bg-primary/10 rounded-lg transition-colors">
                            <span class="material-symbols-outlined text-lg">edit</span>
                            Edit
                        </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% else %}
            {# Empty State #}
            <div class="col-span-full">
                <div class="bg-white dark:bg-gray-900 rounded-xl border border-gray-200 dark:border-gray-800 p-16 text-center">
                    <span class="material-symbols-outlined text-6xl text-gray-300 mb-4">folder_open</span>
                    <h3 class="text-navy dark:text-white text-xl font-bold mb-2">No projects yet</h3>
                    <p class="text-gray-500 mb-6">Create your first project to start organizing your sprints</p>
                    {% if can_create_projet %}
                    <a href="{{ path('app_projet_new') }}" 
                       class="inline-flex items-center gap-2 px-6 py-3 bg-primary hover:bg-yellow-500 text-white font-bold rounded-lg transition-colors shadow-lg shadow-primary/20">
                        <span class="material-symbols-outlined">add</span>
                        Create First Project
                    </a>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
