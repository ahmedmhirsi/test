{% extends 'back_office/base.html.twig' %}

{% block title %}Projets - Nexus AI{% endblock %}

{% block header_title %}
    <span class="flex items-center gap-2">
        <span class="material-symbols-outlined text-nexus-primary">folder_managed</span>
        Gestion de Projets
    </span>
{% endblock %}

{% block content %}
<div class="swup-transition-fade">

    {# ── Header ── #}
    <div class="flex flex-col md:flex-row justify-between items-start md:items-end gap-4 mb-8">
        <div>
            <h1 class="text-3xl font-black tracking-tight text-white mb-2 text-glow">
                Projets Actifs
            </h1>
            <p class="text-gray-400 text-sm">
                Gérez vos sprints, suivez l'avancement et collaborez avec vos équipes.
            </p>
        </div>
        {% if can_create_projet %}
        <a href="{{ path('app_projet_new') }}" class="btn-nexus-primary shadow-lg shadow-indigo-500/20 group">
            <span class="material-symbols-outlined mr-2 group-hover:rotate-90 transition-transform">add</span>
            Nouveau Projet
        </a>
        {% endif %}
    </div>

    {# ── Controls ── #}
    <div class="flex flex-col md:flex-row gap-4 mb-8 animate-card">
        <form method="get" action="{{ path('app_projet_index') }}" class="flex-1 nexus-card p-4 flex items-center gap-4">
            <span class="material-symbols-outlined text-gray-500">search</span>
            <input type="text" name="q" value="{{ searchTerm }}" placeholder="Rechercher un projet..." class="bg-transparent border-none text-white placeholder-gray-500 focus:ring-0 w-full text-sm font-medium">
            <input type="hidden" name="sort" value="{{ currentSort }}">
            <input type="hidden" name="order" value="{{ currentOrder }}">
        </form>
        
        <div class="flex items-center gap-2">
            <a href="{{ path('app_projet_export_pdf') }}" class="btn-nexus-secondary group" title="Export PDF">
                <span class="material-symbols-outlined text-red-400 group-hover:text-red-300">picture_as_pdf</span>
            </a>
            
             <div class="relative group z-20">
                <button class="btn-nexus-secondary">
                    <span class="material-symbols-outlined mr-2">sort</span>
                    Trier
                </button>
                <div class="absolute right-0 top-full mt-2 w-48 bg-[#1e293b] border border-white/10 rounded-xl shadow-2xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all overflow-hidden">
                    <a href="{{ path('app_projet_index', {sort: 'dateDebut', order: 'DESC'}) }}" class="block px-4 py-3 text-sm text-gray-400 hover:text-white hover:bg-white/5 border-b border-white/5">Date</a>
                    <a href="{{ path('app_projet_index', {sort: 'priorite', order: 'DESC'}) }}" class="block px-4 py-3 text-sm text-gray-400 hover:text-white hover:bg-white/5 border-b border-white/5">Priorité</a>
                    <a href="{{ path('app_projet_index', {sort: 'statut', order: 'ASC'}) }}" class="block px-4 py-3 text-sm text-gray-400 hover:text-white hover:bg-white/5">Statut</a>
                </div>
            </div>
        </div>
    </div>

    {# ── Projects Grid ── #}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for projet in projets %}
            {% set isActive = projet.statut|lower in ['actif', 'active', 'en_cours', 'en cours'] %}
            
            <div class="nexus-card group relative overflow-hidden hover:-translate-y-1 transition-transform duration-300 animate-card" style="animation-delay: {{ loop.index * 0.1 }}s">
                
                {# Status Indicator Line #}
                <div class="absolute top-0 left-0 w-full h-1 {{ isActive ? 'bg-gradient-to-r from-nexus-primary to-nexus-accent' : 'bg-gray-700' }}"></div>

                <div class="p-6">
                    {# Header #}
                    <div class="flex justify-between items-start mb-4">
                        <div class="size-10 rounded-xl bg-white/5 flex items-center justify-center text-white group-hover:bg-nexus-primary group-hover:text-white transition-colors">
                            <span class="material-symbols-outlined">folder</span>
                        </div>
                         {% if projet.priorite == 'Alice' or projet.priorite == 'Haute' %}
                            <span class="inline-flex items-center gap-1 px-2 py-1 rounded-lg bg-red-500/10 text-red-400 text-[10px] font-bold uppercase tracking-wider border border-red-500/20">
                                <span class="material-symbols-outlined text-[14px]">priority_high</span> High
                            </span>
                        {% elseif projet.priorite == 'Moyenne' %}
                             <span class="inline-flex items-center gap-1 px-2 py-1 rounded-lg bg-amber-500/10 text-amber-400 text-[10px] font-bold uppercase tracking-wider border border-amber-500/20">
                                Med
                            </span>
                        {% else %}
                             <span class="inline-flex items-center gap-1 px-2 py-1 rounded-lg bg-blue-500/10 text-blue-400 text-[10px] font-bold uppercase tracking-wider border border-blue-500/20">
                                Low
                            </span>
                        {% endif %}
                    </div>

                    {# Title #}
                    <h3 class="text-xl font-bold text-white mb-2 line-clamp-1 group-hover:text-nexus-primary transition-colors">
                        <a href="{{ path('app_projet_show', {id: projet.id}) }}">{{ projet.titre }}</a>
                    </h3>
                    
                    {% if projet.description %}
                        <p class="text-gray-400 text-sm mb-6 line-clamp-2 h-10">
                            {{ projet.description }}
                        </p>
                    {% else %}
                        <p class="text-gray-600 text-sm mb-6 italic h-10">Pas de description</p>
                    {% endif %}

                    {# Metrics Grid #}
                    <div class="grid grid-cols-2 gap-3 mb-6">
                        <div class="bg-white/5 rounded-lg p-3 border border-white/5">
                            <span class="text-[10px] text-gray-500 uppercase font-bold block mb-1">Sprints</span>
                            <span class="text-lg font-bold text-white">{{ projet.sprints|length }}</span>
                        </div>
                        <div class="bg-white/5 rounded-lg p-3 border border-white/5">
                            <span class="text-[10px] text-gray-500 uppercase font-bold block mb-1">Budget</span>
                            <span class="text-lg font-bold text-white">{{ projet.budget ? projet.budget|number_format(0, '.', ' ') ~ '€' : '-' }}</span>
                        </div>
                    </div>

                    {# Team / Footer #}
                    <div class="flex items-center justify-between pt-4 border-t border-white/5">
                        <div class="flex -space-x-2">
                            {% for i in 1..3 %}
                            <div class="size-6 rounded-full bg-gray-700 border border-[#111827] flex items-center justify-center text-[8px] text-white">
                                <span class="material-symbols-outlined text-[12px]">person</span>
                            </div>
                            {% endfor %}
                        </div>
                         <span class="text-xs text-gray-500 font-medium">
                            {{ projet.statut }}
                        </span>
                    </div>

                    {# Hover Actions Overlay #}
                    <div class="absolute inset-x-0 bottom-0 p-4 translate-y-full group-hover:translate-y-0 transition-transform duration-300 bg-[#111827]/90 backdrop-blur-sm border-t border-white/10 flex gap-2">
                        <a href="{{ path('app_projet_show', {id: projet.id}) }}" class="flex-1 btn-nexus-secondary text-xs h-9 justify-center">
                            Détails
                        </a>
                        {% if can_edit_projet %}
                        <a href="{{ path('app_projet_edit', {id: projet.id}) }}" class="size-9 rounded-lg bg-white/5 flex items-center justify-center text-gray-400 hover:bg-nexus-primary hover:text-white transition-colors">
                            <span class="material-symbols-outlined text-[18px]">edit</span>
                        </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-span-full py-20 text-center">
                <div class="size-20 bg-white/5 rounded-full flex items-center justify-center mx-auto mb-4">
                    <span class="material-symbols-outlined text-gray-600 text-4xl">folder_off</span>
                </div>
                <h3 class="text-xl font-bold text-white mb-2">Aucun projet</h3>
                <p class="text-gray-500 mb-6">Commencez par créer votre premier projet.</p>
                {% if can_create_projet %}
                <a href="{{ path('app_projet_new') }}" class="btn-nexus-primary">
                    <span class="material-symbols-outlined mr-2">add</span>
                    Créer un projet
                </a>
                {% endif %}
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
