{% extends 'back_office/base.html.twig' %}
{% import '_components.html.twig' as ui %}

{% block title %}Project: {{ projet.titre }} – Portfolio Hub{% endblock %}

{% block header_title %}
    <span class="flex items-center gap-2">
        <span class="material-symbols-outlined text-nexus-primary">folder_managed</span>
        Project Strategic Overview
    </span>
{% endblock %}

{% block content %}
<div class="swup-transition-fade pb-20">

    {# ─── Breadcrumb ─── #}
    <nav class="flex items-center gap-2 text-[11px] font-bold uppercase tracking-wider text-slate-500 mb-8 animate-card">
        <a href="{{ path('app_projet_index') }}" class="hover:text-nexus-primary transition-colors">Portfolio</a>
        <span class="material-symbols-outlined text-[16px]">chevron_right</span>
        <span class="text-white">{{ projet.titre }}</span>
    </nav>

    {# ─── Hero Section ─── #}
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8 mb-8 animate-card" style="animation-delay: 0.1s">
        
        {# Main Project Card #}
        <div class="lg:col-span-3 glass-panel p-8 group">
            <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-6 relative z-10 mb-8">
                <div class="flex items-start gap-5">
                    <div class="size-16 rounded-2xl bg-slate-800 border border-white/5 flex items-center justify-center text-nexus-primary shadow-xl">
                         <span class="material-symbols-outlined text-[32px]">folder_open</span>
                    </div>
                    <div>
                        <div class="flex items-center gap-3 mb-2">
                            <h1 class="text-4xl font-extrabold text-white tracking-tight leading-tight">{{ projet.titre }}</h1>
                            <span class="px-2.5 py-1 rounded-full text-[10px] font-bold uppercase tracking-widest bg-nexus-primary/10 text-nexus-primary border border-nexus-primary/20">
                                {{ projet.statut|capitalize }}
                            </span>
                        </div>
                        <p class="text-slate-400 text-sm max-w-xl font-medium leading-relaxed">{{ projet.description }}</p>
                    </div>
                </div>

                <div class="flex gap-2">
                    <a href="{{ path('app_projet_edit', {id: projet.id}) }}" class="btn-nexus-primary rounded-xl px-6 py-2.5 flex items-center gap-2">
                        <span class="material-symbols-outlined text-[20px]">settings</span>
                        Configure
                    </a>
                </div>
            </div>

            {# Stats Row #}
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 relative z-10">
                <div class="bg-slate-950/30 p-5 border border-white/5 rounded-2xl hover:border-nexus-primary/30 transition-all">
                    <p class="text-[11px] font-bold text-slate-500 uppercase tracking-wider mb-1">Total Sprints</p>
                    <p class="text-3xl font-black text-white">{{ projet.sprints|length }}</p>
                </div>
                <div class="bg-slate-950/30 p-5 border border-white/5 rounded-2xl hover:border-nexus-accent/30 transition-all">
                    <p class="text-[11px] font-bold text-slate-500 uppercase tracking-wider mb-1">Allocated Budget</p>
                    <p class="text-3xl font-black text-white">{{ projet.budget ? (projet.budget/1000)|number_format(1) : '0' }}<span class="text-xs text-slate-600">k</span></p>
                </div>
                 <div class="bg-slate-950/30 p-5 border border-white/5 rounded-2xl hover:border-slate-500/30 transition-all">
                    <p class="text-[11px] font-bold text-slate-500 uppercase tracking-wider mb-1">Duration Cycle</p>
                    <p class="text-sm font-bold text-white mt-1">{{ projet.dateDebut|date('M d') }} - {{ projet.dateFin|date('M d') }}</p>
                </div>
                 <div class="bg-slate-950/30 p-5 border border-white/5 rounded-2xl hover:border-emerald-500/30 transition-all">
                    <p class="text-[11px] font-bold text-slate-500 uppercase tracking-wider mb-1">Status Health</p>
                    <div class="flex items-center gap-2 mt-1">
                         <div class="size-2 rounded-full bg-emerald-500"></div>
                         <span class="text-sm font-bold text-white uppercase tracking-wider">Operational</span>
                    </div>
                </div>
            </div>
        </div>

        {# Right: Project Owner/Meta #}
        <div class="glass-panel p-6 flex flex-col items-center justify-center text-center animate-card" style="animation-delay: 0.2s">
            <h3 class="text-[11px] font-bold text-slate-500 uppercase tracking-wider mb-6">Account Director</h3>
            <div class="size-20 rounded-full bg-slate-800 p-1 mb-4 flex items-center justify-center border border-white/10 text-white font-black text-xl">
                NX
            </div>
            <p class="text-white font-bold text-lg">Nexus Lead</p>
            <p class="text-xs text-slate-500 font-bold uppercase tracking-widest mb-6">Senior Management</p>
            
            <div class="w-full pt-6 border-t border-white/5">
                <div class="flex justify-between items-center text-[10px] font-bold uppercase text-slate-500 mb-3">
                    <span>Priority Level</span>
                    <span class="{% if projet.priorite == 'haute' %}text-rose-500{% else %}text-nexus-primary{% endif %}">{{ projet.priorite|upper }}</span>
                </div>
                 <div class="h-1.5 w-full bg-slate-800 rounded-full overflow-hidden">
                    <div class="h-full bg-nexus-primary rounded-full transition-all duration-500" style="width: {% if projet.priorite == 'haute' %}100%{% elseif projet.priorite == 'moyenne' %}60%{% else %}30%{% endif %}"></div>
                </div>
            </div>
        </div>
    </div>

    {# ─── Sprints Section ─── #}
    <div class="animate-card" style="animation-delay: 0.3s">
        <div class="flex items-center justify-between mb-6 px-4">
             <h3 class="text-sm font-bold text-white uppercase tracking-widest flex items-center gap-3">
                <span class="size-2 rounded-full bg-nexus-primary"></span>
                Strategic Sprints
            </h3>
            {% if can_create_sprint %}
            <a href="{{ path('app_sprint_new') }}" class="btn-nexus-secondary py-1.5 text-xs">
                <span class="material-symbols-outlined text-[18px]">add</span>
                Initiate Sprint
            </a>
            {% endif %}
        </div>

        <div class="glass-panel overflow-hidden">
             <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse">
                    <thead>
                        <tr class="bg-slate-950/30 border-b border-white/5 text-[11px] font-bold text-slate-500 uppercase tracking-wider">
                            <th class="py-4 px-8">Nomenclature</th>
                            <th class="py-4 px-6">Framework Timeline</th>
                            <th class="py-4 px-6">Operational Status</th>
                            <th class="py-4 px-6">Velocity Ratio</th>
                            <th class="py-4 px-6 text-right">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-white/5">
                        {% for sprint in projet.sprints %}
                            {% set isActive = sprint.statut|lower in ['actif', 'active', 'en_cours', 'en cours'] %}
                            <tr class="group hover:bg-white/[0.02] transition-colors {% if isActive %}bg-nexus-primary/5{% endif %}">
                                <td class="py-5 px-8">
                                    <div class="flex items-center gap-3">
                                        {% if isActive %}
                                            <div class="size-1.5 rounded-full bg-nexus-primary shadow-[0_0_8px_rgba(79,70,229,0.4)]"></div>
                                        {% endif %}
                                        <a href="{{ path('app_sprint_show', {id: sprint.id}) }}" class="font-bold text-white hover:text-nexus-primary transition-colors">{{ sprint.nom }}</a>
                                    </div>
                                </td>
                                <td class="py-5 px-6 font-mono text-xs text-slate-500">
                                    {{ sprint.dateDebut|date('d M') }} — {{ sprint.dateFin|date('d M') }}
                                </td>
                                <td class="py-5 px-6">
                                     {{ ui.status_badge(sprint.statut) }}
                                </td>
                                <td class="py-5 px-6">
                                     <div class="flex items-center gap-2">
                                        <span class="text-xs font-bold text-white">{{ sprint.velociteReelle|default(0) }}</span>
                                        <span class="text-xs text-slate-600">/ {{ sprint.objectifVelocite|default(0) }}</span>
                                    </div>
                                </td>
                                <td class="py-5 px-6 text-right">
                                     <div class="flex justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                         <a href="{{ path('app_sprint_show', {id: sprint.id}) }}" class="size-8 rounded-lg flex items-center justify-center text-slate-500 hover:text-white hover:bg-slate-800 transition-colors">
                                            <span class="material-symbols-outlined text-[18px]">visibility</span>
                                        </a>
                                         {% if can_edit_sprint %}
                                        <a href="{{ path('app_sprint_edit', {id: sprint.id}) }}" class="size-8 rounded-lg flex items-center justify-center text-slate-500 hover:text-nexus-accent hover:bg-slate-800 transition-colors">
                                            <span class="material-symbols-outlined text-[18px]">edit</span>
                                        </a>
                                        {% endif %}
                                     </div>
                                </td>
                            </tr>
                        {% else %}
                             <tr>
                                <td colspan="5" class="py-12 text-center text-slate-600">
                                    <span class="material-symbols-outlined text-[48px] block mb-2 opacity-20">history</span>
                                    <p class="text-sm font-bold">No strategic iterations found.</p>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
