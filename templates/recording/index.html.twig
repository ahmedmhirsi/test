{% extends 'layout/employe.html.twig' %}

{% block title %}Enregistrements - SmartNexus AI{% endblock %}

{% block breadcrumb %}
    <span class="text-[#9ca3af] material-symbols-outlined text-[16px]">chevron_right</span>
    <span class="text-primary font-semibold font-display">Collaboration</span>
    <span class="text-[#9ca3af] material-symbols-outlined text-[16px]">chevron_right</span>
    <span class="text-[#A79E9C] dark:text-[#9ca3af] font-medium">Archives Vidéo</span>
{% endblock %}

{% block content %}
<div class="space-y-8">
    <!-- Header Section -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-6">
        <div>
            <h1 class="text-3xl md:text-4xl font-black tracking-tight text-[#D3C3B9] dark:text-white mb-2 font-display uppercase italic text-shadow-sm">Enregistrements</h1>
            <p class="text-[#A79E9C] dark:text-[#9ca3af] text-base font-medium flex items-center gap-2">
                <span class="material-symbols-outlined text-primary">video_library</span>
                Accédez à l'historique visuel de vos collaborations
            </p>
        </div>
        <a href="{{ path('app_recording_record') }}" class="h-12 px-8 rounded-xl bg-primary text-navy text-sm font-black uppercase tracking-widest hover:bg-primary/90 flex items-center gap-3 shadow-lg shadow-primary/20 transition-all border-none group">
            <span class="material-symbols-outlined text-[22px] group-hover:animate-pulse">fiber_manual_record</span>
            Nouvelle Capture
        </a>
    </div>

    <!-- Recent Section -->
    {% if recent|length > 0 %}
        <div class="space-y-4">
            <h2 class="text-lg font-black text-[#D3C3B9] dark:text-white uppercase tracking-widest flex items-center gap-2 mb-4">
                <span class="w-2 h-2 rounded-full bg-red-500 animate-pulse"></span>
                Dernières Archivages
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for recording in recent %}
                    <div class="group bg-gradient-to-br from-white to-[#f8f8f5] dark:from-[#1a1d2d] dark:to-[#161925] rounded-2xl border border-primary/20 dark:border-primary/10 shadow-sm hover:shadow-xl transition-all duration-300 overflow-hidden flex flex-col">
                        <!-- Preview Placeholder/Icon -->
                        <div class="aspect-video bg-navy flex items-center justify-center relative group-hover:scale-105 transition-transform duration-500">
                            <span class="material-symbols-outlined text-white/20 text-6xl group-hover:text-primary transition-colors">videocam</span>
                            <div class="absolute inset-0 bg-gradient-to-t from-navy/80 to-transparent"></div>
                            <div class="absolute bottom-3 left-4 flex items-center gap-2">
                                <span class="px-2 py-0.5 rounded bg-black/50 text-white text-[10px] font-black uppercase tracking-tighter">{{ recording.formattedDuration }}</span>
                            </div>
                        </div>
                        
                        <div class="p-6 flex flex-col flex-1">
                            <div class="flex justify-between items-start mb-3">
                                <h3 class="text-lg font-black text-[#D3C3B9] dark:text-white line-clamp-1 group-hover:text-primary transition-colors leading-tight">{{ recording.title }}</h3>
                                <span class="px-2 py-0.5 text-[9px] font-black uppercase tracking-widest rounded bg-primary/10 text-primary">
                                    {{ recording.status }}
                                </span>
                            </div>
                            
                            <div class="flex items-center gap-4 text-[10px] font-black text-[#A79E9C] dark:text-[#9ca3af] uppercase tracking-widest mb-6">
                                <span class="flex items-center gap-1"><span class="material-symbols-outlined text-[14px]">storage</span> {{ recording.formattedFileSize }}</span>
                                <span class="flex items-center gap-1"><span class="material-symbols-outlined text-[14px]">calendar_today</span> {{ recording.createdAt|date('d/m') }}</span>
                            </div>

                            <a href="{{ path('app_recording_show', {'id': recording.id}) }}" class="w-full h-11 flex items-center justify-center gap-2 bg-navy text-white text-xs font-black uppercase tracking-wider rounded-xl hover:brightness-110 shadow-lg transition-all mt-auto border-none">
                                <span class="material-symbols-outlined text-[18px]">play_circle</span>
                                Visionner
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}

    <!-- All Recordings Table -->
    <div class="space-y-4">
        <h2 class="text-lg font-black text-[#D3C3B9] dark:text-white uppercase tracking-widest flex items-center gap-2 mb-4">
            <span class="material-symbols-outlined text-primary">inventory_2</span>
            Bibliothèque Complète
        </h2>
        <div class="bg-white dark:bg-[#1a1d2d] rounded-2xl border border-[#e5e7eb] dark:border-[#1f2128] shadow-sm overflow-hidden">
            <div class="divide-y divide-[#e5e7eb] dark:divide-[#1f2128]">
                {% for recording in recordings %}
                    <div class="p-6 hover:bg-[#f8f8f5] dark:hover:bg-[#0f1115] transition-all flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4 group">
                        <div class="flex items-center gap-6 flex-1">
                            <div class="w-14 h-14 rounded-xl bg-[#f0f0f5] dark:bg-[#161516] flex items-center justify-center text-red-500 group-hover:bg-red-500 group-hover:text-white transition-all shadow-inner">
                                <span class="material-symbols-outlined text-3xl">videocam</span>
                            </div>
                            <div class="flex-1">
                                <div class="flex items-center gap-3 mb-1">
                                    <h3 class="text-base font-black text-[#D3C3B9] dark:text-white leading-tight">{{ recording.title }}</h3>
                                    <span class="px-2 py-0.5 text-[9px] font-black uppercase tracking-widest rounded-lg bg-[#f0f0f5] dark:bg-[#161516] text-[#A79E9C] dark:text-[#9ca3af]">
                                        {{ recording.status }}
                                    </span>
                                </div>
                                <div class="flex flex-wrap items-center gap-x-6 gap-y-1.5 text-[10px] font-black text-[#A79E9C] dark:text-[#9ca3af] uppercase tracking-widest">
                                    <span class="flex items-center gap-1.5"><span class="material-symbols-outlined text-[16px] text-primary">schedule</span> {{ recording.formattedDuration }}</span>
                                    <span class="flex items-center gap-1.5"><span class="material-symbols-outlined text-[16px] text-primary">storage</span> {{ recording.formattedFileSize }}</span>
                                    <span class="flex items-center gap-1.5"><span class="material-symbols-outlined text-[16px] text-primary">history</span> {{ recording.createdAt|date('d/m/Y H:i') }}</span>
                                    {% if recording.meeting %}
                                        <span class="flex items-center gap-1.5 text-primary"><span class="material-symbols-outlined text-[16px]">groups</span> {{ recording.meeting.titre }}</span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <div class="flex items-center gap-3 w-full sm:w-auto">
                            <a href="{{ path('app_recording_show', {'id': recording.id}) }}" class="flex-1 sm:flex-none h-11 px-6 rounded-xl bg-primary text-navy text-xs font-black uppercase tracking-wider hover:bg-primary/90 transition-all flex items-center justify-center gap-2 shadow-sm shadow-primary/10">
                                <span class="material-symbols-outlined text-[18px]">play_arrow</span>
                                Lire
                            </a>
                            <a href="{{ path('app_recording_download', {'id': recording.id}) }}" class="h-11 w-11 rounded-xl border-2 border-[#e5e7eb] dark:border-[#1f2128] text-navy dark:text-white flex items-center justify-center hover:bg-[#f8f8f5] dark:hover:bg-[#161516] transition-all" title="Télécharger">
                                <span class="material-symbols-outlined text-[20px]">download</span>
                            </a>
                            <form method="post" action="{{ path('app_recording_delete', {'id': recording.id}) }}" onsubmit="return confirm('Attention : cette action supprimera définitivement le fichier. Continuer ?');" class="inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recording.id) }}">
                                <button type="submit" class="h-11 w-11 rounded-xl border-2 border-red-100 text-red-600 flex items-center justify-center hover:bg-red-50 transition-all">
                                    <span class="material-symbols-outlined text-[20px]">delete</span>
                                </button>
                            </form>
                        </div>
                    </div>
                {% else %}
                    <div class="p-20 text-center">
                        <div class="w-24 h-24 bg-[#f8f8f5] dark:bg-[#161516] rounded-full flex items-center justify-center mx-auto mb-6 shadow-inner">
                            <span class="material-symbols-outlined text-gray-400 text-5xl">videocam_off</span>
                        </div>
                        <h3 class="text-2xl font-black text-[#D3C3B9] dark:text-white mb-2 italic">Aucune archive archivée</h3>
                        <p class="text-[#A79E9C] dark:text-[#9ca3af] mb-8 font-medium">Commencez à capturer vos sessions pour ne rater aucun détail important.</p>
                        <a href="{{ path('app_recording_record') }}" class="inline-flex items-center gap-3 px-10 py-4 bg-primary text-navy font-black rounded-xl hover:bg-primary/90 transition-all shadow-xl shadow-primary/20 uppercase tracking-widest text-sm">
                            <span class="material-symbols-outlined">fiber_manual_record</span>
                            Initier une capture
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
