{% extends 'base.html.twig' %}

{% block title %}Join SmartNexus AI – Enterprise Sign Up{% endblock %}

{% block body %}
<div class="min-h-screen flex bg-nexus-black selection:bg-nexus-primary selection:text-nexus-black font-body overflow-hidden">

    {# ─── Left Side: Brand Experience ─── #}
    <div class="hidden lg:flex w-1/2 relative bg-nexus-navy items-center justify-center overflow-hidden border-r border-white/5">
        
        {# Background Effects #}
        <div class="absolute inset-0 bg-grainy-noise opacity-30 mix-blend-overlay"></div>
        <div class="absolute top-[-20%] right-[-20%] w-[80%] h-[80%] bg-nexus-primary/20 rounded-full blur-[120px] animate-pulse-slow"></div>
        <div class="absolute bottom-[-10%] left-[-10%] w-[60%] h-[60%] bg-indigo-500/10 rounded-full blur-[100px] animate-float-delayed"></div>

        <div class="relative z-10 max-w-lg px-12 stagger-entry">
            <div class="size-20 rounded-2xl bg-gradient-to-br from-nexus-primary to-orange-500/80 flex items-center justify-center mb-10 shadow-2xl shadow-nexus-primary/20 ring-1 ring-white/10 backdrop-blur-md">
                <img src="{{ asset('images/logo.png') }}" alt="SmartNexus Logo" class="size-16 object-contain drop-shadow-md">
            </div>
            
            <h1 class="text-6xl font-display font-black text-transparent bg-clip-text bg-gradient-to-r from-white via-nexus-cream to-nexus-stone mb-6 tracking-tight leading-[1.1]">
                Accelerate <br>
                <span class="text-nexus-primary">Your Velocity.</span>
            </h1>
            
            <p class="text-xl text-nexus-stone mb-12 leading-relaxed font-light max-w-md">
                Join the elite network of enterprises using AI to predict success. Build faster, collaborate smarter.
            </p>

            {# Features Grid #}
            <div class="grid grid-cols-2 gap-6">
                <div class="p-4 rounded-xl bg-white/5 border border-white/5 hover:bg-white/10 transition-colors group">
                    <span class="material-symbols-outlined text-nexus-primary mb-3 group-hover:scale-110 transition-transform">bolt</span>
                    <h3 class="text-white font-bold mb-1">Instant Setup</h3>
                    <p class="text-xs text-nexus-stone">Deploy in seconds.</p>
                </div>
                <div class="p-4 rounded-xl bg-white/5 border border-white/5 hover:bg-white/10 transition-colors group">
                    <span class="material-symbols-outlined text-nexus-primary mb-3 group-hover:scale-110 transition-transform">lock</span>
                    <h3 class="text-white font-bold mb-1">Enterprise Sec</h3>
                    <p class="text-xs text-nexus-stone">SOC2 Compliant.</p>
                </div>
            </div>
            
            <div class="mt-12 pt-8 border-t border-white/5">
                 <div class="flex items-center gap-4">
                    <div class="flex -space-x-4">
                        <img class="w-10 h-10 rounded-full border-2 border-nexus-navy" src="https://i.pravatar.cc/100?img=1" alt="">
                        <img class="w-10 h-10 rounded-full border-2 border-nexus-navy" src="https://i.pravatar.cc/100?img=2" alt="">
                        <img class="w-10 h-10 rounded-full border-2 border-nexus-navy" src="https://i.pravatar.cc/100?img=3" alt="">
                         <div class="w-10 h-10 rounded-full border-2 border-nexus-navy bg-nexus-primary text-white flex items-center justify-center text-xs font-bold">+2k</div>
                    </div>
                    <div class="text-sm">
                        <p class="text-white font-bold">Trusted by Leaders</p>
                        <p class="text-nexus-stone text-xs">From startups to Fortune 500s</p>
                    </div>
                 </div>
            </div>
        </div>
    </div>

    {# ─── Right Side: Registration Form ─── #}
    <div class="w-full lg:w-1/2 flex flex-col justify-center relative overflow-y-auto">
        <div class="absolute inset-0 bg-grainy-noise opacity-20 pointer-events-none fixed"></div>
        


        <div class="w-full max-w-xl mx-auto p-8 relative z-10 py-20">
            {# Back to Home (Mobile/Desktop) #}
            <a href="{{ path('app_home') }}" class="absolute top-8 left-8 flex items-center gap-2 text-xs font-bold text-nexus-stone hover:text-white transition-colors uppercase tracking-widest">
                <span class="material-symbols-outlined text-sm">arrow_back</span>
                Back to Home
            </a>
            <div class="text-center mb-10 stagger-entry">
                <div class="lg:hidden size-14 rounded-2xl bg-gradient-to-br from-nexus-primary to-orange-600 flex items-center justify-center mx-auto mb-6 shadow-lg shadow-nexus-primary/30">
                    <span class="material-symbols-outlined text-2xl text-white">rocket_launch</span>
                </div>
                <h2 class="text-3xl font-display font-bold text-white mb-2">Create Account</h2>
                <div class="flex items-center justify-center gap-2 text-nexus-stone text-sm">
                    <span>Already a member?</span>
                    <a href="{{ path('app_login') }}" class="text-nexus-primary font-bold hover:text-white transition-colors">Sign in</a>
                </div>
            </div>

            {% for flash in app.flashes('verify_email_error') %}
                <div class="glass-panel border-l-4 border-l-rose-500 text-rose-300 px-6 py-4 rounded-r-xl flex items-center gap-4 text-sm font-semibold mb-8 animate-card shadow-lg shadow-rose-900/20">
                    <span class="material-symbols-outlined text-2xl">error</span>
                    <span>{{ flash }}</span>
                </div>
            {% endfor %}

            <div class="glass-panel p-1 border-white/5 shadow-2xl shadow-black/50 stagger-entry">
                {{ form_start(registrationForm, {'attr': {'class': 'bg-nexus-black/40 backdrop-blur-md rounded-xl p-8 space-y-5', 'novalidate': 'novalidate'}}) }}
                    
                    {% if registrationForm.vars.errors|length > 0 %}
                        <div class="bg-rose-500/10 border border-rose-500/30 text-rose-200 px-4 py-3 rounded-lg text-sm">
                            <ul class="list-disc list-inside">
                                {% for error in registrationForm.vars.errors %}
                                    <li>{{ error.message }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% endif %}

                    <div class="grid grid-cols-2 gap-4">
                        <div class="space-y-1 group">
                             <label class="text-[10px] font-bold text-nexus-stone uppercase tracking-wider ml-1 group-focus-within:text-nexus-primary transition-colors">First Name</label>
                             {{ form_widget(registrationForm.prenom, {'attr': {'class': 'nexus-input !bg-nexus-black/50 !border-white/5 focus:!border-nexus-primary/50 focus:!bg-nexus-navy/80 hover:border-white/10', 'placeholder': 'Jane'}}) }}
                             <div class="text-rose-400 text-xs mt-1">{{ form_errors(registrationForm.prenom) }}</div>
                        </div>
                        <div class="space-y-1 group">
                             <label class="text-[10px] font-bold text-nexus-stone uppercase tracking-wider ml-1 group-focus-within:text-nexus-primary transition-colors">Last Name</label>
                             {{ form_widget(registrationForm.nom, {'attr': {'class': 'nexus-input !bg-nexus-black/50 !border-white/5 focus:!border-nexus-primary/50 focus:!bg-nexus-navy/80 hover:border-white/10', 'placeholder': 'Doe'}}) }}
                             <div class="text-rose-400 text-xs mt-1">{{ form_errors(registrationForm.nom) }}</div>
                        </div>
                    </div>

                    <div class="space-y-1 group">
                        <label class="text-[10px] font-bold text-nexus-stone uppercase tracking-wider ml-1 group-focus-within:text-nexus-primary transition-colors">Work Email</label>
                        <div class="relative">
                            {{ form_widget(registrationForm.email, {'attr': {'class': 'nexus-input pl-10 !bg-nexus-black/50 !border-white/5 focus:!border-nexus-primary/50 focus:!bg-nexus-navy/80 hover:border-white/10', 'placeholder': 'jane@company.com'}}) }}
                            <span class="absolute left-3.5 top-3.5 text-nexus-stone material-symbols-outlined text-[18px] group-focus-within:text-nexus-primary transition-colors">mail</span>
                        </div>
                        <div class="text-rose-400 text-xs mt-1">{{ form_errors(registrationForm.email) }}</div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="space-y-1 group">
                            <label class="text-[10px] font-bold text-nexus-stone uppercase tracking-wider ml-1 group-focus-within:text-nexus-primary transition-colors">Password</label>
                            <div class="relative">
                                {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'nexus-input pl-10 !bg-nexus-black/50 !border-white/5 focus:!border-nexus-primary/50 focus:!bg-nexus-navy/80 hover:border-white/10', 'placeholder': '••••••••'}}) }}
                                <span class="absolute left-3.5 top-3.5 text-nexus-stone material-symbols-outlined text-[18px] group-focus-within:text-nexus-primary transition-colors">lock</span>
                            </div>
                           <div class="text-rose-400 text-xs mt-1">{{ form_errors(registrationForm.plainPassword.first) }}</div>
                        </div>
                        <div class="space-y-1 group">
                            <label class="text-[10px] font-bold text-nexus-stone uppercase tracking-wider ml-1 group-focus-within:text-nexus-primary transition-colors">Confirm</label>
                            <div class="relative">
                                {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'nexus-input pl-10 !bg-nexus-black/50 !border-white/5 focus:!border-nexus-primary/50 focus:!bg-nexus-navy/80 hover:border-white/10', 'placeholder': '••••••••'}}) }}
                                <span class="absolute left-3.5 top-3.5 text-nexus-stone material-symbols-outlined text-[18px] group-focus-within:text-nexus-primary transition-colors">lock_reset</span>
                            </div>
                           <div class="text-rose-400 text-xs mt-1">{{ form_errors(registrationForm.plainPassword.second) }}</div>
                        </div>
                    </div>

                    {# Account Type Selection #}
                    <div class="space-y-2 mt-2">
                        <label class="text-[10px] font-bold text-nexus-stone uppercase tracking-wider ml-1">Account Type</label>
                        <div class="grid grid-cols-3 gap-3">
                             {% for choice in registrationForm.userType %}
                                <label class="cursor-pointer group">
                                    {{ form_widget(choice, {'attr': {'class': 'peer sr-only user-type-radio'}}) }}
                                    <div class="h-full flex flex-col items-center justify-center p-3 rounded-xl border border-white/5 bg-white/5 hover:bg-white/10 peer-checked:bg-nexus-primary/10 peer-checked:border-nexus-primary transition-all duration-300">
                                        {% if choice.vars.value == 'ROLE_VISITEUR' %}
                                            <span class="material-symbols-outlined text-nexus-stone peer-checked:text-nexus-primary mb-1 group-hover:scale-110 transition-transform">person_search</span>
                                        {% elseif choice.vars.value == 'ROLE_CLIENT' %}
                                            <span class="material-symbols-outlined text-nexus-stone peer-checked:text-nexus-primary mb-1 group-hover:scale-110 transition-transform">business</span>
                                        {% elseif choice.vars.value == 'ROLE_EMPLOYEE' %}
                                            <span class="material-symbols-outlined text-nexus-stone peer-checked:text-nexus-primary mb-1 group-hover:scale-110 transition-transform">badge</span>
                                        {% endif %}
                                        <span class="text-xs font-bold text-white peer-checked:text-nexus-primary">{{ choice.vars.label }}</span>
                                    </div>
                                </label>
                            {% endfor %}
                        </div>
                        <div class="text-rose-400 text-xs mt-1">{{ form_errors(registrationForm.userType) }}</div>
                    </div>

                     {# Photo Upload #}
                    <div class="space-y-2 mt-2">
                         <label class="text-[10px] font-bold text-nexus-stone uppercase tracking-wider ml-1">Profile Photo</label>
                         
                         {{ form_widget(registrationForm.photoFile, {'attr': {'class': 'hidden', 'id': 'photo-upload-input', 'accept': 'image/*'}}) }}
                         
                         <div id="photo-upload-zone" class="relative group cursor-pointer border border-dashed border-white/10 rounded-xl p-4 hover:border-nexus-primary hover:bg-nexus-primary/5 transition-all duration-300 flex items-center justify-center gap-4">
                            
                            <div id="photo-placeholder" class="flex flex-col items-center">
                                <span class="material-symbols-outlined text-nexus-stone group-hover:text-nexus-primary transition-colors mb-1">cloud_upload</span>
                                <span class="text-xs text-nexus-stone">Click to upload</span>
                            </div>

                            <div id="photo-preview-container" class="hidden flex items-center gap-3 w-full">
                                <img id="photo-preview" src="" class="size-10 rounded-full object-cover border border-white/10" />
                                <div class="flex-1 min-w-0">
                                    <p id="photo-name" class="text-xs text-white truncate"></p>
                                    <p id="photo-size" class="text-[10px] text-nexus-stone"></p>
                                </div>
                                <button type="button" id="remove-photo" class="text-rose-400 hover:text-rose-300"><span class="material-symbols-outlined text-sm">close</span></button>
                            </div>

                         </div>
                         <div class="text-rose-400 text-xs mt-1">{{ form_errors(registrationForm.photoFile) }}</div>
                    </div>

                    <div class="flex items-center gap-3 pt-2">
                         {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'size-4 rounded border-white/10 bg-white/5 text-nexus-primary focus:ring-nexus-primary'}}) }}
                         <label class="text-xs text-nexus-stone">
                            I agree to the <a href="#" class="text-nexus-primary hover:text-white underline">Terms</a> & <a href="#" class="text-nexus-primary hover:text-white underline">Privacy Policy</a>
                        </label>
                    </div>
                     <div class="text-rose-400 text-xs">{{ form_errors(registrationForm.agreeTerms) }}</div>

                    <div class="pt-4">
                        <button type="submit" class="w-full relative overflow-hidden group bg-nexus-primary hover:bg-white text-nexus-black font-bold py-4 rounded-xl transition-all duration-300 shadow-xl shadow-nexus-primary/20 hover:shadow-primary/40 hover:-translate-y-1">
                            <span class="relative z-10 flex items-center justify-center gap-2">
                                Create Account
                                <span class="material-symbols-outlined text-sm group-hover:translate-x-1 transition-transform">rocket_launch</span>
                            </span>
                        </button>
                    </div>

                {{ form_end(registrationForm) }}
            </div>
            
        </div>
    </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", function() {
    // GSAP Animations
    if (typeof gsap !== 'undefined') {
        gsap.from(".stagger-entry", {
            y: 30, opacity: 0, duration: 0.8, stagger: 0.1, ease: "power3.out"
        });
        gsap.from(".glass-panel", {
            y: 50, opacity: 0, duration: 1, ease: "power4.out", delay: 0.2
        });
    }

    // Photo Upload Logic
    const photoInput = document.getElementById('photo-upload-input');
    const photoZone = document.getElementById('photo-upload-zone');
    const photoPreviewContainer = document.getElementById('photo-preview-container');
    const photoPlaceholder = document.getElementById('photo-placeholder');
    const photoPreview = document.getElementById('photo-preview');
    const photoName = document.getElementById('photo-name');
    const photoSize = document.getElementById('photo-size');
    const removePhotoBtn = document.getElementById('remove-photo');

    if(photoInput && photoZone) {
        photoZone.addEventListener('click', (e) => {
            if (e.target.closest('#remove-photo')) return;
            photoInput.click();
        });

        photoInput.addEventListener('change', function(e) {
            const file = this.files[0];
            if(file) {
                 const reader = new FileReader();
                 reader.onload = function(e) {
                     photoPreview.src = e.target.result;
                     photoName.innerText = file.name;
                     photoSize.innerText = (file.size / 1024).toFixed(1) + ' KB';
                     photoPlaceholder.classList.add('hidden');
                     photoPreviewContainer.classList.remove('hidden');
                 }
                 reader.readAsDataURL(file);
            }
        });

        removePhotoBtn.addEventListener('click', function(e) {
            e.stopPropagation();
            photoInput.value = '';
            photoPlaceholder.classList.remove('hidden');
            photoPreviewContainer.classList.add('hidden');
        });
    }
});
</script>
{% endblock %}

