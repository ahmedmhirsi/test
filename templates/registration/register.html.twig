{% extends 'base.html.twig' %}

{% block title %}Inscription - SmartNexus AI{% endblock %}

{% block body %}
<div class="flex min-h-screen w-full flex-row bg-[#f8f8f5]">
    <!-- Left Panel - Branding -->
    <div class="hidden lg:flex w-[40%] flex-col justify-between bg-navy relative overflow-hidden p-12 text-white">
        <div class="absolute top-0 left-0 w-full h-full opacity-10 pointer-events-none">
            <div class="absolute right-[-10%] top-[-10%] w-[500px] h-[500px] rounded-full bg-primary blur-[120px]"></div>
            <div class="absolute left-[-10%] bottom-[-10%] w-[400px] h-[400px] rounded-full bg-blue-400 blur-[100px]"></div>
            <div class="absolute inset-0" style="background-image: radial-gradient(rgba(255,255,255,0.2) 1px, transparent 1px); background-size: 40px 40px;"></div>
        </div>
        
        <div class="relative z-10 flex items-center gap-3">
            <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-primary text-navy">
                <span class="material-symbols-outlined text-2xl">dataset</span>
            </div>
            <span class="text-xl font-bold tracking-wide">SmartNexus AI</span>
        </div>
        
        <div class="relative z-10 max-w-md">
            <h1 class="text-4xl font-bold leading-tight tracking-tight mb-6 text-white">
                Rejoignez la révolution de l'Intelligence Active
            </h1>
            <p class="text-blue-100 text-lg leading-relaxed font-light">
                Nous donnons aux entreprises les moyens d'exploiter les modèles prédictifs de nouvelle génération. Libérez le potentiel de vos données avec nos solutions IA de niveau entreprise.
            </p>
            <div class="mt-12 flex items-center gap-4">
                <div class="flex -space-x-3">
                    <div class="h-10 w-10 rounded-full border-2 border-navy bg-gradient-to-br from-primary to-orange-400 flex items-center justify-center text-navy font-bold text-sm">AB</div>
                    <div class="h-10 w-10 rounded-full border-2 border-navy bg-gradient-to-br from-electric to-blue-400 flex items-center justify-center text-white font-bold text-sm">CD</div>
                    <div class="h-10 w-10 rounded-full border-2 border-navy bg-gradient-to-br from-green-400 to-emerald-500 flex items-center justify-center text-white font-bold text-sm">EF</div>
                </div>
                <p class="text-sm font-medium text-blue-100">Rejoint par 10,000+ innovateurs</p>
            </div>
        </div>
        
        <div class="relative z-10 text-xs text-blue-200/60">
            © {{ "now"|date("Y") }} SmartNexus AI. Tous droits réservés.
        </div>
    </div>

    <!-- Right Panel - Registration Form -->
    <div class="flex flex-1 flex-col items-center justify-center overflow-y-auto px-4 py-8 lg:px-16 bg-white">
        <div class="w-full max-w-[520px] flex flex-col gap-6">
            <!-- Mobile Logo -->
            <div class="lg:hidden flex items-center gap-2 mb-4 text-navy">
                <span class="material-symbols-outlined text-3xl text-primary">dataset</span>
                <span class="text-lg font-bold">SmartNexus AI</span>
            </div>

            <div class="bg-white rounded-2xl shadow-sm border border-[#e7e3da] p-8 md:p-10">
                <div class="mb-8">
                    <h2 class="text-[#181610] tracking-tight text-3xl font-bold leading-tight mb-2">Créer votre compte</h2>
                    <p class="text-[#8d815e] text-sm font-normal">
                        Vous avez déjà un compte? <a class="text-navy underline hover:opacity-80 transition-opacity" href="{{ path('app_login') }}">Se connecter</a>
                    </p>
                </div>

                <!-- Progress Steps -->
                <div class="flex flex-col gap-3 mb-8">
                    <div class="flex gap-6 justify-between items-end">
                        <p class="text-[#181610] text-sm font-semibold uppercase tracking-wider">Étape 1 sur 2</p>
                        <span class="text-xs font-medium text-gray-500">Informations du compte</span>
                    </div>
                    <div class="h-1.5 w-full rounded-full bg-[#e7e3da] overflow-hidden">
                        <div class="h-full bg-primary rounded-full" style="width: 50%;"></div>
                    </div>
                </div>

                {% if app.flashes('verify_email_error') %}
                    {% for flash in app.flashes('verify_email_error') %}
                        <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-4 flex items-center gap-3">
                            <span class="material-symbols-outlined text-red-500">error</span>
                            <span class="text-sm font-medium">{{ flash }}</span>
                        </div>
                    {% endfor %}
                {% endif %}

                {% for flash in app.flashes('error') %}
                    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-2 flex items-center gap-3">
                        <span class="material-symbols-outlined text-red-500">error</span>
                        <span class="text-sm font-medium">{{ flash }}</span>
                    </div>
                {% endfor %}

                {{ form_start(registrationForm, {'attr': {'class': 'flex flex-col gap-5', 'novalidate': 'novalidate', 'enctype': 'multipart/form-data'}}) }}
                    
                    {% if registrationForm.vars.errors|length > 0 %}
                        <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg flex flex-col gap-2">
                            <div class="flex items-center gap-2">
                                <span class="material-symbols-outlined text-red-500">error</span>
                                <span class="text-sm font-bold">Erreurs de validation :</span>
                            </div>
                            <ul class="list-disc list-inside text-sm">
                                {% for error in registrationForm.vars.errors %}
                                    <li>{{ error.message }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% endif %}

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                        <div class="flex flex-col gap-1.5">
                            <label class="text-sm font-medium text-[#181610]">Prénom *</label>
                            {{ form_widget(registrationForm.prenom, {'attr': {'class': 'w-full rounded-lg border border-[#e7e3da] bg-white px-4 py-3 text-base text-[#181610] focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all placeholder:text-gray-400', 'placeholder': 'Jean'}}) }}
                            <div class="text-red-600 text-sm">{{ form_errors(registrationForm.prenom) }}</div>
                        </div>
                        <div class="flex flex-col gap-1.5">
                            <label class="text-sm font-medium text-[#181610]">Nom *</label>
                            {{ form_widget(registrationForm.nom, {'attr': {'class': 'w-full rounded-lg border border-[#e7e3da] bg-white px-4 py-3 text-base text-[#181610] focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all placeholder:text-gray-400', 'placeholder': 'Dupont'}}) }}
                            <div class="text-red-600 text-sm">{{ form_errors(registrationForm.nom) }}</div>
                        </div>
                    </div>

                    <div class="flex flex-col gap-1.5">
                        <label class="text-sm font-medium text-[#181610]">Email professionnel *</label>
                        <div class="relative group">
                            <span class="material-symbols-outlined absolute left-3 top-3.5 text-gray-400 group-focus-within:text-primary transition-colors text-[20px]">mail</span>
                            {{ form_widget(registrationForm.email, {'attr': {'class': 'w-full rounded-lg border border-[#e7e3da] bg-white pl-10 pr-4 py-3 text-base text-[#181610] focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all placeholder:text-gray-400', 'placeholder': 'nom@entreprise.com'}}) }}
                        </div>
                        <div class="text-red-600 text-sm">{{ form_errors(registrationForm.email) }}</div>
                    </div>

                    <div class="flex flex-col gap-1.5">
                        <label class="text-sm font-medium text-[#181610]">Mot de passe *</label>
                        <div class="relative group">
                            <span class="material-symbols-outlined absolute left-3 top-3.5 text-gray-400 group-focus-within:text-primary transition-colors text-[20px]">lock</span>
                            {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'w-full rounded-lg border border-[#e7e3da] bg-white pl-10 pr-10 py-3 text-base text-[#181610] focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all placeholder:text-gray-400', 'placeholder': 'Créer un mot de passe sécurisé'}}) }}
                            <button type="button" class="absolute right-3 top-3.5 text-gray-400 hover:text-gray-600 toggle-password">
                                <span class="material-symbols-outlined text-[20px]">visibility</span>
                            </button>
                        </div>
                        <p class="text-xs text-gray-500 mt-1">Doit contenir au moins 8 caractères.</p>
                        <div class="text-red-600 text-sm">{{ form_errors(registrationForm.plainPassword.first) }}</div>
                    </div>

                    <div class="flex flex-col gap-1.5">
                        <label class="text-sm font-medium text-[#181610]">Confirmer le mot de passe *</label>
                        <div class="relative group">
                            <span class="material-symbols-outlined absolute left-3 top-3.5 text-gray-400 group-focus-within:text-primary transition-colors text-[20px]">lock</span>
                            {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'w-full rounded-lg border border-[#e7e3da] bg-white pl-10 pr-10 py-3 text-base text-[#181610] focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all placeholder:text-gray-400', 'placeholder': 'Confirmer votre mot de passe'}}) }}
                            <button type="button" class="absolute right-3 top-3.5 text-gray-400 hover:text-gray-600 toggle-password">
                                <span class="material-symbols-outlined text-[20px]">visibility</span>
                            </button>
                        </div>
                        <div class="text-red-600 text-sm">{{ form_errors(registrationForm.plainPassword.second) }}</div>
                    </div>

                    <!-- Photo de profil - Modern Upload Design -->
                    <div class="flex flex-col gap-2">
                        <label class="text-sm font-medium text-[#181610] flex items-center gap-2">
                            <span class="material-symbols-outlined text-[20px] text-primary">account_circle</span>
                            Photo de profil (optionnelle)
                        </label>
                        <div class="photo-upload-container">
                            {{ form_widget(registrationForm.photoFile, {'attr': {'class': 'hidden', 'id': 'photo-upload-input', 'accept': 'image/jpeg,image/png,image/gif,image/webp'}}) }}
                            
                            <div id="photo-upload-zone" class="relative group cursor-pointer border-2 border-dashed border-[#e7e3da] rounded-xl p-6 hover:border-primary hover:bg-primary/5 transition-all duration-300">
                                <div id="photo-preview-container" class="hidden">
                                    <div class="flex items-center gap-4">
                                        <div class="relative">
                                            <img id="photo-preview" src="" alt="Preview" class="w-20 h-20 rounded-lg object-cover border-2 border-primary">
                                            <button type="button" id="remove-photo" class="absolute -top-2 -right-2 bg-red-500 text-white rounded-full w-6 h-6 flex items-center justify-center hover:bg-red-600 transition-colors shadow-md">
                                                <span class="material-symbols-outlined text-[16px]">close</span>
                                            </button>
                                        </div>
                                        <div class="flex-1">
                                            <p id="photo-name" class="text-sm font-medium text-[#181610]"></p>
                                            <p id="photo-size" class="text-xs text-gray-500 mt-0.5"></p>
                                        </div>
                                    </div>
                                </div>
                                
                                <div id="photo-upload-placeholder" class="text-center">
                                    <div class="flex justify-center mb-3">
                                        <div class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center group-hover:bg-primary/20 transition-colors">
                                            <span class="material-symbols-outlined text-primary text-3xl">add_photo_alternate</span>
                                        </div>
                                    </div>
                                    <div class="space-y-1">
                                        <p class="text-sm font-medium text-[#181610]">
                                            <span class="text-primary font-semibold">Cliquez pour choisir</span> ou glissez une image
                                        </p>
                                        <p class="text-xs text-gray-500">JPG, PNG, GIF ou WEBP • Max 10MB</p>
                                    </div>
                                </div>
                            </div>
                            <div class="text-red-600 text-sm mt-1">{{ form_errors(registrationForm.photoFile) }}</div>
                        </div>
                    </div>

                    <div class="flex flex-col gap-1.5">
                        <label class="text-sm font-medium text-[#181610]">Téléphone (optionnel)</label>
                        <div class="relative group">
                            <span class="material-symbols-outlined absolute left-3 top-3.5 text-gray-400 group-focus-within:text-primary transition-colors text-[20px]">phone</span>
                            {{ form_widget(registrationForm.phoneNumber, {'attr': {'class': 'w-full rounded-lg border border-[#e7e3da] bg-white pl-10 pr-4 py-3 text-base text-[#181610] focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all placeholder:text-gray-400', 'placeholder': '+33 6 12 34 56 78'}}) }}
                        </div>
                        <div class="text-red-600 text-sm">{{ form_errors(registrationForm.phoneNumber) }}</div>
                    </div>

                    <!-- Type de compte -->
                    <div class="flex flex-col gap-3 mt-2">
                        <label class="text-sm font-medium text-[#181610]">Type de compte *</label>
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
                            {% for choice in registrationForm.userType %}
                                <label class="relative flex items-center p-4 border-2 rounded-xl cursor-pointer transition-all
                                    {{ form_errors(registrationForm.userType)|length > 0 ? 'border-red-300' : 'border-[#e7e3da]' }}
                                    hover:border-primary hover:bg-primary/5 peer-checked:border-primary peer-checked:bg-primary/10">
                                    {{ form_widget(choice, {'attr': {'class': 'peer sr-only user-type-radio'}}) }}
                                    <div class="flex items-center gap-3 w-full">
                                        <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-navy/10 text-navy">
                                            {% if choice.vars.value == 'ROLE_VISITEUR' %}
                                                <span class="material-symbols-outlined">person_search</span>
                                            {% elseif choice.vars.value == 'ROLE_CLIENT' %}
                                                <span class="material-symbols-outlined">business</span>
                                            {% elseif choice.vars.value == 'ROLE_EMPLOYEE' %}
                                                <span class="material-symbols-outlined">badge</span>
                                            {% endif %}
                                        </div>
                                        <div class="flex-1">
                                            <span class="block text-sm font-semibold text-[#181610]">{{ choice.vars.label }}</span>
                                            {% if choice.vars.value == 'ROLE_VISITEUR' %}
                                                <span class="text-xs text-gray-500">Chercher un emploi</span>
                                            {% elseif choice.vars.value == 'ROLE_CLIENT' %}
                                                <span class="text-xs text-gray-500">Gérer des projets</span>
                                            {% elseif choice.vars.value == 'ROLE_EMPLOYEE' %}
                                                <span class="text-xs text-gray-500">Employé SmartNexus</span>
                                            {% endif %}
                                        </div>
                                        <div class="w-5 h-5 rounded-full border-2 border-gray-300 flex items-center justify-center radio-indicator">
                                            <div class="w-2.5 h-2.5 rounded-full bg-primary scale-0 transition-transform radio-dot"></div>
                                        </div>
                                    </div>
                                </label>
                            {% endfor %}
                        </div>
                        <div class="text-red-600 text-sm">{{ form_errors(registrationForm.userType) }}</div>
                    </div>

                    <div class="flex items-start gap-2 mt-2">
                        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'size-4 rounded border-gray-300 text-primary focus:ring-primary mt-0.5'}}) }}
                        <label class="text-sm text-gray-600" for="{{ registrationForm.agreeTerms.vars.id }}">
                            J'accepte les <a href="#" class="text-navy underline hover:opacity-80">Conditions d'utilisation</a> et la <a href="#" class="text-navy underline hover:opacity-80">Politique de confidentialité</a>
                        </label>
                    </div>
                    <div class="text-red-600 text-sm">{{ form_errors(registrationForm.agreeTerms) }}</div>

                    <button type="submit" class="mt-4 w-full rounded-lg bg-primary py-3.5 text-base font-bold text-[#181610] shadow-sm hover:bg-yellow-400 active:scale-[0.99] transition-all flex items-center justify-center gap-2">
                        Créer mon compte
                    </button>

                    <div class="relative my-4">
                        <div class="absolute inset-0 flex items-center">
                            <div class="w-full border-t border-[#e7e3da]"></div>
                        </div>
                        <div class="relative flex justify-center text-sm">
                            <span class="bg-white px-4 text-gray-500 font-bold tracking-wider uppercase">Ou continuer avec</span>
                        </div>
                    </div>

                    <button type="button" class="w-full flex items-center justify-center gap-3 rounded-lg border border-[#e7e3da] bg-white py-3 px-4 text-base font-bold text-gray-700 hover:bg-gray-50 transition-colors shadow-sm">
                        <svg class="h-6 w-6" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"></path>
                            <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"></path>
                            <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"></path>
                            <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"></path>
                        </svg>
                        S'inscrire avec Google
                    </button>
                {{ form_end(registrationForm) }}
            </div>

            <div class="flex justify-center gap-6 text-sm text-gray-500">
                <a class="hover:text-navy transition-colors" href="#">Politique de confidentialité</a>
                <a class="hover:text-navy transition-colors" href="#">Conditions d'utilisation</a>
            </div>
        </div>
    </div>
</div>

<script>
// Toggle password visibility
document.querySelectorAll('.toggle-password').forEach(button => {
    button.addEventListener('click', function() {
        const input = this.parentElement.querySelector('input');
        const icon = this.querySelector('.material-symbols-outlined');
        if (input.type === 'password') {
            input.type = 'text';
            icon.textContent = 'visibility_off';
        } else {
            input.type = 'password';
            icon.textContent = 'visibility';
        }
    });
});

// User type selection visual effect
document.querySelectorAll('.user-type-radio').forEach(radio => {
    // Set initial state
    if (radio.checked) {
        updateRadioStyle(radio, true);
    }
    
    radio.addEventListener('change', function() {
        // Reset all labels
        document.querySelectorAll('.user-type-radio').forEach(r => {
            updateRadioStyle(r, false);
        });
        // Highlight selected
        updateRadioStyle(this, true);
    });
});

function updateRadioStyle(radio, isSelected) {
    const label = radio.closest('label');
    const dot = label.querySelector('.radio-dot');
    const indicator = label.querySelector('.radio-indicator');
    
    if (isSelected) {
        label.classList.remove('border-[#e7e3da]');
        label.classList.add('border-primary', 'bg-primary/10');
        indicator.classList.remove('border-gray-300');
        indicator.classList.add('border-primary');
        dot.classList.add('scale-100');
        dot.classList.remove('scale-0');
    } else {
        label.classList.add('border-[#e7e3da]');
        label.classList.remove('border-primary', 'bg-primary/10');
        indicator.classList.add('border-gray-300');
        indicator.classList.remove('border-primary');
        dot.classList.remove('scale-100');
        dot.classList.add('scale-0');
    }
}

// Photo upload with drag & drop and preview
document.addEventListener('DOMContentLoaded', function() {
    const photoInput = document.getElementById('photo-upload-input');
    const photoZone = document.getElementById('photo-upload-zone');
    const photoPreviewContainer = document.getElementById('photo-preview-container');
    const photoPlaceholder = document.getElementById('photo-upload-placeholder');
    const photoPreview = document.getElementById('photo-preview');
    const photoName = document.getElementById('photo-name');
    const photoSize = document.getElementById('photo-size');

    if (!photoInput || !photoZone) {
        console.error('Photo upload elements not found');
        return;
    }

    console.log('Photo upload initialized');

    // Single click handler for the entire zone
    photoZone.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        
        // Check if clicking the remove button
        if (e.target.closest('#remove-photo')) {
            clearPhotoPreview();
            return;
        }
        
        // Otherwise open file picker
        photoInput.click();
    });

    // File input change
    photoInput.addEventListener('change', function(e) {
        console.log('File selected:', e.target.files);
        if (e.target.files && e.target.files[0]) {
            handleFileSelect(e.target.files[0]);
        }
    });

    // Prevent default drag behaviors on the zone
    ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
        photoZone.addEventListener(eventName, function(e) {
            e.preventDefault();
            e.stopPropagation();
        }, false);
    });

    // Visual feedback on dragover
    photoZone.addEventListener('dragenter', function(e) {
        console.log('Drag enter');
        photoZone.classList.add('border-primary', 'bg-primary/10');
    });

    photoZone.addEventListener('dragover', function(e) {
        photoZone.classList.add('border-primary', 'bg-primary/10');
    });

    photoZone.addEventListener('dragleave', function(e) {
        // Only remove styling if leaving the zone completely
        if (e.target === photoZone) {
            console.log('Drag leave');
            photoZone.classList.remove('border-primary', 'bg-primary/10');
        }
    });

    // Handle dropped files
    photoZone.addEventListener('drop', function(e) {
        console.log('File dropped');
        photoZone.classList.remove('border-primary', 'bg-primary/10');
        
        const files = e.dataTransfer.files;
        if (files && files.length > 0) {
            const file = files[0];
            console.log('Dropped file:', file.name, file.type, file.size);
            
            // Update the input element with the dropped file
            try {
                const dataTransfer = new DataTransfer();
                dataTransfer.items.add(file);
                photoInput.files = dataTransfer.files;
                handleFileSelect(file);
            } catch (error) {
                console.error('Error setting file:', error);
                // Fallback: just process the file without updating input
                handleFileSelect(file);
            }
        }
    });

    function handleFileSelect(file) {
        if (!file) {
            console.log('No file provided');
            return;
        }

        console.log('Handling file:', file.name);

        // Validate file type
        const validTypes = ['image/jpeg', 'image/png', 'image/gif', 'image/webp'];
        if (!validTypes.includes(file.type)) {
            alert('Format de fichier non valide. Veuillez choisir une image JPG, PNG, GIF ou WEBP.');
            clearPhotoPreview();
            return;
        }

        // Validate file size (10MB)
        if (file.size > 10 * 1024 * 1024) {
            alert('Le fichier est trop volumineux. La taille maximale est de 10 MB.');
            clearPhotoPreview();
            return;
        }

        // Show preview
        const reader = new FileReader();
        reader.onload = function(e) {
            console.log('Preview loaded');
            photoPreview.src = e.target.result;
            photoName.textContent = file.name;
            photoSize.textContent = formatFileSize(file.size);
            photoPlaceholder.classList.add('hidden');
            photoPreviewContainer.classList.remove('hidden');
        };
        reader.onerror = function(e) {
            console.error('Error reading file:', e);
        };
        reader.readAsDataURL(file);
    }

    function clearPhotoPreview() {
        console.log('Clearing preview');
        photoInput.value = '';
        photoPreview.src = '';
        photoName.textContent = '';
        photoSize.textContent = '';
        photoPlaceholder.classList.remove('hidden');
        photoPreviewContainer.classList.add('hidden');
    }

    function formatFileSize(bytes) {
        if (bytes === 0) return '0 Bytes';
        const k = 1024;
        const sizes = ['Bytes', 'KB', 'MB'];
        const i = Math.floor(Math.log(bytes) / Math.log(k));
