{% extends 'base.html.twig' %}

{% block title %}Vérification 2FA - SmartNexus AI{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-[#0a1628] via-navy to-[#1e3a8a] flex items-center justify-center p-4">
    <div class="w-full max-w-md">
        <!-- Logo/Branding -->
        <div class="text-center mb-8">
            <div class="inline-flex items-center justify-center w-16 h-16 rounded-2xl bg-primary mb-4 shadow-lg shadow-primary/30">
                <span class="material-symbols-outlined text-4xl text-navy">security</span>
            </div>
            <h1 class="text-3xl font-bold text-white mb-2">Vérification 2FA</h1>
            <p class="text-blue-100">Entrez le code de votre application d'authentification</p>
        </div>

        <!-- 2FA Form Card -->
        <div class="bg-white rounded-2xl shadow-2xl p-8">
            <form action="{{ path('2fa_login_check') }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('two_factor') }}">
                
                <!-- Code Input -->
                <div class="mb-6">
                    <label for="auth_code" class="block text-sm font-medium text-gray-700 mb-2">
                        Code à 6 chiffres
                    </label>
                    <input 
                        type="text" 
                        id="auth_code"
                        name="_auth_code" 
                        maxlength="6" 
                        pattern="[0-9]{6}" 
                        required 
                        autofocus
                        placeholder="000000"
                        class="w-full text-center text-3xl font-mono tracking-widest rounded-lg border border-gray-200 px-4 py-4 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all"
                        autocomplete="off"
                    >
                    <p class="text-xs text-gray-500 mt-2 text-center">
                        Le code change toutes les 30 secondes
                    </p>
                </div>

                <!-- Trust Device -->
                <div class="mb-6">
                    <label class="flex items-center gap-2 cursor-pointer">
                        <input 
                            type="checkbox" 
                            name="_trusted" 
                            value="1"
                            class="w-4 h-4 rounded border-gray-300 text-primary focus:ring-primary"
                        >
                        <span class="text-sm text-gray-700">
                            Se souvenir de cet appareil pendant 7 jours
                        </span>
                    </label>
                </div>

                <!-- Submit Button -->
                <button 
                    type="submit" 
                    class="w-full bg-primary text-navy py-3.5 rounded-lg font-bold hover:bg-yellow-400 transition-colors shadow-lg shadow-primary/30 mb-4"
                >
                    Vérifier
                </button>

                <!-- Backup Code Link -->
                <details class="mt-4">
                    <summary class="cursor-pointer text-sm text-gray-600 hover:text-navy font-medium text-center">
                        Je n'ai pas accès à mon application
                    </summary>
                    <div class="mt-4 p-4 bg-gray-50 rounded-lg border border-gray-200">
                        <p class="text-sm text-gray-700 mb-3">
                            Utilisez un de vos codes de secours à la place du code de votre application :
                        </p>
                        <input 
                            type="text" 
                            id="backup_code"
                            name="_auth_code" 
                            maxlength="9" 
                            placeholder="XXXX-XXXX"
                            class="w-full text-center text-xl font-mono tracking-wider rounded-lg border border-gray-200 px-4 py-3 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all"
                            autocomplete="off"
                        >
                        <p class="text-xs text-gray-500 mt-2">
                            Format : XXXX-XXXX (8 caractères)
                        </p>
                    </div>
                </details>

                <!-- Cancel Link -->
                <div class="text-center mt-6">
                    <a href="{{ path('app_logout') }}" class="text-sm text-gray-600 hover:text-navy font-medium">
                        ← Retour à la connexion
                    </a>
                </div>
            </form>
        </div>

        <!-- Help Text -->
        <div class="mt-6 text-center">
            <p class="text-sm text-blue-100">
                Besoin d'aide ? <a href="#" class="text-primary hover:underline font-semibold">Contactez le support</a>
            </p>
        </div>
    </div>
</div>

<script>
// Auto-format code input (only numbers)
document.getElementById('auth_code').addEventListener('input', function(e) {
    this.value = this.value.replace(/[^0-9]/g, '');
});

// Auto-format backup code input (uppercase + dash)
document.getElementById('backup_code').addEventListener('input', function(e) {
    let value = this.value.replace(/[^A-Za-z0-9]/g, '').toUpperCase();
    if (value.length > 4) {
        value = value.slice(0, 4) + '-' + value.slice(4, 8);
    }
    this.value = value;
});

// Disable one input when the other is used
document.getElementById('auth_code').addEventListener('input', function() {
    if (this.value.length > 0) {
        document.getElementById('backup_code').disabled = true;
        document.getElementById('backup_code').classList.add('opacity-50', 'cursor-not-allowed');
    } else {
        document.getElementById('backup_code').disabled = false;
        document.getElementById('backup_code').classList.remove('opacity-50', 'cursor-not-allowed');
    }
});

document.getElementById('backup_code').addEventListener('input', function() {
    if (this.value.length > 0) {
        document.getElementById('auth_code').disabled = true;
        document.getElementById('auth_code').classList.add('opacity-50', 'cursor-not-allowed');
    } else {
        document.getElementById('auth_code').disabled = false;
        document.getElementById('auth_code').classList.remove('opacity-50', 'cursor-not-allowed');
    }
});
</script>
{% endblock %}
