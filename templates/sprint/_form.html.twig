{{ form_start(form, {'attr': {'class': 'space-y-6', 'novalidate': 'novalidate'}}) }}
    
    {# Sprint Name #}
    <div>
        <label class="block text-navy dark:text-white text-sm font-semibold mb-2">
            Sprint Name <span class="text-red-500">*</span>
        </label>
        {{ form_widget(form.nom, {'attr': {
            'class': 'w-full px-4 py-3 rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 text-navy dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent transition-all placeholder:text-gray-400',
            'placeholder': 'e.g., Sprint 1'
        }}) }}
        {{ form_errors(form.nom) }}
    </div>

    {# Project Selection #}
    <div>
        <label class="block text-navy dark:text-white text-sm font-semibold mb-2">
            Project <span class="text-red-500">*</span>
        </label>
        {{ form_widget(form.projet, {'attr': {
            'class': 'w-full px-4 py-3 rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 text-navy dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent transition-all'
        }}) }}
        {{ form_errors(form.projet) }}
    </div>

    {# Date Range #}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
            <label class="block text-navy dark:text-white text-sm font-semibold mb-2">
                Start Date <span class="text-red-500">*</span>
            </label>
            {{ form_widget(form.dateDebut, {'attr': {
                'class': 'w-full px-4 py-3 rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 text-navy dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent transition-all'
            }}) }}
            {{ form_errors(form.dateDebut) }}
        </div>
        <div>
            <label class="block text-navy dark:text-white text-sm font-semibold mb-2">
                End Date <span class="text-red-500">*</span>
            </label>
            {{ form_widget(form.dateFin, {'attr': {
                'class': 'w-full px-4 py-3 rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 text-navy dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent transition-all'
            }}) }}
            {{ form_errors(form.dateFin) }}
        </div>
    </div>

    {# Velocity Fields #}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
            <label class="block text-navy dark:text-white text-sm font-semibold mb-2">
                Velocity Target (points)
            </label>
            {{ form_widget(form.objectifVelocite, {'attr': {
                'class': 'w-full px-4 py-3 rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 text-navy dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent transition-all placeholder:text-gray-400',
                'placeholder': 'e.g., 30'
            }}) }}
            {{ form_errors(form.objectifVelocite) }}
        </div>
        <div>
            <label class="block text-navy dark:text-white text-sm font-semibold mb-2">
                Actual Velocity (points)
            </label>
            {{ form_widget(form.velociteReelle, {'attr': {
                'class': 'w-full px-4 py-3 rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 text-navy dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent transition-all placeholder:text-gray-400',
                'placeholder': 'e.g., 28'
            }}) }}
            {{ form_errors(form.velociteReelle) }}
        </div>
    </div>

    {# Status #}
    <div>
        <label class="block text-navy dark:text-white text-sm font-semibold mb-2">
            Status <span class="text-red-500">*</span>
        </label>
        {{ form_widget(form.statut, {'attr': {
            'class': 'w-full px-4 py-3 rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 text-navy dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent transition-all'
        }}) }}
        {{ form_errors(form.statut) }}
        <p class="text-gray-400 text-xs mt-1">Available: planifié, actif, terminé</p>
    </div>

    {# Submit Button #}
    <div class="flex gap-3 pt-4">
        <button type="submit" class="flex items-center gap-2 px-6 py-3 bg-primary hover:bg-yellow-500 text-navy font-bold rounded-lg transition-all shadow-lg shadow-primary/20">
            <span class="material-symbols-outlined">check</span>
            {{ button_label|default('Save') }}
        </button>
    </div>

{{ form_end(form) }}
