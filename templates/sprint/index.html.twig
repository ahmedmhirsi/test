{% extends 'back_office/base.html.twig' %}
{% import '_components.html.twig' as ui %}

{% block title %}Sprints - Nexus AI{% endblock %}

{% block header_title %}
    <span class="flex items-center gap-2">
        <span class="material-symbols-outlined text-nexus-primary">history</span>
        Gestion des Sprints
    </span>
{% endblock %}

{% block content %}
<div class="swup-transition-fade">

    {# ── Header ── #}
    <div class="flex flex-col md:flex-row justify-between items-start md:items-end gap-4 mb-8">
        <div>
            <h1 class="text-3xl font-black tracking-tight text-white mb-2 text-glow">
                Sprints Actifs
            </h1>
            <p class="text-gray-400 text-sm">
                Organisez vos itérations, suivez la vélocité et atteignez vos objectifs.
            </p>
        </div>
        {% if can_create_sprint %}
        <a href="{{ path('app_sprint_new') }}" class="btn-nexus-primary shadow-lg shadow-indigo-500/20 group">
            <span class="material-symbols-outlined mr-2 group-hover:rotate-90 transition-transform">add</span>
            Nouveau Sprint
        </a>
        {% endif %}
    </div>

    {# ── Controls ── #}
    <div class="flex flex-col md:flex-row gap-4 mb-8 animate-card">
        <form method="get" action="{{ path('app_sprint_index') }}" class="flex-1 nexus-card p-4 flex items-center gap-4">
            <span class="material-symbols-outlined text-gray-500">search</span>
            <input type="text" name="q" value="{{ searchTerm }}" placeholder="Rechercher un sprint..." class="bg-transparent border-none text-white placeholder-gray-500 focus:ring-0 w-full text-sm font-medium">
            <input type="hidden" name="sort" value="{{ currentSort }}">
            <input type="hidden" name="order" value="{{ currentOrder }}">
        </form>
        
        <div class="flex items-center gap-2">
            <a href="{{ path('app_sprint_export_pdf') }}" class="btn-nexus-secondary group" title="Export PDF">
                <span class="material-symbols-outlined text-red-400 group-hover:text-red-300">picture_as_pdf</span>
            </a>
            
             <div class="relative group z-20">
                <button class="btn-nexus-secondary">
                    <span class="material-symbols-outlined mr-2">sort</span>
                    Trier
                </button>
                <div class="absolute right-0 top-full mt-2 w-48 bg-[#1e293b] border border-white/10 rounded-xl shadow-2xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all overflow-hidden">
                    <a href="{{ path('app_sprint_index', {q: searchTerm, sort: 'dateDebut', order: 'DESC'}) }}" class="block px-4 py-3 text-sm text-gray-400 hover:text-white hover:bg-white/5 border-b border-white/5">Date</a>
                    <a href="{{ path('app_sprint_index', {q: searchTerm, sort: 'statut', order: 'ASC'}) }}" class="block px-4 py-3 text-sm text-gray-400 hover:text-white hover:bg-white/5 border-b border-white/5">Statut</a>
                    <a href="{{ path('app_sprint_index', {q: searchTerm, sort: 'nom', order: 'ASC'}) }}" class="block px-4 py-3 text-sm text-gray-400 hover:text-white hover:bg-white/5">Nom</a>
                </div>
            </div>
        </div>
    </div>

    {# ── Sprints Grid ── #}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for sprint in sprints %}
            {% set isActive = sprint.statut|lower in ['actif', 'active', 'en_cours', 'en cours', 'en cours'] %}
            
            <div class="nexus-card group relative overflow-hidden hover:-translate-y-1 transition-transform duration-300 animate-card" style="animation-delay: {{ loop.index * 0.1 }}s">
                
                {# Active Indicator #}
                {% if isActive %}
                    <div class="absolute top-0 right-0 p-3">
                        <span class="relative flex size-3">
                            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-nexus-accent opacity-75"></span>
                            <span class="relative inline-flex rounded-full size-3 bg-nexus-accent"></span>
                        </span>
                    </div>
                {% endif %}

                <div class="p-6">
                    {# Header #}
                    <div class="flex items-center gap-4 mb-4">
                        <div class="size-12 rounded-xl bg-gradient-to-br {{ isActive ? 'from-nexus-primary to-violet-600 shadow-lg shadow-nexus-primary/20' : 'from-gray-700 to-gray-800' }} flex items-center justify-center text-white">
                            <span class="material-symbols-outlined">{{ isActive ? 'bolt' : 'history' }}</span>
                        </div>
                        <div>
                            <h3 class="text-lg font-bold text-white group-hover:text-nexus-primary transition-colors line-clamp-1">
                                <a href="{{ path('app_sprint_show', {id: sprint.id}) }}">{{ sprint.nom }}</a>
                            </h3>
                            {% if sprint.projet %}
                                <div class="flex items-center gap-1 text-xs text-gray-400">
                                    <span class="material-symbols-outlined text-[12px]">folder</span>
                                    {{ sprint.projet.titre }}
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    {# Dates & Status #}
                    <div class="flex justify-between items-center mb-6 text-sm">
                        <div class="text-gray-400 flex items-center gap-1">
                            <span class="material-symbols-outlined text-[16px]">calendar_today</span>
                            {{ sprint.dateDebut|date('d M') }} - {{ sprint.dateFin|date('d M') }}
                        </div>
                        {{ ui.status_badge(sprint.statut) }}
                    </div>

                    {# Velocity Stats #}
                    <div class="bg-white/5 rounded-xl p-4 border border-white/5 mb-6">
                        <div class="flex justify-between items-end mb-2">
                            <span class="text-[10px] text-gray-500 uppercase font-bold tracking-wider">Vélocité</span>
                            <span class="text-sm font-bold text-white">
                                <span class="text-nexus-accent">{{ sprint.velociteReelle|default(0) }}</span> / {{ sprint.objectifVelocite|default(0) }}
                            </span>
                        </div>
                        <div class="h-1.5 w-full bg-gray-700 rounded-full overflow-hidden">
                            {% set percentage = sprint.objectifVelocite > 0 ? (sprint.velociteReelle / sprint.objectifVelocite * 100) : 0 %}
                            <div class="h-full bg-gradient-to-r from-nexus-primary to-nexus-accent rounded-full transition-all duration-1000" style="width: {{ min(percentage, 100) }}%"></div>
                        </div>
                    </div>

                    {# Footer Actions #}
                    <div class="flex gap-2">
                        <a href="{{ path('app_sprint_show', {id: sprint.id}) }}" class="flex-1 btn-nexus-secondary h-9 text-xs justify-center">
                            Détails
                        </a>
                        {% if can_edit_sprint %}
                        <a href="{{ path('app_sprint_edit', {id: sprint.id}) }}" class="size-9 rounded-lg bg-white/5 flex items-center justify-center text-gray-400 hover:bg-nexus-accent hover:text-white transition-colors">
                            <span class="material-symbols-outlined text-[18px]">edit</span>
                        </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% else %}
             <div class="col-span-full py-20 text-center">
                <div class="size-20 bg-white/5 rounded-full flex items-center justify-center mx-auto mb-4">
                    <span class="material-symbols-outlined text-gray-600 text-4xl">history_toggle_off</span>
                </div>
                <h3 class="text-xl font-bold text-white mb-2">Aucun sprint</h3>
                <p class="text-gray-500 mb-6">Planifiez votre premier sprint pour démarrer.</p>
                {% if can_create_sprint %}
                <a href="{{ path('app_sprint_new') }}" class="btn-nexus-primary">
                    <span class="material-symbols-outlined mr-2">add</span>
                    Créer un Sprint
                </a>
                {% endif %}
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
