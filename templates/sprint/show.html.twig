{% extends 'layout/admin.html.twig' %}
{% import '_components.html.twig' as ui %}

{% block title %}{{ sprint.nom }} – SmartNexus AI{% endblock %}

{% block body %}
    {# ========== Breadcrumb ========== #}
    <nav class="flex items-center gap-2 text-sm text-gray-500 mb-6">
        <a href="{{ path('app_sprint_index') }}" class="hover:text-primary transition-colors">Sprints</a>
        <span class="material-symbols-outlined text-base">chevron_right</span>
        <span class="text-navy dark:text-white font-medium">{{ sprint.nom }}</span>
    </nav>

    {# ========== Header ========== #}
    <div class="flex flex-wrap justify-between items-start gap-4 mb-8">
        <div class="flex items-start gap-4">
            {% set isActive = sprint.statut|lower in ['actif', 'active', 'en_cours', 'en cours'] %}
            <div class="p-3 {{ isActive ? 'bg-primary/20' : 'bg-gray-100 dark:bg-gray-800' }} rounded-xl">
                <span class="material-symbols-outlined text-3xl {{ isActive ? 'text-primary filled' : 'text-gray-500' }}">
                    {{ isActive ? 'star' : 'history' }}
                </span>
            </div>
            <div>
                <div class="flex items-center gap-3">
                    <h1 class="text-navy dark:text-white text-3xl font-black">{{ sprint.nom }}</h1>
                    {{ ui.status_badge(sprint.statut) }}
                </div>
                {% if sprint.projet %}
                    <p class="text-gray-500 mt-1">
                        <a href="{{ path('app_projet_show', {id: sprint.projet.id}) }}" class="hover:text-primary transition-colors">
                            {{ sprint.projet.titre }}
                        </a>
                    </p>
                {% endif %}
                <div class="flex items-center gap-2 text-gray-500 text-sm mt-2">
                    <span class="material-symbols-outlined text-base">calendar_today</span>
                    <span>{{ sprint.dateDebut|date('F d') }} - {{ sprint.dateFin|date('F d, Y') }}</span>
                </div>
            </div>
        </div>
        
        <div class="flex gap-2">
            <a href="{{ path('app_sprint_edit', {id: sprint.id}) }}" 
               class="flex items-center gap-2 px-4 py-2 bg-gray-100 dark:bg-gray-800 hover:bg-gray-200 dark:hover:bg-gray-700 text-navy dark:text-white font-medium rounded-lg transition-colors">
                <span class="material-symbols-outlined">edit</span>
                Edit
            </a>
            <form method="post" action="{{ path('app_sprint_delete', {'id': sprint.id}) }}" 
                  onsubmit="return confirm('Are you sure you want to delete this sprint?');" class="inline">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sprint.id) }}">
                <button type="submit" 
                        class="flex items-center gap-2 px-4 py-2 bg-red-50 hover:bg-red-100 text-red-600 font-medium rounded-lg transition-colors">
                    <span class="material-symbols-outlined">delete</span>
                    Delete
                </button>
            </form>
        </div>
    </div>

    {# ========== Stats Cards ========== #}
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
        <div class="bg-white dark:bg-gray-900 rounded-xl border border-gray-200 dark:border-gray-800 p-5">
            <p class="text-gray-500 text-xs font-medium uppercase mb-1">Velocity Target</p>
            <p class="text-navy dark:text-white text-2xl font-bold">{{ sprint.objectifVelocite ?? '—' }} pts</p>
        </div>
        <div class="bg-white dark:bg-gray-900 rounded-xl border border-gray-200 dark:border-gray-800 p-5">
            <p class="text-gray-500 text-xs font-medium uppercase mb-1">Actual Velocity</p>
            <p class="text-primary text-2xl font-bold">{{ sprint.velociteReelle ?? '—' }} pts</p>
        </div>
        <div class="bg-white dark:bg-gray-900 rounded-xl border border-gray-200 dark:border-gray-800 p-5">
            <p class="text-gray-500 text-xs font-medium uppercase mb-1">Total Tasks</p>
            <p class="text-navy dark:text-white text-2xl font-bold">{{ sprint.taches|length }}</p>
        </div>
        <div class="bg-white dark:bg-gray-900 rounded-xl border border-gray-200 dark:border-gray-800 p-5">
            <p class="text-gray-500 text-xs font-medium uppercase mb-1">Duration</p>
            {% set duration = sprint.dateDebut ? sprint.dateDebut.diff(sprint.dateFin).days : 0 %}
            <p class="text-navy dark:text-white text-2xl font-bold">{{ duration }} days</p>
        </div>
    </div>

    {# ========== Tasks Table ========== #}
    <div class="bg-white dark:bg-gray-900 rounded-xl border border-gray-200 dark:border-gray-800 shadow-sm overflow-hidden">
        <div class="p-6 border-b border-gray-100 dark:border-gray-800 flex justify-between items-center">
            <h3 class="text-navy dark:text-white font-bold text-lg">Sprint Tasks</h3>
            <a href="{{ path('app_tache_new') }}" 
               class="flex items-center gap-1 px-3 py-1.5 text-sm bg-primary/10 text-primary hover:bg-primary/20 rounded-lg font-medium transition-colors">
                <span class="material-symbols-outlined text-lg">add</span>
                Add Task
            </a>
        </div>

        <div class="overflow-x-auto">
            <table class="w-full text-left">
                <thead class="bg-gray-50 dark:bg-gray-800/50 text-gray-500 text-xs font-bold uppercase tracking-wider">
                    <tr>
                        <th class="px-6 py-4">Task</th>
                        <th class="px-6 py-4">Priority</th>
                        <th class="px-6 py-4">Status</th>
                        <th class="px-6 py-4">Estimate</th>
                        <th class="px-6 py-4">Actual</th>
                        <th class="px-6 py-4">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100 dark:divide-gray-800">
                    {% for tache in sprint.taches %}
                        <tr class="hover:bg-gray-50 dark:hover:bg-gray-800/30 transition-colors">
                            <td class="px-6 py-4">
                                <a href="{{ path('app_tache_show', {id: tache.id}) }}" class="hover:text-primary transition-colors">
                                    <p class="text-navy dark:text-white font-medium">{{ tache.titre }}</p>
                                    <p class="text-gray-400 text-xs">{{ tache.description|slice(0, 50) }}{{ tache.description|length > 50 ? '...' : '' }}</p>
                                </a>
                            </td>
                            <td class="px-6 py-4">{{ ui.priority_badge(tache.priorite) }}</td>
                            <td class="px-6 py-4">{{ ui.status_badge(tache.statut) }}</td>
                            <td class="px-6 py-4 text-sm font-medium">{{ tache.tempsEstime }} pts</td>
                            <td class="px-6 py-4 text-sm font-medium {{ tache.tempsReel ? 'text-primary' : 'text-gray-400' }}">
                                {{ tache.tempsReel ?? '—' }}
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex gap-1">
                                    <a href="{{ path('app_tache_edit', {id: tache.id}) }}" 
                                       class="p-1.5 text-gray-400 hover:text-primary hover:bg-primary/10 rounded-lg transition-colors">
                                        <span class="material-symbols-outlined text-lg">edit</span>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="px-6 py-12 text-center text-gray-500">
                                <span class="material-symbols-outlined text-4xl text-gray-300 block mb-2">task_alt</span>
                                No tasks in this sprint yet
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    {# ========== Back Link ========== #}
    <div class="mt-8">
        <a href="{{ path('app_sprint_index') }}" class="inline-flex items-center gap-2 text-gray-500 hover:text-navy dark:hover:text-white transition-colors">
            <span class="material-symbols-outlined">arrow_back</span>
            Back to Sprints
        </a>
    </div>
{% endblock %}
