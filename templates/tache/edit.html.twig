{% extends 'back_office/base.html.twig' %}

{% block title %}Neutraliser Mission: {{ tache.titre }} – Nexus AI{% endblock %}

{% block header_title %}
    <span class="flex items-center gap-2">
        <span class="material-symbols-outlined text-nexus-primary animate-pulse-slow">edit_square</span>
        Mission Reconfiguration
    </span>
{% endblock %}

{% block content %}
<div class="swup-transition-fade pb-20">
    <div class="max-w-3xl mx-auto">
        
        {# ─── Header ─── #}
        <div class="mb-8 flex items-end justify-between px-4 animate-slide-up">
            <div>
                 <nav class="flex items-center gap-2 text-[10px] font-black uppercase tracking-widest text-gray-500 mb-2">
                    <a href="{{ path('app_tache_index') }}" class="hover:text-nexus-primary transition-colors">Opérations</a>
                    <span class="material-symbols-outlined text-[14px]">chevron_right</span>
                    <a href="{{ path('app_tache_show', {id: tache.id}) }}" class="hover:text-nexus-primary transition-colors">{{ tache.titre }}</a>
                </nav>
                <h1 class="text-3xl font-black text-white tracking-tight leading-none">Reconfiguration <span class="text-transparent bg-clip-text bg-gradient-to-r from-nexus-primary to-purple-400">Tactique</span></h1>
            </div>
            
            <a href="{{ path('app_tache_show', {id: tache.id}) }}" class="flex items-center gap-2 text-[10px] font-black uppercase tracking-widest text-gray-500 hover:text-white transition-colors">
                <span class="material-symbols-outlined text-[18px]">close</span>
                Annuler
            </a>
        </div>

        {# ─── Form Container ─── #}
        <div class="glass-panel p-10 animate-slide-up bg-[#020617]/40 border-white/5 relative overflow-hidden group" style="animation-delay: 0.1s">
            
            <div class="relative z-10">
                {{ include('tache/_form.html.twig', {'button_label': 'Mettre à jour la Mission'}) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
