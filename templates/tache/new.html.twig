{% extends user_layout %}

{% block title %}New Task – SmartNexus AI{% endblock %}

{% block body %}
    {# ========== Breadcrumb ========== #}
    <nav class="flex items-center gap-2 text-sm text-gray-500 mb-6">
        <a href="{{ path('app_tache_index') }}" class="hover:text-primary transition-colors">Tâches</a>
        <span class="material-symbols-outlined text-base">chevron_right</span>
        <span class="text-navy dark:text-white font-medium">New Task</span>
    </nav>

    {# ========== Header ========== #}
    <div class="flex items-center gap-4 mb-8">
        <div class="p-3 bg-primary/20 rounded-xl">
            <span class="material-symbols-outlined text-3xl text-primary">add_task</span>
        </div>
        <div>
            <h1 class="text-navy dark:text-white text-3xl font-black">Create New Task</h1>
            <p class="text-gray-500">Add a new task to your sprint</p>
        </div>
    </div>

    {# ========== Form Card ========== #}
    <div class="max-w-2xl">
        <div class="bg-white dark:bg-gray-900 rounded-xl border border-gray-200 dark:border-gray-800 p-8 shadow-sm">
            {{ include('tache/_form.html.twig', {'button_label': 'Create Task'}) }}
        </div>

        {# ========== Back Link ========== #}
        <div class="mt-6">
            <a href="{{ path('app_tache_index') }}" class="inline-flex items-center gap-2 text-gray-500 hover:text-navy dark:hover:text-white transition-colors">
                <span class="material-symbols-outlined">arrow_back</span>
                Back to Tasks
            </a>
        </div>
    </div>
{% endblock %}
