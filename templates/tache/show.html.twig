{% extends user_layout %}
{% import '_components.html.twig' as ui %}

{% block title %}{{ tache.titre }} – SmartNexus AI{% endblock %}

{% block body %}
    {# ========== Breadcrumb ========== #}
    <nav class="flex items-center gap-2 text-sm text-gray-500 mb-6">
        <a href="{{ path('app_tache_index') }}" class="hover:text-primary transition-colors">Tâches</a>
        <span class="material-symbols-outlined text-base">chevron_right</span>
        <span class="text-navy dark:text-white font-medium">{{ tache.titre }}</span>
    </nav>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        {# ========== Main Content ========== #}
        <div class="lg:col-span-2 space-y-6">
            {# Header Card #}
            <div class="bg-white dark:bg-gray-900 rounded-xl border border-gray-200 dark:border-gray-800 p-6">
                <div class="flex items-start justify-between mb-4">
                    <div class="flex items-start gap-4">
                        <div class="p-3 bg-primary/20 rounded-xl">
                            <span class="material-symbols-outlined text-2xl text-primary">task_alt</span>
                        </div>
                        <div>
                            <p class="text-gray-400 text-xs font-bold mb-1">SN-{{ tache.id }}</p>
                            <h1 class="text-navy dark:text-white text-2xl font-black">{{ tache.titre }}</h1>
                        </div>
                    </div>
                    <div class="flex gap-2">
                        {{ ui.priority_badge(tache.priorite) }}
                        {{ ui.status_badge(tache.statut) }}
                    </div>
                </div>

                {% if tache.description %}
                    <div class="border-t border-gray-100 dark:border-gray-800 pt-4 mt-4">
                        <h3 class="text-navy dark:text-white font-bold text-sm mb-2">Description</h3>
                        <p class="text-gray-600 dark:text-gray-400 leading-relaxed">{{ tache.description }}</p>
                    </div>
                {% endif %}
            </div>

            {# Time Tracking Card #}
            <div class="bg-white dark:bg-gray-900 rounded-xl border border-gray-200 dark:border-gray-800 p-6">
                <h3 class="text-navy dark:text-white font-bold mb-4">Time Tracking</h3>
                <div class="grid grid-cols-2 gap-6">
                    <div>
                        <p class="text-gray-500 text-xs font-medium uppercase mb-1">Estimated</p>
                        <p class="text-navy dark:text-white text-3xl font-bold">{{ tache.tempsEstime }} <span class="text-lg text-gray-400">pts</span></p>
                    </div>
                    <div>
                        <p class="text-gray-500 text-xs font-medium uppercase mb-1">Actual</p>
                        <p class="text-primary text-3xl font-bold">
                            {{ tache.tempsReel ?? '—' }} 
                            {% if tache.tempsReel %}<span class="text-lg text-gray-400">pts</span>{% endif %}
                        </p>
                    </div>
                </div>
                
                {% if tache.tempsReel and tache.tempsEstime %}
                    {% set diff = tache.tempsReel - tache.tempsEstime %}
                    <div class="mt-4 pt-4 border-t border-gray-100 dark:border-gray-800">
                        <p class="text-sm {{ diff <= 0 ? 'text-green-600' : 'text-red-600' }}">
                            {% if diff < 0 %}
                                <span class="material-symbols-outlined text-sm align-middle">trending_down</span>
                                {{ diff|abs }} points under estimate
                            {% elseif diff > 0 %}
                                <span class="material-symbols-outlined text-sm align-middle">trending_up</span>
                                {{ diff }} points over estimate
                            {% else %}
                                <span class="material-symbols-outlined text-sm align-middle">check</span>
                                Exactly on estimate
                            {% endif %}
                        </p>
                    </div>
                {% endif %}
            </div>
        </div>

        {# ========== Sidebar ========== #}
        <div class="space-y-6">
            {# Actions Card #}
            <div class="bg-white dark:bg-gray-900 rounded-xl border border-gray-200 dark:border-gray-800 p-6">
                <h3 class="text-navy dark:text-white font-bold mb-4">Actions</h3>
                <div class="space-y-2">
                    {% if can_edit_tache %}
                    <a href="{{ path('app_tache_edit', {id: tache.id}) }}" 
                       class="flex items-center gap-3 w-full px-4 py-3 bg-gray-50 dark:bg-gray-800 hover:bg-primary/10 hover:text-primary rounded-lg transition-colors">
                        <span class="material-symbols-outlined">edit</span>
                        <span class="font-medium">Edit Task</span>
                    </a>
                    {% endif %}
                    {% if can_delete_tache %}
                    <form method="post" action="{{ path('app_tache_delete', {'id': tache.id}) }}" 
                          onsubmit="return confirm('Are you sure you want to delete this task?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tache.id) }}">
                        <button type="submit" 
                                class="flex items-center gap-3 w-full px-4 py-3 bg-gray-50 dark:bg-gray-800 hover:bg-red-50 hover:text-red-600 rounded-lg transition-colors">
                            <span class="material-symbols-outlined">delete</span>
                            <span class="font-medium">Delete Task</span>
                        </button>
                    </form>
                    {% endif %}
                </div>
            </div>

            {# Details Card #}
            <div class="bg-white dark:bg-gray-900 rounded-xl border border-gray-200 dark:border-gray-800 p-6">
                <h3 class="text-navy dark:text-white font-bold mb-4">Details</h3>
                <dl class="space-y-4">
                    <div>
                        <dt class="text-gray-500 text-xs font-medium uppercase">Sprint</dt>
                        <dd class="text-navy dark:text-white font-medium mt-1">
                            {% if tache.sprint %}
                                <a href="{{ path('app_sprint_show', {id: tache.sprint.id}) }}" class="flex items-center gap-2 hover:text-primary transition-colors">
                                    <span class="material-symbols-outlined text-lg">history</span>
                                    {{ tache.sprint.nom }}
                                </a>
                            {% else %}
                                <span class="text-gray-400">Not assigned</span>
                            {% endif %}
                        </dd>
                    </div>
                    <div>
                        <dt class="text-gray-500 text-xs font-medium uppercase">Assigné à</dt>
                        <dd class="text-navy dark:text-white font-medium mt-1">
                            {% if tache.assigneeId %}
                                <div class="flex items-center gap-2">
                                    <div class="w-8 h-8 rounded-full bg-primary/10 text-primary flex items-center justify-center text-sm font-bold">
                                        {{ tache.assigneeId|user_display_name|slice(0, 2)|upper }}
                                    </div>
                                    <span>{{ tache.assigneeId|user_display_name }}</span>
                                </div>
                            {% else %}
                                <span class="text-gray-400">Non assigné</span>
                            {% endif %}
                        </dd>
                    </div>
                    <div>
                        <dt class="text-gray-500 text-xs font-medium uppercase">Priority</dt>
                        <dd class="mt-1">{{ ui.priority_badge(tache.priorite) }}</dd>
                    </div>
                    <div>
                        <dt class="text-gray-500 text-xs font-medium uppercase">Status</dt>
                        <dd class="mt-1">{{ ui.status_badge(tache.statut) }}</dd>
                    </div>
                </dl>
            </div>
        </div>
    </div>

    {# ========== Back Link ========== #}
    <div class="mt-8">
        <a href="{{ path('app_tache_index') }}" class="inline-flex items-center gap-2 text-gray-500 hover:text-navy dark:hover:text-white transition-colors">
            <span class="material-symbols-outlined">arrow_back</span>
            Back to Tasks
        </a>
    </div>
{% endblock %}
