{% extends 'base.html.twig' %}

{% block title %}{{ user is defined and user.id ? 'Modifier' : 'Nouvel' }} Utilisateur{% endblock %}

{% block body %}
<main class="flex-1 overflow-y-auto bg-background-light dark:bg-background-dark p-4 md:p-8">
    <div class="max-w-3xl mx-auto">
        
        <div class="mb-6">
            <h1 class="text-3xl font-display font-black text-navy dark:text-white">
                {{ user.id ? 'Modifier l\'Utilisateur' : 'Nouvel Utilisateur' }}
            </h1>
        </div>

        <div class="bg-white dark:bg-[#1a1d2d] rounded-xl border border-gray-100 dark:border-[#2a2e3f] shadow-sm p-6">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                <div class="space-y-4">
                    <div>
                        {{ form_label(form.nom, null, {'label_attr': {'class': 'block text-sm font-bold text-navy dark:text-white mb-2'}}) }}
                        {{ form_widget(form.nom, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-primary'}}) }}
                        {{ form_errors(form.nom) }}
                    </div>

                    <div>
                        {{ form_label(form.email, null, {'label_attr': {'class': 'block text-sm font-bold text-navy dark:text-white mb-2'}}) }}
                        {{ form_widget(form.email, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-primary'}}) }}
                        {{ form_errors(form.email) }}
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            {{ form_label(form.role, null, {'label_attr': {'class': 'block text-sm font-bold text-navy dark:text-white mb-2'}}) }}
                            {{ form_widget(form.role, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-primary'}}) }}
                            {{ form_errors(form.role) }}
                        </div>

                        <div>
                            {{ form_label(form.statut_channel, null, {'label_attr': {'class': 'block text-sm font-bold text-navy dark:text-white mb-2'}}) }}
                            {{ form_widget(form.statut_channel, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-primary'}}) }}
                            {{ form_errors(form.statut_channel) }}
                        </div>
                    </div>

                    <div class="flex items-center gap-3 p-4 bg-gray-50 dark:bg-gray-800 rounded-lg">
                        {{ form_widget(form.statut_actif, {'attr': {'class': 'w-5 h-5 text-primary focus:ring-primary'}}) }}
                        {{ form_label(form.statut_actif, null, {'label_attr': {'class': 'text-sm font-bold text-navy dark:text-white'}}) }}
                        {{ form_errors(form.statut_actif) }}
                    </div>
                </div>

                <div class="flex gap-3 mt-6">
                    <button type="submit" class="flex-1 h-11 px-6 rounded-lg bg-gold text-navy text-xs font-black uppercase tracking-widest hover:brightness-110 shadow-lg">
                        {{ user.id ? 'Modifier' : 'Cr√©er' }} l'Utilisateur
                    </button>
                    <a href="{{ path('app_user_index') }}" class="h-11 px-6 rounded-lg border-2 border-gray-200 dark:border-gray-600 text-navy dark:text-white text-xs font-black uppercase tracking-widest hover:bg-gray-50 dark:hover:bg-gray-800 flex items-center justify-center">
                        Annuler
                    </a>
                </div>
            {{ form_end(form) }}
        </div>

    </div>
</main>
{% endblock %}
