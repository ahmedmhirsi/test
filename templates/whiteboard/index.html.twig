{% extends 'base.html.twig' %}

{% block title %}Tableaux Blancs - Collaboration{% endblock %}

{% block body %}
<main class="flex-1 overflow-y-auto bg-background-light dark:bg-background-dark p-4 md:p-8">
    <div class="max-w-7xl mx-auto space-y-6">
        
        <div class="flex justify-between items-center">
            <div>
                <h1 class="text-3xl font-display font-black text-navy dark:text-white tracking-tight">Tableaux Blancs</h1>
                <p class="text-gray-500 dark:text-gray-400 text-sm font-semibold mt-1">Dessinez et collaborez en temps réel</p>
            </div>
            <a href="{{ path('app_whiteboard_new') }}" class="h-11 px-6 rounded-lg bg-gold text-navy text-xs font-black uppercase tracking-widest hover:brightness-110 shadow-lg flex items-center gap-2">
                <span class="material-symbols-outlined text-[18px]">add</span>
                Nouveau Tableau
            </a>
        </div>

        <!-- Recent Whiteboards -->
        {% if recent|length > 0 %}
            <div class="bg-white dark:bg-[#1a1d2d] rounded-xl border border-gray-100 dark:border-[#2a2e3f] shadow-sm p-6">
                <h2 class="text-xl font-display font-bold text-navy dark:text-white mb-4">Récents</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                    {% for whiteboard in recent %}
                        <a href="{{ path('app_whiteboard_draw', {'id': whiteboard.id}) }}" class="group block p-4 border-2 border-gray-100 dark:border-gray-700 rounded-lg hover:border-primary hover:bg-gray-50 dark:hover:bg-gray-800 transition-all">
                            <div class="flex items-start justify-between mb-3">
                                <div class="flex items-center gap-2">
                                    <span class="material-symbols-outlined text-primary text-[24px]">draw</span>
                                    <h3 class="font-bold text-navy dark:text-white">{{ whiteboard.title }}</h3>
                                </div>
                                {% if whiteboard.isPublic %}
                                    <span class="px-2 py-1 text-[10px] font-bold rounded-full bg-green-100 text-green-800">Public</span>
                                {% else %}
                                    <span class="px-2 py-1 text-[10px] font-bold rounded-full bg-gray-100 text-gray-800">Privé</span>
                                {% endif %}
                            </div>
                            
                            {% if whiteboard.description %}
                                <p class="text-xs text-gray-600 dark:text-gray-400 mb-3">{{ whiteboard.description|slice(0, 80) }}...</p>
                            {% endif %}

                            <div class="flex items-center gap-3 text-xs text-gray-500">
                                <span><span class="material-symbols-outlined text-[14px] inline">person</span> {{ whiteboard.createdBy.nom }}</span>
                                <span><span class="material-symbols-outlined text-[14px] inline">schedule</span> {{ whiteboard.updatedAt|date('d/m H:i') }}</span>
                            </div>
                        </a>
                    {% endfor %}
                </div>
            </div>
        {% endif %}

        <!-- All Whiteboards -->
        <div class="bg-white dark:bg-[#1a1d2d] rounded-xl border border-gray-100 dark:border-[#2a2e3f] shadow-sm p-6">
            <h2 class="text-xl font-display font-bold text-navy dark:text-white mb-4">Tous les Tableaux</h2>
            <div class="space-y-3">
                {% for whiteboard in whiteboards %}
                    <div class="flex items-center justify-between p-4 border border-gray-100 dark:border-gray-700 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors">
                        <div class="flex-1">
                            <div class="flex items-center gap-3 mb-1">
                                <span class="material-symbols-outlined text-primary">draw</span>
                                <h3 class="font-bold text-navy dark:text-white">{{ whiteboard.title }}</h3>
                                {% if whiteboard.isPublic %}
                                    <span class="px-2 py-1 text-[10px] font-bold rounded-full bg-green-100 text-green-800">Public</span>
                                {% endif %}
                            </div>
                            <div class="flex items-center gap-4 text-xs text-gray-500">
                                <span>{{ whiteboard.createdBy.nom }}</span>
                                <span>Créé: {{ whiteboard.createdAt|date('d/m/Y') }}</span>
                                <span>Modifié: {{ whiteboard.updatedAt|date('d/m/Y H:i') }}</span>
                                {% if whiteboard.meeting %}
                                    <span class="text-primary">Meeting: {{ whiteboard.meeting.titre }}</span>
                                {% endif %}
                            </div>
                        </div>
                        <div class="flex gap-2">
                            <a href="{{ path('app_whiteboard_draw', {'id': whiteboard.id}) }}" class="h-9 px-4 rounded-lg bg-primary text-white text-xs font-bold hover:brightness-110 flex items-center gap-1">
                                <span class="material-symbols-outlined text-[16px]">edit</span>
                                Ouvrir
                            </a>
                            <form method="post" action="{{ path('app_whiteboard_delete', {'id': whiteboard.id}) }}" onsubmit="return confirm('Supprimer ce tableau ?');" class="inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ whiteboard.id) }}">
                                <button type="submit" class="h-9 px-4 rounded-lg border border-red-200 text-red-600 text-xs font-bold hover:bg-red-50 flex items-center">
                                    <span class="material-symbols-outlined text-[16px]">delete</span>
                                </button>
                            </form>
                        </div>
                    </div>
                {% else %}
                    <div class="text-center py-12 text-gray-500">
                        <span class="material-symbols-outlined text-[64px] mb-4">draw</span>
                        <p>Aucun tableau blanc créé</p>
                        <a href="{{ path('app_whiteboard_new') }}" class="inline-block mt-4 text-primary font-bold hover:underline">
                            Créer votre premier tableau
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>

    </div>
</main>
{% endblock %}
