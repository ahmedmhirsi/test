{% extends 'layout/employe.html.twig' %}

{% block title %}Tableaux Blancs - SmartNexus AI{% endblock %}

{% block breadcrumb %}
    <span class="text-[#9ca3af] material-symbols-outlined text-[16px]">chevron_right</span>
    <span class="text-primary font-semibold font-display">Collaboration</span>
    <span class="text-[#9ca3af] material-symbols-outlined text-[16px]">chevron_right</span>
    <span class="text-[#A79E9C] dark:text-[#9ca3af] font-medium">Tableaux Blancs</span>
{% endblock %}

{% block content %}
<div class="space-y-8">
    <!-- Header Section -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-6">
        <div>
            <h1 class="text-3xl md:text-4xl font-black tracking-tight text-[#D3C3B9] dark:text-white mb-2 font-display uppercase italic text-shadow-sm">Whiteboard</h1>
            <p class="text-[#A79E9C] dark:text-[#9ca3af] text-base font-medium flex items-center gap-2">
                <span class="material-symbols-outlined text-primary">draw</span>
                Visualisez vos idées et collaborez sans limites
            </p>
        </div>
        <a href="{{ path('app_whiteboard_new') }}" class="h-12 px-8 rounded-xl bg-primary text-navy text-sm font-black uppercase tracking-widest hover:bg-primary/90 flex items-center gap-3 shadow-lg shadow-primary/20 transition-all border-none group">
            <span class="material-symbols-outlined text-[22px] group-hover:rotate-12 transition-transform">add_circle</span>
            Nouveau Tableau
        </a>
    </div>

    <!-- Recent Whiteboards -->
    {% if recent|length > 0 %}
        <div class="space-y-4">
            <h2 class="text-lg font-black text-[#D3C3B9] dark:text-white uppercase tracking-widest flex items-center gap-2 mb-4">
                <span class="w-2 h-2 rounded-full bg-primary animate-pulse"></span>
                Canvas Récents
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for whiteboard in recent %}
                    <div class="group bg-gradient-to-br from-white to-[#f8f8f5] dark:from-[#1a1d2d] dark:to-[#161925] rounded-2xl border border-primary/20 dark:border-primary/10 shadow-sm hover:shadow-xl transition-all duration-300 overflow-hidden flex flex-col">
                        <div class="aspect-video bg-[#eaefff] dark:bg-[#1a1d2d] flex items-center justify-center relative group-hover:scale-105 transition-transform duration-500 overflow-hidden">
                            <span class="material-symbols-outlined text-primary/20 text-6xl group-hover:text-primary transition-colors">draw_abstract</span>
                            <div class="absolute inset-x-0 bottom-0 h-1/3 bg-gradient-to-t from-[#eaefff] dark:from-[#1a1d2d] to-transparent"></div>
                            <div class="absolute top-3 right-4">
                                {% if whiteboard.isPublic %}
                                    <span class="px-2 py-0.5 rounded bg-green-500/20 text-green-600 dark:text-green-400 text-[9px] font-black uppercase tracking-widest border border-green-500/30">Public</span>
                                {% else %}
                                    <span class="px-2 py-0.5 rounded bg-navy/10 text-navy dark:text-white-400 text-[9px] font-black uppercase tracking-widest border border-navy/20">Privé</span>
                                {% endif %}
                            </div>
                        </div>
                        
                        <div class="p-6 flex flex-col flex-1">
                            <h3 class="text-lg font-black text-[#D3C3B9] dark:text-white line-clamp-1 group-hover:text-primary transition-colors leading-tight mb-2">{{ whiteboard.title }}</h3>
                            
                            {% if whiteboard.description %}
                                <p class="text-[11px] text-[#A79E9C] dark:text-[#9ca3af] font-medium leading-relaxed line-clamp-2 mb-4 italic">"{{ whiteboard.description }}"</p>
                            {% endif %}
                            
                            <div class="flex items-center gap-4 text-[10px] font-black text-[#A79E9C] dark:text-[#9ca3af] uppercase tracking-widest mb-6 mt-auto">
                                <span class="flex items-center gap-1.5"><span class="material-symbols-outlined text-[14px]">history</span> {{ whiteboard.updatedAt|date('d/m H:i') }}</span>
                            </div>

                            <a href="{{ path('app_whiteboard_draw', {'id': whiteboard.id}) }}" class="w-full h-11 flex items-center justify-center gap-2 bg-navy text-white text-xs font-black uppercase tracking-wider rounded-xl hover:brightness-110 shadow-lg transition-all border-none">
                                <span class="material-symbols-outlined text-[18px]">brush</span>
                                Ouvrir le Studio
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}

    <!-- All Whiteboards Table -->
    <div class="space-y-4">
        <h2 class="text-lg font-black text-[#D3C3B9] dark:text-white uppercase tracking-widest flex items-center gap-2 mb-4">
            <span class="material-symbols-outlined text-primary">grid_view</span>
            Tous les Espaces de Travail
        </h2>
        <div class="bg-white dark:bg-[#1a1d2d] rounded-2xl border border-[#e5e7eb] dark:border-[#1f2128] shadow-sm overflow-hidden">
            <div class="divide-y divide-[#e5e7eb] dark:divide-[#1f2128]">
                {% for whiteboard in whiteboards %}
                    <div class="p-6 hover:bg-[#f8f8f5] dark:hover:bg-[#0f1115] transition-all flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4 group">
                        <div class="flex items-center gap-6 flex-1">
                            <div class="w-14 h-14 rounded-xl bg-[#f0f0f5] dark:bg-[#161516] flex items-center justify-center text-primary group-hover:bg-primary group-hover:text-navy transition-all shadow-inner">
                                <span class="material-symbols-outlined text-3xl">gesture</span>
                            </div>
                            <div class="flex-1">
                                <div class="flex items-center gap-3 mb-1">
                                    <h3 class="text-base font-black text-[#D3C3B9] dark:text-white leading-tight uppercase italic">{{ whiteboard.title }}</h3>
                                    {% if whiteboard.isPublic %}
                                        <span class="px-2 py-0.5 text-[8px] font-black uppercase tracking-[0.2em] rounded-lg bg-green-50 text-green-600 border border-green-200">Public</span>
                                    {% endif %}
                                </div>
                                <div class="flex flex-wrap items-center gap-x-6 gap-y-1.5 text-[10px] font-black text-[#A79E9C] dark:text-[#9ca3af] uppercase tracking-widest">
                                    <span class="flex items-center gap-1.5"><span class="material-symbols-outlined text-[16px] text-primary">calendar_add_on</span> {{ whiteboard.createdAt|date('d/m/Y') }}</span>
                                    <span class="flex items-center gap-1.5"><span class="material-symbols-outlined text-[16px] text-primary">update</span> {{ whiteboard.updatedAt|date('d/m/Y H:i') }}</span>
                                    {% if whiteboard.meeting %}
                                        <span class="flex items-center gap-1.5 text-primary"><span class="material-symbols-outlined text-[16px]">groups</span> {{ whiteboard.meeting.titre }}</span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <div class="flex items-center gap-3 w-full sm:w-auto">
                            <a href="{{ path('app_whiteboard_draw', {'id': whiteboard.id}) }}" class="flex-1 sm:flex-none h-11 px-6 rounded-xl bg-primary text-navy text-xs font-black uppercase tracking-wider hover:bg-primary/90 transition-all flex items-center justify-center gap-2 shadow-sm shadow-primary/10">
                                <span class="material-symbols-outlined text-[18px]">edit_square</span>
                                Éditer
                            </a>
                            <form method="post" action="{{ path('app_whiteboard_delete', {'id': whiteboard.id}) }}" onsubmit="return confirm('Confirmer la suppression définitive du tableau ?');" class="inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ whiteboard.id) }}">
                                <button type="submit" class="h-11 w-11 rounded-xl border-2 border-red-100 text-red-600 flex items-center justify-center hover:bg-red-50 transition-all">
                                    <span class="material-symbols-outlined text-[20px]">delete_forever</span>
                                </button>
                            </form>
                        </div>
                    </div>
                {% else %}
                    <div class="p-20 text-center">
                        <div class="w-24 h-24 bg-[#f8f8f5] dark:bg-[#161516] rounded-full flex items-center justify-center mx-auto mb-6 shadow-inner">
                            <span class="material-symbols-outlined text-gray-400 text-5xl">draw_abstract</span>
                        </div>
                        <h3 class="text-2xl font-black text-[#D3C3B9] dark:text-white mb-2 italic">Aucun espace créatif actif</h3>
                        <p class="text-[#A79E9C] dark:text-[#9ca3af] mb-8 font-medium italic">Libérez votre imagination en créant votre premier tableau blanc collaboratif.</p>
                        <a href="{{ path('app_whiteboard_new') }}" class="inline-flex items-center gap-3 px-10 py-4 bg-primary text-navy font-black rounded-xl hover:bg-primary/90 transition-all shadow-xl shadow-primary/20 uppercase tracking-widest text-sm">
                            <span class="material-symbols-outlined">add_circle</span>
                            Générer un Canvas
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
